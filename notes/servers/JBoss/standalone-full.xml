<server xmlns="urn:jboss:domain:1.0">
    <profile>
        <subsystem xmlns="urn:jboss:domain:datasources:1.0">
            <datasources>
                <datasource jta="true" jndi-name="java:/jdbc/pg" pool-name="pg_Pool" enabled="true" use-java-context="true" use-ccm="true">
                    <connection-url>jdbc:postgresql://127.0.0.1:5432/postgres</connection-url>
                    <driver>postgresql-9.1-901.jdbc4.jar</driver>
                    <security>
                        <user-name>postgres</user-name>
                        <password>admin</password>
                    </security>
                </datasource>
                <datasource jta="true" jndi-name="java:/jdbc/ms" pool-name="ms_Pool" enabled="true" use-java-context="true" use-ccm="true">
                    <connection-url>jdbc:sqlserver://192.168.0.211\SQLEXPRESS;databaseName=pypas</connection-url>
                    <driver>sqljdbc4.jar</driver>
                    <security>
                        <user-name>sa</user-name>
                        <password>butent9</password>
                    </security>
                </datasource>
                <datasource jta="true" jndi-name="java:/jdbc/OracleXE" pool-name="OracleXE_Pool" enabled="true" use-java-context="true" use-ccm="true">
                    <connection-url>jdbc:oracle:thin:@//192.168.0.245:1521/XE</connection-url>
                    <driver>ojdbc6.jar</driver>
                    <security>
                        <user-name>PYP</user-name>
                        <password>USER</password>
                    </security>
                </datasource>
            </datasources>
        </subsystem>
        <subsystem xmlns="urn:jboss:domain:security:1.0">
            <security-domains>
                <security-domain name="DBPolicy">
                    <authentication>
                        <login-module code="Database" flag="required">
                            <module-option name="dsJndiName" value="jdbc/pg"/>
                            <module-option name="principalsQuery" value="SELECT &quot;Password&quot; FROM &quot;Users&quot; WHERE &quot;Login&quot;=?"/>
                            <module-option name="rolesQuery" value="SELECT 'BEEUser', 'Roles' FROM &quot;Users&quot; WHERE &quot;Login&quot;=?"/>
                            <module-option name="hashAlgorithm" value="MD5"/>
                            <module-option name="hashEncoding" value="Hex"/>
                            <module-option name="hashCharset" value="UTF-8"/>
                        </login-module>
                    </authentication>
                </security-domain>
            </security-domains>
        </subsystem>

<!--    <subsystem xmlns="urn:jboss:domain:pojo:1.0"/> -->

        <subsystem xmlns="urn:jboss:domain:deployment-scanner:1.1">
            <deployment-scanner path="deployments" relative-to="jboss.server.base.dir" scan-interval="5000" deployment-timeout="600" />
        </subsystem>
    </profile>

    <interfaces>
        <interface name="public">
            <inet-address value="${jboss.bind.address:0.0.0.0}"/>
        </interface>
    </interfaces>
</server>
        