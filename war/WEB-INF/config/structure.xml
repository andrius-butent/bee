<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<BeeTables xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee structure.xsd">

  <BeeTable name="Users" idName="UserID">
    <BeeFields>
      <BeeField name="Login" type="STRING" precision="30" notNull="true" unique="true" />
      <BeeField name="Password" type="STRING" precision="30" />
    </BeeFields>
  </BeeTable>
  <BeeTable name="Roles" idName="RoleID">
    <BeeFields>
      <BeeField name="Role" type="STRING" precision="30" notNull="true" unique="true" />
    </BeeFields>
  </BeeTable>
  <BeeTable name="UserRoles" idName="UserRoleID">
    <BeeFields>
      <BeeField name="User" type="LONG" notNull="true" relation="Users" cascade="true" />
      <BeeField name="Role" type="LONG" notNull="true" relation="Roles" cascade="true" />
      <BeeKey name="UserRole" unique="true">
        <BeeKeyField name="User" />
        <BeeKeyField name="Role" />
      </BeeKey>
    </BeeFields>
  </BeeTable>
  <BeeTable name="Views" idName="ViewID">
    <BeeFields>
      <BeeField name="View" type="STRING" precision="10" notNull="true" />
      <BeeField name="Field" type="STRING" precision="100" notNull="true" />
      <BeeKey name="View" />
      <BeeKey name="Field" unique="true">
        <BeeKeyField name="View" />
        <BeeKeyField name="Field" />
      </BeeKey>
    </BeeFields>
  </BeeTable>
  <BeeTable name="Countries" idName="CountryID" lockName="LastLock">
    <BeeFields>
      <BeeField name="Country" type="STRING" precision="100" notNull="true" unique="true" />
      <BeeField name="Area" type="NUMERIC" precision="10" scale="2" />
      <BeeField name="SeaPort" type="LONG" relation="Cities" unique="true" />
      <BeeField name="Neighbour" type="LONG" relation="Countries" unique="true" />
      <BeeField name="Currency" type="STRING" precision="50" unique="true" />
      <!--<BeeKey name="SeaPort" /> -->
    </BeeFields>
  </BeeTable>
  <BeeTable name="Cities" idName="CityID">
    <BeeFields>
      <BeeField name="City" type="STRING" precision="100" notNull="true" unique="true" />
      <BeeField name="Population" type="INTEGER" />
      <BeeField name="Country" type="LONG" relation="Countries" unique="true" />
    </BeeFields>
    <BeeStates>
      <BeeState name="Hidden" roleMode="true" userMode="true" />
      <BeeState name="Unmarked" userMode="true" />
      <BeeState name="Unused" />
    </BeeStates>
  </BeeTable>
</BeeTables>
