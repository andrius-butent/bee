<?xml version="1.0" encoding="UTF-8"?>
<BeeForm
  xmlns="http://www.butent.com/bee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/form.xsd"
  
  name="Companies" viewName="Companies" caption="Įmonės">

  <LayoutPanel>
    <layer left="1" leftUnit="%" right="1" rightUnit="%" top="10" topUnit="px" height="60" heightUnit="%">
      <FlexTable cellSpacing="10">
        <row>
          <cell><Label html="Įmonė" /></cell>
          <cell colSpan="3"><InputText style="width:100%" source="Name" /></cell>
        </row>
        <row>
          <cell><Label html="Įm. kodas" /></cell>
          <cell><InputText source="Code" /></cell>
          <cell><Label html="PVM kodas" /></cell>
          <cell><InputText source="VATCode" /></cell>
        </row>
        <row>
          <cell><Label html="Telefonai" /></cell>
          <cell><InputText source="Phone" /></cell>
          <cell><Label html="El. paštas" /></cell>
          <cell><InputText source="Email" /></cell>
        </row>
        <row>
          <cell><Label html="Adresas" /></cell>
          <cell colSpan="3"><InputText source="Address" style="width:100%" /></cell>
        </row>
        <row>
          <cell><Label html="Pašto indeksas" /></cell>
          <cell><InputText source="PostIndex" /></cell>
          <cell><Label html="Interneto svetainė" /></cell>
          <cell><InputText source="Website" /></cell>
        </row>
        <row>
          <cell><Label html="Miestas" /></cell>
          <cell>
            <DataSelector source="CityName" relSource="City" relView="Cities" relColumn="Name" />
          </cell>
          <cell><Label html="Šalis" /></cell>
          <cell><InputText source="CountryName" readOnly="true" /></cell>
        </row>
      </FlexTable>
    </layer>
    
    <layer left="1" leftUnit="%" right="1" rightUnit="%" top="61" topUnit="%" bottom="1" bottomUnit="ex">
      <Grid name="CompanyPersons" relColumn="Company" />
    </layer>
    
  </LayoutPanel>
</BeeForm>  
