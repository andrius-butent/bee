<?xml version="1.0" encoding="UTF-8"?>
<BeeForm xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/form.xsd" name="Project" viewName="Projects"
  caption="Projektas">

  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel>
        <FlexTable cellSpacing="10">
          <row>
            <cell>
              <Label html="Būsena" />
            </cell>
            <cell>
              <Label name="Event" class="bee-display" />
            </cell>
            <cell>
              <Label html="Prioritetas:" horizontalAlignment="right" />
            </cell>
            <cell>
              <Label name="Priority" class="bee-display" />
            </cell>
          </row>

          <row>
            <cell>
              <InlineLabel />
            </cell>
            <cell>
              <Label html="Tipas:" horizontalAlignment="right" />
            </cell>
            <cell colSpan="2">
              <TextLabel source="TypeName" class="bee-display" style="width: 100%;" />
            </cell>
          </row>

          <row>
            <cell>
              <Label html="Pavadinimas:" />
            </cell>
            <cell colSpan="3">
              <TextLabel source="Name" class="bee-display" style="width: 100%;" />
            </cell>
          </row>

          <row>
            <cell colSpan="2">
              <InlineLabel />
            </cell>
            <cell>
              <Label html="Numatoma trukmė min.:" horizontalAlignment="right" />
            </cell>
            <cell>
              <LongLabel source="ExpectedDuration" class="bee-display" />
            </cell>
          </row>

          <row>
            <cell>
              <Label html="Pradžia:" />
            </cell>
            <cell>
              <DateLabel source="StartDate" class="bee-display" />
            </cell>
            <cell>
              <Label html="Įmonė:" horizontalAlignment="right" />
            </cell>
            <cell>
              <TextLabel source="CompanyName" class="bee-display" />
            </cell>
          </row>

          <row>
            <cell>
              <Label html="Terminas:" />
            </cell>
            <cell>
              <DateLabel source="FinishDate" class="bee-display" />
            </cell>
            <cell>
              <Label html="Asmuo:" horizontalAlignment="right" />
            </cell>
            <cell>
              <TextLabel source="PersonFirstName" class="bee-display" />
            </cell>
          </row>

          <row>
            <cell>
              <Label html="Aprašymas:" />
            </cell>
            <cell colSpan="3">
              <TextLabel source="Description" class="bee-display" style="width: 100%; min-height: 60px;" />
            </cell>
          </row>

          <row>
            <cell colSpan="2">
              <InlineLabel />
            </cell>
            <cell>
              <Label html="Autorius:" horizontalAlignment="right" />
            </cell>
            <cell>
              <TextLabel class="bee-display">
                <calc>
                  <function>return (row.OwnerFirstName || "") + " " + (row.OwnerLastName || "")</function>
                </calc>
              </TextLabel>
            </cell>
          </row>
        </FlexTable>

        <FlowPanel class="flexBox-horizontal" style="margin: 0px 10px 0px 10px">
          <FlexTable cellPadding="0" cellSpacing="0">
            <row>
              <cell>
                <Label html="Stebėtojai" />
              </cell>
              <cell horizontalAlignment="right">
                <FlowPanel>
                  <Button name="AddObservers" html="+" />
                  <Button name="RemoveObservers" html="-" />
                </FlowPanel>
              </cell>
            </row>
            <row>
              <cell colSpan="2">
                <ListBox name="Observers" multiSelect="true" minSize="2" maxSize="5"
                  style="width: 250px" />
              </cell>
            </row>
          </FlexTable>

          <VerticalPanel horizontalAlignment="center">
            <cell>
              <Button name="COMMENTED" html="Naujas komentaras" />
            </cell>
            <cell>
              <Button name="EXTENDED" html="Keisti terminą" />
            </cell>
            <cell>
              <Button name="UPDATED" html="Koreguoti" />
            </cell>
          </VerticalPanel>

          <VerticalPanel horizontalAlignment="center">
            <cell>
              <Button name="ACTIVATED" html="Perduoti vykdymui" />
            </cell>
            <cell>
              <Button name="SUSPENDED" html="Sustabdyti" />
            </cell>
            <cell>
              <Button name="CANCELED" html="Nutraukti" />
            </cell>
            <cell>
              <Button name="COMPLETED" html="Užbaigti" />
            </cell>
            <cell>
              <Button name="RENEWED" html="Grąžinti vykdymui" />
            </cell>
          </VerticalPanel>
        </FlowPanel>
      </FlowPanel>

      <ChildGrid name="ProjectEvents" relColumn="Project" class="flexible" />
    </FlowPanel>

    <FlowPanel class="flexBox-horizontal flexible" style="margin: 10px 0 0 0;">
      <FlexTable cellPadding="0" cellSpacing="0">
        <row>
          <cell>
            <Label html="Etapai" />
          </cell>
          <cell horizontalAlignment="right">
            <FlowPanel>
              <Button name="AddStage" html="+" />
              <Button name="RemoveStage" html="-" />
              <Button name="EditStage" html=".." />
            </FlowPanel>
          </cell>
        </row>
        <row>
          <cell colSpan="2">
            <Tree name="Stages" />
          </cell>
        </row>
      </FlexTable>
      <ChildGrid name="Tasks" relColumn="Project" class="flexible" />
    </FlowPanel>
  </FlowPanel>
</BeeForm>  
