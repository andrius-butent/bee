<?xml version="1.0" encoding="UTF-8"?>
<FlexTable 
  xmlns="http://www.butent.com/bee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../schemas/widget.xsd"

  cellSpacing="10">

  <row>
    <cell>
      <Label html="ID:" />
    </cell>
    <cell>
      <LongLabel horizontalAlignment="left" class="bee-display">
        <calc>
          <expression>rowId</expression>
        </calc>
      </LongLabel>
    </cell>
    <cell>
      <Label html="Prioritetas:" horizontalAlignment="right" />
    </cell>
    <cell>
      <Label name="Priority" class="bee-display"/>
    </cell>
  </row>

  <row>
    <cell>
      <Label html="Pradžios data:" />
    </cell>
    <cell>
      <DateTimeLabel source="StartTime" class="bee-display"/>
    </cell>
    <cell>
      <Label html="Įmonė:" horizontalAlignment="right" />
    </cell>
    <cell>
      <TextLabel source="CompanyName" class="bee-display"/>
    </cell>
  </row>

  <row>
    <cell>
      <Label html="Pabaigos data:" />
    </cell>
    <cell>
      <DateTimeLabel source="FinishTime" class="bee-display" />
    </cell>
    <cell>
      <Label html="Asmuo:" horizontalAlignment="right" />
    </cell>
    <cell>
      <TextLabel source="PersonFirstName" class="bee-display" />
    </cell>
  </row>

  <row>
    <cell>
      <Label html="Užduotis:" />
    </cell>
    <cell colSpan="3">
      <TextLabel source="Task" class="bee-display" style="width: 100%; min-height: 60px;" />
    </cell>
  </row>

  <row>
    <cell>
      <Label html="Vykdytojas:" />
    </cell>
    <cell>
      <TextLabel class="bee-display">
        <calc>
          <function>return (row.ExecutorFirstName || "") + " " + (row.ExecutorLasttName || "")</function>
        </calc>
      </TextLabel>
    </cell>
    <cell>
      <Label html="Autorius:" horizontalAlignment="right" />
    </cell>
    <cell>
      <TextLabel class="bee-display">
        <calc>
          <function>return (row.OwnerFirstName || "") + " " + (row.OwnerLastName || "")</function>
        </calc>
      </TextLabel>
    </cell>
  </row>
</FlexTable>
