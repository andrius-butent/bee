<?xml version="1.0" encoding="UTF-8"?>
<BeeForm xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/form.xsd" xmlns:xi="http://www.w3.org/2001/XInclude"

  name="Tasks" viewName="Tasks" caption="Užduotys">

  <SplitPanel splitterSize="1">
    <west size="450">
      <FlowPanel>
        <xi:include href="widgets/task_info.xml" />
        <FlowPanel style="margin-top: 2ex;">
          <Button name="COMMENTED" html="Naujas komentaras" />
          <Button name="FORWARDED" html="Persiųsti" />
          <Button name="EXTENDED" html="Keisti terminą" />
        </FlowPanel>
        <FlowPanel style="margin-top: 2ex;">
          <Button name="SUSPENDED" html="Sustabdyti" />
          <Button name="CANCELED" html="Nutraukti" />
          <Button name="COMPLETED" html="Užbaigti" />
          <Button name="APPROVED" html="Patvirtinti" />
          <Button name="RENEWED" html="Grąžinti vykdymui" />
        </FlowPanel>
      </FlowPanel>
    </west>
    <center>
      <ChildGrid name="TaskEvents" relColumn="Task" />
    </center>
  </SplitPanel>
</BeeForm>  
