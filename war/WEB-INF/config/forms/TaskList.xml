<?xml version="1.0" encoding="UTF-8"?>
<BeeForm
  xmlns="http://www.butent.com/bee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/form.xsd"
  
  name="TaskList" caption="Užduotys">

  <SplitPanel splitterSize="0" style="backgroundColor: #f8f8f8;">
    <north size="30">
      <HorizontalPanel cellSpacing="5" style="fontFamily: Tahoma; fontSize: 12px;">
        <cell><Label html="Pabaigos data nuo:" /></cell>
        <cell><InputDateTime name="DateFrom" source="X"></InputDateTime></cell>
        <cell><Label html="iki:" /></cell>
        <cell><InputDateTime name="DateTo" source="X"></InputDateTime></cell>
        <cell><CheckBox name="Overdue" source="X" html="Tik vėluojančios" /></cell>
        <cell><CheckBox name="Critical" source="X" html="Tik kritinės" /></cell>
      </HorizontalPanel>
    </north>
    <north size="30" splitterSize="1">
      <AbsolutePanel>
        <layer>
          <HorizontalPanel cellSpacing="3" style="fontFamily: Tahoma; fontSize: 11px;">
            <cell><CheckBox name="Ignored" source="X" html="Neperžiūrėta" /></cell>
            <cell><CheckBox name="Running" source="X" html="Vykdoma" /></cell>
            <cell><CheckBox name="Paused" source="X" html="Pristabdyta" /></cell>
            <cell><CheckBox name="Completed" source="X" html="Įvykdyta" /></cell>
            <cell><CheckBox name="Canceled" source="X" html="Nutraukta" /></cell>
            <cell><CheckBox name="Finished" source="X" html="Baigta" /></cell>
            <cell><CheckBox name="Scheduled" source="X" html="Suplanuota" /></cell>
          </HorizontalPanel>
        </layer>
        <layer right="5" top="1">
          <Button name="Filter" html="Filtruoti" />
        </layer>
      </AbsolutePanel>
    </north>
    <center>
      <GridPanel name="Tasks" style="backgroundColor: white;"/>
    </center>
  </SplitPanel>
</BeeForm>  
