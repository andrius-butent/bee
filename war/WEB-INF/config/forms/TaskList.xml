<?xml version="1.0" encoding="UTF-8"?>
<BeeForm
  xmlns="http://www.butent.com/bee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/form.xsd"
  
  name="TaskList" caption="Užduotys">

  <SplitPanel splitterSize="0" style="background-color: #f8f8f8;">
    <north size="30">
      <HorizontalPanel cellSpacing="5" style="font-family: Tahoma; font-size: 12px;">
        <cell><Label html="Pabaigos data nuo:" /></cell>
        <cell><InputDateTime name="DateFrom"></InputDateTime></cell>
        <cell><Label html="iki:" /></cell>
        <cell><InputDateTime name="DateTo"></InputDateTime></cell>
        <cell><CheckBox name="Overdue" html="Tik vėluojančios" style="color: red;" /></cell>
        <cell><CheckBox name="Updated" html="Tik pasikeitusios" /></cell>
      </HorizontalPanel>
    </north>
    <north size="30" splitterSize="1">
      <AbsolutePanel>
        <layer>
          <HorizontalPanel cellSpacing="3" style="font-family: Tahoma; font-size: 12px;">
            <cell><CheckBox name="Scheduled" html="Suplanuota" /></cell>
            <cell><CheckBox name="Executing" html="Vykdoma" /></cell>
            <cell><CheckBox name="Suspended" html="Sustabdyta" /></cell>
            <cell><CheckBox name="Completed" html="Įvykdyta" /></cell>
            <cell><CheckBox name="Canceled" html="Nutraukta" /></cell>
            <cell><CheckBox name="Approved" html="Baigta" /></cell>
          </HorizontalPanel>
        </layer>
        <layer right="5" top="1">
          <Button name="Filter" html="Filtruoti" />
        </layer>
      </AbsolutePanel>
    </north>
    <center>
      <GridPanel name="UserTasks" style="background-color: white;" />
    </center>
  </SplitPanel>
</BeeForm>
