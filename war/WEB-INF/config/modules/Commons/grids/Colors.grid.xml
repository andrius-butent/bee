<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Grid [
  <!ENTITY dyn "<ui:inline>background-color: [row.Background] !important; color: [row.Foreground];</ui:inline>">
]>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Colors" viewName="Colors" caption="=colors" newRowCaption="=newColor"
  flexGrow="1" flexShrink="1"
  >
  <g:columns>
    <DataColumn name="Name" caption="=caption" width="120" visible="true" />

    <DataColumn name="Background" caption="=backgroundColor" minWidth="100" updateMode="row" visible="true">
      <dynStyle>&dyn;</dynStyle>
      <editor type="color" />
    </DataColumn>
    
    <DataColumn name="Foreground" caption="=foregroundColor" updateMode="row">
      <dynStyle>&dyn;</dynStyle>
      <editor type="color" />
    </DataColumn>
  </g:columns>
</g:Grid>
