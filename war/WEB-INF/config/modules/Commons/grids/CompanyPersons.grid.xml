<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  
  name="CompanyPersons" viewName="CompanyPersons"
  flexGrow="1" flexShrink="1" flexBasis="100"
  >
  <columns>
    <RelColumn name="Person" editEnabled="true" readOnly="true">
      <renderToken source="FirstName" />
      <renderToken source="LastName" />
    </RelColumn>
    <RelColumn name="Position" editEnabled="true" readOnly="true" />
    <DataColumn name="Phone" />

    <RelColumn name="EmailId">
      <renderToken source="Label" suffix=" " />
      <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
    </RelColumn>
  </columns>
</Grid>
