<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"

  name="Companies" viewName="Companies" caption="Klientai" favorite="Name" flexGrow="1"
  >
  <columns>
    <DataColumn name="Name" />
    <DataColumn name="TypeName" caption="Statusas" />
    <DataColumn name="GroupName" caption="Grupė" />

    <DataColumn name="Code" />
    <DataColumn name="VATCode" />

    <DataColumn name="Phone" />
    <DataColumn name="Mobile" />

    <RelColumn name="EmailId">
      <renderToken source="Label" suffix=" " />
      <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
    </RelColumn>

    <DataColumn name="Address" />
    <DataColumn name="PostIndex" />

    <DataColumn name="CityName" caption="Miestas" />
    <DataColumn name="CountryName" caption="Šalis" />
    <CalcColumn type="string" name="Flag" source="CountryCode" cellType="html" width="30"
      caption="-" sortable="false" hasFooter="false" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>
  </columns>
</Grid>
