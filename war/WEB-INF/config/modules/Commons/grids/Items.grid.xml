<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="Items" viewName="Items"
  newRowForm="Item" editForm="Item" editShowId="true"
  newRowPopup="true" editPopup="true"
  >
  <west size="200" splitterSize="2">
    <w:DataTree name="Categories" caption="Kategorijos" source="CategoryTree" parentColumn="Parent"
              hideActions="true">
      <w:calc>
        <ui:expression>row.Name</ui:expression>
      </w:calc>
    </w:DataTree>
  </west>
  
  <columns>
    <DataColumn name="Name" flexGrow="2" visible="true" />
    <RelColumn name="UnitName" />
    <DataColumn name="Article" flexGrow="1" />
    <DataColumn name="Barcode" flexGrow="1" />
    <DataColumn name="Price" />
    <RelColumn name="CurrencyName" />
    <DataColumn name="Vat">
      <carry><ui:expression>row.Vat</ui:expression></carry>
    </DataColumn>
  </columns>
</Grid>
