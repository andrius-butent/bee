<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="Items" viewName="Items"
  newRowForm="Item" editForm="Item" editShowId="true" newRowCaption="Naujiena"
  newRowPopup="true" editPopup="true"
  >
  <west size="200" splitterSize="2">
    <w:DataTree name="Categories" caption="Kategorijos" source="CategoryTree" parentColumn="Parent"
              hideActions="true">
      <w:calc>
        <ui:expression>row.Name</ui:expression>
      </w:calc>
    </w:DataTree>
  </west>
  
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12 px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <DataColumn name="Name" source="Name" caption="Pavadinimas" />
    <DataColumn name="Unit" source="UnitName" caption="Mato v." />
    <DataColumn name="Article" source="Article" caption="Artikulas" />
    <DataColumn name="Barcode" source="Barcode" caption="Barkodas" />
    <DataColumn name="Price" source="Price" caption="Pard. kaina" />
    <DataColumn name="Currency" source="CurrencyName" caption="Val." />
  </columns>
</Grid>
