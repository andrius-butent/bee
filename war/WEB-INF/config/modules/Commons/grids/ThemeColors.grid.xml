<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Grid [
  <!ENTITY dyn "<ui:inline>background-color: [row.Background]; color: [row.Foreground];</ui:inline>">
]>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="ThemeColors" viewName="ThemeColors" caption="=colors" newRowCaption="=newThemeColor"
  flexGrow="1" flexShrink="1"
  >
  <g:columns>
    <RelColumn name="ColorName" caption="=name" visible="true" />

    <DataColumn name="Background" caption="=backgroundColor">
      <dynStyle>&dyn;</dynStyle>
    </DataColumn>
    <DataColumn name="Foreground" caption="=foregroundColor">
      <dynStyle>&dyn;</dynStyle>
    </DataColumn>
  </g:columns>
</g:Grid>

