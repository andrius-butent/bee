<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
 
  name="Themes" viewName="Themes" caption="Spalvų temos" newRowCaption="Nauja tema"
  editForm="Theme" flexGrow="1" flexShrink="1"
  >
  <body height="40" />
  <columns>
    <DataColumn name="Name" caption="Pavadinimas" minWidth="100" />
    <DataColumn name="Description" caption="Aprašymas" flexShrink="3" />

    <RelColumn name="DefaultColorName" caption="Pagrindinė spalva:">
      <dynStyle>
        <ui:inline>background-color: [row.DefaultBackground] !important; color: [row.DefaultForeground];</ui:inline>
        <ui:expression>row.DefaultColor > 0</ui:expression>
      </dynStyle>
    </RelColumn>
  </columns>
</Grid>
