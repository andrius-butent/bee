<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="Users"
  source="Users"
  >
  <Columns>
    <SimpleColumn name="Login" />
    <SimpleColumn name="Password" />
    <SimpleJoin name="Person" joinType="LEFT">
      <SimpleColumn name="FirstName" />
      <SimpleColumn name="LastName" />
      <SimpleColumn name="DateOfBirth" />
    </SimpleJoin>
    <SimpleColumn name="Properties" />
    <SimpleColumn name="LastLogin" />
  </Columns>
  <Order>
    <OrderBy column="Login" />
  </Order>
</View>
 