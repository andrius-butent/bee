<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:xpr="http://www.butent.com/expression"
  name="CompanyPersons"
  source="CompanyPersons"
  >
  <Columns>
    <SimpleColumn name="Position" />
    <SimpleColumn name="Company" />
    <SimpleJoin name="Company" joinType="LEFT">
      <SimpleColumn alias="CompanyName" name="Name" />
    </SimpleJoin>
    <SimpleColumn name="Person" />
    <SimpleJoin name="Person" joinType="LEFT">
      <SimpleColumn name="FirstName" />
      <SimpleColumn name="LastName" />
      <SimpleColumn name="PersonName">
        <xpr:concat>
          <xpr:string>"FirstName"</xpr:string>
          <xpr:string>' '</xpr:string>
          <xpr:nvl type="STRING">
            <xpr:string>"LastName"</xpr:string>
            <xpr:string>''</xpr:string>
          </xpr:nvl>
        </xpr:concat>
      </SimpleColumn>
    </SimpleJoin>
    <SimpleJoin name="Contact" joinType="LEFT">
      <SimpleColumn name="Phone" />
      <SimpleColumn name="Email" />
    </SimpleJoin>
  </Columns>
  <Order>
    <OrderBy column="LastName" />
    <OrderBy column="FirstName" />
  </Order>
</View>
