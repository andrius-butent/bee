<?xml version="1.0" encoding="UTF-8"?>
<BeeView xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="Cities"
  source="Cities"
  >
  <BeeColumns>
    <BeeSimpleColumn expression="Name" />
    <BeeSimpleColumn expression="Country" />
    <BeeSimpleJoin expression="Country" joinType="LEFT">
      <BeeSimpleColumn name="CountryName" expression="Name" />
    </BeeSimpleJoin>
  </BeeColumns>
  <BeeOrder>
    <OrderBy column="CountryName" />
    <OrderBy column="Name" />
  </BeeOrder>
</BeeView>
 