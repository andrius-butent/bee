<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="Items" source="Items"
  >
  <Columns>
    <SimpleColumn name="Name" />
    <SimpleColumn name="Unit" />
    <SimpleJoin joinType="LEFT" name="Unit">
      <SimpleColumn name="Name" alias="UnitName" />
    </SimpleJoin>
    <SimpleColumn name="Article" />
    <SimpleColumn name="Barcode" />
    <SimpleColumn name="Price" />
    <SimpleColumn name="Currency" />
    <SimpleJoin joinType="LEFT" name="Currency">
      <SimpleColumn name="Name" alias="CurrencyName" />
    </SimpleJoin>
    <ExternalJoin source="ItemCategories" joinType="LEFT" name="Item">
      <HiddenColumn name="Category" />
      <AggregateColumn aggregate="COUNT" name="Category" alias="Categories" />
    </ExternalJoin>
    <SimpleColumn name="IsService"/>
  </Columns>
  <Order>
    <OrderBy column="Name" />
  </Order>
</View>
 