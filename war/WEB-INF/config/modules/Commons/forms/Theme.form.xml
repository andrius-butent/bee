<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  
  name="Theme" viewName="Themes" caption="=colorTheme">

  <FlowPanel style="-webkit -flex">
    <Table>
      <row>
        <InputText source="Name" caption="=colorTitle" d:style="padding-right:8px;" style="margin-right:8px;" />
        <DataSelector source="DefaultColorName" caption="=defaultColor" d:style="padding-right:8px;" />
      </row>
      <row>
        <cell colSpan="2">
          <InputArea source="Description" caption="=colorDescription" visibleLines="3" d:style="width:70px; margin-right:5px; margin-left:4px;"
            style="width: 432px;" />
        </cell>
      </row>
    </Table>

    <ChildGrid class="flexible" name="ThemeColors" relColumn="Theme" />
  </FlowPanel>
</f:Form>  
