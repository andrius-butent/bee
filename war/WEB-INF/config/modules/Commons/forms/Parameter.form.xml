<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Parameter" caption="Parametro koregavimas"
  >
  <FlowPanel class="flexBox-horizontal">
    <FlowPanel class="flexBox-vertical">
      <FlowPanel class="flexBox-horizontal-center">
        <InlineLabel html="Pavadinimas" class="bee-required" style="font-weight: bold;" />
        <InputText source="Name" style="font-weight: bold;" />
      </FlowPanel>
      <FlowPanel class="flexBox-horizontal-center">
        <InlineLabel html="Tipas" class="bee-required" />
        <Radio source="Type" vertical="true">
          <option>String</option>
          <option>Number</option>
          <option>Date</option>
        </Radio>
      </FlowPanel>
      <InputText source="Value" caption="Reikšmė" />
      <CheckBox source="UserMode" html="Pagal vartotojus" />
    </FlowPanel>
    <FlowPanel class="flexBox-vertical flexible">
      <Label html="Aprašymas" />
      <SimplePanel style="position: relative; height: 10ex;">
        <InputArea source="Description" class="occupy" />
      </SimplePanel>
    </FlowPanel>
  </FlowPanel>
</f:Form>