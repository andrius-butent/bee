<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Parameter" caption="=parameterEdit"
  >
  <FlowPanel class="flexBox-horizontal">
    <FlowPanel class="flexBox-vertical">
      <FlowPanel class="flexBox-horizontal-center">
        <InlineLabel text="=name" class="bee-required" style="font-weight: bold;" />
        <InputText source="Name" style="font-weight: bold;" />
      </FlowPanel>
      <FlowPanel class="flexBox-horizontal-center">
        <InlineLabel text="=type" class="bee-required" />
        <ListBox source="Type" itemKey="ParameterType" />
      </FlowPanel>
      <InputText source="Value" caption="=valueParameter" />
      <CheckBox source="UserMode" text="=userMode" />
    </FlowPanel>
    <FlowPanel class="flexBox-vertical flexible">
      <Label text="=description" />
      <SimplePanel style="position: relative; height: 10ex;">
        <InputArea source="Description" class="occupy-1" />
      </SimplePanel>
    </FlowPanel>
  </FlowPanel>
</f:Form>