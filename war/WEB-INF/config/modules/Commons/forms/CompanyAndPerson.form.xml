<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="CompanyAndPerson" viewName="CompanyPersons" caption="Įmonės asmuo"
  height="300" width="800"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <Label html="Vardas" class="bee-required" />
        <InputText style="width: 200px" source="FirstName" />
        <Label html="Pavardė" />
        <InputText style="width: 200px" source="LastName" />
      </row>
      <row>
        <Label html="Įmonė" class="bee-required" />
        <DataSelector source="Company" style="width: 200px" />
        <Label html="Pareigos" />
        <InputText style="width: 200px" source="Position" />
      </row>
      <row>
        <cell colSpan="4">
          <xi:include href="widgets/ContactInfo.widget.xml" />
        </cell>
      </row>
    </Table>
  </FlowPanel>
</f:Form>  
