<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Item" width="700" height="300"
  >
  <FlexTable cellSpacing="10">
    <row>
      <Label html="Pavadinimas:" class="bee-required" />
      <cell colSpan="3">
        <InputText source="Name" style="width: 100%;" />
      </cell>
    </row>

    <row>
      <Label html="Artikulas:" />
      <InputText source="Article" />
      <Label html="Mato v.:" horizontalAlignment="right" class="bee-required" />
      <DataSelector source="UnitName" style="width: 100px;" />
    </row>

    <row>
      <Label html="Barkodas:" />
      <InputText source="Barcode" />
      <Label html="Pard. kaina.:" horizontalAlignment="right" />
      <HorizontalPanel>
        <InputCurrency source="Price" />
        <DataSelector renderColumns="CurrencyName" style="width: 80px;" />
      </HorizontalPanel>
    </row>

    <row>
      <Label html="Kategorijos:" />
      <cell colSpan="2">
        <ListBox name="Categories" multiSelect="true" minSize="2" maxSize="10" style="width: 100%;" />
      </cell>
      <VerticalPanel>
        <Image name="AddCategories" resource="add" />
        <Image name="RemoveCategories" resource="delete" />
      </VerticalPanel>
    </row>
  </FlexTable>
</f:Form>  
