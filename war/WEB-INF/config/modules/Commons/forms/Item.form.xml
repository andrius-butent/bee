<?xml version="1.0" encoding="UTF-8"?>
<BeeForm xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/form.xsd"
  
  name="Item" caption="Seniena"
  >
  <FlexTable cellSpacing="10">
    <row>
      <cell>
        <Label html="Pavadinimas:" class="bee-required" />
      </cell>
      <cell colSpan="3">
        <InputText source="Name" style="width: 100%;" />
      </cell>
    </row>
    <row>
      <cell>
        <Label html="Artikulas:" />
      </cell>
      <cell>
        <InputText source="Article" />
      </cell>
      <cell>
        <Label html="Mato v.:" horizontalAlignment="right" class="bee-required" />
      </cell>
      <cell>
        <DataSelector source="UnitName" relSource="Unit" relView="Units" relColumn="Name"
          style="width: 100px;" />
      </cell>
    </row>
    <row>
      <cell>
        <Label html="Barkodas:" />
      </cell>
      <cell>
        <InputText source="Barcode" />
      </cell>
      <cell>
        <Label html="Pard. kaina.:" horizontalAlignment="right" />
      </cell>
      <cell>
        <HorizontalPanel>
          <cell><InputCurrency source="Price" /></cell>
          <cell><DataSelector source="CurrencyName" relSource="Currency" relView="Currencies"
            relColumn="Name" style="width: 80px;" /></cell>
        </HorizontalPanel>
      </cell>
    </row>

    <row>
      <cell>
        <Label html="Kategorijos:" />
      </cell>
      <cell colSpan="2">
        <ListBox name="Categories" multiSelect="true" minSize="2" maxSize="10" style="width: 100%;" />
      </cell>
      <cell>
        <VerticalPanel>
          <cell><Button name="AddCategories" html="+" /></cell>
          <cell><Button name="RemoveCategories" html="-" /></cell>
        </VerticalPanel>
      </cell>
    </row>
  </FlexTable>
</BeeForm>  
