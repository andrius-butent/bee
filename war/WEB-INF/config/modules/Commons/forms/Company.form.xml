<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:d="http://www.butent.com/decorator"
  
  name="Company"
  viewName="Companies"
  caption="Klientas"
  width="800"
  height="500"
  >
  <FlowPanel class="flexBox-vertical">
    <VerticalPanel>
      <FlowPanel style="position:relative; width: 790px; height: 90px;">
        <InputText source="Name" caption="Pavadinimas:" style="width: 200px;" d:size="100"
          d:unit="px" d:rootStyle="position:absolute; left: 10px; top: 10px;" />
        <DataSelector source="CompanyType" caption="Statusas:" style="width: 80px;" d:size="50"
          d:unit="px" d:rootStyle="position:absolute; left: 330px; top: 10px;" />
        <DataSelector source="CompanyGroup" caption="Grupė:" style="width: 80px;" d:size="50"
          d:unit="px" d:rootStyle="position:absolute; left: 480px; top: 10px;" />
        <DataSelector source="CompanyPriority" caption="Prioritetas:" style="width: 80px;" d:size="50"
          d:unit="px" d:rootStyle="position:absolute; left: 640px; top: 10px;" />

        <InputText source="Code" caption="Įmonės kodas:" style="width: 160px;" d:size="100"
          d:unit="px" d:rootStyle="position:absolute; left: 10px; top: 50px;" />
        <InputText source="VATCode" caption="PVM kodas:" style="width: 120px;" upperCase="true"
          d:size="80" d:unit="px" d:rootStyle="position:absolute; left: 290px; top: 50px;" />
        <InputText source="ExchangeCode" caption="Biržos kodas:" style="width: 120px;" d:size="100"
          d:unit="px" d:rootStyle="position:absolute; left: 510px; top: 50px;" />
      </FlowPanel>
      <xi:include href="widgets/ContactInfo.widget.xml" />
    </VerticalPanel>

    <TabbedPages class="flexible" style="margin-top: 15px;" >
      <page>
        <text>Kontaktiniai asmenys</text>
        <ChildGrid name="CompanyPersons" relColumn="Company" />
      </page>
      <page>
      	<text>Atsakomybės</text>
       	<ChildGrid name="CompanyUsers" relColumn="Company" />
      </page>
      <page>
        <text>Papildoma informacija</text>
        <FlowPanel style="margin:5px;">
          <Table>
          	 <row>
          	   <Label html="Įmonės dydis:" />
          	   <DataSelector source="CompanySize" style="width: 100px;" />
          	   <Label html="Informacijos šaltinis:" />
          	   <DataSelector source="InformationSource"  style="width: 100px;"/>
          	 </row>
          	 <row>
          	   <Label html="Įmonės veiklos:" />
          	   <cell colSpan="3">
                 <ChildSelector viewName="CompanyActivities" childTable="CompActStore"
                   label="Įmonės veiklos" />
          	   </cell>
          	 </row>
          	 <row>
          	   <Label html="Reitingas:" />
          	   <InputText source="Rating" style="width:100px;" />
          	 </row>
          </Table>
        </FlowPanel>
      </page>
      <page>
        <text>Sąryšio informacija</text>
        <FlowPanel style="margin:5px;">
          <Table>
            <row>
              <DataSelector source="CompanyRelationType" caption="Sąryšis:" style="width: 75px;"
               d:size="50" d:unit="px" />
            </row>
            <row>
              <DataSelector source="CompanyRelationTypeState" caption="Būsena:" style="width: 75px;"
              d:size="50" d:unit="px" />
            </row>
          </Table>
        </FlowPanel>
      </page>
      <page>
        <text>Finansinė informacija</text>
        <FlowPanel>
          <InputDecimal source="CreditLimit1" caption="Kredito limitas:" style="width: 100px;"
            d:size="100" d:unit="px" d:rootStyle="position:absolute; left: 20px; top: 20px;" />
          <InputDecimal source="CreditLimit2" caption="Kredito tolerancija:" style="width: 100px;"
            d:size="110" d:unit="px" d:rootStyle="position:absolute; left: 260px; top: 20px;" />
          <DataSelector source="LimitCurrency" caption="Limito valiuta:" style="width: 40px;"
            d:size="100" d:unit="px" d:rootStyle="position:absolute; left: 20px; top: 60px;"
            editEnabled="false" />
          <InputInteger source="CreditDays" caption="Kredito dienos:" style="width: 40px;"
            d:size="110" d:unit="px" d:rootStyle="position:absolute; left: 260px; top: 60px;" />
          <DataSelector source="FinancialState" caption="Mokumas:" style="width: 100px;"
            d:size="100" d:unit="px" d:rootStyle="position:absolute; left: 20px; top: 100px;" />
        </FlowPanel>
      </page>
      <page>
        <text>Dokumentai</text>
        <xi:include href="../../Crm/forms/widgets/DocumentSelector.widget.xml" />
      </page>
      <page>
        <text>Pastabos</text>
        <InputArea source="Notes" />
      </page>  
    </TabbedPages>

  </FlowPanel>
</f:Form>  
