<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Company" viewName="Companies" caption="Įmonė" height="500"
  >
  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="10">
      <row>
        <cell>
          <Label html="Įmonė" class="bee-required" />
        </cell>
        <cell colSpan="3">
          <InputText source="Name" style="width:100%" />
        </cell>
      </row>
      <row>
        <Label html="Įm. kodas" />
        <InputText source="Code" />
        <Label html="PVM kodas" horizontalAlignment="right" />
        <InputText source="VATCode" />
      </row>
      <row>
        <cell colSpan="4">
          <xi:include href="widgets/ContactInfo.widget.xml" />
        </cell>
      </row>
    </FlexTable>

    <ChildGrid class="flexible" name="CompanyPersons" relColumn="Company" />
  </FlowPanel>
</f:Form>  
