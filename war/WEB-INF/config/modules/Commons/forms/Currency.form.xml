<?xml version="1.0" encoding="UTF-8"?>
<BeeForm xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/form.xsd"
  
  name="Currency" viewName="Currencies" caption="Valiuta"
  >
  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="10">
      <row>
        <cell><Label html="Valiuta" class="bee-required" /></cell>
        <cell><InputText source="Name" /></cell>
        <cell><Label html="Pavadinimas" horizontalAlignment="right" /></cell>
        <cell><InputText source="Caption" /></cell>
      </row>
      <row>
        <cell><Label html="Smulki" /></cell>
        <cell><InputText source="MinorName" /></cell>
        <cell><Label html="Smulkios pav." horizontalAlignment="right" /></cell>
        <cell><InputText source="MinorCaption" /></cell>
      </row>
    </FlexTable>

    <ChildGrid class="flexible" name="CurrencyRates" relColumn="Currency" />
  </FlowPanel>
</BeeForm>  
