<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Currency" viewName="Currencies" caption="=currency" height="50" heightUnit="%" width="600"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <cell><Label text="=currency" class="bee-required" /></cell>
        <cell><InputText source="Name" /></cell>
        <cell><Label text="=caption" horizontalAlignment="right" /></cell>
        <cell><InputText source="Caption" /></cell>
      </row>
      <row>
        <cell><Label text="=minorName" /></cell>
        <cell><InputText source="MinorName" /></cell>
        <cell><Label text="=minorCaption" horizontalAlignment="right" /></cell>
        <cell><InputText source="MinorCaption" /></cell>
      </row>
    </Table>

    <ChildGrid class="flexible" name="CurrencyRates" relColumn="Currency" />
  </FlowPanel>
</f:Form>  
