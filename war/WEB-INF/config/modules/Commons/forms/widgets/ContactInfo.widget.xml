<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE Form [
  <!ENTITY lbl "padding-right: 5px">
]>

<Disclosure xmlns="http://www.butent.com/widget"
  xmlns:d="http://www.butent.com/decorator"
  xmlns:ui="http://www.butent.com/ui"
  
  open="true"
  >
  <Label text="=contactInfo"  style="text-transform: uppercase; "/>

  <FlowPanel style="position:relative;" >
    <Table>
      <row>
        <Label text="=phones" horizontalAlignment="right" style="&lbl;" />
	    <InputText source="Phone" style="width: 200px;"  horizontalAlignment="left" />
	    <Label text="=mobile" horizontalAlignment="right"  style="&lbl;" />
	    <InputText source="Mobile" style="width: 168px;" horizontalAlignment="left" />
	    <Label text="=fax" horizontalAlignment="right" style="&lbl;"/>
	    <InputText source="Fax" style="width: 100%;" horizontalAlignment="left" />
	  </row>
      <row>
	    <Label text="=email" horizontalAlignment="right" style="&lbl;" />	   
        <DataSelector source="EmailId" style="width: 200px; margin-right: 10px;" horizontalAlignment="left">
          <renderToken source="Label" suffix=" " />
          <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
        </DataSelector>	      
	    
	    <Label text="=website" horizontalAlignment="right" style="&lbl;" />
	      <cell colSpan="3"> 	
	        <InputText source="Website"  style="width: 100%" horizontalAlignment="left"/>
	      </cell>	      
	    </row>
	    <row>	      
	      <Label text="=address" horizontalAlignment="right" style="&lbl;" />
	      <cell colSpan="5">
	        <InputText source="Address" style="width: 100%;" horizontalAlignment="left" />
	      </cell>
	    </row>
 	    <row>
	      <Label text="=city" horizontalAlignment="right" style="&lbl;" />
	      <DataSelector source="City"  style="width: 200px;" horizontalAlignment="left">
	        <selectorColumn source="Name" />
	        <selectorColumn source="CountryName" />
	        <selectorColumn source="CountryCode">
	          <ui:renderer type="flag" />
	        </selectorColumn>
	      </DataSelector>
	    
	      <Label text="=country" horizontalAlignment="right" style="&lbl;"/>
	      <FlowPanel class="flex-horizontal">	
	        <Table>
	          <row>
	            <DataSelector source="Country" style="width: 166px;" >
	             <renderToken source="CountryName" />
	             <renderToken source="CountryCode" prefix=" (" suffix=")" />
	             <selectorColumn source="Name" />
	             <selectorColumn source="Code">
	               <ui:renderer type="flag" />
	             </selectorColumn>
	            </DataSelector>
	            <Flag source="CountryCode" style="width: 22px;" />
	          </row> 
	        </Table>
	      </FlowPanel>
	      
	      <Label text="=postIndex"  horizontalAlignment="right" style="&lbl;"/>
	      <InputText source="PostIndex" style="width: 100%;" horizontalAlignment="left"/> 
	    </row>
	    <row>
	      <Label text="=socialContacts" horizontalAlignment="right" style="&lbl;"/>
	      <cell colSpan="5">
	        <InputText source="SocialContacts" style="width: 100%;" horizontalAlignment="left" />
	      </cell>
	    </row> 
    </Table>  
  </FlowPanel>
</Disclosure>

