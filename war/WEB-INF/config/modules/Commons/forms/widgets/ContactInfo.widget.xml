<?xml version="1.0" encoding="UTF-8"?>
<Disclosure xmlns="http://www.butent.com/widget"
  xmlns:d="http://www.butent.com/decorator"
  xmlns:ui="http://www.butent.com/ui"
  
  open="true"
  >
  <Label html="KONTAKTINĖ INFORMACIJA" />

  <FlowPanel style="position:relative; width: 700px; height: 140px;">
    <InputText source="Phone" caption="Telefonai:" style="width: 200px;" d:size="80" d:unit="px"
      d:rootStyle="position:absolute; left: 0; top: 0;" />
    <InputText source="Mobile" caption="Mobilus:" style="width: 120px;" d:size="60" d:unit="px"
      d:rootStyle="position:absolute; left: 300px; top: 0;" />
    <InputText source="Fax" caption="Faksas:" style="width: 120px;" d:size="60" d:unit="px"
      d:rootStyle="position:absolute; left: 500px; top: 0px;" />

    <DataSelector source="EmailId" caption="El.paštas:" style="width: 200px;" d:size="80" d:unit="px"
      d:rootStyle="position:absolute; left: 0; top: 30px;">
      <renderToken source="Label" suffix=" " />
      <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
    </DataSelector>

    <InputText source="Website" caption="Interneto svetainė:" style="width: 260px;" d:size="120"
      d:unit="px" d:rootStyle="position:absolute; left: 300px; top: 30px;" />

    <InputText source="Address" caption="Adresas:" style="width: 600px;" d:size="80" d:unit="px"
      d:rootStyle="position:absolute; left: 0; top: 70px;" />

    <DataSelector source="City" caption="Miestas:" style="width: 160px;" d:size="80" d:unit="px"
      d:rootStyle="position:absolute; left: 0; top: 100px;">
      <selectorColumn source="Name" />
      <selectorColumn source="CountryName" />
      <selectorColumn source="CountryCode">
        <ui:renderer type="flag" />
      </selectorColumn>
    </DataSelector>

    <DataSelector source="Country" caption="Šalis:" style="width: 140px;" d:size="60" d:unit="px"
      d:rootStyle="position:absolute; left: 250px; top: 100px;">
      <renderToken source="CountryName" />
      <renderToken source="CountryCode" prefix=" (" suffix=")" />
      <selectorColumn source="Name" />
      <selectorColumn source="Code">
        <ui:renderer type="flag" />
      </selectorColumn>
    </DataSelector>
    <Flag source="CountryCode" style="position:absolute; left: 460px; top: 105px;" />

    <InputText source="PostIndex" caption="Pašto indeksas:" style="width: 80px;" d:size="100"
      d:unit="px" d:rootStyle="position:absolute; left: 500px; top: 100px;" />

    <InputText source="SocialContacts" caption="Socialiniai kontaktai:" style="width: 540px;" d:size="140"
      d:unit="px" d:rootStyle="position:absolute; left: 0px; top: 130px;" />  

  </FlowPanel>
</Disclosure>

