<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="User" viewName="Users" caption="Vartotojas"
  width="70" widthUnit="%" height="5" heightUnit="cm"
  >
  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="10">
      <row>
        <cell><Label html="Prisijungimo vardas" /></cell>
        <cell><InputText source="Login" style="width:150px" /></cell>
        <cell horizontalAlignment="center" colSpan="2">
          <Button html="Pakeisti slaptažodį" name="ChangePassword" />
        </cell>
        <cell><Label html="Parametrai" /></cell>
      </row>
      <row>
        <cell><Label html="Vardas" /></cell>
        <cell><InputText source="FirstName" style="width:150px" /></cell>
        <cell><Label html="Pavardė" horizontalAlignment="right" /></cell>
        <cell><InputText source="LastName" style="width:150px" /></cell>
        <cell rowSpan="3"><InputArea source="Properties" style="width:200px; height:100%" /></cell>
      </row>
      <row>
        <cell colSpan="2"><Label html="" /></cell>
        <cell><Label html="Gimimo data" horizontalAlignment="right" /></cell>
        <cell><InputDate source="DateOfBirth" /></cell>
      </row>
    </FlexTable>

    <ChildGrid class="flexible" name="UserRoles" relColumn="User" style="width:300px" />
  </FlowPanel>
</f:Form>  
