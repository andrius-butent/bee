<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="User" viewName="Users" caption="Vartotojas"
  width="800" height="240"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <Label html="Prisijungimo vardas" class="bee-required" />
        <InputText source="Login" style="width: 150px;" />
        <cell horizontalAlignment="center" colSpan="2">
          <Button html="Pakeisti slaptažodį" name="ChangePassword" />
        </cell>
        <Label html="Parametrai" />
      </row>
      <row>
        <Label html="Vardas, pavardė" class="bee-required" />
        <DataSelector source="CompanyPerson" editSource="Person" style="width: 150px;"
          renderColumns="FirstName Lastname" choiceColumns="FirstName Lastname CompanyName" />
        <Label html="Įmonė" horizontalAlignment="right" />
        <TextLabel source="CompanyName" style="width: 150px;" />
        <cell rowSpan="3">
          <InputArea source="Properties" style="width: 200px; height: 100px;" />
        </cell>
      </row>
      <row>
        <Label html="Gimimo data" />
        <DateLabel source="DateOfBirth" />
        <Label html="Pareigos" horizontalAlignment="right" />
        <TextLabel source="Position" />
      </row>
      <row>
        <cell colSpan="4">
          <ChildSelector childTable="UserRoles" viewName="Roles" style="width: 400px;"
            caption="Rolės" required="true" />
        </cell>
      </row>
    </Table>
  </FlowPanel>
</f:Form>  
