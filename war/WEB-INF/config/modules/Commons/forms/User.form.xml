<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="User" viewName="Users" caption="Vartotojas"
  width="70" widthUnit="%" height="5" heightUnit="cm"
  >
  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="10">
      <row>
        <Label html="Prisijungimo vardas" />
        <InputText source="Login" style="width:150px" />
        <cell horizontalAlignment="center" colSpan="2">
          <Button html="Pakeisti slaptažodį" name="ChangePassword" />
        </cell>
        <Label html="Parametrai" />
      </row>
      <row>
        <Label html="Vardas, pavardė" />
        <DataSelector source="CompanyPerson" style="width:150px"
          renderColumns="FirstName Lastname" searchableColumns="FirstName Lastname CompanyName" />
        <Label html="Įmonė" horizontalAlignment="right" />
        <TextLabel source="CompanyName" style="width:150px" />
        <cell rowSpan="3"><InputArea source="Properties" style="width:200px; height:100%" /></cell>
      </row>
      <row>
        <Label html="Gimimo data" />
        <DateLabel source="DateOfBirth" />
        <Label html="Pareigos" horizontalAlignment="right" />
        <TextLabel source="Position" />
      </row>
    </FlexTable>

    <ChildGrid class="flexible" name="UserRoles" relColumn="User" style="width:300px" />
  </FlowPanel>
</f:Form>  
