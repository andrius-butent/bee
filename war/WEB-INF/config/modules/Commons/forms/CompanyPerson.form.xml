<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form []>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="CompanyPerson" viewName="CompaniesAndPersons" caption="=companyPerson"
  height="300" width="800"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <Label text="=person" class="bee-required" />
        <DataSelector source="Person" style="width: 200px" />
        <Label text="=personPosition" />
        <DataSelector source="Position" style="width: 200px" />
      </row>
      <row>
        <cell colSpan="4">
          <xi:include href="widgets/ContactInfo.widget.xml" />
        </cell>
      </row>
    </Table>
  </FlowPanel>
</f:Form>  
