<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Person" viewName="Persons" caption="Asmuo" width="800"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <Label html="Vardas" class="bee-required" />
        <InputText style="width: 200px" source="FirstName" />
        <Label html="Pavardė" />
        <InputText style="width: 200px" source="LastName" />
        <Label html="Gimimo data" style="width: 100px" horizontalAlignment="right" />
        <InputDate source="DateOfBirth" style="width: 80px" minValue="1900" maxValue="2000" />
      </row>
      <row>
        <cell colSpan="6">
          <xi:include href="widgets/ContactInfo.widget.xml" />
        </cell>
      </row>
    </Table>

    <TabbedPages class="flexible" style="margin-top: 1ex;" >
      <page>
        <text>Įmonių kontaktai</text>
        <ChildGrid name="PersonCompanies" relColumn="Person" />
      </page>
      <page>
        <text>=documents</text>
        <ChildGrid name="RelatedDocuments" relColumn="Person" />
      </page>
    </TabbedPages>

  </FlowPanel>
</f:Form>  
