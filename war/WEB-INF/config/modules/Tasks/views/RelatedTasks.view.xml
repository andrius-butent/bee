<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="RelatedTasks" source="Relations" caption="=crmTasksRelated"
  newRowForm="NewTask" editForm="Task" rowCaption="Summary" 
  >
  <Columns>
    <SimpleColumn name="Request" />
    <SimpleColumn name="Cargo" />
    <SimpleColumn name="Company" alias="RelatedCompany" />
    <SimpleColumn name="Person" alias="RelatedPerson" />
    <SimpleColumn name="Appointment" />
    <SimpleColumn name="Task" />
    <SimpleColumn name="RecurringTask" alias="RelatedRecurringTask" />
    <SimpleColumn name="Document" />
    <SimpleColumn name="Vehicle" />
    <SimpleColumn name="Driver" />
    <SimpleColumn name="TransportationOrder" />
    <SimpleColumn name="Trip" />
    <SimpleColumn name="CargoRequest" />
    <SimpleColumn name="Discussion" />
    <SimpleColumn name="ServiceObject" />
  
    <SimpleJoin name="Task" joinType="INNER">
      <SimpleColumn name="Summary" />
      <SimpleColumn name="Description" />
      <SimpleColumn name="Priority" />

      <SimpleColumn name="Created" />
      <SimpleColumn name="StartTime" />
      <SimpleColumn name="FinishTime" />
      <SimpleColumn name="Completed" />
      <SimpleColumn name="Approved" />
      <SimpleColumn name="ExpectedDuration" />

      <SimpleColumn name="Status" />

      <SimpleColumn name="RecurringTask" />

      <SimpleColumn name="Owner" />
      <SimpleJoin name="Owner" joinType="LEFT">
        <SimpleColumn name="CompanyPerson" alias="OwnerPerson" />
        <SimpleJoin name="CompanyPerson" joinType="LEFT">
          <SimpleJoin name="Person" joinType="LEFT">
            <SimpleColumn alias="OwnerFirstName" name="FirstName" />
            <SimpleColumn alias="OwnerLastName" name="LastName" />
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>

      <SimpleColumn name="Executor" />
      <SimpleJoin name="Executor" joinType="LEFT">
        <SimpleColumn name="CompanyPerson" alias="ExecutorPerson" />
        <SimpleJoin name="CompanyPerson" joinType="LEFT">
          <SimpleJoin name="Person" joinType="LEFT">
            <SimpleColumn alias="ExecutorFirstName" name="FirstName" />
            <SimpleColumn alias="ExecutorLastName" name="LastName" />
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>

      <SimpleColumn name="Company" />
      <SimpleJoin name="Company" joinType="LEFT">
        <SimpleColumn alias="CompanyName" name="Name" />
      </SimpleJoin>

      <SimpleColumn name="Contact" />
      <SimpleJoin name="Contact" joinType="LEFT">
        <SimpleColumn alias="ContactPerson" name="Person" />
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="ContactFirstName" name="FirstName" />
          <SimpleColumn alias="ContactLastName" name="LastName" />
        </SimpleJoin>
        <SimpleJoin name="Company" joinType="LEFT">
          <SimpleColumn alias="ContactCompanyName" name="Name" />
        </SimpleJoin>
      </SimpleJoin>

      <SimpleColumn name="Reminder" />
      <SimpleJoin name="Reminder" joinType="LEFT">
        <SimpleColumn alias="ReminderName" name="Name" />
      </SimpleJoin>

      <SimpleColumn name="ReminderTime" />
      <SimpleColumn name="ReminderSent" />
    </SimpleJoin>
  </Columns>
  
  <Order>
    <OrderBy column="Status" />
    <OrderBy column="FinishTime" />
  </Order>
</View>
 