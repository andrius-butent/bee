<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">
  <!ENTITY tbl "border-collapse: collapse;">
  <!ENTITY cell "padding-bottom: 2px;">
  <!ENTITY col1 "text-align: right; padding-right: 8px; width: 128px;">
  <!ENTITY dateStyle "&inline; width: 130px;">
  <!ENTITY inp2x "width: 500px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"

  name="NewRequest" viewName="Requests" caption="=crmNewRequest" width="700"
  height="600">
  <FlowPanel style="padding: 10px 2px 2px 10px;">
    <FlowPanel style="&section;">
      <Label text="=date" class="bee-required" style="&inline; text-align:right; width:80px; padding-top:1px; margin-right: 5px" />
      <InputDateTime source="Date" style="&inline; width:130px;" />
      <Label text="=client" class="bee-required" style="&inline; width:131px; padding-top:1px; text-align:right; margin-right: 4px" />
      <DataSelector source="Customer" style="&inline; width:200px;" choiceColumns="Name TypeName" renderColumns="CustomerName TypeName" />
      <Label text="=crmRequestForm" style="&inline; width:125px; padding-top:1px; text-align:right; margin-right: 10px" />
      <DataSelector source="RequestForm" style="&inline; width:130px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label text="=crmRequestType" style="&inline; width:75px; padding-top:1px; text-align:right; margin-right: 10px" />
      <DataSelector source="RequestType" style="&inline; width:130px;" />
      <Label class="bee-required" text="=responsiblePerson"
        style="&inline; width:125px; padding-top:1px; text-align:right; padding-right: 10px" />
      <DataSelector source="Manager" style="&inline; width:200px;" required="true" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=crmRequest" class="bee-required" style="&inline; width:75px; padding-top:1px; text-align:right; margin-right: 10px; vertical-align:top;" />      <InputArea source="Content" visibleLines="8" style="width:490px;" />
    </FlowPanel>

      <row>
        <Label for="Date" />
        <InputDateTime source="Date" style="&dateStyle;" tabIndex="100"/>
      </row>
    </Table>
  </FlowPanel>
</f:Form>

#}
