<?xml version="1.0" encoding="UTF-8"?>

<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"

        name="TaskProduct" caption="=crmTaskProduct" height="130" width="510">

  <Table kind="controls">
    <col index="0" kind="label" />
    
    <row>
      <Label for="Name" />
      <cell colSpan="2">
        <InputText source="Name" style="width: 400px;" />
      </cell>
    </row>
    <row>
      <Label for="Background" />
      <ColorEditor source="Background" />
    </row>
    <row>
      <Label for="Foreground" />
      <ColorEditor source="Foreground" />
    </row>
    <row>
      <Label for="Ordinal" />
      <InputInteger source="Ordinal" style="width: 40px; "/>
      <CheckBox source="Visible" text="=stateVisible" />
    </row>
  </Table>
</f:Form>
