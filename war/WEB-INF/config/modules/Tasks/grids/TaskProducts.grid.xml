<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" 
        xmlns:g="http://www.butent.com/grid"
        xmlns:ui="http://www.butent.com/ui"
  
  name="TaskProducts" viewName="TaskProducts" caption="=crmTaskProducts"
  minColumnWidth="200"
  >
  <g:columns>
    <DataColumn name="Ordinal"  visible="true" />
    <DataColumn name="Name" visible="true" />
    <DataColumn name="Visible" visible="true"/>
    
    <DataColumn name="Background" updateMode="row">
      <dynStyle>
        <ui:inline>color: [row.Foreground];background-color: [row.Background];</ui:inline>
      </dynStyle>
      <editor type="color" />
    </DataColumn>
    <DataColumn name="Foreground" updateMode="row">
      <dynStyle>
        <ui:inline>color: [row.Foreground];background-color: [row.Background];</ui:inline>
    </dynStyle>
      <editor type="color" />
    </DataColumn>
  </g:columns>
</g:Grid>
