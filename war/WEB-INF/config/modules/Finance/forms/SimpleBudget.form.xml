<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
    <!ENTITY inpw "width: 20rem;">
    <!ENTITY colorw "width: 20rem;">
    ]>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:xi="http://www.w3.org/2001/XInclude"

        name="SimpleBudget" viewName="BudgetHeaders"
        caption="=finBudget"
        width="75" widthUnit="px" height="75" heightUnit="vh"
>
  <FlowPanel class="flexBox-vertical">
    <Table kind="controls" style="margin: 1ex 1em;">
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label for="BudgetName" />
        <InputText source="BudgetName" style="&inpw;" />

        <Label for="Ordinal" />
        <InputInteger source="Ordinal" style="width: 5rem;" />
      </row>

      <row>
        <Label for="Indicator" />
        <DataSelector source="Indicator" style="&inpw;" renderColumns="IndicatorName"
                      choiceColumns="IndicatorName IndicatorAbbreviation" newRowEnabled="false" />

        <Label for="BudgetType" />
        <DataSelector source="BudgetType" style="&inpw;" renderColumns="BudgetTypeName"
                      choiceColumns="BudgetTypeName" newRowEnabled="false" />
      </row>

      <row>
        <Label for="Employee" />
        <DataSelector source="Employee" style="&inpw;"
                      renderColumns="EmployeeFirstName EmployeeLastName"
                      choiceColumns="FirstName LastName" newRowEnabled="false" />

        <Label for="Year" />
        <InputInteger source="Year" style="width: 5rem;" minValue="2000" maxValue="2099" />
      </row>

      <row>
        <Label for="Background" />
        <ColorEditor source="Background" style="&colorw;" />

        <Label for="Foreground" />
        <ColorEditor source="Foreground" style="&colorw;" />
      </row>
    </Table>

    <TabbedPages class="flexible">
      <page>
        <text>=dimensions</text>
        <xi:include href="../../Administration/forms/widgets/ExtraDimensions.widget.xml" />
      </page>

      <page>
        <text>=finBudgetEntries</text>
        <FlowPanel class="flexBox-vertical">
          <FlowPanel>
            <InlineLabel text="=columns" />

            <CheckBox source="EntryDim01" />
            <CheckBox source="EntryDim02" />
            <CheckBox source="EntryDim03" />
            <CheckBox source="EntryDim04" />
            <CheckBox source="EntryDim05" />
            <CheckBox source="EntryDim06" />
            <CheckBox source="EntryDim07" />
            <CheckBox source="EntryDim08" />
            <CheckBox source="EntryDim09" />
            <CheckBox source="EntryDim10" />

            <CheckBox source="EntryEmployee" />
          </FlowPanel>

          <ChildGrid name="BudgetEntries" relColumn="BudgetHeader" class="flexible" />
        </FlowPanel>
      </page>

      <page for="Description">
        <text>=description</text>
        <SimplePanel>
          <InputArea source="Description" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>  
