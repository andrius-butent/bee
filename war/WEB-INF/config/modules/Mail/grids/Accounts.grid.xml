<?xml version="1.0" encoding="UTF-8" ?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Accounts" viewName="Accounts" caption="=mailAccounts"
  newRowForm="NewAccount" newRowPopup="true"
  editForm="Account" editPopup="true"
  filter="User = {u}"
  >

  <g:columns>
    <DataColumn name="Description" />
    <DataColumn name="Main" caption="=mailDefaultShort" />
    <RelColumn name="Address" caption="=email" renderColumns="Label Email">
      <renderer type="mail" />
    </RelColumn>
    <DataColumn name="StoreType" />
  </g:columns>
</g:Grid>
