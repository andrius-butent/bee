<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Folders"
  idName="FolderID"
  >
  <Fields>
    <Relation name="Account" relation="Accounts" notNull="true" cascade="DELETE" />
    <Relation name="Parent" relation="Folders" cascade="DELETE" />
    <String name="Name" precision="50" notNull="true" />
    <Long name="UIDValidity" />
  </Fields>
  <Keys>
    <Key unique="true">
      <KeyField>Account</KeyField>
      <KeyField>Parent</KeyField>
      <KeyField>Name</KeyField>
    </Key>
  </Keys>
</Table>
