<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Messages"
  idName="MessageID"
  >
  <Fields>
    <String name="UniqueId" precision="32" unique="true" notNull="true" />
    <DateTime name="Date" notNull="true" label="=date" />
    <Relation name="Sender" relation="Emails" notNull="true" label="=mailSender" />
    <String name="Subject" precision="255" label="=mailSubject" />
    <Numeric name="AttachmentCount" precision="2" />
  </Fields>

  <Indexes>
    <Index fields="Date" />
  </Indexes>
</Table>
