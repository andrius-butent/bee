<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Recipients"
  idName="RecipientID"
  >
  <Fields>
    <Relation name="Message" relation="Messages" notNull="true" cascade="DELETE" />
    <Relation name="Address" relation="Emails" notNull="true" />
    <String name="Type" precision="10" notNull="true" />
    <Numeric name="Status" precision="1" notNull="true" />
    <Boolean name="Unread" />
  </Fields>
  <Keys>
    <Key unique="true">
      <KeyField>Message</KeyField>
      <KeyField>Address</KeyField>
    </Key>
    <Key>
      <KeyField>Type</KeyField>
    </Key>
    <Key>
      <KeyField>Status</KeyField>
    </Key>
  </Keys>
</Table>
