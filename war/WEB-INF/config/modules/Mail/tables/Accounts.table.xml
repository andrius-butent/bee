<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Accounts"
  idName="AccountID"
  >
  <Fields>
    <Relation name="User" relation="Users" notNull="true" cascade="DELETE" />
    <String name="Description" precision="100" notNull="true" unique="true" />
    <Boolean name="Main" />
    <Relation name="Address" relation="Emails" notNull="true" unique="true" />

    <String name="StoreType" precision="5" notNull="true" defValue="IMAP" />
    <String name="StoreServer" precision="50" />
    <Integer name="StorePort" />
    <String name="StoreLogin" precision="50" />
    <String name="StorePassword" precision="50" audit="false"  />
    <Boolean name="StoreSSL" />

    <String name="TransportServer" precision="50" />
    <Integer name="TransportPort" />
    <String name="TransportLogin" precision="50" />
    <String name="TransportPassword" precision="50" audit="false" />
    <Boolean name="TransportSSL" />

    <Relation name="InboxFolder" relation="Folders" cascade="SET_NULL" />
    <Relation name="SentFolder" relation="Folders" cascade="SET_NULL" />
    <Relation name="DraftsFolder" relation="Folders" cascade="SET_NULL" />
    <Relation name="TrashFolder" relation="Folders" cascade="SET_NULL" />
  </Fields>
  <Keys>
    <Key>
      <KeyField>StoreLogin</KeyField>
    </Key>
  </Keys>
</Table>
