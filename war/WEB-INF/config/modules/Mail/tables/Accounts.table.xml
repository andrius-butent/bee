<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Accounts"
  idName="AccountID"
  >
  <Fields>
    <Relation name="User" relation="Users" notNull="true" cascade="DELETE" label="=user"/>
    <String name="Description" precision="50" notNull="true" label="=mailName" />
    <Boolean name="Main" label="=mailDefault" />
    <Relation name="Address" relation="Emails" notNull="true" unique="true" label="=mailAddress" />

    <String name="StoreType" precision="5" notNull="true" defValue="IMAP" label="=mailType"/>
    <String name="StoreServer" precision="50" label="=mailServerAddress" />
    <Integer name="StorePort" label="=mailPort" />
    <String name="StoreLogin" precision="50" label="=mailAccountLogin" />
    <String name="StorePassword" precision="50" audit="false" label="=mailAccountPassword" />
    <Boolean name="StoreSSL" label="=mailSSL"/>

    <String name="TransportServer" precision="50" label="=mailSMTPServer"/>
    <Integer name="TransportPort" label="=mailPort" />
    <String name="TransportLogin" precision="50" label="=mailAccountLogin" />
    <String name="TransportPassword" precision="50" audit="false" label="=mailAccountPassword" />
    <Boolean name="TransportSSL" />

    <Relation name="InboxFolder" relation="Folders" cascade="SET_NULL" label="=mailFolderInbox" />
    <Relation name="SentFolder" relation="Folders" cascade="SET_NULL" label="=mailFolderSent"/>
    <Relation name="DraftsFolder" relation="Folders" cascade="SET_NULL" label="=mailFolderDrafts" />
    <Relation name="TrashFolder" relation="Folders" cascade="SET_NULL" label="=mailFolderTrash" />
  </Fields>
</Table>
