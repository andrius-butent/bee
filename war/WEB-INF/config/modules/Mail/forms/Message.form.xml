<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="Message" caption="LaiÅ¡kas" readOnly="true"
  >
  <FlowPanel class="flexBox-vertical" style="margin:10px">
    <FlowPanel class="bee-Message-Envelope">
      <FlowPanel>
        <FlowPanel name="Sender" class="bee-Message-Sender">
          <TextLabel source="Label" inline="true" class="bee-Message-AddressName">
            <render>
              <ui:expression>row.Label ? row.Label : row.Email</ui:expression>
            </render>
          </TextLabel>
          <TextLabel source="Email" inline="true" class="bee-Message-AddressMail">
            <render>
              <ui:expression>row.Label ? row.Email : ''</ui:expression>
            </render>
          </TextLabel>
        </FlowPanel>
        <DateTimeLabel source="Date" class="bee-Message-Date" format="EEEE, y 'm'. MMMM d 'd'. HH:mm" />
      </FlowPanel>
      <TextLabel name="Recipients" class="bee-Message-Recipients" />
      <FlowPanel>
        <TextLabel source="Subject" inline="true" class="bee-Message-Subject" />
        <TextLabel name="Attachments" class="bee-Message-Attachments" />
      </FlowPanel>
    </FlowPanel>

    <HtmlLabel name="Parts" class="bee-Message-Parts flexible" />
  </FlowPanel>
</f:Form>