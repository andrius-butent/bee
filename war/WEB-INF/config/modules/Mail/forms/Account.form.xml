<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="Account" viewName="Accounts" caption="=mailAccount" height="320"
  >
  <FlowPanel>
    <FlowPanel class="flexBox-vertical-center">
      <Table>
        <row>
          <Label text="=mailName" horizontalAlignment="right" class="bee-required" />
          <InputText source="Description" style="width:200px" />

          <cell rowSpan="2" verticalAlignment="middle">
            <CheckBox source="Main" text="=mailDefault" />
          </cell>
        </row>
        <row>
          <Label text="=email" horizontalAlignment="right" class="bee-required" />
          <DataSelector source="Address" style="width:200px" renderColumns="Label Email">
            <renderer type="mail" />
          </DataSelector>
        </row>
      </Table>
    </FlowPanel>
    
    <hr />
    
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical-center flexible">
        <Table>
          <row>
            <cell colSpan="2">
              <TextLabel style="font-weight:bold; text-align:center;">
                <render><ui:expression>row.StoreType + ' ' + $wnd.Bee_maybeTranslate('=serverParameters')</ui:expression></render>
              </TextLabel>
            </cell>
          </row>
          <row>
            <Label text="=mailAddress" horizontalAlignment="right" />
            <InputText source="StoreServer" />
          </row>
          <row>
            <Label text="=mailPort" horizontalAlignment="right" />
            <InputInteger source="StorePort" style="width:50px;" />
          </row>
          <row>
            <Label text="=mailAccountLogin" horizontalAlignment="right" />
            <InputText source="StoreLogin" />
          </row>
          <row>
            <CheckBox source="StoreSSL" text="=mailSSL" style="float:right" />
            <Button text="=mailAccountPassword" name="StorePassword" style="float:right" />
          </row>
          <row>
            <cell colSpan="2">
              <Label text="=mailSystemFolders" style="font-weight:bold; text-align:center;" />
            </cell>
          </row>
          <row>
            <Label text="=mailFolderSent" horizontalAlignment="right" />
            <DataSelector name="SentFolder" source="SentFolder" newRowEnabled="false">
              <renderToken source="SentParent" suffix="/" />
              <renderToken source="SentName" />
            </DataSelector>
          </row>
          <row>
            <Label text="=mailFolderDrafts" horizontalAlignment="right" />
            <DataSelector name="DraftsFolder" source="DraftsFolder" newRowEnabled="false">
              <renderToken source="DraftsParent" suffix="/" />
              <renderToken source="DraftsName" />
            </DataSelector>
          </row>
          <row>
            <Label text="=mailFolderTrash" horizontalAlignment="right" />
            <DataSelector name="TrashFolder" source="TrashFolder" newRowEnabled="false">
              <renderToken source="TrashParent" suffix="/" />
              <renderToken source="TrashName" />
            </DataSelector>
          </row>
        </Table>
      </FlowPanel>

      <FlowPanel class="flexBox-vertical-center flexible">
        <Table>
          <row>
            <cell colSpan="2">
              <Label text="=mailSMTPServerSettings" style="font-weight:bold; text-align:center;" />
            </cell>
          </row>
          <row>
            <Label text="=mailAddress" horizontalAlignment="right" />
            <InputText source="TransportServer" />
          </row>
          <row>
            <Label text="=mailPort" horizontalAlignment="right" />
            <InputInteger source="TransportPort" style="width:50px;" />
          </row>
          <row>
            <Label text="=mailAccountLogin" horizontalAlignment="right" />
            <InputText source="TransportLogin" />
          </row>
          <row>
            <CheckBox source="TransportSSL" text="=mailSSL" style="float:right" />
            <Button text="=mailAccountPassword" name="TransportPassword" style="float:right" />
          </row>
        </Table>
      </FlowPanel>
    </FlowPanel>
  </FlowPanel>
</f:Form>  
