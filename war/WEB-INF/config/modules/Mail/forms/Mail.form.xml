<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Mail" caption="Laiškai" readOnly="true" enabledActions="add delete"
  >
  <FlowPanel class="flexBox-vertical" style="margin: 5px;">
    <HorizontalPanel style="width: 100%; padding-bottom: 5px; border-bottom: 1px solid lightgray;">
      <InputText placeholder="Čia bus paieška..." style="width: 280px" />
    </HorizontalPanel>

    <SplitPanel class="flexible" splitterSize="1">
      <west size="300">
        <GridPanel name="Messages" class="bee-mail-Headers" />
      </west>
      
      <center>
        <FlowPanel class="flexBox-vertical" style="margin-top: 5px; margin-left: 5px;">
          <Label name="EmptySelection" class="bee-mail-EmptySelection"
            text="Nepasirinktas joks laiškas" />

          <FlowPanel name="Message" class="flexible flexBox-vertical" style="display: none;">
            <xi:include href="widgets/Message.widget.xml" />
          </FlowPanel>
        </FlowPanel>
      </center>
    </SplitPanel>
  </FlowPanel>
</f:Form>
