<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:d="http://www.butent.com/decorator"
  
  name="NewMessage" caption="Naujas laiÅ¡kas"
  >
  <FlowPanel class="flexBox-vertical"
    style="margin: 5px; position: relative; width: 760px; height: 460px;">
    <FlowPanel class="bee-mail-Envelope">
      <MultiSelector name="To" viewName="Emails"
         caption="Skirta" d:size="40" d:unit="px" style="display: inline-block; width: 600px;">
        <renderToken source="Label" suffix=" " />
        <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
      </MultiSelector>

      <Disclosure style="display: inline-block;">
        <Label html="Kopijos" style="font-size: smaller" />
        <FlowPanel>
          <Table>
            <row>
              <Label html="Paprasta" horizontalAlignment="right" />
              <MultiSelector name="Cc" viewName="Emails" style="width: 600px">
                <renderToken source="Label" suffix=" " />
                <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
              </MultiSelector>
            </row>
            <row>
              <Label html="Nematoma" horizontalAlignment="right" />
              <MultiSelector name="Bcc" viewName="Emails" style="width: 600px;">
                <renderToken source="Label" suffix=" " />
                <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
              </MultiSelector>
            </row>
          </Table>
        </FlowPanel>
      </Disclosure>

      <Image name="Send" resource="plane" style="float:right;" />

      <InputText name="Subject" placeholder="Tema" style="width: 600px; display: block;" />

      <FileCollector name="Attachments">
        <face resource="attachment" />
      </FileCollector>
    </FlowPanel>

    <RichTextEditor name="Message" class="bee-mail-Content flexible" />
  </FlowPanel>
</f:Form>
