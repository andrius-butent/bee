<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="NewAccount" viewName="Accounts" caption="=mailNewAccount" width="620" height="260"
  >
  <FlowPanel>
    <FlowPanel class="flexBox-vertical-center">
      <Table>
        <row>
          <Label text="=mailName" horizontalAlignment="right" class="bee-required" />
          <InputText source="Description" style="width:200px" />

          <cell rowSpan="2" verticalAlignment="middle">
            <CheckBox source="Main" text="=mailDefault" />
          </cell>
        </row>
        <row>
          <Label text="=email" horizontalAlignment="right" class="bee-required" />
          <DataSelector source="Address" style="width:200px" renderColumns="Label Email">
            <renderer type="mail" />
          </DataSelector>
        </row>
      </Table>
    </FlowPanel>
    
    <hr />
    
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical-center flexible">
        <Table>
          <row>
            <cell colSpan="2">
              <Label text="=mailServerSettings" style="font-weight:bold; text-align:center;" />
            </cell>
          </row>
          <row>
            <Label text="=mailServerType" horizontalAlignment="right" class="bee-required" />
            <ListBox source="StoreType">
              <item>POP3</item>
              <item>IMAP</item>
            </ListBox>
          </row>
          <row>
            <Label text="=mailServerAddress" horizontalAlignment="right" />
            <InputText source="StoreServer" />
          </row>
          <row>
            <Label text="=mailServerPort" horizontalAlignment="right" />
            <FlowPanel>
              <InputInteger source="StorePort" style="width:50px;" />
              <Button text="=mailServerProperties" name="StoreProperties" style="float:right" />
            </FlowPanel>
          </row>
          <row>
            <Label text="=mailServerLogin" horizontalAlignment="right" />
            <InputText source="StoreLogin" />
          </row>
          <row>
            <CheckBox source="StoreSSL" text="=mailServerSSL" style="float:right" />
            <Button text="=mailServerPassword" name="StorePassword" style="float:right" />
          </row>
        </Table>
      </FlowPanel>

      <FlowPanel class="flexBox-vertical-center flexible">
        <Table>
          <row>
            <cell colSpan="2">
              <Label text="=mailSMTPServerSettings" style="font-weight:bold; text-align:center;" />
            </cell>
          </row>
          <row>
            <Label text="=mailServerAddress" horizontalAlignment="right" />
            <InputText source="TransportServer" />
          </row>
          <row>
            <Label text="=mailServerPort" horizontalAlignment="right" />
            <FlowPanel>
              <InputInteger source="TransportPort" style="width:50px;" />
              <Button text="=mailServerProperties" name="TransportProperties" style="float:right" />
            </FlowPanel>
          </row>
          <row>
            <Label text="=mailServerLogin" horizontalAlignment="right" />
            <InputText source="TransportLogin" />
          </row>
          <row>
            <CheckBox source="TransportSSL" text="=mailServerSSL" style="float:right" />
            <Button text="=mailServerPassword" name="TransportPassword" style="float:right" />
          </row>
        </Table>
      </FlowPanel>
    </FlowPanel>
  </FlowPanel>
</f:Form>  
