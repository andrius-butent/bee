<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="NewAccount" viewName="Accounts" caption="Nauja paskyra" height="230"
  >
  <FlowPanel>
    <FlowPanel class="flexBox-vertical-center">
      <Table>
        <row>
          <Label html="Pavadinimas" horizontalAlignment="right" class="bee-required" />
          <InputText source="Description" style="width:200px" />

          <cell rowSpan="2" verticalAlignment="middle">
            <CheckBox source="Main" html="Pagrindinis" />
          </cell>
        </row>
        <row>
          <Label html="El.paštas" horizontalAlignment="right" class="bee-required" />
          <DataSelector source="Address" style="width:200px">
            <renderToken source="Label" suffix=" " />
            <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
          </DataSelector>
        </row>
      </Table>
    </FlowPanel>
    
    <hr />
    
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical-center flexible">
        <Table>
          <row>
            <cell colSpan="2">
              <Label html="Pašto serverio parametrai" style="font-weight:bold; text-align:center;" />
            </cell>
          </row>
          <row>
            <Label html="Tipas" horizontalAlignment="right" class="bee-required" />
            <ListBox source="StoreType">
              <item>POP3</item>
              <item>IMAP</item>
            </ListBox>
          </row>
          <row>
            <Label html="Adresas" horizontalAlignment="right" />
            <InputText source="StoreServer" />
          </row>
          <row>
            <Label html="Prievadas" horizontalAlignment="right" />
            <InputInteger source="StorePort" style="width:50px;" />
          </row>
          <row>
            <Label html="Prisijungimo vardas" horizontalAlignment="right" />
            <InputText source="StoreLogin" />
          </row>
          <row>
            <CheckBox source="StoreSSL" html="SSL" style="float:right" />
            <Button html="Slaptažodis" name="StorePassword" style="float:right" />
          </row>
        </Table>
      </FlowPanel>

      <FlowPanel class="flexBox-vertical-center flexible">
        <Table>
          <row>
            <cell colSpan="2">
              <Label html="SMTP serverio parametrai" style="font-weight:bold; text-align:center;" />
            </cell>
          </row>
          <row>
            <Label html="Adresas" horizontalAlignment="right" />
            <InputText source="TransportServer" />
          </row>
          <row>
            <Label html="Prievadas" horizontalAlignment="right" />
            <InputInteger source="TransportPort" style="width:50px;" />
          </row>
          <row>
            <Label html="Prisijungimo vardas" horizontalAlignment="right" />
            <InputText source="TransportLogin" />
          </row>
          <row>
            <CheckBox source="TransportSSL" html="SSL" style="float:right" />
            <Button html="Slaptažodis" name="TransportPassword" style="float:right" />
          </row>
        </Table>
      </FlowPanel>
    </FlowPanel>
  </FlowPanel>
</f:Form>  
