<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view" name="RecipientsGroups" source="RecipientsGroups" caption="=mailRecipientsGroups"
  editForm="RecipientsGroup" newRowForm="RecipientsGroup">
  <Columns>
    <SimpleColumn name="GroupName" />

    <SimpleColumn name="Visibility" />

    <SimpleColumn name="Creator" />
    <SimpleJoin name="Creator" joinType="LEFT">
      <SimpleColumn alias="CreatorCompanyPerson" name="CompanyPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="CreatorFirstName" name="FirstName" />
          <SimpleColumn alias="CreatorLastName" name="LastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="CompanyPriority" />
    <SimpleJoin name="CompanyPriority" joinType="LEFT">
      <SimpleColumn name="Name" alias="CompanyPriorityName" />
    </SimpleJoin>

    <SimpleColumn name="CompanySize" />
    <SimpleJoin name="CompanySize" joinType="LEFT">
      <SimpleColumn name="SizeName" alias="CompanySizeName" />
    </SimpleJoin>

    <SimpleColumn name="Activity" />
    <SimpleJoin name="Activity" joinType="LEFT">
      <SimpleColumn name="Name" alias="CompanyActivityName" />
    </SimpleJoin>

    <SimpleColumn name="CompanyGroup" />
    <SimpleJoin name="CompanyGroup" joinType="LEFT">
      <SimpleColumn name="Name" alias="CompanyGroupName" />
    </SimpleJoin>

    <SimpleColumn name="CompanyRelationType" />
    <SimpleJoin name="CompanyRelationType" joinType="LEFT">
      <SimpleColumn name="Name" alias="CompanyRelationTypeName" />
    </SimpleJoin>

    <SimpleColumn name="CompanyRelationTypeState" />
    <SimpleJoin name="CompanyRelationTypeState" joinType="LEFT">
      <SimpleColumn name="Name" alias="CompanyRelationTypeStateName" />
    </SimpleJoin>

    <SimpleColumn name="RcpsGroupsContacts" />
  </Columns>
</View>
 