<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
        xmlns:ui="http://www.butent.com/ui"
        xmlns:w="http://www.butent.com/widget"

        name="SentDocuments" viewName="Documents" caption="=documentFilterSent"
        newRowForm="NewDocument" editForm="Document" filter="Sent" parent="Tree" favorite="Name"
        flexGrow="1" order="Sent desc"
    >

  <g:west size="200" splitterSize="2">
    <w:DataTree class="bee-documents-parentWiget" name="Tree" caption="=documentCategories"
                viewName="DocumentTree" parentColumn="Parent" favorite="CategoryName">
      <w:calc>
        <ui:expression>row.CategoryName + (row.DocumentCount != 0 ? ' [' + row.DocumentCount + ']' : '')</ui:expression>
      </w:calc>
    </w:DataTree>
  </g:west>

  <g:columns>
    <IdColumn name="Id" />
    <DataColumn name="Sent" />
    <DataColumn name="Name" />
    <RelColumn name="Company" filterSupplier="value" />
    <DataColumn name="DocumentDate" />
    <DataColumn name="Number" />
    
    <RelColumn name="Category" visible="false" />
    <DataColumn name="Expires" visible="false" />
    <RelColumn name="Type" carry="true" visible="false" />
    <RelColumn name="Place" carry="true" visible="false" />
    <DataColumn name="StatusName" visible="false" />
    <DataColumn name="RegistrationNumber" visible="false" />
    <DataColumn name="Received" visible="false" />
    <DataColumn name="Description" visible="false" />
  </g:columns>

</g:Grid>