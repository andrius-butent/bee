<?xml version="1.0" encoding="UTF-8"?>
<BeeView xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="UserTasks"
  source="Tasks"
  >
  <BeeColumns>
    <BeeSimpleColumn expression="Priority" />
    <BeeSimpleColumn expression="Description" />
    <BeeHiddenColumn expression="ProjectStage" />
    <BeeSimpleJoin expression="ProjectStage" joinType="LEFT">
      <BeeSimpleJoin expression="Project" joinType="LEFT">
        <BeeHiddenColumn expression="Event" name="ProjectEvent" />
        <BeeSimpleColumn expression="Name" name="ProjectName" />
      </BeeSimpleJoin>
    </BeeSimpleJoin>
    <BeeSimpleColumn expression="StartTime" />
    <BeeSimpleColumn expression="FinishTime" />
    <BeeSimpleColumn expression="ExpectedDuration" />
    <BeeSimpleColumn expression="Event" />
    <BeeSimpleColumn expression="Owner" />
    <BeeSimpleJoin expression="Owner" joinType="LEFT">
      <BeeSimpleJoin expression="Person" joinType="LEFT">
        <BeeSimpleColumn name="OwnerFirstName" expression="FirstName" />
        <BeeSimpleColumn name="OwnerLastName" expression="LastName" />
      </BeeSimpleJoin>
    </BeeSimpleJoin>
    <BeeSimpleColumn expression="Executor" />
    <BeeSimpleJoin expression="Executor" joinType="LEFT">
      <BeeSimpleJoin expression="Person" joinType="LEFT">
        <BeeSimpleColumn name="ExecutorFirstName" expression="FirstName" />
        <BeeSimpleColumn name="ExecutorLastName" expression="LastName" />
      </BeeSimpleJoin>
    </BeeSimpleJoin>
    <BeeSimpleColumn expression="Company" />
    <BeeSimpleJoin expression="Company" joinType="LEFT">
      <BeeSimpleColumn name="CompanyName" expression="Name" />
    </BeeSimpleJoin>
    <BeeSimpleColumn expression="CompanyPerson" />
    <BeeSimpleJoin expression="CompanyPerson" joinType="LEFT">
      <BeeSimpleJoin expression="Person" joinType="LEFT">
        <BeeSimpleColumn name="PersonFirstName" expression="FirstName" />
        <BeeSimpleColumn name="PersonLastName" expression="LastName" />
      </BeeSimpleJoin>
    </BeeSimpleJoin>
    <BeeExternalJoin source="TaskUsers" expression="Task" joinType="LEFT">
        <BeeHiddenColumn expression="User" />
        <BeeAggregateColumn expression="LastAccess" aggregate="MAX" />
    </BeeExternalJoin>
    <BeeExternalJoin source="TaskEvents" expression="Task" joinType="LEFT">
        <BeeAggregateColumn name="LastPublish" expression="PublishTime" aggregate="MAX" />
    </BeeExternalJoin>
  </BeeColumns>
</BeeView>
 