<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="Documents" viewName="Documents" caption="Dokumentai" 
  newRowForm="NewDocument" editForm="Document" parent="Tree"
  flexGrow="1" flexShrink="1"
  >
  
  <west size="200" splitterSize="2">
    <w:DataTree name="Tree" caption="Kategorijos" source="DocumentTree" parentColumn="Parent"
              hideActions="true">
      <w:calc>
        <ui:expression>row.Name + (row.DocumentCount != 0 ? ' [' + row.DocumentCount + ']' : '')</ui:expression>
      </w:calc>
    </w:DataTree>
  </west>
  
  <columns>
    <IdColumn name="Id" />
    <DataColumn name="DocumentDate" source="DocumentDate" caption="Data" />
    <DataColumn name="Number" source="Number" caption="Numeris" />
    <DataColumn name="Name" source="Name" caption="Pavadinimas" />
    <DataColumn name="TypeName" source="TypeName" caption="Tipas" />
    <DataColumn name="GroupName" source="GroupName" caption="GrupÄ—" />
    <DataColumn name="Expires" source="Expires" caption="Galioja iki" />
  </columns>
</Grid>
