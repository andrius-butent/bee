<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/grid.xsd"
  
  name="Documents" viewName="Documents" caption="Dokumentai" 
  newRowForm="NewDocument" editForm="Document" parent="Tree">
  
  <west size="200">
    <DataTree name="Tree" caption="Kategorijos" source="DocumentTree" parentColumn="Parent"
              hideActions="true">
      <calc>
        <expression>row.Name + (row.DocumentCount != 0 ? ' [' + row.DocumentCount + ']' : '')</expression>
      </calc>
    </DataTree>
  </west>
  
  <columns>
    <IdColumn name="Id" />
    <DataColumn name="DocumentDate" source="DocumentDate" caption="Data" />
    <DataColumn name="Number" source="Number" caption="Numeris" />
    <DataColumn name="Name" source="Name" caption="Pavadinimas" />
    <DataColumn name="TypeName" source="TypeName" caption="Tipas" />
    <DataColumn name="GroupName" source="GroupName" caption="Grupė" />
    <DataColumn name="CompanyName" source="CompanyName" caption="Įmonė" />
    <DataColumn name="Expires" source="Expires" caption="Galioja iki" />
  </columns>
</Grid>
