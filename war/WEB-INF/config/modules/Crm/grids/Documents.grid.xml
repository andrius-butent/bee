<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="Documents" viewName="Documents" caption="=documents"
  newRowForm="NewDocument" editForm="Document" parent="Tree" favorite="Name"
  flexGrow="1" flexShrink="1" order="DocumentID desc"
  >
  
  <west size="200" splitterSize="2">
    <w:DataTree name="Tree" caption="=documentCategories" source="DocumentTree"
      parentColumn="Parent" hideActions="true">
      <w:calc>
        <ui:expression>row.Name + (row.DocumentCount != 0 ? ' [' + row.DocumentCount + ']' : '')</ui:expression>
      </w:calc>
    </w:DataTree>
  </west>
  
  <columns>
    <DataColumn name="Name" visible="true" />
    <DataColumn name="DocumentDate" />
    <DataColumn name="Expires" />
    <DataColumn name="Number" />
    <DataColumn name="CategoryName" caption="=documentCategory" filterOptions="empty" />
    <DataColumn name="TypeName" />
    <DataColumn name="PlaceName" />
    <DataColumn name="StatusName" />

    <IdColumn name="Id" visible="false" />
    <DataColumn name="RegistrationNumber" visible="false" />
    <DataColumn name="Received" visible="false" />
    <DataColumn name="Sent" visible="false" filterOptions="empty" />
    <DataColumn name="Returned" visible="false" />
    <DataColumn name="Description" visible="false" />
  </columns>
  
  <predefinedFilter name="not_categorized" label="=documentFilterNotCategorized">
    <column name="CategoryName" emptyValues="true" />
  </predefinedFilter>
  <predefinedFilter name="not_returned" label="=documentFilterNotReturned">
    <column name="Sent" emptyValues="false" />
    <column name="Returned" emptyValues="true" />
  </predefinedFilter>
</Grid>
