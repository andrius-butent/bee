<?xml version="1.0" encoding="UTF-8"?>
<BeeGrid xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/grid.xsd"
  
  name="Documents" viewName="Documents" caption="Dokumentai" 
  newRowForm="NewDocument" editForm="Document">
  
  <west size="200">
    <Tree name="Tree" rootItem="Kategorijos" hideActions="true">
      <TreeSource source="DocumentTree" parentColumn="Parent">
        <calc>
          <expression>row.Name + (row.DocumentCount != 0 ? ' [' + row.DocumentCount + ']' : '')</expression>
        </calc>
      </TreeSource>
    </Tree>
  </west>
  
  <columns>
    <BeeIdColumn name="Id" />
    <BeeDataColumn name="DocumentDate" source="DocumentDate" caption="Data" />
    <BeeDataColumn name="Number" source="Number" caption="Numeris" />
    <BeeDataColumn name="Name" source="Name" caption="Pavadinimas" />
    <BeeDataColumn name="TypeName" source="TypeName" caption="Tipas" />
    <BeeDataColumn name="GroupName" source="GroupName" caption="Grupė" />
    <BeeDataColumn name="CompanyName" source="CompanyName" caption="Įmonė" />
    <BeeDataColumn name="Expires" source="Expires" caption="Galioja iki" />
  </columns>
</BeeGrid>
