<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="DocumentFiles" viewName="DocumentFiles" caption="=documentFiles"
  flexGrow="1" flexShrink="1"
  >
  <columns>
    <DataColumn name="File" caption="=documentFileOpen" readOnly="true" cellType="html"
      sortable="false" minWidth="100" />

    <DataColumn name="FileDate" required="true" width="128" />
    <DataColumn name="FileVersion" />
    <DataColumn name="Caption" required="true" updateMode="row" />
    <DataColumn name="Description" />

    <DataColumn name="FileSize" readOnly="true" horizontalAlignment="right" width="60" />

    <PropColumn name="Icon" caption="-" type="string" cellType="html" horizontalAlignment="center"
      width="20">
      <renderer type="fileIcon" />
    </PropColumn>

    <RelColumn name="Owner" renderColumns="OwnerFirstName OwnerLastName" />
    
    <DataColumn name="Comment" />

    <DataColumn name="FileName" readOnly="true" visible="false" />
    <DataColumn name="FileType" readOnly="true" visible="false" />
  </columns>
</Grid>
