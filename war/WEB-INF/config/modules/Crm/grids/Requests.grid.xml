<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"

  name="Requests" viewName="Requests" caption="Užklausimai"
  flexGrow="1" flexShrink="1" order="RequestID desc"
  >

  <g:north size="40">
    <w:HorizontalPanel style="border-spacing: 8px 0px">
      <w:CheckBox name="Registred" text="=requestShowRegistered" checked="true"/>
      <w:CheckBox name="Finished" text="=requestShowFinished" />
    </w:HorizontalPanel>
  </g:north>

  <g:columns>
    <IdColumn name="ID" />
    <DataColumn name="Date" caption="Data" width="100"/>
    <DataColumn name="Finished" caption="Baigtas" width="100" format="DATE_TIME_SHORT" 
      filterOptions="empty" />
    <RelColumn name="Customer" caption="Klientas" minWidth="100" />

    <DataColumn name="Content" caption="Užklausimas" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <RelColumn name="Manager" caption="Atsakingas" minWidth="100" />
    <DataColumn name="Result" visible="false"/>
  </g:columns>
  
  <!-- <g:predefinedFilter name="Executing" label="Vykdomi">
    <g:column name="Finished" emptyValues="true" />
  </g:predefinedFilter> -->
</g:Grid>
