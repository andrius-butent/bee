<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/grid.xsd"
  
  name="Tasks" viewName="Tasks" caption="Užduotys">
  
  <columns>
    <IdColumn name="Id" caption="ID" />
    <CalcColumn name="Priority" type="string" caption="Prioritetas" sortBy="Priority">
      <calc>
        <function>
            switch(row.Priority) {
              case 0:
                return "LOW";
              case 1:
                return "MEDIUM";
              case 2:
                return "HIGH";
              default:
                return "UNKNOWN";
            }
          </function>
      </calc>
    </CalcColumn>
    <DataColumn name="Description" source="Description" caption="Užduotis" />
    <DataColumn name="CompanyName" source="CompanyName" caption="Įmonė" />
    <CalcColumn name="Status" type="string" caption="Būsena" sortBy="Event">
      <calc>
        <function>
            switch(row.Event) {
              case 1:
                return "SUSPENDED";
              case 2:
                return "COMPLETED";
              case 3:
                return "APPROVED";
              case 4:
                return "CANCELED";
              default:
                return "ACTIVATED";
            }
          </function>
      </calc>
    </CalcColumn>
    <CalcColumn name="Owner" type="string" caption="Vadovas" sortBy="OwnerFirstName, OwnerLastName"
      searchBy="OwnerFirstName, OwnerLastName">
      <calc>
        <function>return (row.OwnerFirstName || "") + " " + (row.OwnerLastName || "")</function>
      </calc>
    </CalcColumn>
    <CalcColumn name="Executor" type="string" caption="Vykdytojas"
      sortBy="ExecutorFirstName, ExecutorLastName" searchBy="ExecutorFirstName, ExecutorLastName">
      <calc>
        <function>return (row.ExecutorFirstName || "") + " " + (row.ExecutorLastName || "")</function>
      </calc>
    </CalcColumn>
    <DataColumn name="FinishTime" source="FinishTime" caption="Pabaigos laikas" />
  </columns>
</Grid>
