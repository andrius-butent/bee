<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  
  name="Tasks" viewName="Tasks" caption="=tasks"
  cacheData="false" asyncThreshold="-1" favorite="Summary"
  order="TaskID desc"
  >
  <g:columns>
    <CalcColumn name="Mode" type="string" cellType="html" horizontalAlignment="center" width="20"
      caption="-" label="=taskColumnMode" />

    <PropColumn name="Star" type="integer" cellType="html" horizontalAlignment="center" width="20"
      label="=taskColumnStar">
      <renderer type="star" />
    </PropColumn>

    <IdColumn name="Id" caption="=captionId" />

    <DataColumn name="Priority" />
    <DataColumn name="Summary" maxWidth="200" visible="true" />

    <RelColumn name="Company" />

    <DataColumn name="Status" visible="true" />
    <CalcColumn name="Slack" type="string" cellType="html" width="60" caption="=crmTaskDelayPlannedShort" />

    <RelColumn name="Owner" renderColumns="OwnerFirstName OwnerLastName"
      sortBy="OwnerLastName OwnerFirstName" />
    <RelColumn name="Executor" renderColumns="ExecutorFirstName ExecutorLastName"
      sortBy="ExecutorLastName ExecutorFirstName" />

    <DataColumn name="StartTime" visible="true" />
    <DataColumn name="FinishTime" />
  </g:columns>
  
  <g:predefinedFilter name="new" label="=taskFilterNew">
    <g:column name="Mode" value="0" />
  </g:predefinedFilter>
  <g:predefinedFilter name="updated" label="=taskFilterUpdated">
    <g:column name="Mode" value="1" />
  </g:predefinedFilter>
  <g:predefinedFilter name="new_upd" label="=taskFilterNewOrUpdated">
    <g:column name="Mode" value="2" />
  </g:predefinedFilter>
  
  <g:predefinedFilter name="starred" label="=taskFilterStarred">
    <g:column name="Star" emptyValues="false" />
  </g:predefinedFilter>
  
  <g:predefinedFilter name="nv_a" label="=taskFilterNotVisitedOrActive">
    <g:column name="Status" value="0,1" />
  </g:predefinedFilter>  
  <g:predefinedFilter name="nv_a_c" label="=taskFilterNotVisitedOrActiveOrCompleted">
    <g:column name="Status" value="0,1,4" />
  </g:predefinedFilter>
  
  <g:predefinedFilter name="late" label="=taskFilterLate">
    <g:column name="Slack" value="late" />
  </g:predefinedFilter>  
  <g:predefinedFilter name="scheduled" label="=taskFilterScheduled">
    <g:column name="Slack" value="scheduled" />
  </g:predefinedFilter>  
</g:Grid>
