<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="UserProjects" viewName="UserProjects" caption="Projektai"
  editForm="Project" editMode="true" newRowForm="NewProject" editNewRow="true"
  caching="false"
  >
  <north size="40">
    <w:FlowPanel class="flexBox-horizontal-center" style="background-color: #f8f8f8; font-family: Tahoma; font-size: 12px;">
      <w:FlowPanel>
        <w:CheckBox name="Created" html="Suplanuoti" checked="true" />
        <w:CheckBox name="Activated" html="Vykdomi" checked="true" />
        <w:CheckBox name="Suspended" html="Sustabdyti" checked="true" />
        <w:CheckBox name="Canceled" html="Nutraukti" />
        <w:CheckBox name="Completed" html="Baigti" />
      </w:FlowPanel>
      <w:FlowPanel class="flexible flexBox-vertical-center">
        <w:CheckBox name="Overdue" html="Tik vėluojantys" style="color: red;" />
        <w:CheckBox name="Changed" html="Tik pasikeitę" />
      </w:FlowPanel>
      <w:Button name="Filter" html="Filtruoti" />
    </w:FlowPanel>
  </north>  
  
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12 px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <CalcColumn name="Mode" type="string" caption="&#160;" cell="html"
      horizontalAlignment="center" width="15" options="greenSmall, yellowSmall" />
    <IdColumn name="Id" caption="ID" />
    <DataColumn name="Priority" caption="Prioritetas" itemKey="Priority" />
    <DataColumn name="TypeName" caption="Tipas" />
    <DataColumn name="Name" caption="Pavadinimas" />
    <DataColumn name="CompanyName" caption="Įmonė" />
    <DataColumn name="Event" caption="Būsena" itemKey="ProjectEvent" />
    <DataColumn name="Owner" caption="Vadovas" renderColumns="OwnerFirstName OwnerLastName" />
    <DataColumn name="StartDate" caption="Pradžia" />
    <DataColumn name="FinishDate" caption="Terminas" />
  </columns>

  <rowStyle>
    <ui:style>
      <ui:inline>="color:red"</ui:inline>
    </ui:style>
    <ui:condition>
      <ui:expression>row.Event == 1 &amp;&amp; row.FinishDate &lt; new Date()</ui:expression>
    </ui:condition>
  </rowStyle>
  <rowStyle>
    <ui:style>
      <ui:inline>="color:black"</ui:inline>
    </ui:style>
    <ui:condition>
      <ui:expression>row.Event &lt; 2</ui:expression>
    </ui:condition>
  </rowStyle>
  <rowStyle>
    <ui:style>
      <ui:inline>="color:gray"</ui:inline>
    </ui:style>
    <ui:condition>
      <ui:expression>true</ui:expression>
    </ui:condition>
  </rowStyle>
</Grid>
