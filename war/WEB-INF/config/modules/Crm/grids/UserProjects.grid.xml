<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/grid.xsd"
  
  name="UserProjects" viewName="UserProjects" caption="Projektai"
  editForm="Project" editMode="true" newRowForm="NewProject" editNewRow="true"
  caching="false">
  
  <north size="40">
    <FlowPanel class="flexBox-horizontal-center" style="background-color: #f8f8f8; font-family: Tahoma; font-size: 12px;">
      <FlowPanel>
        <CheckBox name="Created" html="Suplanuoti" checked="true" />
        <CheckBox name="Activated" html="Vykdomi" checked="true" />
        <CheckBox name="Suspended" html="Sustabdyti" checked="true" />
        <CheckBox name="Canceled" html="Nutraukti" />
        <CheckBox name="Completed" html="Baigti" />
      </FlowPanel>
      <FlowPanel class="flexible flexBox-vertical-center">
        <CheckBox name="Overdue" html="Tik vėluojantys" style="color: red;" />
        <CheckBox name="Changed" html="Tik pasikeitę" />
      </FlowPanel>
      <Button name="Filter" html="Filtruoti" />
    </FlowPanel>
  </north>  
  
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <font>Verdana 12 px</font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <CalcColumn name="Mode" type="string" caption="&#160;" cell="html"
      horizontalAlignment="center" width="15">
      <calc>
        <lambda>greenSmall, yellowSmall</lambda>
      </calc>
    </CalcColumn>
    <IdColumn name="Id" caption="ID" />
    <DataColumn name="Priority" source="Priority" caption="Prioritetas" itemKey="Priority" />
    <DataColumn name="Type" source="TypeName" caption="Tipas" />
    <DataColumn name="Name" source="Name" caption="Pavadinimas" />
    <DataColumn name="CompanyName" source="CompanyName" caption="Įmonė" />
    <DataColumn name="Event" source="Event" caption="Būsena" itemKey="ProjectEvent" />
    <CalcColumn name="Owner" type="string" caption="Vadovas" sortBy="OwnerFirstName, OwnerLastName"
      searchBy="OwnerFirstName, OwnerLastName">
      <calc>
        <function>return (row.OwnerFirstName || "") + " " + (row.OwnerLastName || "")</function>
      </calc>
    </CalcColumn>
    <DataColumn name="StartDate" source="StartDate" caption="Pradžia" />
    <DataColumn name="FinishDate" source="FinishDate" caption="Terminas" />
  </columns>

  <rowStyle>
    <style>
      <inline>="color:red"</inline>
    </style>
    <condition>
      <expression>row.Event == 1 &amp;&amp; row.FinishDate &lt; new Date()</expression>
    </condition>
  </rowStyle>
  <rowStyle>
    <style>
      <inline>="color:black"</inline>
    </style>
    <condition>
      <expression>row.Event &lt; 2</expression>
    </condition>
  </rowStyle>
  <rowStyle>
    <style>
      <inline>="color:gray"</inline>
    </style>
    <condition>
      <expression>true</expression>
    </condition>
  </rowStyle>
</Grid>
