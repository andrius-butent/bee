<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="TaskTemplates" viewName="TaskTemplates" caption="Užduočių šablonai"
  flexGrow="1" flexShrink="1"
  >
  <g:columns>
    <DataColumn name="Name" visible="true" />
    <DataColumn name="Priority" itemKey="TaskPriority" />
    <DataColumn name="Summary" />
    <DataColumn name="ExpectedDuration" caption="Trukmė" flexBasis="5" flexBasisUnit="em">
      <editor type="time" />
    </DataColumn>
    <DataColumn name="Description" />
    <RelColumn name="Company" />
    <RelColumn name="Contact" renderColumns="ContactFirstName ContactLastName ContactCompanyName"
      choiceColumns="FirstName LastName CompanyName" />
    <RelColumn name="Reminder" newRowEnabled="false" />
  </g:columns>
</g:Grid>
