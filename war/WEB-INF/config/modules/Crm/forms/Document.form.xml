<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY chlabel "text-align: right;">
  <!ENTITY chselect "width: 300px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Document" caption="=document"
  width="900" height="400"
  > 

  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal-space-between">
      <xi:include href="widgets/DocumentFields.widget.xml" />
      
      <Table style="margin-top: 5px; margin-right: 5px;">
        <row>
          <Label text="=companies" style="&chlabel;" />
          <ChildSelector viewName="Companies" childTable="Relations" renderColumns="Name"
            style="&chselect;" />
        </row>

        <row>
          <Label text="=persons" style="&chlabel;" />
          <ChildSelector viewName="Persons" childTable="Relations"
            renderColumns="FirstName LastName" style="&chselect;" />
        </row>

        <row>
          <Label text="=appointments" style="&chlabel;" />
          <ChildSelector viewName="Appointments" childTable="Relations"
            renderColumns="Summary" choiceColumns="Summary StartDateTime EndDateTime"
            newRowEnabled="false" style="&chselect;" />
        </row>

        <row>
          <Label text="=tasks" style="&chlabel;" />
          <ChildSelector viewName="Tasks" childTable="Relations" 
            renderColumns="Summary"
            choiceColumns="Summary ExecutorFirstName ExecutorLastName StartTime FinishTime"
            style="&chselect;" />
        </row>

        <row>
          <Label text="=trRequestsShort" style="&chlabel;" />
          <ChildSelector viewName="CargoRequests" childTable="Relations" 
            renderColumns="CustomerCompanyName LoadingDate"
            choiceColumns="CustomerCompanyName LoadingDate LoadingCityName UnloadingCityName"
            style="&chselect;" />
        </row>
        
        <row>
          <Label text="=vehiclesShort" style="&chlabel;" />
          <ChildSelector viewName="Vehicles" childTable="Relations" 
            renderColumns="Number" choiceColumns="Number ParentModelName ModelName"
            style="&chselect;" />
        </row>

        <row>
          <Label text="=drivers" style="&chlabel;" />
          <ChildSelector viewName="Drivers" childTable="Relations" 
            renderColumns="FirstName LastName" newRowEnabled="false" style="&chselect;" />
        </row>

        <row>
          <Label text="=transportationOrders" style="&chlabel;" />
          <ChildSelector viewName="TransportationOrders" childTable="Relations" 
            renderColumns="OrderNo" choiceColumns="CustomerName Date OrderNo" style="&chselect;" />
        </row>

        <row>
          <Label text="=cargos" style="&chlabel;" />
          <ChildSelector viewName="OrderCargo" childTable="Relations" 
            renderColumns="Description"
            choiceColumns="Description LoadingDate LoadingCountryCode UnloadingDate UnloadingCountryCode"
            newRowEnabled="false" style="&chselect;" />
        </row>

        <row>
          <Label text="=trips" style="&chlabel;" />
          <ChildSelector viewName="Trips" childTable="Relations" 
            renderColumns="TripNo" choiceColumns="Date PlannedEndDate TripNo VehicleNumber"
            style="&chselect;" />
        </row>
        
      </Table>
    </FlowPanel>
    
    <ChildGrid name="DocumentFiles" relColumn="Document" class="flexible" style="margin-top: 1ex;" />
  </FlowPanel>
</f:Form>  
