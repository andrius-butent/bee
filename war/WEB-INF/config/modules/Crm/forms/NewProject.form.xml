<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="NewProject" caption="Naujas projektas">

  <Table style="border-spacing: 10px;">

    <row>
      <Label html="Tipas:" class="bee-required" />
      <DataSelector source="TypeName" />
      <Label html="Prioritetas:" horizontalAlignment="right" class="bee-required" />
      <xi:include href="widgets/Priority.widget.xml" />
    </row>

    <row>
      <Label html="Pavadinimas:" class="bee-required" />
      <cell colSpan="3">
        <InputText source="Name" style="width: 100%;" />
      </cell>
    </row>

    <row>
      <Label html="Pradžia:" class="bee-required" />
      <InputDate source="StartDate" />
      <Label html="Įmonė:" horizontalAlignment="right" />
      <DataSelector source="Company" />
    </row>

    <row>
      <Label html="Terminas:" class="bee-required" />
      <InputDate source="FinishDate" />
      <Label html="Asmuo:" horizontalAlignment="right" />
      <DataSelector source="CompanyPerson" />
    </row>

    <row>
      <Label html="Aprašymas:" />
      <cell colSpan="3">
        <InputArea source="Description" style="width: 100%; height: 60px;" />
      </cell>
    </row>

    <row>
      <Label html="Stebėtojai:" />
      <ListBox name="Observers" multiSelect="true" minSize="2" maxSize="10" style="width: 100%;" />
      <cell colSpan="2" >
        <VerticalPanel>
          <Image name="AddObservers" resource="add" />
          <Image name="RemoveObservers" resource="delete" />
        </VerticalPanel>
      </cell>
    </row>
  </Table>
</f:Form>  
