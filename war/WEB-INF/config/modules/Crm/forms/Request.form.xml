<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelLeft "&inline; width:100px; padding-top:1px;">
  <!ENTITY labelRight "&inline; width:60px; padding-top:1px; text-align:right; margin-right:10px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Request" viewName="Requests" caption="Užklausimas"
  width="600"
  >
  <FlowPanel style="padding: 10px 2px 2px 10px;">
    <FlowPanel style="&section;">
      <Label html="Data" class="bee-required" style="&labelLeft;" />
      <InputDateTime source="Date" style="&inline; width:110px;" />
      <Label html="Užsakovas" class="bee-required" style="&labelRight; width:120px;" />
      <DataSelector source="Customer" style="&inline; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Kontaktai" style="&labelLeft;" />
      <InputText source="Contacts" style="&inline; width:110px;" />
      <Label html="Kontaktinis asmuo" style="&labelRight; width:120px;" />
      <DataSelector source="CustomerPerson" style="&inline; width:200px;" 
        choiceColumns="FirstName LastName CompanyName" options="Customer" />
    </FlowPanel>
    
    &separator;
    <FlowPanel style="&section;">
      <Label html="Užklausimas" class="bee-required" style="&labelLeft; vertical-align:top;" />
      <InputArea source="Content" visibleLines="8" style="width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Vadybininkas" style="&labelLeft;" />
      <DataSelector source="Manager" style="&inline; width:200px;" editSource="ManagerPerson"
        newRowEnabled="false" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label html="Autorius" style="&labelLeft;" />
      <TextLabel style="&inline;">
        <renderToken source="CreatorFirstName"/>
        <renderToken source="CreatorLastName"/>
      </TextLabel>
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label html="Sukurtas" style="&labelLeft;" />
      <DateTimeLabel source="Created" style="&inline; width:110px;" />
      <TextLabel style="&inline; margin-left:20px; font-weight:bold;">
        <renderToken source="Finished" prefix="Baigtas " />
      </TextLabel>
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Rezultatas" style="&labelLeft; vertical-align:top;" />
      <TextLabel source="Result" style="&inline;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Bylos" style="&labelLeft; vertical-align:top;" />
      <FileGroup name="Files" style="&inline;" />
    </FlowPanel>
  </FlowPanel>
</f:Form>
