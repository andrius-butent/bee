<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">

  <!ENTITY section "margin-top: 2px;">
  <!ENTITY header "font-style: italic;">
  <!ENTITY separator "<br/>">

  <!ENTITY lbl1 "&inline; width: 100px; padding-top: 2px;">
  <!ENTITY top1 "float: left; width: 100px; padding-top: 2px;">
  <!ENTITY inp2 "&inline; width: 140px;">
  <!ENTITY inp2x "&inline; width: 440px;">
  <!ENTITY lbl3 "&inline; width: 128px; padding-top: 2px; margin-left: 16px;">
  <!ENTITY inp4 "&inline; width: 140px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="Task" viewName="Tasks" caption="Užduotis">

  <FlowPanel class="flexBox-horizontal bee-crm-taskEdit-form" style="margin-top: 1ex;">
    <FlowPanel style="margin-left: 5px;">
      <FlowPanel style="&section;">
        <Label html="Būsena:" style="&lbl1;" />
        <ListBox source="Status" itemKey="TaskStatus" style="&inp2;" readOnly="true" />
        <Label html="Prioritetas:" style="&inline; padding-top: 2px; margin-left: 20px;" />
        <Radio source="Priority" itemKey="TaskPriority"
           style="&inline; margin-left: 10px: font-size: 12px;" disablable="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Vadovas:" style="&lbl1;" />
        <DataSelector source="Owner" editEnabled="true" style="&inp2;" readOnly="true" />
        <Label html="Įmonė:" style="&lbl3;" />
        <DataSelector source="Company" editEnabled="true" style="&inp4;" readOnly="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Vykdytojas:" style="&lbl1;" />
        <DataSelector source="Executor" editEnabled="true" style="&inp2;" readOnly="true" />
        <Label html="Kontaktinis asmuo:" style="&lbl3;" />
        <DataSelector source="Contact" style="&inp4;" readOnly="true" />
      </FlowPanel>

      &separator;
      <FlowPanel style="&section;">
        <Label html="Įkelta:" style="&lbl1;" />
        <InputDateTime source="Created" style="&inp2;" readOnly="true" />
        <Label html="Numatoma trukmė:" style="&lbl3;" />
        <InputTime source="ExpectedDuration" step="30" style="&inline; width: 60px;" 
          disablable="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Pradžios data:" style="&lbl1;" />
        <InputDateTime source="StartTime" style="&inp2;" readOnly="true" />
        <Label html="Įvykdymo data:" style="&lbl3;" />
        <InputDateTime source="Completed" step="30" style="&inp4;" readOnly="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Pabaigos data:" style="&lbl1;" />
        <InputDateTime source="FinishTime" style="&inp2;" readOnly="true" />
        <Label html="Patvirtinimo data:" style="&lbl3;" />
        <InputDateTime source="Approved" style="&inp4;" readOnly="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Priminimas:" style="&lbl1;" />
        <DataSelector source="Reminder" renderColumns="ReminderName" newRowEnabled="false"
          style="&inp2;" disablable="true" />
      </FlowPanel>

      &separator;
      <FlowPanel style="&section;">
        <Label html="Tema:" class="bee-required" style="&lbl1;" />
        <InputText source="Summary" style="&inp2x;" disablable="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Aprašymas:" style="&top1;" />
        <InputArea source="Description" style="width: 440px; height: 60px;" disablable="true" />
      </FlowPanel>

      <FileGroup name="Files" />

      &separator;
      <FlowPanel style="&section;">
        <Label html="Stebėtojai:" style="&top1;" />
        <MultiSelector viewName="Users" property="Observers" renderColumns="FirstName LastName"
          editEnabled="true" style="&inp2x;" disablable="true" />
      </FlowPanel>

      &separator;
      <FlowPanel style="&section;">
        <Label html="Įmonės:" style="&top1;" />
        <MultiSelector viewName="Companies" property="Companies" renderColumns="Name"
          editEnabled="true" style="&inp2x;" disablable="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Asmenys:" style="&top1;" />
        <MultiSelector viewName="Persons" property="Persons" renderColumns="FirstName LastName"
          editEnabled="true" style="&inp2x;" disablable="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Įvykiai:" style="&top1;" />
        <MultiSelector viewName="Appointments" property="Appointments"
          renderColumns="StartDateTime Summary" newRowEnabled="false" editEnabled="true"
          style="&inp2x;" disablable="true" />
      </FlowPanel>

      <FlowPanel style="&section;">
        <Label html="Užduotys:" style="&top1;" />
        <MultiSelector viewName="Tasks" property="Tasks" 
          renderColumns="FinishTime Summary ExecutorFirstName ExecutorLastName"
          newRowEnabled="false" editEnabled="true" style="&inp2x;" disablable="true" />
      </FlowPanel>

      &separator;
      <FlowPanel name="TaskDurations" style="overflow: auto; width: 540px;" />
    </FlowPanel>

    <FlowPanel name="TaskEvents" class="flexible bee-crm-taskEvent-container" 
      style="margin-left: 15px; overflow: auto; height: -webkit-calc(100% - 5px);" />
  </FlowPanel>
</f:Form>  
