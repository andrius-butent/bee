<?xml version="1.0" encoding="UTF-8"?>
<Form xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/form.xsd"
  
  name="Task" viewName="Tasks" caption="Užduotis">

  <FlowPanel class="flexBox-horizontal">
    <FlowPanel class="flexBox-vertical">
      <FlexTable cellSpacing="10">
        <row>
          <cell>
            <Label html="Būsena" />
          </cell>
          <cell>
            <TextLabel source="Event" itemKey="TaskEvent" class="bee-display" />
          </cell>
          <cell>
            <Label html="Prioritetas:" horizontalAlignment="right" />
          </cell>
          <cell>
            <TextLabel source="Priority" itemKey="Priority" class="bee-display" />
          </cell>
        </row>

        <row>
          <cell>
            <InlineLabel />
          </cell>
          <cell colSpan="2">
            <Label html="Numatoma trukmė min.:" horizontalAlignment="right" />
          </cell>
          <cell>
            <LongLabel source="ExpectedDuration" class="bee-display" />
          </cell>
        </row>

        <row>
          <cell>
            <Label html="Pradžia:" />
          </cell>
          <cell>
            <DateTimeLabel source="StartTime" class="bee-display" />
          </cell>
          <cell>
            <Label html="Įmonė:" horizontalAlignment="right" />
          </cell>
          <cell>
            <TextLabel source="CompanyName" class="bee-display" />
          </cell>
        </row>

        <row>
          <cell>
            <Label html="Terminas:" />
          </cell>
          <cell>
            <DateTimeLabel source="FinishTime" class="bee-display" />
          </cell>
          <cell>
            <Label html="Asmuo:" horizontalAlignment="right" />
          </cell>
          <cell>
            <TextLabel source="PersonFirstName" class="bee-display" />
          </cell>
        </row>

        <row>
          <cell>
            <Label html="Užduotis:" />
          </cell>
          <cell colSpan="3">
            <TextLabel source="Description" class="bee-display" style="width: 100%; min-height: 60px;" />
          </cell>
        </row>

        <row>
          <cell>
            <Label html="Vykdytojas:" />
          </cell>
          <cell>
            <TextLabel class="bee-display">
              <render>
                <function>return (row.ExecutorFirstName || "") + " " + (row.ExecutorLastName || "")</function>
              </render>
            </TextLabel>
          </cell>
          <cell>
            <Label html="Autorius:" horizontalAlignment="right" />
          </cell>
          <cell>
            <TextLabel class="bee-display">
              <render>
                <function>return (row.OwnerFirstName || "") + " " + (row.OwnerLastName || "")</function>
              </render>
            </TextLabel>
          </cell>
        </row>
      </FlexTable>

      <ChildGrid name="TaskObservers" relColumn="Task" class="flexible" style="margin: 2ex 10px;" />
      
      <FlowPanel class="flexBox-vertical-center">
        <FlowPanel>
          <Button name="COMMENTED" html="Naujas komentaras" />
          <Button name="FORWARDED" html="Persiųsti" />
          <Button name="EXTENDED" html="Keisti terminą" />
          <Button name="UPDATED" html="Koreguoti" />
        </FlowPanel>

        <FlowPanel style="margin: 2ex 0;">
          <Button name="SUSPENDED" html="Sustabdyti" />
          <Button name="CANCELED" html="Nutraukti" />
          <Button name="COMPLETED" html="Užbaigti" />
          <Button name="APPROVED" html="Patvirtinti" />
          <Button name="RENEWED" html="Grąžinti vykdymui" />
        </FlowPanel>
      </FlowPanel>
    </FlowPanel>

    <ChildGrid name="TaskEvents" relColumn="Task" class="flexible" style="margin-left: 1em;" />
  </FlowPanel>
</Form>  
