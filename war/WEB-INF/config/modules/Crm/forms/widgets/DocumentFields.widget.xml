<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/widget" style="border-spacing: 3px;">

  <row>
    <Label text="=documentName" class="bee-required" />
    <cell colSpan="3">
      <InputText source="Name" style="width: 100%;" />
    </cell>
  </row>

  <row>
    <Label text="=documentDate" />
    <InputDateTime source="DocumentDate" />
    <Label text="=documentExpires" horizontalAlignment="right" />
    <InputDateTime source="Expires" />
  </row>

  <row>
    <Label text="=documentNumber" />
    <InputText source="Number" />
    <Label text="=documentRegistrationNumberShort" horizontalAlignment="right" />
    <InputText source="RegistrationNumber" />
  </row>

  <row>
    <Label text="=documentCategory" />
    <DataSelector source="Category" />
    <Label text="=documentType" horizontalAlignment="right" />
    <DataSelector source="Type" />
  </row>

  <row>
    <Label text="=documentPlace"  />
    <DataSelector source="Place" />
    <Label text="=documentStatus" horizontalAlignment="right" />
    <DataSelector source="Status" />
  </row>

  <row>
    <Label text="=documentReceived" />
    <InputDateTime source="Received" />
    <Label text="=documentSent" horizontalAlignment="right" />
    <InputDateTime source="Sent" />
  </row>
  <row>
    <cell><text /></cell>
    <cell><text /></cell>
    <cell><text /></cell>
  
    <CheckBox source="Returned" text="=documentReturned" />
  </row>

  <row>
    <cell verticalAlignment="top">
      <Label text="=documentDescription" />
    </cell>
    <cell colSpan="3">
      <InputArea source="Description" style="width: 100%; height: 60px;" />
    </cell>
  </row>
</Table>
  