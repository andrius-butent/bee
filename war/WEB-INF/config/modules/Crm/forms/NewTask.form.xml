<?xml version="1.0" encoding="UTF-8"?>
<Form xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/form.xsd"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="NewTask" caption="Nauja užduotis" width="666" height="444">

  <FlexTable cellSpacing="10">

    <row>
      <cell>
        <Label html="Numatoma trukmė min.:" />
      </cell>
      <cell>
        <InputSpinner source="ExpectedDuration" minValue="0" step="30" />
      </cell>
      <cell>
        <Label html="Prioritetas:" horizontalAlignment="right" class="bee-required" />
      </cell>
      <cell>
        <xi:include href="widgets/Priority.widget.xml" />
      </cell>
    </row>

    <row>
      <cell>
        <Label html="Pradžia:" class="bee-required" />
      </cell>
      <cell>
        <InputDateTime source="StartTime" />
      </cell>
      <cell>
        <Label html="Įmonė:" horizontalAlignment="right" />
      </cell>
      <cell>
        <DataSelector source="CompanyName" relSource="Company" relView="Companies"
          relColumn="Name" />
      </cell>
    </row>

    <row>
      <cell>
        <Label html="Terminas:" class="bee-required" />
      </cell>
      <cell>
        <InputDateTime source="FinishTime" />
      </cell>
      <cell>
        <Label html="Asmuo:" horizontalAlignment="right" />
      </cell>
      <cell>
        <DataSelector source="PersonFirstName" relSource="CompanyPerson" relView="CompanyPersons"
          relColumn="FirstName" />
      </cell>
    </row>

    <row>
      <cell>
        <Label html="Užduotis:" class="bee-required" />
      </cell>
      <cell colSpan="3">
        <InputArea source="Description" style="width: 100%; height: 60px;" />
      </cell>
    </row>

    <row>
      <cell>
        <Label html="Vykdytojai:" class="bee-required" />
      </cell>
      <cell>
        <ListBox name="ExecutorList" minSize="2" maxSize="10" style="min-width: 160px;" />
      </cell>
      <cell>
        <Button name="ExecutorAdd" html=".." />
      </cell>
    </row>

    <row>
      <cell>
        <Label html="Stebėtojai:" />
      </cell>
      <cell>
        <ListBox name="ObserverList" minSize="2" maxSize="10" style="min-width: 160px;" />
      </cell>
      <cell>
        <Button name="ObserverAdd" html=".." />
      </cell>
    </row>

  </FlexTable>
</Form>  
