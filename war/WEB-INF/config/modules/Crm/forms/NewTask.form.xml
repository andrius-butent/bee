<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="NewTask" caption="Nauja užduotis" width="666" height="444">

  <Table style="border-spacing: 10px;">

    <row>
      <Label html="Numatoma trukmė min.:" />
      <InputSpinner source="ExpectedDuration" minValue="0" step="30" />
      <Label html="Prioritetas:" horizontalAlignment="right" class="bee-required" />
      <xi:include href="widgets/Priority.widget.xml" />
    </row>

    <row>
      <Label html="Pradžia:" class="bee-required" />
      <InputDateTime source="StartTime" />
      <Label html="Įmonė:" horizontalAlignment="right" />
      <DataSelector source="Company" />
    </row>

    <row>
      <Label html="Terminas:" class="bee-required" />
      <InputDateTime source="FinishTime" />
      <Label html="Asmuo:" horizontalAlignment="right" />
      <DataSelector source="CompanyPerson" />
    </row>

    <row>
      <Label html="Užduotis:" class="bee-required" />
      <cell colSpan="3">
        <InputArea source="Description" style="width: 300px; height: 60px;" />
      </cell>
    </row>

    <row>
      <Label html="Vykdytojai:" class="bee-required" />
      <cell colSpan="3">
        <MultiSelector viewName="Users" property="Executors" renderColumns="FirstName LastName" />
      </cell>
    </row>

    <row>
      <Label html="Stebėtojai:" />
      <cell colSpan="3">
        <MultiSelector viewName="Users" property="Observers" renderColumns="FirstName LastName" />
      </cell>
    </row>

  </Table>
</f:Form>  
