<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Tasks"
  idName="TaskID"
  >
  <Fields>
    <String name="Summary" notNull="true" precision="100" label="Tema" />
    <Text name="Description" label="Aprašymas" />
    <Integer name="Priority" notNull="true" defValue="1" label="Prioritetas" />

    <DateTime name="Created" defExpr="CURRENT_TIME" label="Įkelta" />
    <DateTime name="StartTime" label="Pradžios data" />
    <DateTime name="FinishTime" notNull="true" label="Pabaigos data" />
    <DateTime name="Completed" label="Įvykdymo data" />
    <DateTime name="Approved" label="Patvirtinimo data" />
    <String name="ExpectedDuration" precision="10" label="Numatoma trukmė" />

    <Relation name="Owner" notNull="true" relation="Users" defExpr="CURRENT_USER" label="Vadovas" />
    <Relation name="Executor" notNull="true" relation="Users" label="Vykdytojas" />

    <Relation name="Company" relation="Companies" label="Įmonė" />
    <Relation name="Contact" relation="CompanyPersons" label="Kontaktinis asmuo" />

    <Relation name="Reminder" relation="ReminderTypes" cascade="SET_NULL" label="Priminimas" />

    <Integer name="Status" notNull="true" defValue="0" label="Būsena" />
    
    <Relation name="RecurringTask" relation="RecurringTasks" cascade="SET_NULL" />
  </Fields>
</Table>
