<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Tasks"
  idName="TaskID"
  >
  <Fields>
    <String name="Summary" notNull="true" precision="100" label="=crmTaskSubject" />
    <Text name="Description" label="=crmTaskDescription" />
    <Integer name="Priority" notNull="true" defValue="1" label="=crmTaskPriority" />

    <DateTime name="Created" defExpr="CURRENT_TIME" label="=crmTaskCreated" />
    <DateTime name="StartTime" label="=crmStartDate" />
    <DateTime name="FinishTime" notNull="true" label="=crmFinishDate" />
    <DateTime name="Completed" label="=crmTaskCompleteDate" />
    <DateTime name="Approved" label="=crmTaskConfirmDate" />
    <String name="ExpectedDuration" precision="10" label="=crmTaskExpectedDuration" />

    <Relation name="Owner" notNull="true" relation="Users" defExpr="CURRENT_USER" label="=crmTaskManager" />
    <Relation name="Executor" notNull="true" relation="Users" label="=crmTaskExecutor" />

    <Relation name="Company" relation="Companies" label="=company" />
    <Relation name="Contact" relation="CompanyPersons" label="=personContact" />

    <Relation name="Reminder" relation="ReminderTypes" cascade="SET_NULL" label="=crmReminder" />

    <Integer name="Status" notNull="true" defValue="0" label="=crmTaskStatus" />
    
    <Relation name="RecurringTask" relation="RecurringTasks" cascade="SET_NULL" label="=crmRecurringTask" />
  </Fields>
</Table>
