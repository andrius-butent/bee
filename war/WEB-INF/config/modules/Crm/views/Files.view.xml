<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="Files"
  source="Files"
  >
  <Columns>
    <SimpleColumn name="Document" />
    <SimpleColumn name="FileDate" />
    <SimpleColumn name="FileVersion" />
    <SimpleColumn name="Name" />
    <SimpleColumn name="Description" />
    <SimpleColumn name="Hash" />
    <SimpleColumn name="Mime" />
    <SimpleJoin name="Owner" joinType="LEFT">
      <SimpleJoin name="Person" joinType="LEFT">
        <SimpleColumn alias="OwnerFirstName" name="FirstName" />
        <SimpleColumn alias="OwnerLastName" name="LastName" />
      </SimpleJoin>
    </SimpleJoin>
  </Columns>
  <Order>
    <OrderBy column="FileDate" />
    <OrderBy column="Name" />
  </Order>
</View>
 