<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="UserTasks"
  source="Tasks"
  >
  <Columns>
    <SimpleColumn name="Priority" />
    <SimpleColumn name="Description" />
    <HiddenColumn name="ProjectStage" />
    <SimpleJoin name="ProjectStage" joinType="LEFT">
      <SimpleJoin name="Project" joinType="LEFT">
        <HiddenColumn name="Event" alias="ProjectEvent" />
        <SimpleColumn name="Name" alias="ProjectName" />
      </SimpleJoin>
    </SimpleJoin>
    <SimpleColumn name="StartTime" />
    <SimpleColumn name="FinishTime" />
    <SimpleColumn name="ExpectedDuration" />
    <SimpleColumn name="Event" />
    <SimpleColumn name="Owner" />
    <SimpleJoin name="Owner" joinType="LEFT">
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="OwnerFirstName" name="FirstName" />
          <SimpleColumn alias="OwnerLastName" name="LastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
    <SimpleColumn name="Executor" />
    <SimpleJoin name="Executor" joinType="LEFT">
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="ExecutorFirstName" name="FirstName" />
          <SimpleColumn alias="ExecutorLastName" name="LastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
    <SimpleColumn name="Company" />
    <SimpleJoin name="Company" joinType="LEFT">
      <SimpleColumn alias="CompanyName" name="Name" />
    </SimpleJoin>
    <SimpleColumn name="CompanyPerson" />
    <SimpleJoin name="CompanyPerson" joinType="LEFT">
      <SimpleJoin name="Person" joinType="LEFT">
        <SimpleColumn alias="PersonFirstName" name="FirstName" />
        <SimpleColumn alias="PersonLastName" name="LastName" />
      </SimpleJoin>
    </SimpleJoin>
    <ExternalJoin source="TaskUsers" name="Task" joinType="LEFT">
        <HiddenColumn name="User" />
        <AggregateColumn name="LastAccess" aggregate="MAX" />
    </ExternalJoin>
    <ExternalJoin source="TaskEvents" name="Task" joinType="LEFT">
        <AggregateColumn alias="LastPublish" name="PublishTime" aggregate="MAX" />
    </ExternalJoin>
  </Columns>
</View>
 