<?xml version="1.0" encoding="UTF-8"?>
<g:columns xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
           xmlns:ui="http://www.butent.com/ui">
  <DataColumn name="Price" visible="true" required="true">
    <dynStyle>
      <ui:inline>
        background-color: #fcc;
      </ui:inline>
      <ui:expression>!(row.Price)</ui:expression>
    </dynStyle>
    <dynStyle>
      <ui:class>bee-ta-command-apply-rent</ui:class>
      <ui:expression>(row.IsRentalPrice)</ui:expression>
    </dynStyle>
    <dynStyle>
      <ui:class>bee-ta-command-apply-tariff</ui:class>
      <ui:expression>(row.IsApplyTariff)</ui:expression>
    </dynStyle>
    <footer expression="row.Quantity * row.Price" />
  </DataColumn>
</g:columns>
