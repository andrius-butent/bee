<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui" xmlns:xi="http://www.w3.org/2001/XInclude"

  name="TradeDocumentItems" viewName="TradeDocumentItems"
  flexGrow="1"
  newRowCaption="=newItem"
  >
  <g:columns>
    <RelColumn name="Item" renderColumns="ItemName" choiceColumns="Name Article" visible="true">
      <dynStyle>
        <ui:inline>color: blue;</ui:inline>
        <ui:expression>row.IsService</ui:expression>
      </dynStyle>
      <footer text="=totalOf" horizontalAlignment="right" />
    </RelColumn>
    <DataColumn name="Article" />

    <DataColumn name="Quantity" scale="0" visible="true">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="UnitName" flexGrow="0" label="=unitShort" />

    <DataColumn name="Price" scale="2">
      <footer expression="row.Quantity * row.Price" scale="2" />
    </DataColumn>

    <DataColumn name="Discount" scale="0" carry="true" flexGrow="0" />
    <DataColumn name="DiscountIsPercent" width="20" sortable="false" format="%" carry="true" />
    <DataColumn name="Vat" scale="0" carry="true" flexGrow="0" />
    <DataColumn name="VatIsPercent" width="20" sortable="false" format="%" carry="true" />

    <RelColumn name="Warehouse" choiceColumns="Code Name" renderColumns="WarehouseCode"
      flexGrow="0" visible="false" />
      
    <RelColumn name="Employee" renderColumns="EmployeeFirstName EmployeeLastName"
      sortBy="EmployeeLastName EmployeeFirstName" visible="false" />
  </g:columns>

  <xi:include href="../../Administration/grids/columns/HiddenDimensions.columns.xml" />

  <g:columns>
    <DataColumn name="Note" maxWidth="300" />
    
    <IdColumn name="Id" flexGrow="0" visible="false" />
    <DataColumn name="Parent" flexGrow="0" visible="false" />
  </g:columns>
</g:Grid>
