<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="TradeActFiles" viewName="TradeActFiles" autoFit="true"
  >
  <g:columns>
    <DataColumn name="File" caption="=actionOpen" readOnly="true" cellType="html"
      sortable="false" minWidth="150" visible="true" exportable="false" />

    <DataColumn name="Caption" required="true" updateMode="row" minWidth="150" />

    <DataColumn name="FileSize" readOnly="true" horizontalAlignment="right" width="80">
      <renderer type="fileSize" />
    </DataColumn>    

    <PropColumn name="Icon" caption="-" type="string" cellType="html" horizontalAlignment="center"
      width="20" label="=fileIcon" >
      <renderer type="fileIcon" />
    </PropColumn>

    <DataColumn name="FileName" readOnly="true" visible="false" />
    <DataColumn name="FileType" readOnly="true" visible="false" />
  </g:columns>
</g:Grid>
