<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="SaleItems" viewName="SaleItems"
  flexGrow="1" flexShrink="1"
  newRowCaption="Nauja prekÄ—"
  >
  <columns>
    <RelColumn name="Item" renderColumns="ItemName" />
    <DataColumn name="Article" />
    <DataColumn name="Quantity" />
    <DataColumn name="UnitName" />
    <DataColumn name="Price" />
    <DataColumn name="Vat" />
    <DataColumn name="VatPercent" caption="%" width="20" sortable="false" />
    <CalcColumn name="Amount" type="decimal" caption="Suma" format="#.##">
      <render>
        <ui:expression>row.Quantity * row.Price</ui:expression>
      </render>
    </CalcColumn>
    <DataColumn name="Note" />
  </columns>
</Grid>
