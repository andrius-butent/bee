<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:xi="http://www.w3.org/2001/XInclude"

  name="TradeActTmplItems" viewName="TradeActTmplItems"
  flexGrow="1"
  newRowCaption="=newItem"
  >
  <xi:include href="columns/TradeActItem.columns.xml" />

  <xi:include href="columns/TradeActQuantity.columns.xml" />
  <xi:include href="columns/TradeActWeight.columns.xml" />

  <g:columns>
    <DataColumn name="Price" visible="true">
      <dynStyle>
        <ui:inline>
          background-color: #fcc;
        </ui:inline>
        <ui:expression>!(row.Price)</ui:expression>
      </dynStyle>
      <dynStyle>
        <ui:class>bee-ta-command-apply-rent</ui:class>
        <ui:expression>(row.IsRentalPrice)</ui:expression>
      </dynStyle>
      <dynStyle>
        <ui:class>bee-ta-command-apply-tariff</ui:class>
        <ui:expression>(row.IsApplyTariff)</ui:expression>
      </dynStyle>
      <footer expression="row.Quantity * row.Price" />
    </DataColumn>
  </g:columns>

  <xi:include href="columns/TradeActDiscount.columns.xml" />
  <xi:include href="columns/TradeActVat.columns.xml" />
  <xi:include href="columns/TradeActTotal.columns.xml" />

  <g:columns>
    <DataColumn name="Note" visible="false" />
  </g:columns>
</g:Grid>
