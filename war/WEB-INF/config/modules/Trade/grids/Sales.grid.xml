<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Sales" viewName="Sales"
  editShowId="true" flexGrow="1" flexShrink="1"
  >
  <columns>
    <IdColumn name="ID" />
    <DataColumn name="Date" caption="Data" />
    <DataColumn name="Number" />
    <CalcColumn name="Invoice" type="string" caption="SÄ…skaitos Nr." 
      searchBy="InvoicePrefix InvoiceNumber">
      <render>
        <ui:function>
          if (!row.InvoicePrefix) {
            return row.InvoiceNo;
          } else if(!row.InvoiceNo) {
            return row.InvoicePrefix;          
          } else {
            return row.InvoicePrefix + " " + row.InvoiceNo;
          }
        </ui:function>
      </render>
    </CalcColumn>
    <RelColumn name="Customer" flexGrow="1" flexShrink="1" />
    <DataColumn name="Amount" />
    <RelColumn name="Currency" />

    <DataColumn name="Vehicle" />
    <DataColumn name="Driver" />
  </columns>
</Grid>
