<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 5px;">
  <!ENTITY bold "font-weight:bold;">
  <!ENTITY form "PrintTASaleSuggestion">
  <!ENTITY hdr ".bee-form-PrintTradeActSalePhysical .bee-trade-itemsInfo-header .bee-trade-itemsInfo-">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form" xmlns:ui="http://www.butent.com/ui"
  name="&form;" caption="Komercinis pasiūlymas" disabledActions="save" width="70" widthUnit="%" height="90" heightUnit="%">
  <FlowPanel style="padding: 10px; background-color: white; font-size:11px;" contentEditable="true"
    class="bee-form-TradeActPrint bee-PrintableForm">
    <FlowPanel style="text-align: center">
      <Image url="images/logo.png" style="width:12.86em; height:3em;" />
      <FlowPanel style="margin-top:-35px; padding-top: 40px;">
        <Label html="Statybinė įranga, pastoliai, klojiniai, konteineriai" />
        <br />
        <TextLabel style="text-align:center; &bold;">
          <render>
            <ui:expression>'Komercinis pasiūlymas Nr. ' + row.SeriesName + '-' + (row.Number ?
              row.Number :
              rowId)</ui:expression>
          </render>
        </TextLabel>
        <DateTimeLabel source="Date" format="DATE_TIME_SHORT" style="text-align: center;" />
      </FlowPanel>
    </FlowPanel>

    <FlowPanel style="margin-top:12px;">
       <Table style="width:100%; border:1px solid black;">
        <row>
         <cell style="vertical-align:top;">
            <FlowPanel name="Company" />
          </cell>
          <cell style="vertical-align:top;">
            <FlowPanel name="Supplier" style="margin-left:10px;" />
          </cell>
        </row>
        <row>
           <TextLabel source="Contact">
            <renderToken source="ContactFirstName" prefix="Atsakingas asmuo: " />
            <renderToken source="ContactLastName" />
            <renderToken source="ContactMobile" prefix=" Mob.: " />
          </TextLabel>
          <br />
        </row>
      </Table>
    </FlowPanel>
    <TextLabel source="ActName" style="text-align:center; &bold; padding-top: 10px; padding-bottom: 10px;" />
    <FlowPanel name="TradeActItems" class="TradeActItems" style="&section;" />
    <br />
    <FlowPanel name="TradeActServices" class="TradeActServices" style="&section;" />

    <HtmlPanel style="&section;">
      <span style="display:block; white-space:pre-wrap; border:1px solid silver; margin-top: 20px;">Pastabos: Grąžinama įranga turi būti nuvalyta ir išardyta taip, kaip buvo išduota. Įranga transporto priemonėje turi būti
sukrauta taip, kad būtų galima iškrauti šakiniais krautuvais. Už iškrovimą rankomis apmokama papildomai.</span>
    </HtmlPanel>

    <br />

    <Label html="Būtų malonu, kad šis pasiūlymas virstu sandoriu!" />

    <Table style="width:100%; margin-top:10px;">
      <row>
        <TextLabel source="Manager">
          <renderToken source="ManagerFirstName" prefix="Pagarbiai: &lt;br /&gt;" />
          <renderToken source="ManagerLastName" suffix=" &lt;br /&gt;"/>
          <renderToken source="ManagerPositionName" suffix=" &lt;br /&gt;" />
          <renderToken source="ManagerPhone" suffix=" &lt;br /&gt;" prefix="tel.: " />
          <renderToken source="ManagerMobile" suffix=" &lt;br /&gt;" prefix="mob.: " />
        </TextLabel>
      </row>
    </Table>
  </FlowPanel>
</f:Form>