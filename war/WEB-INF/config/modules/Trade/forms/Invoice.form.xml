<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY row "display: -webkit-flex; -webkit-align-items: flex-start;">
  <!ENTITY separator "<br/>">
  <!ENTITY lbl "width: 120px; margin-right: 1em; text-align: right;">
  <!ENTITY w2 "width: 160px;">
  <!ENTITY inpdt "width: 7em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="Invoice" viewName="Sales" caption="Sąskaita"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel>
      <FlowPanel style="&row;">
        <Label html="Data" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="&w2;" />

        <Label html="Numeris" style="&lbl;" />
        <InputText source="Number" />
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Sąskaitos ser." style="&lbl;" />
        <InputText source="InvoicePrefix" upperCase="true" />
        <InputText source="InvoiceNo" caption="Nr." />
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Suma" style="&lbl;" />
        <DecimalLabel source="Amount" format="#.00" style="font-weight:bold; margin-right:5px;">
          <render>
            <ui:expression>row.Amount ? row.Amount : 0.00</ui:expression>
          </render>
        </DecimalLabel>
        <DataSelector name="Currency" source="Currency" placeholder="Val."
          style="width:40px; margin-right:10px;" editEnabled="false" />
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Klientas" style="&lbl;" />
        <DataSelector source="Customer" />
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Vadybininkas" style="&lbl;" />
        <DataSelector source="Manager" editSource="ManagerPerson" style="&w2;" />
      </FlowPanel>
    </FlowPanel>

    <TabbedPages class="flexible">
      <page>
        <text>Prekės</text>
        <ChildGrid name="SaleItems" relColumn="Sale" />
      </page>
      <page>
        <text>Pastabos</text>
        <InputArea source="Notes" />
      </page>  
    </TabbedPages>
  </FlowPanel>
</f:Form>
