<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form[
  <!ENTITY inpw "width: 16em;">
  <!ENTITY inpdt "width: 10em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="TradeDocument" viewName="TradeDocuments"
  caption="=trdDocument" showRowId="true"
  width="80" widthUnit="vw" height="60" heightUnit="vh"
  >
  <FlowPanel >
    <br/>
    <Table kind="controls">
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label for="Date" />
        <InputDateTime source="Date" style="&inpdt;" visible="true" />

        <Label text="=tags" />
        <ChildSelector childTable="TradeDocumentTags" viewName="TradeTags"
          targetRelColumn="TradeDocument" sourceRelColumn="TradeTag" renderColumns="TagName"
          newRowEnabled="false" style="&inpw;" />
      </row>

      <row>
        <Label for="Series" />
        <InputText source="Series" upperCase="true" style="width: &inpdt;" />

        <Label for="Number" />
        <InputText source="Number" style="&inpw;" />
      </row>

      <row>
        <Label for="Number1" />
        <InputText source="Number1" style="&inpw;" />

        <Label for="Number2" />
        <InputText source="Number2" style="&inpw;" />
      </row>

      <row>
        <Label for="Operation" />
        <DataSelector source="Operation" renderColumns="OperationName" newRowEnabled="false"
          style="&inpw;" visible="true" />

        <Label for="Status" />
        <ListBox source="Status" visible="true" />
      </row>

      <row>
        <Label for="Supplier" />
        <DataSelector source="Supplier" style="&inpw;" visible="true" choiceColumns="Name TypeName" 
          renderColumns="SupplierName SupplierTypeName"/>

        <Label for="Customer" />
        <DataSelector source="Customer" style="&inpw;" visible="true" choiceColumns="Name TypeName" 
          renderColumns="CustomerName CustomerTypeName"/>
      </row>

      <row>
        <Label for="WarehouseFrom" />
        <DataSelector source="WarehouseFrom" style="&inpw;" visible="true"
          choiceColumns="Code Name" renderColumns="WarehouseFromCode WarehouseFromName"/>

        <Label for="WarehouseTo" />
        <DataSelector source="WarehouseTo" style="&inpw;" visible="true" choiceColumns="Code Name" 
          renderColumns="WarehouseToCode WarehouseToName"/>
      </row>

      <row>
        <Label for="Manager" />
        <DataSelector source="Manager" editSource="ManagerPerson" 
          renderColumns="ManagerFirstName ManagerLastName" newRowEnabled="false" style="&inpw;" />

        <Label for="Currency" />
        <DataSelector source="Currency" renderColumns="CurrencyName" editEnabled="false"
          newRowEnabled="false" style="width: 5em;" />
      </row>

      <row>
        <Label for="Term" />
        <InputDateTime source="Term" style="&inpdt;" />
        
        <Label for="Payer" />
        <DataSelector source="Payer" style="&inpw;" visible="true" choiceColumns="Name TypeName" 
          renderColumns="PayerName PayerTypeName"/>
      </row>

      <row>
        <Label for="PriceName" />
        <ListBox source="PriceName" />

        <Label for="Discount" />
        <InputDecimal source="Discount" style="&inpdt;" />
      </row>
    </Table>

    <br/>
    <TabbedPages class="flexible" style="min-height: 200px;">
      <page>
        <text>=goods</text>
        <ChildGrid name="TradeDocumentItems" relColumn="TradeDocument" />
      </page>

      <page>
        <text>=files</text>
        <ChildGrid name="TradeDocumentFiles" relColumn="TradeDocument" />
      </page>

      <page>
        <text>=notes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
