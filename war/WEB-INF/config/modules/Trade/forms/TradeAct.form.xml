<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="TradeAct" viewName="TradeActs"
  caption="=tradeAct" showRowId="true"
  width="800" height="600"
  >
  <FlowPanel class="flexBox-vertical">
    <br/>
    <Table>
      <col index="0" kind="label" />
      <col index="2" kind="label" />
      <col index="4" kind="label" />

      <row>
        <Label for="Kind" visible="true" />
        <ListBox source="Kind" visible="true" />

        <Label for="Date" visible="true" />
        <InputDateTime source="Date" visible="true" />

        <Label for="Until" />
        <InputDateTime source="Until" />
      </row>

      <row>
        <Label for="Series" />
        <DataSelector source="Series" />

        <Label for="Number" visible="true" />
        <InputText source="Number" visible="true" />
      </row>

      <row>
        <Label for="Operation" />
        <DataSelector source="Operation" renderColumns="OperationName" />

        <Label for="Status" />
        <DataSelector source="Status" renderColumns="StatusName" />
      </row>

      <row>
        <Label for="Company" visible="true" />
        <DataSelector source="Company" visible="true" />

        <Label for="ServiceObject" />
        <DataSelector source="ServiceObject" />
      </row>

      <row>
        <Label for="Manager" />
        <DataSelector source="Manager" editSource="ManagerPerson" 
          renderColumns="ManagerFirstName ManagerLastName" />
        
        <Label for="Currency" />
        <DataSelector source="Currency" renderColumns="CurrencyName" />
      </row>

      <row>
        <Label for="Vehicle" />
        <DataSelector source="Vehicle" renderColumns="VehicleParentModel VehicleModel" />
        
        <Label for="Driver" />
        <DataSelector source="Driver" renderColumns="DriverFirstName DriverLastName" />
      </row>
    </Table>

    <br/>
    <TabbedPages class="flexible">
      <page>
        <text>=goods</text>
        <ChildGrid name="TradeActItems" relColumn="TradeAct" />
      </page>

      <page>
        <text>=services</text>
        <ChildGrid name="TradeActServices" relColumn="TradeAct" />
      </page>

      <page>
        <text>=notes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" />
        </SimplePanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
