<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 5px;">
  <!ENTITY bold "font-weight:bold;">
  <!ENTITY footer "position: absolute; bottom: 5px; display: inline-block;">
  <!ENTITY form "PrintTradeActSalePhysical">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form" xmlns:ui="http://www.butent.com/ui"
  name="&form;" caption="Perdavimo aktas" disabledActions="save" width="70" widthUnit="%" height="90" heightUnit="%">
  <FlowPanel style="padding: 10px; background-color: white; font-size:10px;" contentEditable="true" class="bee-form-TradeActPrint" >
    <FlowPanel>
      <Image url="images/logo.png" style="position: relative;" />
      <FlowPanel style="margin-top:-35px;">
        <TextLabel style="text-align:center; &bold;">
          <render>
            <ui:expression>'Įrenginių perdavimo aktas Nr. ' + row.ContractName + '-' + (row.ContractNumber ?
              row.ContractNumber :
              rowId)</ui:expression>
          </render>
        </TextLabel>
        <DateTimeLabel source="Date" format="DATE_LONG" style="text-align: center;" />
      </FlowPanel>
    </FlowPanel>

    <FlowPanel>
      <Table style="width:100%;" >
        <row>
          <cell style="vertical-align:top;">
            <Label html="Nuomotojas" style="font-weight: bold;" />
          </cell>
          <cell style="vertical-align:top;">
            <Label html="Nuomininkas" style="font-weight: bold;" />
          </cell>
        </row>
        <row>
          <cell style="vertical-align:top;border: 1px solid black;">
            <FlowPanel name="Supplier" />
          </cell>
          <cell style="vertical-align:top;border: 1px solid black;">
            <FlowPanel name="Company" />
          </cell>
        </row>
        <row>
          <TextLabel />
          <TextLabel source="Object">
            <renderToken source="ObjectName" prefix="Objektas: " />
            <renderToken source="ObjectAddress" />
          </TextLabel>
        </row>
        <row>
          <TextLabel source="Manager">
            <renderToken source="ManagerFirstName" prefix="Atsakingas asmuo: " />
            <renderToken source="ManagerLastName" />
            <renderToken source="ManagerPhone" />
          </TextLabel>
          <TextLabel source="Contact">
            <renderToken source="ContactFirstName" prefix="Atsakingas asmuo: " />
            <renderToken source="ContactLastName" />
            <renderToken source="ContactPhone" />
          </TextLabel>
        </row>
      </Table>
    </FlowPanel>

    <Table name="InvoiceDetails1" style="&section; width:100%;" >
      <properties content="TradeActItems" />
      <row>
        <Label text="Artikulas">
          <properties name="Article" />
        </Label>
        <Label text="Nuomojama įranga">
          <properties name="Name" />
        </Label>
        <Label text="Kiekis">
          <properties name="Quantity" />
        </Label>
        <Label text="Mato VNT.">
          <properties name="Unit" />
        </Label>
        <Label text="Grąžinta">
          <properties name="ReturnedQty" />
        </Label>
        <Label text="Liko">
          <properties name="rem" />
        </Label>
        <Label text="Svoris">
          <properties name="Weight" />
        </Label>
        <Label text="Plotas">
          <properties name="Area" />
        </Label>
        <Label text="Kaina">
          <properties name="Price" />
        </Label>
        <Label text="Nuolaida, %">
          <properties name="Discount" />
        </Label>
        <Label text="Suma">
          <properties name="Amount" />
        </Label>
      </row>
      <row>
        <Label text="Iš viso" style="&bold;" />
        <cell colSpan="2">
          <FlowPanel style="text-align:right;">
            <Label name="TotalItemsQuantity" style="&bold;" />
          </FlowPanel>
        </cell>
        <cell colSpan="2">
          <Label></Label>
        </cell>
        <cell>
          <FlowPanel style="text-align:left;">
            <Label name="TotalRemaining" style="&bold;" />
          </FlowPanel>
        </cell>
        <FlowPanel style="text-align:left;">
          <Label name="TotalWeight" style="&bold;" />
        </FlowPanel>
        <FlowPanel style="text-align:left;">
          <Label name="TotalArea" style="&bold;" />
        </FlowPanel>
        <FlowPanel style="text-align:right;">
          <Label style="&bold;">
            <properties name="TotalPrice" />
          </Label>
        </FlowPanel>
        <FlowPanel style="text-align:left;">
          <Label style="&bold;">
            <properties name="TotalDiscount" />
          </Label>
        </FlowPanel>
        <FlowPanel style="text-align:right;">
          <Label style="&bold;">
            <properties name="AmountTotal" />
          </Label>
        </FlowPanel>
      </row>
    </Table>

    <Table name="InvoiceDetails2" style="&section; width:100%" >
      <properties content="TradeActServices" />
      <row>
        <Label text="Artikulas">
          <properties name="Article" />
        </Label>
        <Label text="Teikiamos paslaugos/prekės">
          <properties name="Name" />
        </Label>
        <Label text="Data nuo">
          <properties name="DateFrom" />
        </Label>
        <Label text="Data iki">
          <properties name="DateTo" />
        </Label>
        <Label text="Kiekis">
          <properties name="Quantity" />
        </Label>
        <Label text="Mato VNT.">
          <properties name="Unit" />
        </Label>
        <Label text="Laiko VNT.">
          <properties name="tu" />
        </Label>
        <Label text="Tarifas">
          <properties name="Tariff" />
        </Label>
        <Label text="Kaina">
          <properties name="Price" />
        </Label>
        <Label text="Nuolaida, %">
          <properties name="Discount" />
        </Label>
        <Label text="Suma už min. term.">
          <properties name="Amount" />
        </Label>
      </row>
      <row>
        <Label text="Iš viso" style="&bold;" />
        <cell colSpan="4">
          <FlowPanel style="text-align:right;">
            <Label style="&bold;">
              <properties name="QuantityTotal" />
            </Label>
          </FlowPanel>
        </cell>
        <cell colSpan="4">
          <FlowPanel style="text-align:right;">
            <Label style="&bold;">
              <properties name="TotalPrice" />
            </Label>
          </FlowPanel>
        </cell>
        <FlowPanel style="text-align:left;">
          <Label style="&bold;">
            <properties name="TotalDiscount" />
          </Label>
        </FlowPanel>
        <FlowPanel style="text-align:right;">
          <Label style="&bold;">
            <properties name="AmountTotal" />
          </Label>
        </FlowPanel>
      </row>
    </Table>
    <HtmlPanel style="&section;">
      <span style="display:block; white-space:pre-wrap; border:1px solid silver; margin-top: 20px;">Patabos: Grąžinama įranga turi būti nuvalyta ir išardyta taip, kaip buvo išduota. Įranga transporto priemonėje turi būti
sukrauta taip, kad būtų galima iškrauti šakiniais krautuvais. Už iškrovimą rankomis apmokama papildomai.</span>
    </HtmlPanel>

    <Table style="width:100%; margin-top:10px;" >
      <row>
        <TextLabel source="Manager">
          <renderToken source="ManagerFirstName" />
          <renderToken source="ManagerLastName" />
        </TextLabel>
        <TextLabel source="Vehicle">
          <renderToken source="VehicleParentModel" prefix="Transporto priemonė: " />
          <renderToken source="VehicleModel" />
          <renderToken source="VehicleNumber" />
        </TextLabel>
      </row>
      <row>
        <TextLabel>
          <renderToken source="ManagerPhone" prefix="Tel.: " />
        </TextLabel>
        <TextLabel source="Driver">
          <renderToken source="DriverFirstName" prefix="Vairuotojas: " />
          <renderToken source="DriverLastName" />
        </TextLabel>
      </row>
      <row>
        <Label text="Priėmė ir suskaičiavo:" />
      </row>
    </Table>
  </FlowPanel>
</f:Form>