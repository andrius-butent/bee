<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 5px;">
  <!ENTITY bold "font-weight:bold;">
  <!ENTITY form "PrintTradeActSalePhysical">
  <!ENTITY hdr ".bee-form-PrintTradeActSalePhysical .bee-trade-itemsInfo-header .bee-trade-itemsInfo-">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form" xmlns:ui="http://www.butent.com/ui"
  name="&form;" caption="Perdavimo aktas" disabledActions="save" width="70" widthUnit="%" height="90" heightUnit="%">
  <FlowPanel style="padding: 10px; background-color: white; font-size:12px;" contentEditable="true"
    class="bee-form-TradeActPrint">
    <css id="&form;">
      &hdr;Article:before {content: "Artikulas"}
      &hdr;Quantity:before {content: "Kiekis"}
      &hdr;Unit:before {content: "Mato vnt."}
      &hdr;TimeUnit:before {content: "Laiko vnt."}
      &hdr;ReturnedQty:before {content: "Grąžinta"}
      &hdr;RemainingQty:before {content: "Liko"}
      &hdr;DateFrom:before {content: "Data nuo"}
      &hdr;DateTo:before {content: "Data iki"}
      &hdr;Weight:before {content: "Svoris"}
      &hdr;Area:before {content: "Plotas"}
      &hdr;Tariff:before {content: "Tarifas"}
      &hdr;Price:before {content: "Kaina"}
      &hdr;Discount:before {content: "Nuol."}
      &hdr;Amount:before {content: "Suma be PVM"}
      &hdr;Vat:before {content: "PVM"}
      &hdr;AmountTotal:before {content: "Suma"}
      .bee-form-PrintTradeActSalePhysical .TradeActItems .bee-trade-itemsInfo-header .bee-trade-itemsInfo-Name:before {content: "Nuomojama įranga"}
      .bee-form-PrintTradeActSalePhysical .TradeActServices .bee-trade-itemsInfo-header .bee-trade-itemsInfo-Name:before {content: "Teikiamos paslaugos/prekės"}
      .bee-form-PrintTradeActSalePhysical .TradeActServices .bee-trade-itemsInfo-header .bee-trade-itemsInfo-AmountTotal:before {content: "Suma už min. term."}
    </css>
    <FlowPanel>
      <Image url="images/logo.png" style="position: relative;" />
      <FlowPanel style="margin-top:-35px;">
        <TextLabel style="text-align:center; &bold;">
          <render>
            <ui:expression>'Įrenginių perdavimo aktas Nr. ' + row.SeriesName + '-' + (row.Number ?
              row.Number :
              rowId)</ui:expression>
          </render>
        </TextLabel>
        <DateTimeLabel source="Date" format="DATE_TIME_SHORT" style="text-align: center;" />
      </FlowPanel>
    </FlowPanel>

    <FlowPanel style="margin-top:12px;">
      <Table style="width:100%; border:1px solid black;">
        <row>
          <cell>
            <Label html="Nuomotojas" style="font-weight: bold; margin-left:10px;" />
          </cell>
          <cell style="vertical-align:top;">
            <Label html="Nuomininkas" style="font-weight: bold;" />
          </cell>
        </row>
        <row>
          <cell>
            <FlowPanel name="Supplier" style="vertical-align:top;margin-left:10px;" />
          </cell>
          <cell>
            <FlowPanel name="Company" style="vertical-align:top;" />
          </cell>
        </row>
        <row>
          <TextLabel />
          <TextLabel source="Contract" style="border-left: 1px solid black;">
            <renderToken source="ContractName" prefix="Sutarties Nr. " />
            <renderToken source="ContractNumber" />
          </TextLabel>
        </row>
        <row>
          <TextLabel />
          <TextLabel source="Object">
            <renderToken source="ObjectName" prefix="Objektas: " />
            <renderToken source="ObjectAddress" />
          </TextLabel>
        </row>
        <row>
          <TextLabel source="Manager" style="margin-left:10px;">
            <renderToken source="ManagerFirstName" prefix="Atsakingas asmuo: " />
            <renderToken source="ManagerLastName" />
            <renderToken source="ManagerMobile" prefix=" Mob.: " />
          </TextLabel>
          <TextLabel source="Contact">
            <renderToken source="ContactFirstName" prefix="Atsakingas asmuo: " />
            <renderToken source="ContactLastName" />
            <renderToken source="ContactMobile" prefix=" Mob.: " />
          </TextLabel>
        </row>
      </Table>
    </FlowPanel>

    <FlowPanel name="TradeActItems" class="TradeActItems" style="&section;" />
    <br/>
    <FlowPanel name="TradeActServices" class="TradeActServices" style="&section;" />

    <HtmlPanel style="&section;">
      <span style="display:block; white-space:pre-wrap; border:1px solid silver; margin-top: 20px;">Patabos: Grąžinama įranga turi būti nuvalyta ir išardyta taip, kaip buvo išduota. Įranga transporto priemonėje turi būti
sukrauta taip, kad būtų galima iškrauti šakiniais krautuvais. Už iškrovimą rankomis apmokama papildomai.</span>
    </HtmlPanel>

    <Table style="width:100%; margin-top:10px;">
      <row>
        <TextLabel source="Manager">
          <renderToken source="ManagerFirstName" prefix="Perdavė: " />
          <renderToken source="ManagerLastName" />
        </TextLabel>
        <FlowPanel class="flexBox-horizontal">
          <TextLabel source="InputVehicle">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>!row.InputVehicle</ui:expression>
            </dynStyle>
            <renderToken source="InputVehicle" prefix="Transporto priemonė: " />
          </TextLabel>
          <TextLabel source="Vehicle">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>row.InputVehicle</ui:expression>
            </dynStyle>
            <renderToken source="VehicleModel" prefix="Transporto priemonė: " />
            <renderToken source="VehicleNumber" />
          </TextLabel>
        </FlowPanel>
      </row>
      <row>
        <Label text="Priėmė ir suskaičiavo:" />
        <FlowPanel class="flexBox-horizontal">
          <TextLabel source="InputDriver">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>!row.InputDriver</ui:expression>
            </dynStyle>
            <renderToken source="InputDriver" prefix="Vairuotojas: " />
          </TextLabel>
          <TextLabel source="Driver">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>row.InputDriver</ui:expression>
            </dynStyle>
            <renderToken source="DriverFirstName" prefix="Vairuotojas: " />
            <renderToken source="DriverLastName" />
          </TextLabel>
        </FlowPanel>
      </row>
    </Table>
  </FlowPanel>
</f:Form>