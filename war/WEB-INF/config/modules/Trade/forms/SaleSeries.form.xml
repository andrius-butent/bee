<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form"

  name="SaleSeries" viewName="SaleSeries" caption="=trdSaleSeries"
  width="500" height="300">

  <Table kind="controls">
    <col index="0" kind="label" />

    <row>
      <Label for="SeriesName" />
      <InputText source="SeriesName" upperCase="true" style="width: 100px;"
        visible="true" />
      <CheckBox source="SentERP"/>
    </row>
    <row>
      <Label for="Notes" />
      <cell colSpan="2">
        <InputArea source="Notes" visibleLines="5" style="width: 350px;" />
      </cell>
    </row>
  </Table>

</f:Form>  
