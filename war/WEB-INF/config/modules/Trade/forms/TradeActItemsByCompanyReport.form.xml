<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY c1 "min-width: 120px;">
  <!ENTITY multi "width: 500px;">
  <!ENTITY glst "margin-right: 10px;">
  <!ENTITY gitems "<item>-</item>
    <item>=itemType</item>
    <item>=itemGroup</item>
    <item>=item</item>
    <item>=client</item>
    <item>=object</item>
    <item>=manager</item>
    <item>=warehouse</item>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="TradeActItemsByCompanyReport" caption="=taReportItemsByCompany"
  enabledActions="filter bookmark export"
  >
  <FlowPanel>
    <br/>
    <HorizontalPanel>
      <cell kind="label">
        <Label text="=dateFrom" style="&c1;" />
      </cell>
      <InputDateTime name="StartDate" style="width: 120px;" />

      <cell kind="label">
        <Label text="=dateTo" />
      </cell>
      <InputDateTime name="EndDate" style="width: 120px;" />
      
      <cell kind="label">
        <Label text="=currency" />
      </cell>
      <UnboundSelector name="Currency" viewName="Currencies" renderColumns="Name"
        newRowEnabled="false" editPopup="true" style="width: 80px;" />
    </HorizontalPanel>

    <Disclosure open="true">
      <Label text="=filters" />
      <Table style="margin-left: 0;">
        <col index="0" kind="label" />

        <row>
          <Label text="=clients" style="&c1;" />
          <MultiSelector name="Companies" viewName="Companies" renderColumns="Name"
            newRowEnabled="false" style="&multi;" />
        </row>
        <row>
          <Label text="=objects" />
          <MultiSelector name="CompanyObjects" viewName="CompanyObjects" 
            renderColumns="ObjectName" choiceColumns="CompanyName ObjectName ObjectAddress"
            newRowEnabled="false" editPopup="true" style="&multi;" />
        </row>
    
        <row>
          <Label text="=trdOperationsShort" />
          <MultiSelector name="TradeOperations" viewName="TradeOperations"
            renderColumns="OperationName" newRowEnabled="false" style="&multi;" />
        </row>
        <row>
          <Label text="=trdStatuses" />
          <MultiSelector name="TradeStatuses" viewName="TradeStatuses" renderColumns="StatusName"
            newRowEnabled="false" style="&multi;" />
        </row>

        <row>
          <Label text="=trdSeriesPlural" />
          <MultiSelector name="TradeSeries" viewName="TradeSeries" renderColumns="SeriesName"
            newRowEnabled="false" style="&multi;" />
        </row>
        <row>
          <Label text="=managers" />
          <MultiSelector name="Managers" viewName="Users"
            renderColumns="FirstName LastName"
            choiceColumns="FirstName LastName CompanyName PositionName" newRowEnabled="false"
            style="&multi;" />
        </row>

        <row>
          <Label text="=warehouses" />
          <MultiSelector name="Warehouses" viewName="Warehouses" renderColumns="Code"
            choiceColumns="Code Name" newRowEnabled="false" style="&multi;" />
        </row>

        <row>
          <Label text="=categories" />
          <MultiSelector name="CategoryTree" viewName="CategoryTree" renderColumns="Name"
            choiceColumns="ParentName Name" newRowEnabled="false" style="&multi;" />
        </row>
        <row>
          <Label text="=goods" />
          <MultiSelector name="Items" viewName="Items" filter="!(IsService)"
            renderColumns="Name Article" newRowEnabled="false" style="&multi;" />
        </row>
      </Table>
    </Disclosure>
    
    <br/>
    <HorizontalPanel>
      <cell kind="label">
        <Label text="=groupBy" style="&c1;" />
      </cell>

      <ListBox name="Group0" style="&glst;">
        &gitems;
      </ListBox>
      <ListBox name="Group1" style="&glst;">
        &gitems;
      </ListBox>
      <ListBox name="Group2" style="&glst;">
        &gitems;
      </ListBox>
      <ListBox name="Group3">
        &gitems;
      </ListBox>
    </HorizontalPanel>
    
    <br/>
    <FlowPanel name="DataContainer" />
  </FlowPanel>
</f:Form>
