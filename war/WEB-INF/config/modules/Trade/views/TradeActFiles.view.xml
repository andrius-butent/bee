<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="TradeActFiles" source="TradeActFiles" module="Trade"
  caption="=files"
  >
  <Columns>
    <SimpleColumn name="TradeAct" />

    <SimpleColumn name="File" />
    <SimpleJoin name="File" joinType="LEFT">
      <SimpleColumn alias="FileName" name="Name" />
      <SimpleColumn alias="FileSize" name="Size" />
      <SimpleColumn alias="FileType" name="Type" />
    </SimpleJoin>
    
    <SimpleColumn name="Caption" />
  </Columns>
  <Order>
    <OrderBy column="File" />
  </Order>
</View>
 