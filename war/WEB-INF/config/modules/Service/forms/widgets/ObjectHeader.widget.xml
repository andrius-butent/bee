<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Table [
  <!ENTITY cell "padding-bottom: 2px;">
  <!ENTITY clbl "text-align: right; padding-left: 1em; padding-right: 1em;">
  <!ENTITY inp "display: inline-block; width: 500px;">
  <!ENTITY tbl "border-collapse: collapse; ">
]>
<Table xmlns="http://www.butent.com/widget" kind="controls"
    style="&tbl;" cellStyle="&cell;">
  <col index="0" cellStyle="&clbl;" />
  <row>
    <Label for="Category" />
    <DataSelector source="Category" viewName="ServiceTree" renderColumns="CategoryName" choiceColumns="ParentName Name" style="&inp;"/>
  </row>
  <row>
    <Label for="Manufacturer" />
    <DataSelector source="Manufacturer" viewName="Companies" renderColumns="ManufacturerName" style="&inp;"/>
  </row>
  <row>
    <Label for="Contractor" />
    <DataSelector source="Contractor" viewName="Companies" renderColumns="ContractorName" style="&inp;" />
  </row>
  <row>
    <Label for="Model"/>
    <InputText source="Model" style="&inp;" />
  </row>
  <row>
    <Label for="SerialNo"/>
    <InputText source="SerialNo" style="&inp;"/>
  </row>
  <row>
    <Label for="Address" text="=svcDeviceAddress"/>
    <InputText source="Address" style="&inp;"/>
  </row>
</Table>
