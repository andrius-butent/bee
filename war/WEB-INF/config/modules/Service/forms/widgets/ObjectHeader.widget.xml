<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Table [
  <!ENTITY clbl "text-align: right; padding-left: 1em; padding-right: 1em;">
  <!ENTITY inp "width: 200px;">
]>
<Table xmlns="http://www.butent.com/widget"
  xmlns:ui="http://www.butent.com/ui"
    style="border-collapse: collapse;" cellStyle="padding-top: 8px;">

  <col index="0" cellStyle="&clbl;" />
  <col index="2" cellStyle="&clbl;" />

  <row>
    <Label for="Category" />
    <DataSelector source="Category" renderColumns="CategoryName" choiceColumns="ParentName Name"
      style="&inp;" />
    <Label for="Address" />
    <InputText source="Address" style="&inp;" />
    <Label name="StatusLabel" for="Status">
       <dynStyle>
        <ui:inline>display:none</ui:inline>
        <ui:expression>rowId&lt;1</ui:expression>
      </dynStyle>
    </Label>
    <ListBox name="Status" source="Status" style="&inp;" readOnly="true" visible="true" >
     <dynStyle>
        <ui:inline>display:none</ui:inline>
        <ui:expression>rowId&lt;1</ui:expression>
      </dynStyle>
    </ListBox>
  </row>

  <row>
    <Label for="Customer" />
    <DataSelector source="Customer" renderColumns="CustomerName CustomerTypeName" style="&inp;" />
    <Label for="Contractor" />
    <DataSelector source="Contractor" style="&inp;" />
    <Label for="Project" >
      <dynStyle>
        <ui:inline>display:none</ui:inline>
        <ui:expression>row.Status == 4</ui:expression>
      </dynStyle>
    </Label>
    <DataSelector source="Project" style="&inp;"  readOnly="true">
      <dynStyle>
        <ui:inline>display:none</ui:inline>
        <ui:expression>row.Status == 4</ui:expression>
      </dynStyle>
    </DataSelector>
  </row>

  <row>
    <Label for="Number" />
    <InputText source="Number" style="&inp;" />
    <Label for="Name" class="bee-required"/>
    <InputText source="Name" style="&inp;" required="true" />
    <br />
    <br />
  </row>
</Table>
