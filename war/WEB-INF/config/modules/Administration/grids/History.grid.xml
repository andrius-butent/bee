<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="History" readOnly="true" disabledActions="audit close" caption="=history"
  >
  <g:columns>
    <DataColumn name="Time" caption="=historyTime" />
    <DataColumn name="User" caption="=historyUser" />
    <DataColumn name="TransactionId" visible="false" caption="=historyTransaction" />
    <DataColumn name="Object" visible="false" caption="=historyObject" />
    <DataColumn name="RecordId" visible="false" caption="=historyRecord" />
    <DataColumn name="Field" caption="=historyField" />
    <DataColumn name="Value" caption="=historyValue">
       <dynStyle>
         <ui:class>bee-ActionCellLink</ui:class>
         <ui:expression>(row.Relation !=null) &amp;&amp; (row.Value !=null)</ui:expression>
       </dynStyle>
    </DataColumn>
    <DataColumn name="Relation" visible="false" caption="=historyRelation" />
  </g:columns>

  <g:rowStyle>
    <ui:inline>="color:green"</ui:inline>
    <ui:expression>row.Mode == 'I'</ui:expression>
  </g:rowStyle>
  <g:rowStyle>
    <ui:inline>="color:red"</ui:inline>
    <ui:expression>row.Mode == 'D'</ui:expression>
  </g:rowStyle>
</g:Grid>
