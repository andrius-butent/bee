<?xml version="1.0" encoding="UTF-8" ?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="ExtendedReport"
  >
  <FlowPanel class="flexBox-vertical">
    <br/>
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexible">
        <HorizontalPanel>
          <Label text="=currency" />
          <UnboundSelector name="Currency" viewName="Currencies" renderColumns="Name"
            newRowEnabled="false" editPopup="true" style="width:80px;" />
    
          <CheckBox name="Vat" text="=trdAmountWoVat" />
        </HorizontalPanel>
    
        <Disclosure open="false">
          <Label text="=layout" />
    
          <FlowPanel class="flexBox-horizontal">
            <FieldSet class="flexible">
              <Legend text="=rows" />
              <FlowPanel name="DetalizationContainer" style="max-height:150px; overflow:auto;" />
              <HorizontalPanel style="white-space:nowrap;">
                <cell style="width:100%">
                  <FaLabel name="DetalizationContainerAdd" char="plus" style="display:inline-block;" />
                </cell>
                <FlowPanel name="DetalizationContainerGroup" />
              </HorizontalPanel>
            </FieldSet>
          
            <FieldSet class="flexible">
              <Legend text="=columns" />
              <FlowPanel name="CalculationContainer" style="max-height:150px; overflow:auto;" />
              <HorizontalPanel style="white-space:nowrap;">
                <cell style="width:100%">
                  <FaLabel name="CalculationContainerAdd" char="plus" style="display:inline-block;" />
                </cell>
                <FlowPanel name="CalculationContainerGroup" />
              </HorizontalPanel>
            </FieldSet>
          </FlowPanel>
        </Disclosure>
    
        <Disclosure open="true">
          <Label text="=filters" />
          <FieldSet>
            <FlowPanel name="FilterContainer" style="max-height:150px; overflow:auto;" />
            <FaLabel name="FilterContainerAdd" char="plus" style="display:inline-block;" />
          </FieldSet>
        </Disclosure>
      </FlowPanel>

      <FieldSet>
        <Legend text="=reports" />
        <FlowPanel name="ReportContainer" style="max-height:300px; overflow:auto;" />
      </FieldSet>
    </FlowPanel>

    <br/>
    <FlowPanel name="DataContainer" class="flexible" style="overflow:auto;" />
  </FlowPanel>
</f:Form>
