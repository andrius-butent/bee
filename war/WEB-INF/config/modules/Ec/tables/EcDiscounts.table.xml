<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="EcDiscounts"
  idName="DiscountID"
  >
  <Fields>
    <Relation name="Client" notNull="true" relation="EcClients" cascade="DELETE" />
    
    <DateTime name="DateFrom" label="=ecDiscountDateFrom" />
    <DateTime name="DateTo" label="=ecDiscountDateTo" />
    
    <Relation name="Category" relation="TcdCategories" label="=ecItemCategory" />
    <Relation name="Brand" relation="TcdBrands" label="=ecItemBrand" />
    <Relation name="ArticleBrand" relation="TcdArticleBrands" />

    <Numeric name="Percent" precision="7" scale="3" label="=ecDiscountPercent" />
    <Numeric name="Price" precision="10" scale="2" label="=ecDiscountPrice" />
    
    <String name="Note" precision="100" label="=ecDiscountNote" />
  </Fields>
</Table>
