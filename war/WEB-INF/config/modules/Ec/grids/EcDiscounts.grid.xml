<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"

  name="EcDiscounts" viewName="EcDiscounts"
  flexGrow="1" flexShrink="1"
  >
  <body height="45" />
  <columns>
    <DataColumn name="DateFrom" width="70" />
    <DataColumn name="DateTo" width="70" />

    <RelColumn name="Category" minWidth="150" 
        searchableColumns="CategoryName" choiceColumns="FullName"
        selectorClass="bee-ec-CategorySelector" visibleLines="7" options="&#160;-&#160;" />

    <RelColumn name="Brand" renderColumns="BrandName" width="100" />

    <RelColumn name="ArticleBrand" caption="=ecItem" minWidth="150" caching="none"
        searchableColumns="ArticleName AnalogNr"
        choiceColumns="ArticleName BrandName AnalogNr Supplier"
        order="ArticleName, BrandName, AnalogNr, Supplier">
      <renderToken source="ArticleName" />
      <renderToken source="ArticleBrandName" prefix=", " />
      <renderToken source="AnalogNr" prefix=", " />
      <renderToken source="Supplier" prefix=", " />
    </RelColumn>        

    <DataColumn name="Percent" visible="true" width="80" sortable="false" />
    <DataColumn name="Price" visible="true" width="80" sortable="false" />

    <DataColumn name="Cost" visible="false" />
    <DataColumn name="Note" visible="false" />
  </columns>
</Grid>
