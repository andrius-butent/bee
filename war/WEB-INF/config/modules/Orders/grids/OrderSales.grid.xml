<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Grid[
]>
<g:Grid
  xmlns="http://www.butent.com/column"
  xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="OrderSales" viewName="OrderSalesFiltered" flexGrow="1" renderMode="full"
  disabledActions="add" paging="false" initialRowSetSize="-1">

  <g:columns>
    <SelectionColumn name="Select" width="20" />

    <RelColumn name="Item" renderColumns="ItemName"
      choiceColumns="Name Article" filter="!(IsService)" visible="true"
      readOnly="true">
      <footer text="=totalOf" horizontalAlignment="right" />
    </RelColumn>

    <DataColumn name="Article" />

    <DataColumn name="CompletedQty" format="0.###" >
      <editable>
        <ui:expression>cell.value &gt; 0</ui:expression>
      </editable>
    </DataColumn>

    <PropColumn name="FreeRemainder" type="double" label="=ordFreeRemainder" visible="true">
      <dynStyle>
        <ui:inline>background-color: #ff5252</ui:inline>
        <ui:expression>row.CompletedQty == 0 &amp;&amp; row.ComponentsCount == 0</ui:expression>
      </dynStyle>
    </PropColumn>

    <DataColumn name="UnitName" caption="=unitShort" flexGrow="0" />

    <PropColumn name="TotalPrice" type="double" label="=price" format="#.#####" >
      <footer expression="row.TotalPrice * row.CompletedQty" format="#.##" />
    </PropColumn>

    <RelColumn name="Currency" readOnly="true" />
  </g:columns>
</g:Grid>
