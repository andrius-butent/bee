<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Grid[
]>
<g:Grid
  xmlns="http://www.butent.com/column"
  xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:xi="http://www.w3.org/2001/XInclude"

  name="OrderItems" viewName="OrderItems"
  flexGrow="1" renderMode="full"
  disabledActions="filter" filter="!(Parent)" >
  <g:columns>
    <PropColumn name="ItemComponent" type="integer" visible="false" caption="=components" />
    <CalcColumn name="Plus" type="string" caption="-" width="25" visible="true" >
      <style>
        <headerStyle><ui:class>bee-fa-label</ui:class></headerStyle>
        <bodyStyle><ui:class>bee-fa-label</ui:class></bodyStyle>
      </style>
      <render><ui:expression>row.ItemComponent > 0 ? '\uf067' : ""</ui:expression></render>
    </CalcColumn>
  </g:columns>

  <xi:include href="columns/OrderItems.columns.xml" />

</g:Grid>
