<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:x="http://www.butent.com/expression"

  name="Projects" source="Projects" caption="=projects"
  editForm="Project" newRowForm="Project"
  >
  <Columns>
    <SimpleColumn name="Priority" />
    <SimpleColumn name="Status" />
    <SimpleColumn name="Name" />
    
    <SimpleColumn name="Type" />
    <SimpleJoin name="Type" joinType="LEFT">
      <SimpleColumn name="Name" alias="TypeName" />
    </SimpleJoin>
    
    <SimpleColumn name="Company" />
    <SimpleJoin name="Company" joinType="LEFT">
      <SimpleColumn alias="CompanyName" name="Name" />
    </SimpleJoin>
    
     <SimpleColumn name="Contact" />
    <SimpleJoin name="Contact" joinType="LEFT">
      <SimpleColumn alias="ContactPerson" name="Person" />
      <SimpleJoin name="Person" joinType="LEFT">
        <SimpleColumn alias="ContactFirstName" name="FirstName" />
        <SimpleColumn alias="ContactLastName" name="LastName" />
      </SimpleJoin>
      <SimpleJoin name="Company" joinType="LEFT">
        <SimpleColumn alias="ContactCompanyName" name="Name" />
      </SimpleJoin>
    </SimpleJoin>
    
    <SimpleColumn name="Owner" />
    <SimpleJoin name="Owner" joinType="LEFT">
      <SimpleColumn name="CompanyPerson" alias="OwnerPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="OwnerFirstName" name="FirstName" />
          <SimpleColumn alias="OwnerLastName" name="LastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
    
    <SimpleColumn name="Category" />
    <SimpleJoin joinType="LEFT" name="Category">
      <SimpleColumn name="Name" alias="CategoryName" />
    </SimpleJoin>
    
    <SimpleColumn name="StartDate" />
    <SimpleColumn name="EndDate" />    
    <SimpleColumn name="ExpectedDuration" />
    <SimpleColumn name="Progress" />
    <SimpleColumn name="Price" />
    <SimpleColumn name="Description" />
    
    <SimpleColumn name="ExpectedTasksDuration" label="=prjExpectedTaskDuration">
      <x:string>'?0?'</x:string>
    </SimpleColumn>
    
    <SimpleColumn name="ActualTasksDuration" label="=prjActualTaskDuration">
      <x:string>'?0?'</x:string>
    </SimpleColumn>
    
    <SimpleColumn name="Contract" />
    <SimpleJoin name="Contract" joinType="LEFT" filter="Project AND Document">
      <HiddenColumn name="Project" />
      <SimpleColumn name="Document" />
      <SimpleJoin name="Document" joinType="LEFT">
        <SimpleColumn name="Number" alias="ContractNumber"/>
        <SimpleColumn name="Expires" alias="ContractExpires" />
      </SimpleJoin>
    </SimpleJoin>
    
    <SimpleColumn name="ContractPrice" />
    <SimpleColumn name="ContractSigned" />
    
  </Columns>

  <Order>
    <OrderBy column="Status" />
    <OrderBy column="EndDate" />
  </Order>
</View>
 