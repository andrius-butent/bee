<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form[
  <!ENTITY inline "display: inline-block;">
  <!ENTITY height "height: 25px">
  <!ENTITY lbl "margin-left: 1em; margin-right: 1em; text-align: right">
  <!ENTITY lbl2 "margin-left: -6em; margin-right: 1em; text-align: right;">
  <!ENTITY lbl3 "margin-left: -7em; margin-right: 1em; text-align: right;">
  <!ENTITY lbl4 "margin-left: 8em; margin-right: 1em; text-align: left">
  <!ENTITY inp1 "&inline; width: 240px; &height;"> 
  <!ENTITY inp2 "&inline; width: 100px; margin-left: -5px; &height;">
  <!ENTITY inp3 "&inline; width: 100px; &height;">
]>

<f:Form xmlns="http://www.butent.com/widget" 
		xmlns:f="http://www.butent.com/form"
		xmlns:xi="http://www.w3.org/2001/XInclude"   
		xmlns:d="http://www.butent.com/decorator" 
		name="ProjectStages" viewName="ProjectStages" caption="=prjStage" >
	
	<FlowPanel class="flexBox-vertical">
		<Table>
			<row>
				<Label text="=name" style="&lbl;" class="bee-required" />
				<InputText source="Name" style="&inp1;" />

				<Label text="=crmStartDate" style="&lbl;" />
				<InputDate source="StartDate" style="&inp3;" />

				<Label text="=crmFinishDate" style="&lbl;" />
				<InputDate source="EndDate" style="&inp2;" />
			</row>
			
			<row>
				<Label text="=prjScope" style="&lbl;" />
				<InputText source="ExpectedDuration" style="&inp3;" />

				<Label text="=prjExpectedTaskDuration" style="&lbl2;" />
				<InputText source="ExpectedTasksDuration" style="&inp3;" />

				<Label text="=prjActualTaskDuration" style="&lbl2;" />
				<InputText source="ActualTasksDuration" style="&inp2;" />
			</row>
			
			<row>
				<Label text="=prjExpenses" style="&lbl;" />
				<InputDecimal source="Expenses" style="&inp3;" />

				<Label text="=prjExpectedTaskExpenses" style="&lbl3;" />
				<InputDecimal source="ExpectedTasksExpenses" style="&inp3;" />

				<Label text="=prjActualExpenses" style="&lbl;" />
				<InputDecimal source="ActualExpenses" style="&inp2;" />
			</row>
			
			<row>
				<Label text="=description" style="&lbl;" />
				<cell colSpan="5">
					<InputArea style="width: 100%; height: 100px;" />
				</cell>				
			</row>
		</Table>
		<TabbedPages class="flexible">
      <page module="Tasks">
        <text>=crmTasks</text>
        <ChildGrid name="ChildTasks" relColumn="ProjectStage" />
      </page>
    </TabbedPages>
	</FlowPanel>
</f:Form> 