<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">

  <!ENTITY separator "<hr/>">

  <!ENTITY tbl "border-collapse: collapse;">
  <!ENTITY cell "vertical-align: top; padding-bottom: 2px;">
  <!ENTITY col1 "text-align: right; padding-right: 8px; width: 50px;">
  <!ENTITY col3 "text-align: right; padding-left: 8px; padding-right: 8px; width: 50px;">

  <!ENTITY inp2 "width: 50px;">
  <!ENTITY inp2x "width: 200px;">
  <!ENTITY inp2y "width: 150px;">
  <!ENTITY inp3 "width: 70px;margin-left: -75px">

  <!ENTITY dateStyle "&inline; min-width: 90px; max-width: 90px;">
  <!ENTITY timeStyle "&inline; min-width: 50px; max-width: 50px; width: 50px; margin-left: 10px;">
  <!ENTITY timeStep "30">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
 name="NewProjectReasonComment" viewName="ProjectEvents"  width="600" height="300">

  <FlowPanel style="padding: 10px 2px 2px 10px;">
 
    <Table style="&tbl;" cellStyle="&cell;">
      <col index="0" cellStyle="&col1;" />
      <row>
        <cell colSpan="3">
          <Label name="EditInfo" style="&inp2x;" />
        </cell>
      </row>
      <row>
        <Label text="=from" />
        <FlowPanel name="From" style="&inp2x;" />
        <Label text="=to" />
        <FlowPanel name="To" style="&inp2x;" />
      </row>
       <row>
        <Label text="=reason" class="bee-required"/>
        <cell colSpan="3">
          <UnboundSelector name="Reason" viewName="ProjectReasons" renderColumns="Name" filter="Active" order="Ordinal" required="true" style="&inp2x;" />
        </cell>
      </row>
       <row>
        <Label name="DocumentLabel" text="=document" />
        <cell colSpan="3">
          <UnboundSelector name="Document" viewName="Documents" style="&inp2x;" />
        </cell>
      </row>
      <row>
        <Label text="=comment" class="bee-required" />
        <cell colSpan="3">
          <InputArea name="Comment" source="Comment" required="true" style="&inp2x; height: 60px;" />
        </cell>
      </row>
    </Table>

  </FlowPanel>
</f:Form>