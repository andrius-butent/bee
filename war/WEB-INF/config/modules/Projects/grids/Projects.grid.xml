<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
	xmlns:ui="http://www.butent.com/ui" xmlns:w="http://www.butent.com/widget"

	name="Projects" viewName="Projects" caption="=projects" favorite="Name"
	order="ProjectID desc">
	
	<g:west size="200" splitterSize="2">
	 <w:DataTree name="ProjectTree" caption="=categories" viewName="ProjectTree"
        parentColumn="Parent">
      <w:calc>
        <ui:expression>row.Name + (row.ObjectCount > 0 ? ' [' + row.ProjectCount + ']' : '')</ui:expression>
      </w:calc>
      <w:form>
        <w:HorizontalPanel>
          <w:Label text="=category" class="bee-required" style="padding-right: 1em;" />
          <w:InputText source="Name" />
        </w:HorizontalPanel>
      </w:form>
    </w:DataTree>
	</g:west>
	
	<g:columns>
		<IdColumn name="Id" />
		<DataColumn name="Priority" visible="true" minWidth="70"
			autoFit="true" />

		<DataColumn name="Status" visible="true" minWidth="70"
			autoFit="true" />

		<DataColumn name="Name" visible="true" />		
		<RelColumn name="Type" />		
		<RelColumn name="Company" label="=client"/>
		<RelColumn name="Owner" />
		<DataColumn name="StartDate" />
		<DataColumn name="EndDate" />
		<DataColumn name="Progress" label="%" autoFit="true"/>
		<RelColumn name="Category" visible="false" />
	</g:columns>

	<g:predefinedFilter name="projects_active" label="=prjFilterActive" initial="true">
		<g:column name="Status" value="0" />
	</g:predefinedFilter>
	<g:predefinedFilter name="projects_all"	label="=prjFilterAll">
		<g:column name="Status" emptyValues="false" />
	</g:predefinedFilter>

</g:Grid>
