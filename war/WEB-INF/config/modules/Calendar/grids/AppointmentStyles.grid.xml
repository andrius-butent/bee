<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="AppointmentStyles" viewName="AppointmentStyles"
  caption="Vizitų stiliai" newRowCaption="Naujas vizitų stilius"
  >
  <columns>
    <DataColumn name="Name" caption="Pavadinimas" />
    <DataColumn name="Description" caption="Aprašymas" />

    <RelColumn name="HeaderColorName" caption="Viršus - spalva" >
      <dynStyle>
        <ui:inline>background: [row.HeaderBackground]; color: [row.HeaderForeground];</ui:inline>
        <ui:expression>row.HeaderColor > 0</ui:expression>
      </dynStyle>
    </RelColumn>

    <DataColumn name="HeaderClass" caption="Viršus - klasė" />
    <DataColumn name="HeaderStyle" caption="Viršus - stilius" />

    <RelColumn name="BodyColorName" caption="Vidurys - spalva">
      <dynStyle>
        <ui:inline>background: [row.BodyBackground]; color: [row.BodyForeground];</ui:inline>
        <ui:expression>row.BodyColor > 0</ui:expression>
      </dynStyle>
    </RelColumn>

    <DataColumn name="BodyClass" caption="Vidurys - klasė" />
    <DataColumn name="BodyStyle" caption="Vidurys - stilius" />
  </columns>
</Grid>
