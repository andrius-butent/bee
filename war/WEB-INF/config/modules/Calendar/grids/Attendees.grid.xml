<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid" xmlns:ui="http://www.butent.com/ui"

  name="Attendees" viewName="Attendees" caption="=calAppointmentAttendees" newRowCaption="=calNewAttendee"
  editForm="Attendee" newRowForm="Attendee" editInPlace="Ordinal" flexGrow="1" flexShrink="1"
  >
  <g:columns>
    <DataColumn name="Ordinal" caption="=ordinal" flexGrow="0" />

    <DataColumn name="TypeName" caption="=calAttendeeType" visible="true" />

    <DataColumn name="Name" caption="=calAttendeeName" minWidth="100" visible="true" />
    <DataColumn name="Description" caption="=calDescription" flexShrink="3" />
    <DataColumn name="Location" caption="=location" />

    <DataColumn name="CompanyPerson" caption="=responsibleEmployee">
      <renderToken source="FirstName" />
      <renderToken source="LastName" />
      <renderToken source="CompanyName" prefix=", " />
    </DataColumn>

    <DataColumn name="Transparency" itemKey="Transparency" caption="Persidengiamumas" />
    
    <DataColumn name="ColorName" caption="=color" flexGrow="0" >
      <dynStyle>
        <ui:inline>background: [row.Background]; color: [row.Foreground];</ui:inline>
      </dynStyle>
    </DataColumn>
    <DataColumn name="StyleName" caption="=style" />
    
  </g:columns>
</g:Grid>
