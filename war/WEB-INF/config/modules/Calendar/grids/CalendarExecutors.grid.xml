<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Grid [
  <!ENTITY dyn "<ui:inline>background-color: [row.Background]; color: [row.Foreground];</ui:inline>">
]>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CalendarExecutors" viewName="CalendarExecutors" minColumnWidth="120"
  >
  <g:columns>
    <DataColumn name="FirstName" visible="true" />
    <DataColumn name="LastName" visible="true" />

    <DataColumn name="CompanyName" caption="=company" visible="false" />
    <DataColumn name="PositionName" caption="=personPosition" visible="false" />

    <DataColumn name="Background" caption="=backgroundColor" updateMode="row">
      <dynStyle>&dyn;</dynStyle>
      <editor type="color" />
    </DataColumn>
    <DataColumn name="Foreground" caption="=foregroundColor" updateMode="row">
      <dynStyle>&dyn;</dynStyle>
      <editor type="color" />
    </DataColumn>

    <RelColumn name="Style" visible="false" />
  </g:columns>
</g:Grid>

