<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Grid [
  <!ENTITY dyn "<ui:inline>background-color: [row.Background]; color: [row.Foreground];</ui:inline>">
]>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CalExecutorGroups" viewName="CalExecutorGroups" minColumnWidth="120"
  >
  <g:columns>
    <DataColumn name="GroupName" caption="=group" visible="true" />

    <DataColumn name="Background" caption="=backgroundColor" updateMode="row">
      <dynStyle>&dyn;</dynStyle>
      <editor type="color" />
    </DataColumn>
    <DataColumn name="Foreground" caption="=foregroundColor" updateMode="row">
      <dynStyle>&dyn;</dynStyle>
      <editor type="color" />
    </DataColumn>

    <RelColumn name="Style" visible="false" />
  </g:columns>
</g:Grid>

