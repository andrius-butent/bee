<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="ThemeColors" viewName="ThemeColors" caption="Spalvos" autoFit="true"
  >
  <columns>
    <RelColumn name="ColorName" caption="Spalva" minWidth="100" />

    <DataColumn name="Background" minWidth="200" />
    <DataColumn name="Foreground" maxWidth="100" />
  </columns>

  <rowStyle>
    <ui:style>
      <ui:inline>background: [row.Background]; color: [row.Foreground];</ui:inline>
    </ui:style>
    <ui:condition><ui:expression>true</ui:expression></ui:condition>
  </rowStyle>
</Grid>

