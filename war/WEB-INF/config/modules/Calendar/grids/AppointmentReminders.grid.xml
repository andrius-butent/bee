<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"

  name="AppointmentReminders" viewName="AppointmentReminders" newRowCaption="=calNewReminder"
  >
  <g:columns>
    <RelColumn name="Recipient" caption="=recipient">
      <renderToken source="FirstName" />
      <renderToken source="LastName" />
      <renderToken source="CompanyName" prefix=", " />
    </RelColumn>
    <DataColumn name="Mobile" />
    <RelColumn name="Email">
      <renderToken source="Label" suffix=" " />
      <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
    </RelColumn>

    <RelColumn name="TypeName" caption="=type" newRowEnabled="false" />
    <DataColumn name="Method" caption="=reminderMethod" itemKey="ReminderMethod" />

    <DataColumn name="Hours" caption="=calHoursTo" />
    <DataColumn name="Minutes" caption="=calMinutesTo" />
    <DataColumn name="Scheduled" caption="=calSendTo" />

    <DataColumn name="Message" caption="=calMessage" />
    <DataColumn name="Sent" caption="=calSent" readOnly="true" />
    <DataColumn name="Error" caption="=errorMessage" readOnly="true" />
  </g:columns>
</g:Grid>
