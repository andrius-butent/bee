<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"

  name="AppointmentReminders" viewName="AppointmentReminders" newRowCaption="Naujas priminimas"
  >
  <columns>
    <RelColumn name="Recipient" caption="Gavėjas">
      <renderToken source="FirstName" />
      <renderToken source="LastName" />
      <renderToken source="CompanyName" prefix=", " />
    </RelColumn>
    <DataColumn name="Mobile" caption="Mobilus" />
    <RelColumn name="Email" caption="El.paštas">
      <renderToken source="Label" suffix=" " />
      <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
    </RelColumn>

    <RelColumn name="TypeName" caption="Tipas" newRowEnabled="false" />
    <DataColumn name="Method" caption="Metodas" itemKey="ReminderMethod" />

    <DataColumn name="Hours" caption="Valandos iki" />
    <DataColumn name="Minutes" caption="Minutės iki" />
    <DataColumn name="Scheduled" caption="Siųsti" />

    <DataColumn name="Message" caption="Tekstas" />
    <DataColumn name="Sent" caption="Išsiųstas" readOnly="true" />
    <DataColumn name="Error" caption="Klaidos pranešimas" readOnly="true" />
  </columns>
</Grid>
