<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Appointments" viewName="Appointments" caption="Vizitai"
  newRowForm="Appointment" editForm="Appointment"
  >
  <columns>
    <DataColumn name="TypeName" />

    <DataColumn name="Summary" />
    <DataColumn name="Description" />

    <DataColumn name="Location" />
    <DataColumn name="HtmlLink" />

    <DataColumn name="ColorName" />
    <DataColumn name="Background" readOnly="true" />
    <DataColumn name="Foreground" readOnly="true" />
    
    <DataColumn name="StyleName" />

    <DataColumn name="Status" itemKey="AppointmentStatus" />
    <DataColumn name="Created" readOnly="true">
      <carry>
        <ui:expression>new Date()</ui:expression>
      </carry>
    </DataColumn>

    <DataColumn name="CreatorFirstName" />
    <DataColumn name="CreatorLastName" />
    
    <DataColumn name="OrganizerFirstName" />
    <DataColumn name="OrganizerLastName" />
    
    <DataColumn name="StartDate" />
    <DataColumn name="StartDateTime" />
    <DataColumn name="StartTimeZoneName" />

    <DataColumn name="EndDate" />
    <DataColumn name="EndDateTime" />
    <DataColumn name="EndTimeZoneName" />

    <DataColumn name="Recurrence" />
    <DataColumn name="RecurringEventId" readOnly="true" />

    <DataColumn name="Transparency" itemKey="Transparency" />
    <DataColumn name="Visibility" itemKey="Calendar_Visibility" />
    <DataColumn name="ReadOnly" />

    <DataColumn name="ICalUID" />
    <DataColumn name="Sequence" />

    <DataColumn name="AnyoneCanAddSelf" />
    <DataColumn name="GuestsCanInviteOthers" />
    <DataColumn name="GuestsCanSeeOtherGuests" />

    <DataColumn name="UseDefaultReminders" />
    
    <DataColumn name="CompanyName" />
    <DataColumn name="CompanyPhone" />
    <DataColumn name="CompanyMobile" />
    <DataColumn name="CompanyEmail" />

    <DataColumn name="VehicleType" />
    <DataColumn name="VehicleNumber" />
    <DataColumn name="VehicleBodyNumber" />
    <DataColumn name="VehicleEngineNumber" />
    <DataColumn name="VehicleEngineVolume" />
    <DataColumn name="VehicleProductionDate" />
    <DataColumn name="VehicleSpeedometer" />
    <DataColumn name="VehicleTankCapacity" />
    <DataColumn name="VehiclePower" />
    <DataColumn name="VehicleNetto" />
    <DataColumn name="VehicleBrutto" />

    <DataColumn name="EffectiveStart" />
    <DataColumn name="EffectiveEnd" />
  </columns>
  
  <rowEditable>
    <ui:expression>!row.ReadOnly</ui:expression>
  </rowEditable>

</Grid>
