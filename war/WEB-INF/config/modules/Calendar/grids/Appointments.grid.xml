<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Appointments" viewName="Appointments" caption="=appointments"
  newRowForm="Appointment" editForm="Appointment" order="AppointmentID desc"
  >
  <g:columns>
    <RelColumn name="CompanyName" caption="=client" />
    <RelColumn name="CompanyPhone" caption="=phone" />

    <RelColumn name="VehicleNumber" caption="=vehicleNumber" />
    <RelColumn name="VehicleModel" renderColumns="VehicleParentModel VehicleModel" caption="Modelis" />

    <CalcColumn type="string" name="Start" sortBy="EffectiveStart StartDateTime StartDate"
      caption="=calAppointmentStart" visible="true" />
    <CalcColumn type="string" name="End" sortBy="EffectiveEnd EndDateTime EndDate"
      caption="=calAppointmentEnd" />

    <DataColumn name="Summary" caption="=summary" visible="true" />
    <DataColumn name="Description" caption="=calDescription" />

    <DataColumn name="Status" caption="=calAppointmentStatus" itemKey="AppointmentStatus" />

    <RelColumn name="Organizer" caption="=responsibleEmployee">
      <renderToken source="OrganizerFirstName" />
      <renderToken source="OrganizerLastName" />
      <renderToken source="OrganizerCompanyName" prefix=", " />
    </RelColumn>

    <DataColumn name="ColorName" caption="=color">
      <dynStyle>
        <ui:inline>background-color: [row.Background] !important; color: [row.Foreground];</ui:inline>
      </dynStyle>
    </DataColumn>
    <DataColumn name="StyleName" caption="=style" />

    <DataColumn name="TypeName" caption="=calAppointmentType" />
  </g:columns>
</g:Grid>
