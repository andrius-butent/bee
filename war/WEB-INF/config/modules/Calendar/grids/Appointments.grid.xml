<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Appointments" viewName="Appointments" caption="Vizitai"
  newRowForm="Appointment" editForm="Appointment"
  >
  <columns>
    <DataColumn name="CompanyName" caption="Klientas" />
    <DataColumn name="CompanyPhone" caption="Telefonas" />

    <DataColumn name="VehicleNumber" caption="Valst. Nr." />
    <DataColumn name="VehicleModel" renderColumns="VehicleParentModel VehicleModel" caption="Modelis" />

    <CalcColumn type="string" name="Start" sortBy="EffectiveStart StartDateTime StartDate"
      caption="Pradžia" />
    <CalcColumn type="string" name="End" sortBy="EffectiveEnd EndDateTime EndDate"
      caption="Pabaiga" />

    <DataColumn name="Summary" caption="Santrauka" />
    <DataColumn name="Description" caption="Aprašymas" />

    <DataColumn name="Status" caption="Būsena" itemKey="AppointmentStatus" />

    <DataColumn name="Organizer" caption="Atsakingas darbuotojas">
      <renderToken source="OrganizerFirstName" />
      <renderToken source="OrganizerLastName" />
      <renderToken source="OrganizerCompanyName" prefix=", " />
    </DataColumn>

    <DataColumn name="ColorName" caption="Spalva">
      <dynStyle>
        <ui:inline>background: [row.Background]; color: [row.Foreground];</ui:inline>
      </dynStyle>
    </DataColumn>
    <DataColumn name="StyleName" caption="Stilius" />

    <DataColumn name="TypeName" caption="Tipas" />
  </columns>
</Grid>
