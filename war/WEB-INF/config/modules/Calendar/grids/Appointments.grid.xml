<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Appointments" viewName="Appointments" caption="=appointments"
  newRowForm="Appointment" editForm="Appointment" order="AppointmentID desc"
  >
  <g:columns>
    <DataColumn name="TypeName" label="=calAppointmentType" />
    <DataColumn name="Summary" visible="true" maxWidth="200" />

    <DataColumn name="Location" visible="false" maxWidth="200" />
    <DataColumn name="Description" visible="false" maxWidth="200" />

    <DataColumn name="CompanyName" label="=company" />
    <DataColumn name="CompanyPhone" visible="false" />

    <DataColumn name="VehicleNumber" visible="false" />
    <DataColumn name="VehicleModel" renderColumns="VehicleParentModel VehicleModel" visible="false" />

    <DataColumn name="StartDateTime" visible="true" />
    <DataColumn name="EndDateTime" visible="true" />

    <DataColumn name="Status" />

    <DataColumn name="Organizer" renderColumns="OrganizerFirstName OrganizerLastName" />

    <DataColumn name="ColorName" label="=color" visible="false">
      <dynStyle>
        <ui:inline>background-color: [row.Background]; color: [row.Foreground];</ui:inline>
      </dynStyle>
    </DataColumn>

    <DataColumn name="StyleName" label="=style" visible="false" />
  </g:columns>
</g:Grid>
