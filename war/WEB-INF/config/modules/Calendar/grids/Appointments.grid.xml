<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Appointments" viewName="Appointments" caption="Vizitai"
  newRowForm="Appointment" editForm="Appointment" favorite="Summary"
  >
  <columns>
    <RelColumn name="TypeName" caption="Tipas" />

    <DataColumn name="Summary" caption="Santrauka" />
    <DataColumn name="Description" caption="Aprašymas" />

    <RelColumn name="ColorName">
      <dynStyle>
        <ui:inline>background: [row.Background]; color: [row.Foreground];</ui:inline>
      </dynStyle>
    </RelColumn>
    
    <RelColumn name="StyleName" caption="Stilius" />

    <DataColumn name="Status" caption="Būsena" itemKey="AppointmentStatus" />

    <DataColumn name="Created" readOnly="true" />
    <RelColumn name="Creator" renderColumns="CreatorFirstName CreatorLastName" />
    
    <RelColumn name="Organizer" caption="Atsakingas darbuotojas">
      <renderToken source="OrganizerFirstName" />
      <renderToken source="OrganizerLastName" />
      <renderToken source="OrganizerCompanyName" prefix=", " />
    </RelColumn>
    
    <DataColumn name="StartDate" />
    <DataColumn name="StartDateTime" />
    <DataColumn name="EffectiveStart" />

    <DataColumn name="EndDate" />
    <DataColumn name="EndDateTime" />
    <DataColumn name="EffectiveEnd" />

    <RelColumn name="CompanyName" caption="Įmonė:" />
    
    <CalcColumn type="string" name="Contact" caption="Telefonai, el. paštas" >
      <renderToken source="CompanyPhone" prefix="tel: " />
      <renderToken source="CompanyMobile" prefix=" mob: " />
      <renderToken source="CompanyEmail" prefix=" mail: " />
    </CalcColumn>

    <RelColumn name="VehicleNumber" caption="Valst. Nr." />

  </columns>
  
  <rowEditable>
    <ui:expression>!row.ReadOnly</ui:expression>
  </rowEditable>

</Grid>
