<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  
  name="Calendar" viewName="Calendars" caption="Kalendorius">

  <FlowPanel class="flexBox-vertical">
    <HorizontalPanel cellSpacing="10">
      <InputText source="Name" caption="Pavadinimas:"/>
      <InputArea source="Description" caption="Aprašymas:" visibleLines="3" style="width: 200px;"
        d:roleStyle="caption-cell = vertical-align: top;" />
      <DataSelector source="ThemeName" caption="Tema:" />
    </HorizontalPanel>
    
    <StackPanel class="flexible">
      <stack headerSize="22">
        <text>Resursų tipai</text>
        <ChildGrid name="CalAttendeeTypes" relColumn="Calendar" />
      </stack>
      <stack headerSize="22">
        <text>Resursai</text>
        <ChildGrid name="CalendarAttendees" relColumn="Calendar" />
      </stack>
      <stack headerSize="22">
        <text>Asmenys</text>
        <ChildGrid name="CalendarPersons" relColumn="Calendar" />
      </stack>
      <stack headerSize="22">
        <text>Vizitų tipai</text>
        <ChildGrid name="CalAppointmentTypes" relColumn="Calendar" />
      </stack>
      <stack headerSize="22">
        <text>Priminimai</text>
        <ChildGrid name="CalendarReminders" relColumn="Calendar" />
      </stack>
    </StackPanel>

  </FlowPanel>
</f:Form>  
