<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Calendar" viewName="Calendars" caption="Kalendorius">

  <FlowPanel>
    <InputText source="Name" caption="Pavadinimas:" d:size="10" d:unit="em"
       d:rootStyle="position: absolute; left: 2em; top: 2ex;" />
    <Label html="Aprašymas:" style="position: absolute; left: 400px; top: 2ex;" />
    <InputArea source="Description" visibleLines="3"
       style="width: 200px; position: absolute; left: 500px; top: 2ex;" />

    <DataSelector source="ThemeName" caption="Tema:" d:size="10" d:unit="em"
       d:rootStyle="position: absolute; left: 2em; top: 80px;" />
    <DataSelector source="Owner" caption="Savininkas:" style="width: 200px;" d:size="100" d:unit="px" 
       d:rootStyle="position: absolute; left: 400px; top: 80px;" />
    
    <TabbedPages style="position: absolute; left: 1em; right: 1em; top: 160px; bottom: 1ex;">
      <page>
        <text>Resursų tipai</text>
        <ChildGrid name="CalAttendeeTypes" relColumn="Calendar" />
      </page>
      <page>
        <text>Resursai</text>
        <ChildGrid name="CalendarAttendees" relColumn="Calendar" />
      </page>
      <page>
        <text>Asmenys</text>
        <ChildGrid name="CalendarPersons" relColumn="Calendar" />
      </page>
      <page>
        <text>Vizitų tipai</text>
        <ChildGrid name="CalAppointmentTypes" relColumn="Calendar" />
      </page>
      <page>
        <text>Priminimai</text>
        <ChildGrid name="CalendarReminders" relColumn="Calendar" />
      </page>
      
      <page>
        <text>Nustatymai</text>
        <xi:include href="widgets/Settings.widget.xml" />
      </page>
    </TabbedPages>

  </FlowPanel>
</f:Form>  
