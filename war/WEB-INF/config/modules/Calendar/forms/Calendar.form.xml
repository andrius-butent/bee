<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Calendar" viewName="Calendars" caption="Kalendorius">

  <FlowPanel style="margin-left: 2em; margin-right: 2em; margin-top: 2ex;">
    <InputText source="Name" caption="Pavadinimas:" decorator="caption-top" 
      d:rootStyle="float: left;" />
    <InputArea source="Description" caption="Aprašymas:" visibleLines="3" style="width: 300px;"
      decorator="caption-top" d:rootStyle="margin-left: 5%; float: left;" />
    <DataSelector source="Owner" caption="Savininkas:" style="width: 200px;"
       decorator="caption-top" d:rootStyle="float: right;" />
    
    <TabbedPages style="position: absolute; left: 0; right: 0; top: 120px; bottom: 1ex;">
      <page>
        <text>Resursų tipai</text>
        <ChildGrid name="CalAttendeeTypes" relColumn="Calendar" />
      </page>
      <page>
        <text>Resursai</text>
        <ChildGrid name="CalendarAttendees" relColumn="Calendar" />
      </page>
      <page>
        <text>Asmenys</text>
        <ChildGrid name="CalendarPersons" relColumn="Calendar" />
      </page>
      <page>
        <text>Vizitų tipai</text>
        <ChildGrid name="CalAppointmentTypes" relColumn="Calendar" />
      </page>
      <page>
        <text>Priminimai</text>
        <ChildGrid name="CalendarReminders" relColumn="Calendar" />
      </page>
      
      <page>
        <text>Nustatymai</text>
        <xi:include href="widgets/Settings.widget.xml" />
      </page>
    </TabbedPages>

  </FlowPanel>
</f:Form>  
