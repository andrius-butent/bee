<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Calendar" viewName="Calendars" caption="Kalendorius">

  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="5">
      <row>
        <Label html="Pavadinimas:" class="bee-required" />
        <InputText source="Name" />
        <Label html="Aprašymas:" />
        <InputArea source="Description" visibleLines="3" />
        <Label html="Tema:" class="bee-required" />
        <DataSelector source="ThemeName" relSource="Theme" relView="Themes" relColumn="Name" />
      </row>

      <row>
        <Label html="Dienos:" />
        <InputSpinner source="DefaultDisplayedDays" minValue="2" maxValue="100" step="1" />
        <Label html="Intervalų skaičius valandoje:" />
        <InputSpinner source="IntervalsPerHour" minValue="1" maxValue="30" step="1" />
        <Label html="Intervalo aukštis px:" />
        <InputSpinner source="PixelsPerInterval" minValue="1" maxValue="30" step="1" />
      </row>

      <row>
        <Label html="Darbo dienos pradžia:" />
        <InputSpinner source="WorkingHourStart" minValue="0" maxValue="23" step="1" />
        <Label html="Darbo dienos pabaiga:" />
        <InputSpinner source="WorkingHourEnd" minValue="0" maxValue="23" step="1" />
        <Label html="Scroll To Hour:" />
        <InputSpinner source="ScrollToHour" minValue="0" maxValue="23" step="1" />
      </row>
    </FlexTable>
    
    <ComplexPanel class="flexible" style="position: relative; margin-top: 3ex;">
      <layer left="1" leftUnit="em" width="60" widthUnit="%" top="0" bottom="1">
        <ChildGrid name="CalAttendeeTypes" relColumn="Calendar" />
      </layer>
      <layer left="65" leftUnit="%" right="1" rightUnit="em" top="0" bottom="1">
        <ChildGrid name="CalendarReminders" relColumn="Calendar" />
      </layer>
    </ComplexPanel>

  </FlowPanel>
</f:Form>  
