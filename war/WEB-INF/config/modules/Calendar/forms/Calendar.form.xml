<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Calendar" viewName="Calendars" caption="Kalendorius">

  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="5">
      <row>
        <InputText source="Name" caption="Pavadinimas:" />
        <InputArea source="Description" caption="Aprašymas:" visibleLines="3" />
        <DataSelector source="ThemeName" relSource="Theme" relView="Themes" relColumn="Name"
          caption="Tema" />
      </row>

      <row>
        <InputSpinner source="DefaultDisplayedDays" caption="Dienos"
          minValue="2" maxValue="100" step="1" />
        <InputSpinner source="IntervalsPerHour" caption="Intervalų skaičius valandoje:"
          minValue="1" maxValue="30" step="1" decorator="caption-left-cell" />
        <InputSpinner source="PixelsPerInterval" caption="Intervalo aukštis px:"
          minValue="1" maxValue="30" step="1" decorator="caption-left-cell" />
      </row>

      <row>
        <InputSpinner source="WorkingHourStart" caption="Darbo dienos pradžia:" 
          minValue="0" maxValue="23" step="1" decorator="caption-left-cell" />
        <InputSpinner source="WorkingHourEnd" caption="Darbo dienos pabaiga:"
          minValue="0" maxValue="23" step="1" decorator="caption-left-cell" />
        <InputSpinner source="ScrollToHour" caption="Scroll To Hour:"
          minValue="0" maxValue="23" step="1" decorator="caption-left-cell" />
      </row>
    </FlexTable>
    
    <ComplexPanel class="flexible" style="position: relative; margin-top: 3ex;">
      <layer left="1" leftUnit="em" width="60" widthUnit="%" top="0" bottom="1">
        <ChildGrid name="CalAttendeeTypes" relColumn="Calendar" />
      </layer>
      <layer left="65" leftUnit="%" right="1" rightUnit="em" top="0" bottom="1">
        <ChildGrid name="CalendarReminders" relColumn="Calendar" />
      </layer>
    </ComplexPanel>

  </FlowPanel>
</f:Form>  
