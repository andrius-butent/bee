<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  
  name="Theme" viewName="Themes" caption="Spalvų Tema">

  <FlowPanel class="flexBox-vertical">
    <HorizontalPanel cellSpacing="20">
      <InputText source="Name" caption="Pavadinimas:"/>
      <InputArea source="Description" caption="Aprašymas:" visibleLines="3" style="width: 200px;"
        d:roleStyle="caption-cell = vertical-align: top;" />
    </HorizontalPanel>

    <ChildGrid class="flexible" name="ThemeColors" relColumn="Theme" />
  </FlowPanel>
</f:Form>  
