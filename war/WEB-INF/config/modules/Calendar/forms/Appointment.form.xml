<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Appointment" viewName="Appointments" caption="Vizitas">

  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="5">
      <row>
        <Label html="Pavadinimas:" class="bee-required" />
        <InputText source="Summary" />
        <Label html="Aprašymas:" />
        <InputArea source="Description" visibleLines="3" />
      </row>

      <row>
        <Label html="Pradžia:" class="bee-required" />
        <InputDateTime source="StartDateTime" />
        <Label html="Pabaiga:" class="bee-required" />
        <InputDateTime source="EndDateTime" />
      </row>

      <row>
        <Label html="Spalva:" class="bee-required" />
        <DataSelector source="ColorName" relSource="Color" relView="Colors" relColumn="Name" />
        <Label html="Stilius:" />
        <DataSelector source="StyleName" relSource="Style" relView="AppointmentStyles" relColumn="Name" />
      </row>

      <row>
        <Label html="Būsena:" />
        <ListBox source="Status" itemKey="AppointmentStatus" />
        <Radio source="Visibility" itemKey="Calendar_Visibility" vertical="true" />
        <CheckBox source="UseDefaultReminders" html="Use Default Reminders" />
      </row>
    </FlexTable>
    
    <ComplexPanel class="flexible" style="position: relative; margin-top: 3ex;">
      <layer left="1" leftUnit="em" width="60" widthUnit="%" top="0" bottom="1">
        <ChildGrid name="AppointmentAttendees" relColumn="Appointment" />
      </layer>
      <layer left="65" leftUnit="%" right="1" rightUnit="em" top="0" bottom="1">
        <ChildGrid name="AppointmentReminders" relColumn="Appointment" />
      </layer>
    </ComplexPanel>

  </FlowPanel>
</f:Form>  
