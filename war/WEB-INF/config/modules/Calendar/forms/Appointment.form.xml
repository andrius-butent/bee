<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="Appointment" viewName="Appointments" caption="Vizitas">

  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="5">
      <row>
        <DataSelector source="CompanyName" caption="Įmonė:" />
        <TextLabel>
          <renderToken source="CompanyPhone" prefix="tel: " suffix=" " />
          <renderToken source="CompanyMobile" prefix="mob: " suffix=" " />
          <renderToken source="CompanyEmail" prefix="mail: " />
        </TextLabel>
        <DataSelector source="Creator">
          <renderToken source="CreatorFirstName" />
          <renderToken source="CreatorLastName" />
          <renderToken source="CreatorCompanyName" prefix=", " />
        </DataSelector>
      </row>

      <row>
        <DataSelector source="AppointmentType" caption="Tipas:" />
        <InputText source="Summary" caption="Pavadinimas:" />
        <DataSelector source="Organizer">
          <renderToken source="OrganizerCompanyName" suffix=", " />
          <renderToken source="OrganizerFirstName" />
          <renderToken source="OrganizerLastName" />
        </DataSelector>
      </row>

      <row>  
        <InputDateTime source="StartDateTime" caption="Pradžia:" />
        <InputDateTime source="EndDateTime" caption="Pabaiga:" />
        <InputDateTime source="Created" />
      </row>

      <row>
        <DataSelector source="ColorName" caption="Spalva:" />
        <DataSelector source="Style" caption="Stilius:" />
        <ListBox source="Status" itemKey="AppointmentStatus" decorator="caption-left"
          caption="Būsena:" />
      </row>
      
      <row>
        <InputArea source="Description" caption="Aprašymas:" visibleLines="3" />
        <Radio source="Visibility" itemKey="Calendar_Visibility" vertical="true" />
        <CheckBox source="UseDefaultReminders" html="Use Default Reminders" />
      </row>
    </FlexTable>
    
    <ComplexPanel class="flexible" style="position: relative; margin-top: 3ex;">
      <layer left="1" leftUnit="em" width="60" widthUnit="%" top="0" bottom="1">
        <ChildGrid name="AppointmentAttendees" relColumn="Appointment" />
      </layer>
      <layer left="65" leftUnit="%" right="1" rightUnit="em" top="0" bottom="1">
        <ChildGrid name="AppointmentReminders" relColumn="Appointment" />
      </layer>
    </ComplexPanel>

  </FlowPanel>
</f:Form>  
