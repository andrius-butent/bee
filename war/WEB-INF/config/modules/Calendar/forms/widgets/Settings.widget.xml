<?xml version="1.0" encoding="UTF-8"?>
<FlexTable xmlns="http://www.butent.com/widget" xmlns:d="http://www.butent.com/decorator"
  cellSpacing="20">

  <row>
    <InputSpinner source="DefaultDisplayedDays" caption="Dienos"
      minValue="2" maxValue="99" d:size="180" d:unit="px" />
  </row>

  <row>
    <InputSpinner source="IntervalsPerHour" caption="Intervalų skaičius valandoje:"
      minValue="1" maxValue="30" d:size="180" d:unit="px" />
    <CheckBox source="OffsetHourLabels" html="Offset Hour Labels" />
  </row>

  <row>
    <InputSpinner source="PixelsPerInterval" caption="Intervalo aukštis px:"
      minValue="1" maxValue="30" d:size="180" d:unit="px" />
    <CheckBox source="EnableDragDrop" html="Enable Drag Drop" />
  </row>

  <row>
    <InputSpinner source="WorkingHourStart" caption="Darbo dienos pradžia:"
      minValue="0" maxValue="23" d:size="180" d:unit="px" />
    <CheckBox source="DragDropCreation" html="Drag Drop Creation" />
  </row>

  <row>
    <InputSpinner source="WorkingHourEnd" caption="Darbo dienos pabaiga:"
      minValue="0" maxValue="23" d:size="180" d:unit="px" />
    <Label html="Time Block Click Number" />
  </row>

  <row>
    <InputSpinner source="ScrollToHour" caption="Scroll To Hour:"
      minValue="0" maxValue="23" d:size="180" d:unit="px" />
    <Radio source="TimeBlockClickNumber" itemKey="TimeBlockClick" />
  </row>
</FlexTable>
