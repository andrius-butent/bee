<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/widget" kind="controls" style="border-spacing: 10px;">
  
  <col index="1" width="160" />
  
  <row>
    <Label text="=calIntervalsPerHour" />
    <InputSpinner source="IntervalsPerHour" minValue="1" maxValue="30" />
    <Label text="=calViews" />
  </row>

  <row>
    <Label text="=calPixelsPerInterval" />
    <InputSpinner source="PixelsPerInterval" minValue="1" maxValue="30" />
    <CheckBox source="DayView" text="=calDayView" />
  </row>

  <row>
    <Label text="=calDefaultDisplayedDays" />
    <InputSpinner source="DefaultDisplayedDays" minValue="2" maxValue="99" />
    <CheckBox source="DaysView" text="=calDaysView" />
  </row>

  <row>
    <Label text="=calWorkingHourStart" />
    <InputSpinner source="WorkingHourStart" minValue="0" maxValue="23" />
    <CheckBox source="WorkWeekView" text="=calWorkWeekView" />
  </row>

  <row>
    <Label text="=calWorkingHourEnd" />
    <InputSpinner source="WorkingHourEnd" minValue="0" maxValue="23" />
    <CheckBox source="WeekView" text="=calWeekView" />
  </row>

  <row>
    <Label text="=calScrollToHour" />
    <InputSpinner source="ScrollToHour" minValue="0" maxValue="23" />
    <CheckBox source="MonthView" text="=calMonthView" />
  </row>

  <row>
    <Label text="=calTimeBlockClickNumber" />
    <Radio source="TimeBlockClickNumber" />
    <CheckBox source="ResourceView" text="=calResourceView" />
  </row>

  <row>
    <Label text="=calMultidayLayout" />
    <ListBox source="MultidayLayout" />
    <CheckBox source="SeparateAttendees" text="=calSeparateAttendees" />
  </row>

  <row>
    <Label text="=calMultidayTaskLayout" />
    <ListBox source="MultidayTaskLayout" />
  </row>
</Table>
