<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Appointments"
  idName="AppointmentID"
  >
  <Fields>
    <Relation name="AppointmentType" relation="AppointmentTypes" label="=calAppointmentType" />

    <String name="Summary" precision="100" label="=summary" />
    <Text name="Description" label="=calDescription" />

    <String name="Location" precision="100" label="=location" />
    <String name="HtmlLink" precision="200" />

    <Relation name="Color" relation="Colors" label="=color" />
    <Relation name="Style" relation="AppointmentStyles" label="=style" />

    <Enum name="Status" key="AppointmentStatus" defValue="0" label="=calAppointmentStatus" />

    <DateTime name="Created" defExpr="CURRENT_TIME" label="=calCreated" />
    <Relation name="Creator" relation="Users" defExpr="CURRENT_USER" />

    <Relation name="Organizer" relation="CompanyPersons" label="=responsiblePerson" />

    <Date name="StartDate" />
    <DateTime name="StartDateTime" label="=calAppointmentStart" />
    <Relation name="StartTimeZone" relation="TimeZones" label="=calStartTimeZone" />

    <Date name="EndDate" />
    <DateTime name="EndDateTime" label="=calAppointmentEnd" />
    <Relation name="EndTimeZone" relation="TimeZones" label="=calEndTimeZone" />

    <Text name="Recurrence" label="=calRecurrence" />
    <Relation name="RecurringEventId" relation="Appointments" label="=calRecurringEventId" />

    <Enum name="Transparency" key="Transparency" label="=calTransparency" />
    <Enum name="Visibility" key="Calendar_Visibility" label="=calVisibility" />
    <Boolean name="ReadOnly" label="=calReadOnly" />

    <String name="ICalUID" precision="100" label="=calICalUID" />
    <Integer name="Sequence" label="=calSequence" />

    <Boolean name="AnyoneCanAddSelf" label="=calAnyoneCanAddSelf" />
    <Boolean name="GuestsCanInviteOthers" label="=calGuestsCanInviteOthers" />
    <Boolean name="GuestsCanSeeOtherGuests" label="=calGuestsCanSeeOtherGuests" />

    <Boolean name="UseDefaultReminders" label="=calUseDefaultReminders" />
    
    <Relation name="Company" relation="Companies" label="=client" />
    <Relation name="Vehicle" relation="Vehicles" label="=calCar" />
    
    <DateTime name="EffectiveStart" label="=calEffectiveStart"/>
    <DateTime name="EffectiveEnd" label="=calEffectiveEnd" />
  </Fields>
</Table>
