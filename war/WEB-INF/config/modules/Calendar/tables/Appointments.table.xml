<?xml version="1.0" encoding="UTF-8"?>
<BeeTable xmlns="http://www.butent.com/table"

  name="Appointments"
  idName="AppointmentID"
  >
  <BeeFields>
    <BeeField name="AppointmentType" type="LONG" notNull="true" relation="AppointmentTypes" />

    <BeeField name="Summary" type="STRING" precision="100" />
    <BeeField name="Description" type="TEXT" />

    <BeeField name="Location" type="STRING" precision="100" />
    <BeeField name="HtmlLink" type="STRING" precision="200" />

    <BeeField name="Color" type="LONG" relation="Colors" />
    <BeeField name="Style" type="LONG" relation="AppointmentStyles" />

    <BeeField name="Status" type="INTEGER" />
    <BeeField name="Created" type="DATETIME" />

    <BeeField name="Creator" type="LONG" relation="CompanyPersons" />
    <BeeField name="Organizer" type="LONG" relation="CompanyPersons" />

    <BeeField name="StartDate" type="DATE" />
    <BeeField name="StartDateTime" type="DATETIME" />
    <BeeField name="StartTimeZone" type="LONG" relation="TimeZones" />

    <BeeField name="EndDate" type="DATE" />
    <BeeField name="EndDateTime" type="DATETIME" />
    <BeeField name="EndTimeZone" type="LONG" relation="TimeZones" />

    <BeeField name="Recurrence" type="TEXT" />
    <BeeField name="RecurringEventId" type="LONG" relation="Appointments" />

    <BeeField name="Transparency" type="INTEGER" />
    <BeeField name="Visibility" type="INTEGER" />
    <BeeField name="ReadOnly" type="BOOLEAN" />

    <BeeField name="ICalUID" type="STRING" precision="100" />
    <BeeField name="Sequence" type="INTEGER" />

    <BeeField name="AnyoneCanAddSelf" type="BOOLEAN" />
    <BeeField name="GuestsCanInviteOthers" type="BOOLEAN" />
    <BeeField name="GuestsCanSeeOtherGuests" type="BOOLEAN" />

    <BeeField name="UseDefaultReminders" type="BOOLEAN" />
    
    <BeeField name="Company" type="LONG" relation="Companies" />
    <BeeField name="Vehicle" type="LONG" relation="Vehicles" />
    
    <BeeField name="EffectiveStart" type="DATETIME" />
    <BeeField name="EffectiveEnd" type="DATETIME" />
  </BeeFields>
</BeeTable>
