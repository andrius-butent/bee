<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Appointments"
  idName="AppointmentID"
  >
  <Fields>
    <Relation name="AppointmentType" relation="AppointmentTypes" />

    <String name="Summary" precision="100" />
    <Text name="Description" />

    <String name="Location" precision="100" />
    <String name="HtmlLink" precision="200" />

    <Relation name="Color" relation="Colors" />
    <Relation name="Style" relation="AppointmentStyles" />

    <Integer name="Status" />

    <DateTime name="Created" defExpr="CURRENT_TIME" />
    <Relation name="Creator" relation="Users" defExpr="CURRENT_USER" />

    <Relation name="Organizer" relation="CompanyPersons" />

    <Date name="StartDate" />
    <DateTime name="StartDateTime" />
    <Relation name="StartTimeZone" relation="TimeZones" />

    <Date name="EndDate" />
    <DateTime name="EndDateTime" />
    <Relation name="EndTimeZone" relation="TimeZones" />

    <Text name="Recurrence" />
    <Relation name="RecurringEventId" relation="Appointments" />

    <Integer name="Transparency" />
    <Integer name="Visibility" />
    <Boolean name="ReadOnly" />

    <String name="ICalUID" precision="100" />
    <Integer name="Sequence" />

    <Boolean name="AnyoneCanAddSelf" />
    <Boolean name="GuestsCanInviteOthers" />
    <Boolean name="GuestsCanSeeOtherGuests" />

    <Boolean name="UseDefaultReminders" />
    
    <Relation name="Company" relation="Companies" />
    <Relation name="Vehicle" relation="Vehicles" />
    
    <DateTime name="EffectiveStart" />
    <DateTime name="EffectiveEnd" />
  </Fields>
</Table>
