<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="AppointmentReminders"
  idName="AppointmentReminderID"
  >
  <Fields>
    <Relation name="Appointment" notNull="true" relation="Appointments" cascade="DELETE" />
    <Relation name="ReminderType" notNull="true" relation="ReminderTypes" cascade="DELETE" />
    <Relation name="Recipient" relation="CompanyPersons" cascade="DELETE" />

    <Integer name="Hours" />
    <Integer name="Minutes" />
    <DateTime name="Scheduled" />

    <Text name="Message" />
    <DateTime name="Sent" />
    <Text name="Error" />
  </Fields>
</Table>
