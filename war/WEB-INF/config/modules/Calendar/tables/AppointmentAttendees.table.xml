<?xml version="1.0" encoding="UTF-8"?>
<BeeTable xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/table.xsd"

  name="AppointmentAttendees"
  idName="AppointmentAttendeeID"
  >
  <BeeFields>
    <BeeField name="Appointment" type="LONG" notNull="true" relation="Appointments" cascade="DELETE" />
    <BeeField name="Attendee" type="LONG" notNull="true" relation="Attendees" cascade="DELETE" />

    <BeeField name="Optional" type="BOOLEAN" />
    <BeeField name="ResponseStatus" type="INTEGER" />
    <BeeField name="AdditionalGuests" type="INTEGER" />

    <BeeField name="Comment" type="TEXT" />
  </BeeFields>
  <BeeKeys>
    <BeeKey unique="true">
      <KeyField>Appointment</KeyField>
      <KeyField>Attendee</KeyField>
    </BeeKey>
  </BeeKeys>

</BeeTable>
