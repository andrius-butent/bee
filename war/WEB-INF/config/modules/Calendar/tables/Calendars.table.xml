<?xml version="1.0" encoding="UTF-8"?>
<BeeTable xmlns="http://www.butent.com/table"

  name="Calendars"
  idName="CalendarID"
  >
  <BeeFields>
    <BeeField name="Name" type="STRING" precision="30" notNull="true" unique="true" />
    <BeeField name="Description" type="TEXT" />

    <BeeField name="Location" type="STRING" precision="100" />
    <BeeField name="TimeZone" type="LONG" relation="TimeZones" />

    <BeeField name="ReadOnly" type="BOOLEAN" />
    <BeeField name="Visibility" type="INTEGER" />

    <BeeField name="Transparency" type="INTEGER" />

    <BeeField name="DefaultDisplayedDays" type="INTEGER" defValue="4" />

    <BeeField name="PixelsPerInterval" type="INTEGER" defValue="30" />
    <BeeField name="IntervalsPerHour" type="INTEGER" defValue="2" />

    <BeeField name="WorkingHourStart" type="INTEGER" defValue="8" />
    <BeeField name="WorkingHourEnd" type="INTEGER" defValue="17" />
    <BeeField name="ScrollToHour" type="INTEGER" defValue="8" />
    <BeeField name="OffsetHourLabels" type="BOOLEAN" />

    <BeeField name="EnableDragDrop" type="BOOLEAN" defValue="true" />
    <BeeField name="DragDropCreation" type="BOOLEAN" defValue="true" />

    <BeeField name="TimeBlockClickNumber" type="INTEGER" defValue="1" />
    
    <BeeField name="Owner" type="LONG" relation="Users" defExpr="CURRENT_USER" />
  </BeeFields>
</BeeTable>
