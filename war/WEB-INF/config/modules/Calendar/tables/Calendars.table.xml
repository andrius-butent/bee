<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Calendars"
  idName="CalendarID"
  >
  <Fields>
    <String name="Name" precision="30" notNull="true" unique="true" />
    <Text name="Description" />

    <String name="Location" precision="100" />
    <Relation name="TimeZone" relation="TimeZones" />

    <Boolean name="ReadOnly" />
    <Integer name="Visibility" />

    <Integer name="Transparency" />

    <Integer name="DefaultDisplayedDays" defValue="4" />

    <Integer name="PixelsPerInterval" defValue="30" />
    <Integer name="IntervalsPerHour" defValue="2" />

    <Integer name="WorkingHourStart" defValue="8" />
    <Integer name="WorkingHourEnd" defValue="17" />
    <Integer name="ScrollToHour" defValue="8" />
    <Boolean name="OffsetHourLabels" />

    <Boolean name="EnableDragDrop" defValue="true" />

    <Integer name="TimeBlockClickNumber" defValue="1" />
    
    <Relation name="Owner" relation="Users" defExpr="CURRENT_USER" />
  </Fields>
</Table>
