<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Trips"
  idName="TripID"
  x="0" y="0"
  >
  <Fields>
    <Integer name="Status" notNull="true" label="Būsena" defValue="0" />
    <DateTime name="Date" notNull="true" defExpr="CURRENT_TIME" />
    <String name="TripNo" precision="20" unique="true" notNull="true"
      defExpr="NEXT_NUMBER" defValue="R/" label="Reiso Nr." />
    <Relation name="Vehicle" relation="Vehicles" label="Vilkikas" />
    <Relation name="Trailer" relation="Vehicles" label="Puspriekabė" />
    <Date name="DateFrom" />
    <Date name="DateTo" />
    <Date name="PlannedEndDate" />
    <Double name="SpeedometerBefore" />
    <Double name="SpeedometerAfter" />
    <Numeric name="FuelBefore" precision="7" scale="2" />
    <Numeric name="FuelAfter" precision="7" scale="2" />
    <Relation name="Expedition" relation="ExpeditionTypes" />
    <Relation name="Forwarder" relation="Companies" />
    <String name="ForwarderVehicle" precision="50" />
    <String name="ForwarderDriver" precision="50" />
    <Text name="Notes" label="Pastabos" />
  </Fields>
</Table>