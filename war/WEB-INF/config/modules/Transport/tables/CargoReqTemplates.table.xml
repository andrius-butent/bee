<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="CargoReqTemplates"
  idName="CargoReqTemplateID"
  >
  <Fields>
    <String name="Name" notNull="true" precision="100" label="=trRequestTemplateName" />
    <Text name="TemplateDescription" label="=trRequestTemplateDescription" />

    <Relation name="User" relation="Users" cascade="DELETE" notNull="true" defExpr="CURRENT_USER"
      label="=trRequestTemplateUser" />

    <Relation name="LoadingPlace" relation="CargoPlaces" unique="true" editable="true" />
    <Relation name="UnloadingPlace" relation="CargoPlaces" unique="true" editable="true" />

    <Relation name="Expedition" relation="ExpeditionTypes" label="=trRequestExpeditionType" />
    <Relation name="ShippingTerm"  relation="ShippingTerms" label="=trRequestShippingTerms" />
  
    <String name="DeliveryTime" precision="10" label="=trRequestDeliveryTime" />
    <String name="TermsOfDelivery" precision="30" label="=trRequestTermsOfDelivery" />
    
    <Boolean name="CustomsBrokerage" label="=trRequestCustomsBrokerage" />
    <Boolean name="FreightInsurance" label="=trRequestFreightInsurance" />

    <Text name="CargoDescription" label="=trRequestCargoDescription" />
    <Integer name="Quantity" label="=trRequestCargoQuantity" />

    <Numeric name="Weight" precision="7" scale="3" label="=trRequestCargoWeight" />
    <Numeric name="Volume" precision="7" scale="3" label="=trRequestCargoVolume" />
    <Numeric name="LDM" precision="5" scale="2" label="=trRequestCargoLdm"/>
    <Numeric name="Length" precision="6" scale="2" label="=trRequestCargoLength" />
    <Numeric name="Width" precision="6" scale="2" label="=trRequestCargoWidth" />
    <Numeric name="Height" precision="6" scale="2" label="=trRequestCargoHeight" />

    <Integer name="Palettes" label="=trRequestCargoPalettes" />

    <Numeric name="Value" precision="12" scale="2" label="=trRequestCargoValue" />
    <Relation name="ValueCurrency" relation="Currencies" label="=trRequestCargoCurrency" />

    <Relation name="Manager" relation="Users" label="=trRequestResponsibleManager" />
  </Fields>
  
  <Constraints>
    <Unique fields="User Name" />
  </Constraints>
</Table>
