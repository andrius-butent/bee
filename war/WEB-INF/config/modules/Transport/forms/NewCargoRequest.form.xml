<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY table "border-collapse: collapse;">
  <!ENTITY colLabel "text-align: right; padding-left: 1em; padding-right: 1em; ">
  <!ENTITY cols '<col index="0" cellStyle="&colLabel;" /><col index="2" cellStyle="&colLabel;" />'>
  <!ENTITY cells "vertical-align: top; padding-bottom: 3px;">
  <!ENTITY separator "<hr/>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="NewCargoRequest" viewName="CargoRequests" caption="=trRequestNew"
  width="750" height="80" heightUnit="vh"
  >
  <FlowPanel>
    <br/>

    <Table kind="controls" style="&table;" cellStyle="&cells;">
      &cols;
     
      <row>
        <Label text="=trRequestDate" class="bee-hasDefaults" />
        <InputDateTime source="Date" />
        <Label text="=trRequestCustomer" class="bee-hasDefaults" />
        <DataSelector source="User" editSource="CustomerCompany" newRowEnabled="false"
          style="width: 300px;">
          <renderToken source="CustomerCompanyName" suffix=", " />
          <renderToken source="CustomerFirstName" />
          <renderToken source="CustomerLastName" />
        </DataSelector>
      </row>
      
      <row>
        <Label text="=trRequestTemplate" />
        <DataSelector name="Template" viewName="CargoReqTemplates" choiceColumns="Name"
          newRowEnabled="false" currentUserFilter="User" />
      </row>
    </Table>
    &separator;

    <xi:include href="widgets/RequestInfo.widget.xml" />

    <FlowPanel class="flexBox-horizontal">
      <Label text="=files" style="margin: 5px 2em 0 1em;" />
      <FileCollector name="Files" editableColumns="name">
        <face resource="attachment" />
      </FileCollector>
    </FlowPanel>
    &separator;

  </FlowPanel>
</f:Form>
