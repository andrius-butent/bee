<?xml version="1.0" encoding="UTF-8"?>
<HorizontalPanel xmlns="http://www.butent.com/widget"
    xmlns:ui="http://www.butent.com/ui"
  >
  <Table>
    <row>
      <cell colSpan="2">
        <Label text="=loading" horizontalAlignment="center" style="font-weight: bold;" />
      </cell>
    </row>
    <row>
      <Label text="=date" horizontalAlignment="right" />
      <InputDateTime source="LoadingDate" style="width: 110px;" />
    </row>
    <row>
      <Label text="=contact" horizontalAlignment="right" />
      <InputText source="LoadingContact" />
    </row>
    <row>
      <Label text="=address" horizontalAlignment="right" />
      <InputText source="LoadingAddress" />
    </row>
    <row>
      <Label text="=city" horizontalAlignment="right" />
      <DataSelector source="LoadingCity" style="width:135px;">
        <selectorColumn source="Name" />
        <selectorColumn source="CountryName" />
        <selectorColumn source="CountryCode">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
    </row>
    <row>
      <Label text="=postIndex" horizontalAlignment="right" />
      <InputText source="LoadingPostIndex" style="width:90px;" />
    </row>
    <row>
      <Label text="=country" horizontalAlignment="right" />
      <FlowPanel>
        <DataSelector source="LoadingCountry" style="width:135px;" >
          <renderToken source="LoadingCountryName" />
          <renderToken source="LoadingCountryCode" prefix=" (" suffix=")" />
          <selectorColumn source="Name" />
          <selectorColumn source="Code">
            <ui:renderer type="flag" />
          </selectorColumn>
        </DataSelector>

        <Flag source="LoadingCountryCode" style="padding-left:2px;" />
      </FlowPanel>
    </row>
    <row>
      <Label text="=terminal" horizontalAlignment="right" />
      <InputText source="LoadingTerminal" />
    </row>
  </Table>

  <Table>
    <row>
      <cell colSpan="2">
        <Label text="=unloading" horizontalAlignment="center" style="font-weight: bold;" />
      </cell>
    </row>
    <row>
      <Label text="=date" horizontalAlignment="right" />
      <InputDateTime source="UnloadingDate" style="width: 110px;" />
    </row>
    <row>
      <Label text="=contact" horizontalAlignment="right" />
      <InputText source="UnloadingContact" />
    </row>
    <row>
      <Label text="=address" horizontalAlignment="right" />
      <InputText source="UnloadingAddress" />
    </row>
    <row>
      <Label text="=city" horizontalAlignment="right" />
      <DataSelector source="UnloadingCity" style="width:135px;">
        <selectorColumn source="Name" />
        <selectorColumn source="CountryName" />
        <selectorColumn source="CountryCode">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
    </row>
    <row>
      <Label text="=postIndex" horizontalAlignment="right" />
      <InputText source="UnloadingPostIndex" style="width:90px;" />
    </row>
    <row>
      <Label text="=country" horizontalAlignment="right" />
      <FlowPanel>
        <DataSelector source="UnloadingCountry" style="width:135px;" >
          <renderToken source="UnloadingCountryName" />
          <renderToken source="UnloadingCountryCode" prefix=" (" suffix=")" />
          <selectorColumn source="Name" />
          <selectorColumn source="Code">
            <ui:renderer type="flag" />
          </selectorColumn>
        </DataSelector>

        <Flag source="UnloadingCountryCode" style="padding-left:2px;" />
      </FlowPanel>
    </row>
    <row>
      <Label text="=terminal" horizontalAlignment="right" />
      <InputText source="UnloadingTerminal" />
    </row>
  </Table>
</HorizontalPanel>
  