<?xml version="1.0" encoding="UTF-8"?>
<HorizontalPanel xmlns="http://www.butent.com/widget"
    xmlns:ui="http://www.butent.com/ui"
  >
  <Table>
    <row>
      <cell colSpan="2">
        <Label html="Pakrovimas" horizontalAlignment="center" style="font-weight: bold;" />
      </cell>
    </row>
    <row>
      <Label html="Data" horizontalAlignment="right" />
      <InputDate source="LoadingDate" style="max-width: 7em;" />
    </row>
    <row>
      <Label html="Šalis" horizontalAlignment="right" />
      <FlowPanel>
        <DataSelector source="LoadingCountry" style="width:135px;" >
          <renderToken source="LoadingCountryName" />
          <renderToken source="LoadingCountryCode" prefix=" (" suffix=")" />
          <selectorColumn source="Name" />
          <selectorColumn source="Code">
            <ui:renderer type="flag" />
          </selectorColumn>
        </DataSelector>

        <Flag source="LoadingCountryCode" style="padding-left:2px;" />
      </FlowPanel>
    </row>
    <row>
      <Label html="Vieta" horizontalAlignment="right" />
      <InputText source="LoadingPlace" />
    </row>
    <row>
      <Label html="Terminalas" horizontalAlignment="right" />
      <InputText source="LoadingTerminal" />
    </row>
  </Table>

  <Table>
    <row>
      <cell colSpan="2">
        <Label html="Iškrovimas" horizontalAlignment="center" style="font-weight: bold;" />
      </cell>
    </row>
    <row>
      <Label html="Data" horizontalAlignment="right" />
      <InputDate source="UnloadingDate" style="max-width: 7em;" />
    </row>
    <row>
      <Label html="Šalis" horizontalAlignment="right" />
      <FlowPanel>
        <DataSelector source="UnloadingCountry" style="width:135px;" >
          <renderToken source="UnloadingCountryName" />
          <renderToken source="UnloadingCountryCode" prefix=" (" suffix=")" />
          <selectorColumn source="Name" />
          <selectorColumn source="Code">
            <ui:renderer type="flag" />
          </selectorColumn>
        </DataSelector>

        <Flag source="UnloadingCountryCode" style="padding-left:2px;" />
      </FlowPanel>
    </row>
    <row>
      <Label html="Vieta" horizontalAlignment="right" />
      <InputText source="UnloadingPlace" />
    </row>
    <row>
      <Label html="Terminalas" horizontalAlignment="right" />
      <InputText source="UnloadingTerminal" />
    </row>
  </Table>
</HorizontalPanel>
  