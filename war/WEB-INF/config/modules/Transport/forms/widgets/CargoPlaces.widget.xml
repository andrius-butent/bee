<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
    <!ENTITY lbl1 "width:115px; text-align:right; margin-right:5px;">
    <!ENTITY inline "display:inline;">
    <!ENTITY inp "width:150px;">
    ]>
<FlowPanel xmlns="http://www.butent.com/widget"
           xmlns:ui="http://www.butent.com/ui"
>
  <Table kind="controls">
    <row>
      <cell colSpan="2" style="padding-top:0;">
        <Label text="=loading" horizontalAlignment="center" style="font-weight:bold;" />
      </cell>
      <cell colSpan="2" style="padding-top:0;">
        <Label text="=unloading" horizontalAlignment="center" style="font-weight:bold;" />
      </cell>
    </row>
    <row>
      <Label for="LoadingDate" text="=date" style="&lbl1;" />
      <InputDateTime source="LoadingDate" style="&inp;" />
      <Label for="UnloadingDate" text="=date" style="&lbl1;" />
      <InputDateTime source="UnloadingDate" style="&inp;" />
    </row>
    <row>
      <Label for="LoadingCompany" text="=company" style="&lbl1;" />
      <InputText source="LoadingCompany" autocompleteKey="cargo-place-company" />
      <Label for="UnloadingCompany" text="=company" style="&lbl1;" />
      <InputText source="UnloadingCompany" autocompleteKey="cargo-place-company" />
    </row>
    <row>
      <Label for="LoadingAddress" text="=address" style="&lbl1;" />
      <InputText source="LoadingAddress" autocompleteKey="cargo-place-address" />
      <Label for="UnloadingAddress" text="=address" style="&lbl1;" />
      <InputText source="UnloadingAddress" autocompleteKey="cargo-place-address" />
    </row>
    <row>
      <Label for="LoadingCity" text="=city" style="&lbl1;" />
      <DataSelector source="LoadingCity" style="&inp;" options="LoadingCountry">
        <selectorColumn source="Name" />
        <selectorColumn source="CountryName" />
        <selectorColumn source="CountryCode">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
      <Label for="UnloadingCity" text="=city" style="&lbl1;" />
      <DataSelector source="UnloadingCity" style="&inp;" options="UnloadingCountry">
        <selectorColumn source="Name" />
        <selectorColumn source="CountryName" />
        <selectorColumn source="CountryCode">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
    </row>
    <row>
      <Label for="LoadingPostIndex" text="=postIndex" style="&lbl1;" />
      <InputText source="LoadingPostIndex" style="&inp;"
                 autocompleteKey="cargo-place-postal-code" />
      <Label for="UnloadingPostIndex" text="=postIndex" style="&lbl1;" />
      <InputText source="UnloadingPostIndex" style="&inp;"
                 autocompleteKey="cargo-place-postal-code" />
    </row>
    <row>
      <Label for="LoadingCountry" text="=country" style="&lbl1;" />
      <FlowPanel>
        <DataSelector source="LoadingCountry" style="width: 135px;">
          <renderToken source="LoadingCountryName" />
          <renderToken source="LoadingCountryCode" prefix=" (" suffix=")" />
          <selectorColumn source="Name" />
          <selectorColumn source="Code">
            <ui:renderer type="flag" />
          </selectorColumn>
        </DataSelector>

        <Flag source="LoadingCountryCode" style="padding-left: 2px;" />
      </FlowPanel>
      <Label for="UnloadingCountry" text="=country" style="&lbl1;" />
      <FlowPanel>
        <DataSelector source="UnloadingCountry" style="width: 135px;">
          <renderToken source="UnloadingCountryName" />
          <renderToken source="UnloadingCountryCode" prefix=" (" suffix=")" />
          <selectorColumn source="Name" />
          <selectorColumn source="Code">
            <ui:renderer type="flag" />
          </selectorColumn>
        </DataSelector>

        <Flag source="UnloadingCountryCode" style="padding-left: 2px;" />
      </FlowPanel>
    </row>
    <row>
      <Label for="LoadingContact" text="=personContact" style="&lbl1;" />
      <InputText source="LoadingContact" autocompleteKey="cargo-place-contact" />
      <Label for="UnloadingContact" text="=personContact" style="&lbl1;" />
      <InputText source="UnloadingContact" autocompleteKey="cargo-place-contact" />
    </row>
    <row>
      <Label for="LoadingNumber" text="=ref" style="&lbl1;" />
      <InputText source="LoadingNumber" />
      <Label for="UnloadingNumber" text="=ref" style="&lbl1;" />
      <InputText source="UnloadingNumber" />
    </row>
    <row>
      <cell style="vertical-align:top;">
        <Label for="LoadingNote" text="=note" style="&lbl1;" />
      </cell>
      <InputArea source="LoadingNote" visibleLines="2" />
      <cell style="vertical-align:top;">
        <Label for="UnloadingNote" text="=note" style="&lbl1;" />
      </cell>
      <InputArea source="UnloadingNote" visibleLines="2" />
    </row>
  </Table>
  <FlowPanel style="margin:1em; text-align:center;">
    <Label for="LoadedKilometers" style="&inline;" />
    <InputInteger name="LoadedKilometers" source="LoadedKilometers"
                  style="&inline; width:70px; margin-left:5px;" />
    <Label for="EmptyKilometers" style="&inline; margin-left:20px;" />
    <InputInteger name="EmptyKilometers" source="EmptyKilometers"
                  style="&inline; width:70px; margin-left:5px; margin-right:20px;" />
    <Label for="CargoWeight" style="&inline;" />
    <InputDecimal source="CargoWeight" format="0.000"
                  style="&inline; width:70px; margin-left:5px;" />
  </FlowPanel>
</FlowPanel>
