<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form" 
  xmlns:d="http://www.butent.com/decorator" 
  
  name="Trip" viewName="Trips" caption="Reisas"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical flexible" style="margin-left: 1em">
        <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
          <InputDateTime source="Date" style="width: 10em;" caption="Data" d:size="6" d:align="right" />
          <Button name="profit" html="Pelnas" />
          <InputText source="TripNo" caption="Reiso.Nr." />
        </FlowPanel>
        <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
          <DataSelector source="Forwarder" class="flexible" caption="Vežėjas" d:size="6" d:align="right" />
        </FlowPanel>
        <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
          <InputText source="ForwarderVehicle"  class="flexible" caption="Transportas" d:size="6" d:align="right" />
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="flexBox-vertical flexible" style="&ROW_STYLE; margin-left: 1em;">
        <Label html="Pastabos" />
        <SimplePanel style="position: relative; min-width: 5em;" class="flexible">
          <InputArea source="Notes" class="occupy" />
        </SimplePanel>
      </FlowPanel>
    </FlowPanel>


    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>Pagrindiniai duomenys</text>
        <FlowPanel class="flexBox-horizontal">
          <FlowPanel class="flexBox-vertical" style="margin-left: 1em">
            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <Label html="Išvykimas" style="font-weight: bold;" />
              <Label html="Sugrįžimas" style="font-weight: bold;" />
            </FlowPanel>
            
            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel>
                <InputDate source="DateFrom" style="width: 7em;" />
              </SimplePanel>
              <Label html="Data" />
              <SimplePanel>
                <InputDate source="DateTo" style="width: 7em;" />
              </SimplePanel>
            </FlowPanel>
            
            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel>
                <InputDouble source="SpeedometerBefore" style="width: 6em;" />
              </SimplePanel>
              <Label html="Spidometras" style="margin: 0 1em 0 1em" />
              <SimplePanel>
                <InputDouble source="SpeedometerAfter" style="width: 6em;" />
              </SimplePanel>
            </FlowPanel>
            
            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel>
                <InputDecimal source="FuelBefore" style="width: 4em;" />
              </SimplePanel>
              <Label html="Kuro likutis bake" />
              <SimplePanel>
                <InputDecimal source="FuelAfter" style="width: 4em;" />
              </SimplePanel>
            </FlowPanel>
          </FlowPanel>

          <FlowPanel class="flexBox-vertical flexible" style="margin-left: 1em;">
            <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
              <DataSelector source="Vehicle" class="flexible" caption="Vilkikas" d:size="6" d:align="right" />
            </FlowPanel>

            <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
              <DataSelector source="Trailer" class="flexible" caption="Puspriekabė" d:size="6" d:align="right" />
            </FlowPanel>

            <ChildGrid name="TripDrivers" relColumn="Trip" class="flexible" />
          </FlowPanel>
        </FlowPanel>
      </page>
      <page>
        <text>Kroviniai</text>
        <ChildGrid name="TripCargo" relColumn="Trip" />
      </page>
      <page>
        <text>Išlaidos</text>
        <ComplexPanel>
          <layer top="0" bottom="40" bottomUnit="%" left="0" right="0">
            <ChildGrid name="TripCosts" relColumn="Trip" />
          </layer>
          <layer top="60" topUnit="%" bottom="0" left="0" right="0">
            <ChildGrid name="TripFuelCosts" relColumn="Trip" />
          </layer>
        </ComplexPanel>
      </page>
      <page>
        <text>Kelionės lapai</text>
        <ComplexPanel>
          <layer top="0" bottom="30" bottomUnit="%" left="0" right="0">
            <ChildGrid name="TripRoutes" relColumn="Trip" />
          </layer>
          <layer top="70" topUnit="%" bottom="0" left="0" right="40" rightUnit="%">
            <ChildGrid name="TripFuelConsumptions" relColumn="Trip" />
          </layer>
        </ComplexPanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
