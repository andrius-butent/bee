<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form" 
  xmlns:d="http://www.butent.com/decorator" 
  
  name="Trip" viewName="Trips" caption="Reisas"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical flexible" style="margin-left: 1em">
        <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
          <InputDateTime source="Date" style="width: 10em;" caption="Data" d:size="6" d:align="right" />
          <InputText source="TripNo" caption="Reiso.Nr." />
        </FlowPanel>
        <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
          <DataSelector source="ForwarderName" class="flexible" caption="Vežėjas"
            d:size="6" d:align="right" />
        </FlowPanel>
        <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
          <InputText source="ForwarderVehicle" caption="Transportas" d:size="6" d:align="right" />
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="flexBox-vertical flexible" style="&ROW_STYLE; margin-left: 1em;">
        <InputArea source="Notes" caption="Pastabos" decorator="caption-top" />
      </FlowPanel>
    </FlowPanel>


    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>Pagrindiniai duomenys</text>
        <FlowPanel class="flexBox-horizontal">
          <FlowPanel class="flexBox-vertical" style="margin-left: 1em">
            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel>
                <InlineLabel html="Išvykimas" style="font-weight: bold;" />
              </SimplePanel>
              <SimplePanel>
                <InlineLabel html="Sugrįžimas" style="font-weight: bold;" />
              </SimplePanel>
            </FlowPanel>

            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel style="position: relative; height: 23px; width: 7em;">
                <InputDate source="DateFrom" class="occupy" />
              </SimplePanel>
              <InlineLabel html="Data" />
              <SimplePanel style="position: relative; height: 23px; width: 7em;">
                <InputDate source="DateTo" class="occupy" />
              </SimplePanel>
            </FlowPanel>
            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel style="position: relative; height: 23px; width: 6em;">
                <InputDouble source="SpeedometerBefore" class="occupy" />
              </SimplePanel>
              <InlineLabel html="Spidometras" style="margin: 0 1em 0 1em" />
              <SimplePanel style="position: relative; height: 23px; width: 6em;">
                <InputDouble source="SpeedometerAfter" class="occupy" />
              </SimplePanel>
            </FlowPanel>

            <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
              <SimplePanel style="position: relative; height: 23px; width: 4em;">
                <InputDecimal source="FuelBefore" class="occupy" />
              </SimplePanel>
              <InlineLabel html="Kuro likutis bake" />
              <SimplePanel style="position: relative; height: 23px; width: 4em;">
                <InputDecimal source="FuelAfter" class="occupy" />
              </SimplePanel>
            </FlowPanel>
          </FlowPanel>

          <FlowPanel class="flexBox-vertical flexible" style="margin-left: 1em;">
            <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
              <InlineLabel html="Vilkikas" />
              <DataSelector source="VehicleNumber" class="flexible" />
            </FlowPanel>

            <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
              <DataSelector source="TrailerNumber" class="flexible" caption="Puspriekabė" />
            </FlowPanel>

            <ChildGrid name="TripDrivers" relColumn="Trip" class="flexible" />
          </FlowPanel>
        </FlowPanel>
      </page>
      <page>
        <text>Kroviniai</text>
        <InlineLabel></InlineLabel>
      </page>
      <page>
        <text>Išlaidos</text>
        <ComplexPanel>
          <layer top="0" bottom="40" bottomUnit="%" left="0" right="0">
            <ChildGrid name="TripCosts" relColumn="Trip" />
          </layer>
          <layer top="60" topUnit="%" bottom="0" left="0" right="0">
            <ChildGrid name="TripFuelCosts" relColumn="Trip" />
          </layer>
        </ComplexPanel>
      </page>
      <page>
        <text>Kelionės lapai</text>
        <ComplexPanel>
          <layer top="0" bottom="30" bottomUnit="%" left="0" right="0">
            <ChildGrid name="TripRoutes" relColumn="Trip" />
          </layer>
          <layer top="70" topUnit="%" bottom="0" left="0" right="40" rightUnit="%">
            <ChildGrid name="TripFuelConsumptions" relColumn="Trip" />
          </layer>
        </ComplexPanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
