<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelLeft "&inline; width:100px; padding-top:1px;">
  <!ENTITY labelRight "&inline; width:60px; padding-top:1px; text-align:right; margin-right:10px;">
  <!ENTITY input "&inline; width:110px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="AssessmentRequest" viewName="CargoAssessors" caption="Vertinimo užklausimas"
  showRowId="true"
  >
  <FlowPanel style="padding: 10px 2px 2px 10px;" class="bee-tr-assessment-form">
    <FlowPanel style="&section;">
      <Label html="Būsena" style="&labelLeft;" />
      <TextLabel source="Status" itemKey="AssessmentStatus" style="&input; font-weight:bold;" />
      <Label html="Užsakovas" class="bee-required" style="&labelRight; width:120px;" />
      <DataSelector source="Customer" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Užsakymo data" class="bee-required" style="&labelLeft;" />
      <InputDateTime source="OrderDate" style="&input;" />
      <Label html="Kontaktinis asmuo" style="&labelRight; width:120px;" />
      <DataSelector source="CustomerPerson" style="&input; width:200px;" />
    </FlowPanel>
    
    <FlowPanel style="&section;">
      <Label html="Ref numeris" style="&labelLeft;" />
      <InputText source="Number" style="&input;" />
      <Label html="Siuntėjas" style="&labelRight; width:120px;" />
      <InputText source="Shipper" style="&input; width:200px;" />
    </FlowPanel>
    
    &separator;
    <xi:include href="widgets/CargoInfo.widget.xml" />

    &separator;
    <FlowPanel style="&section;">
    <Label html="Vadybininkas" class="bee-required" style="&labelLeft;" />
      <DataSelector source="Manager" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Komentaras" style="&labelLeft; vertical-align:top;" />
      <InputArea source="Notes" style="width:400px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Transporto nr." style="&labelLeft;" />
      <InputText source="LoadingTerminal" style="&inline; width:130px;" />
      <Label html="Transporto nr.2" style="&labelRight; width:100px;" />
      <InputText source="UnloadingTerminal" style="&inline; width:130px;" />
    </FlowPanel>

    <FlowPanel name="OrderPanel" style="&section;">
      &separator;
      <Label html="Kaina klientui" style="&labelLeft;" />
      <Label name="Total" style="&inline; width:70px; font-weight:bold;" />
      <DataSelector name="Currency" source="Currency" style="&inline; width:40px; margin-right:10px;" />
      <Label html="Spausdinti" style="&labelRight;" />
      <Button name="LT" html="LT" style="&inline; margin-right:10px;" disablable="false" />
      <Button name="RU" html="RU" style="&inline; margin-right:10px;" disablable="false" />
      <Button name="EN" html="EN" style="&inline; margin-right:10px;" disablable="false" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <TabbedPages style="&section; height:150px;">
        <page>
          <text>Vežėjai</text>
          <ChildGrid name="AssessmentForwarders" relColumn="Cargo" source="Cargo" disablable="false" />
        </page>
        <page>
          <FlowPanel>
            <Label html="Pajamos" style="&inline;" />
            <FlowPanel name="IncomeTotal" style="&inline;" />
          </FlowPanel>
          <ChildGrid name="AssessmentIncomes" relColumn="Cargo" source="Cargo" disablable="false" />
        </page>
        <page>
          <FlowPanel>
            <Label html="Sąnaudos" style="&inline;" />
            <FlowPanel name="ExpensesTotal" style="&inline;" />
          </FlowPanel>
          <ChildGrid name="AssessmentExpenses" relColumn="Cargo" source="Cargo" disablable="false" />
        </page>
      </TabbedPages>

      &separator;
      <ChildGrid name="CargoAssessors" relColumn="Cargo" source="Cargo" style="&section; height:150px;"
        disablable="false" />
    </FlowPanel>
  </FlowPanel>
</f:Form>
