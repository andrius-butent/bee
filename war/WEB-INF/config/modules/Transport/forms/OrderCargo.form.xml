<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin: 5px; margin-bottom: 0;">
  <!ENTITY separator "<hr/>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:d="http://www.butent.com/decorator"
  
  name="OrderCargo" viewName="OrderCargo" caption="=cargo"
  width="925" height="750"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal" style="&section;">
      <InputText source="Description" caption="=cargo" decorator="flex-left"
        style="font-weight: bold; color: blue;" d:size="60" d:unit="px" />
      <HorizontalPanel>
        <InputCurrency source="Price" caption="=transportationPrice" style="width: 70px; font-weight: bold; color: green;" />
        <DataSelector source="Currency" editEnabled="false"
          style="width: 40px; font-weight: bold; display: inline-block;" />
      </HorizontalPanel>
    </FlowPanel>
    &separator;
    <FlowPanel class="flexBox-horizontal" style="&section;">
      <TabbedPages style="height: 300px; width: 480px">
        <page>
          <text>=cargoInformation</text>
          <FlowPanel>
            <xi:include href="widgets/CargoPlaces.widget.xml" />
          </FlowPanel>
        </page>
        <page>
          <text>=cargoMiddleHandlingPlaces</text>
          <ChildGrid name="CargoHandling" relColumn="Cargo" />
        </page>
        <page>
          <text>=transportOrderCargoServices</text>
          <ChildGrid name="CargoIncomes" relColumn="Cargo"  />
        </page>
      </TabbedPages> 
      <FlowPanel class="flexBox-vertical" style="margin:10px; margin-top:35px;">
      	<Table>
      	  <row>
      	    <Label text="=cargoValue" horizontalAlignment="right" />
              <FlowPanel>
              <InputCurrency source="Value" />
      	      <DataSelector source="ValueCurrency" editEnabled="false" style="width:40px; display:inline-block; margin-left:3px;"/>
            </FlowPanel>
            <CheckBox source="Partial" text="=partial" style="margin:3px;"/>
      	  </row>
      	  <row>
      	  	<Label text="=loadedKilometers" horizontalAlignment="right" />
      	  	<InputDecimal source="LoadedKilometers" />
            <CheckBox source="Outsized" text="=outsized" style="margin:3px;"/>
      	  </row>
      	  <row>
            <Label text="=emptyKilometers"  horizontalAlignment="right" />
            <InputDecimal source="EmptyKilometers" />
            <CheckBox source="Dangerous" text="=dangerous" style="margin:3px;"/>
      	  </row>
      	</Table>
      </FlowPanel>
    </FlowPanel>
    &separator;
    <Table>
      <row>
        <Label text="=cargoTermsOfService" horizontalAlignment="right" />
        <DataSelector source="ShippingTerm" />
        <Label text="=weight" horizontalAlignment="right" />
        <InputDecimal source="Weight" format="#.000" />
        <Label text="=length" horizontalAlignment="right" />
        <InputDecimal source="Length" format="#.00" />
        <Label text="=notes" />
      </row>
      <row>
        <Label text="=cargoChangeOfPallets" horizontalAlignment="right" />
        <InputInteger source="ExchangeOfPalettes" />
        <Label text="=volume" horizontalAlignment="right" />
        <InputDecimal format="#.000" scale="1" source="Volume" />
        <Label text="=width" horizontalAlignment="right" />
        <InputDecimal source="Width" format="#.00" />
        <cell rowSpan="3">
          <InputArea source="Notes" characterWidth="30" style="height: 100%" />
        </cell>
        <cell rowSpan="2">
          <Button name="profit" text="=cargoProfit" />
        </cell>
      </row>
      <row>
        <Label html="CMR" horizontalAlignment="right" />
        <InputText source="Cmr" />
        <Label html="LDM" horizontalAlignment="right" />
        <InputDecimal source="LDM" format="#.00" />
        <Label text="=height" horizontalAlignment="right" />
        <InputDecimal source="Height" format="#.00" />        
      </row>
      <row>
        <Label text="=number" horizontalAlignment="right" />
        <InputText source="Number" />
        <Label text="=quantity" horizontalAlignment="right" />
        <InputInteger source="Quantity" />
        <Label text="=pallets" horizontalAlignment="right" />
        <InputInteger source="Palettes" />        
      </row>
    </Table>

      <TabbedPages class="flexible" style="&section;">
        <page>
          <text>=trips</text>
          <ChildGrid name="CargoTrips" relColumn="Cargo" />
        </page>
        <page>
          <text>=otherCosts</text>
          <ChildGrid name="CargoExpenses" relColumn="Cargo" />
        </page>
        <page>
          <text>=documents</text>
          <ChildGrid name="RelatedDocuments" relColumn="Cargo" />
        </page>
      </TabbedPages>
  </FlowPanel>
</f:Form>
