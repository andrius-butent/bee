<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
    <!ENTITY separator "<hr/>">
    <!ENTITY lbl1 "width:75px; text-align:right; padding-right:9px;">
    ]>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:xi="http://www.w3.org/2001/XInclude"

        name="OrderCargo" viewName="OrderCargo" caption="=cargo" showRowId="true"
        width="900" height="870"
    >
  <FlowPanel class="flexBox-vertical">
    <Table kind="controls" cellStyle="padding-top: 3px; padding-bottom: 3px;">
      <row>
        <cell kind="label">
          <Label for="Description" />
        </cell>
        <cell colSpan="3">
          <InputArea source="Description" visibleLines="1" class="flexible"
                     style="font-weight: bold; color: blue; width: 100%;" />
        </cell>
        <cell style="padding-left: 10px; padding-right: 10px; text-align: right;">
          <Label text="=trTransportationPrice" />
        </cell>
        <cell style="padding-right: 10px;">
          <DecimalLabel name="Amount" style="font-weight: bold; color: green;" />
        </cell>
        <DataSelector name="Currency" source="Currency" editEnabled="false"
                      placeholder="=currencyShort" style="width: 5em; font-weight: bold;" />
      </row>
      <row>
        <cell kind="label">
          <Label for="CargoType" class="bee-required" />
        </cell>
        <DataSelector source="CargoType" required="true" />
        <cell kind="label">
          <Label for="CargoGroup" />
        </cell>
        <DataSelector source="CargoGroup" />
        <cell style="padding-left: 10px; padding-right: 10px; text-align: right;">
          <Label text="=trLoadedKilometersTotal" />
        </cell>
        <cell style="padding-right: 10px;">
          <IntegerLabel name="TotalLoaded" style="font-weight: bold;" />
        </cell>
        <cell style="padding-right: 10px; text-align: right;">
          <Label text="=trEmptyKilometersTotal" />
        </cell>
        <IntegerLabel name="TotalEmpty" style="font-weight: bold;" />
      </row>
    </Table>

    <TabbedPages class="flexible" resizable="false">
      <page>
        <text>=cargoInformation</text>
        <FlowPanel style="overflow:auto;">
          <FlowPanel class="flexBox-horizontal-center">
            <xi:include href="widgets/CargoPlaces.widget.xml" />

            <FlowPanel>
              <Table kind="custom">
                <row>
                  <Label text="=cargoChangeOfPallets" style="&lbl1;" />
                  <InputInteger source="ExchangeOfPalettes" style="width:70px" />
                </row>
                <row>
                  <Label text="=pallets" style="&lbl1;" />
                  <InputInteger source="Palettes" style="width:70px" />
                </row>
              </Table>
              <Table kind="controls">
                <row>
                  <CheckBox source="Dangerous" text="=dangerous" />
                </row>
                <row>
                  <CheckBox name="Outsized" source="Outsized" text="=outsized" />
                </row>
                <row>
                  <CheckBox name="Partial" source="Partial" text="=partial" />
                </row>
              </Table>
              <Table name="Metrics" kind="custom">
                <col index="0" kind="label" />
                <row>
                  <Label for="Length" />
                  <InputDecimal source="Length" format="0.00" style="width:70px" />
                </row>
                <row>
                  <Label for="Width" />
                  <InputDecimal source="Width" format="0.00" style="width:70px" />
                </row>
                <row>
                  <Label for="Height" />
                  <InputDecimal source="Height" format="0.00" style="width:70px" />
                </row>
                <row>
                  <Label for="LDM" />
                  <InputDecimal source="LDM" format="0.00" style="width:70px" />
                </row>
              </Table>
              <FlowPanel>
                <Label for="Directions" style="text-align:right;" />
                <InputArea source="Directions" visibleLines="3" style="width:200px;" />
              </FlowPanel>
            </FlowPanel>
          </FlowPanel>

          <ChildGrid name="CargoHandling" relColumn="Cargo" style="height:200px;" />

          &separator;

          <Table kind="controls">
            <col index="0" kind="label" />
            <col index="2" kind="label" />
            <row>
              <Label for="Cmr" module="Documents" />
              <DataSelector source="Cmr" caching="none" newRowEnabled="false" module="Documents" />
              <Label for="Weight" />
              <FlowPanel>
                <InputDecimal source="Weight" format="0.000" style="width:70px" />
                <DataSelector source="WeightUnit"
                              style="display:inline-block; width:5em; margin-left:5px;" />
              </FlowPanel>
              <cell rowSpan="3">
                <FlowPanel>
                  <Label for="Notes" style="text-align:right;" />
                  <InputArea source="Notes" visibleLines="6" style="width:300px;" />
                </FlowPanel>
              </cell>
            </row>
            <row>
              <Label for="Number" />
              <InputText source="Number" />
              <Label for="Volume" />
              <FlowPanel>
                <InputDecimal source="Volume" format="0.000" style="width:70px" />
                <DataSelector source="VolumeUnit"
                              style="display:inline-block; width:5em; margin-left:5px;" />
              </FlowPanel>
            </row>
            <row>
              <Label for="Value" />
              <FlowPanel>
                <InputMoney source="Value" style="width:70px" />
                <DataSelector source="ValueCurrency" editEnabled="false"
                              style="width:5em; display:inline-block; margin-left:5px;" />
              </FlowPanel>
              <Label for="Quantity" />
              <FlowPanel>
                <InputDecimal source="Quantity" format="0.00" style="width:70px" />
                <DataSelector source="QuantityUnit"
                              style="display:inline-block; width:5em; margin-left:5px;" />
              </FlowPanel>
            </row>
          </Table>
        </FlowPanel>
      </page>
      <page>
        <text>=trOrderCargoServices</text>
        <ChildGrid name="CargoIncomes" relColumn="Cargo" />
      </page>
      <page>
        <text>=trips</text>
        <ChildGrid name="CargoTrips" relColumn="Cargo" />
      </page>
      <page>
        <text>=otherCosts</text>
        <ChildGrid name="CargoExpenses" relColumn="Cargo" />
      </page>
      <page>
        <text>=trCargoDocuments</text>
        <ChildGrid name="RelatedDocuments" relColumn="Cargo" />
      </page>
      <page>
        <text>=trOrderDocuments</text>
        <GridPanel name="TranspOrderDocuments" parent="{form}" child="true" />
      </page>
      <page>
        <text>=trTripDocuments</text>
        <GridPanel name="TripDocuments" parent="{form}" child="true" />
      </page>
      <page>
      <text>=relatedInformation</text>
      <Relations relColumn="Cargo" inline="true"
                 defaultRelations="Companies Persons Requests Tasks" style="margin: 0px 15px 0px 15px; min-width:300px;" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
