<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY summary "font-size: large; margin-left: 1em; margin-bottom: 5px; outline: none;">
  <!ENTITY table "border-collapse: collapse;">
  <!ENTITY colLabel "text-align: right; padding-left: 1em; padding-right: 1em; ">
  <!ENTITY cols '<col index="0" cellStyle="&colLabel;" /><col index="2" cellStyle="&colLabel;" /><col index="4" cellStyle="&colLabel;" />'>
  <!ENTITY cells "vertical-align: top; padding-bottom: 3px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY area "width: 200px; height: 40px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:xi="http://www.w3.org/2001/XInclude"

  name="ShipmentRequest" viewName="ShipmentRequests" caption="=trRequestUnregistered"
  >
  <FlowPanel>
    <br/>

    <Table kind="controls" style="&table;" cellStyle="&cells;">
      &cols;

      <row>
        <Label for="Date" class="bee-required bee-hasDefaults" />
        <InputDateTime source="Date" />
        <Label for="Status" class="bee-required bee-hasDefaults" />
        <ListBox source="Status" />
        <Label for="Locale" />
        <TextLabel source="Locale" style="font-weight:bold;" />
      </row>
    </Table>
    &separator;

    <Details open="true">
      <Summary text="=trRequestCustomerInfo" style="&summary;" />

      <Table kind="controls" style="&table;" cellStyle="&cells;">
        &cols;

        <row>
          <Label for="Name" />
          <InputText source="Name" />
          <Label for="Type" />
          <InputText source="Type" />
        </row>

        <row>
          <Label for="Code" />
          <InputText source="Code" />
          <Label for="VatCode" />
          <InputText source="VATCode" />
        </row>

        <row>
          <Label for="ContactPerson" />
          <InputText source="ContactPerson" />
          <Label for="ContactPersonPosition" />
          <InputText source="ContactPersonPosition" />
        </row>

        <row>
          <Label for="Phone" />
          <InputText source="Phone" />
          <Label for="Email" />
          <InputText source="Email" />
        </row>

        <row>
          <Label for="Fax" />
          <InputText source="Fax" />
        </row>

        <row>
          <Label for="Address" />
          <InputText source="Address" />
          <Label for="PostIndex" />
          <InputText source="PostIndex" />
        </row>

        <row>
          <Label for="City" />
          <InputText source="City" />
          <Label for="Country" />
          <InputText source="Country" />
        </row>

        <row>
        <Label for="AdditionalInfo" />
          <cell colSpan="3">
            <InputArea source="AdditionalInfo" style="&area; width:100%;" />
          </cell>
        </row>
      </Table>
    </Details>
    &separator;

    <Details open="true">
      <Summary text="=cargoInformation" style="&summary;" />

      <xi:include href="widgets/CargoPlaces.widget.xml" />

      <ChildGrid name="CargoHandling" relColumn="Cargo" source="Cargo"
                 caption="=trAdditionalHandlingPlaces" style="margin-top:10px; height:200px;"/>
    </Details>
    &separator;

    <Details open="true">
      <Summary text="=trRequestShipmentInfo" style="&summary;" />

      <Table kind="controls" style="&table;" cellStyle="&cells;">
        &cols;

        <row>
          <Label for="Expedition" class="bee-required" />
          <DataSelector source="Expedition" filter="SelfService" order="SelfService, Name"
            newRowEnabled="false" />
          <Label for="ShippingTerm" class="bee-required" />
          <DataSelector source="ShippingTerm" required="true" filter="SelfService"
            order="SelfService, Name" newRowEnabled="false" />
        </row>

        <row>
          <text />
          <CheckBox source="CustomsBrokerage" />
        </row>

        <row>
          <text />
          <CheckBox source="FreightInsurance" />
          <Label for="Value" />
          <FlowPanel>
            <InputMoney source="Value" style="margin-right:5px; width:7em;" />
            <DataSelector source="ValueCurrency" newRowEnabled="false" editEnabled="false"
                          placeholder="=currencyShort" style="width:4em; display:inline;" />
          </FlowPanel>
        </row>
      </Table>
    </Details>
    &separator;

    <Details open="true">
      <Summary text="=trRequestCargoInfo" style="&summary;" />

      <Table kind="controls" style="&table;" cellStyle="&cells;">
        &cols;

        <row>
          <Label for="Description" class="bee-required bee-hasDefaults" />
          <InputArea source="Description" style="width: 100%; height: 40px;" />
          <Label for="Quantity" />
          <InputDecimal source="Quantity" />
        </row>

        <row>
          <Label for="Weight" class="bee-required" />
          <InputDecimal source="Weight" required="true" />
          <Label for="Volume" />
          <InputDecimal source="Volume" />
        </row>

        <row>
          <text />
          <CheckBox source="Dangerous" />
        </row>

        <row>
          <text />
          <CheckBox source="Outsized" />
        </row>

        <row>
          <text />
          <CheckBox source="Partial" />
        </row>

        <row>
          <Label for="LDM" />
          <InputDecimal source="LDM" />
          <Label for="Length" />
          <InputDecimal source="Length" />
        </row>

        <row>
          <Label for="Width" />
          <InputDecimal source="Width" />
          <Label for="Height" />
          <InputDecimal source="Height" />
        </row>
      </Table>
    </Details>
    &separator;

    <Details open="true">
      <Summary text="=trRequestAdditionalInfo" style="&summary;" />

      <Table kind="controls" style="&table;" cellStyle="&cells;">
        &cols;

        <row>
          <Label text="=trRequestResponsibleManager" />
          <DataSelector source="Manager" newRowEnabled="false" style="width: 15em;"/>
          <Label text="=trRequestNotes" />
          <InputArea source="Notes" style="&area;" />
        </row>

        <row>
          <Label for="Host" />
          <InputArea source="Host" style="&area;" />
          <Label for="Agent" />
          <InputArea source="Agent" style="&area;" />
        </row>
      </Table>
    </Details>
    &separator;

  </FlowPanel>
</f:Form>
