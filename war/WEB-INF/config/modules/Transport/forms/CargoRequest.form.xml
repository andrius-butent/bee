<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY table "border-collapse: collapse;">
  <!ENTITY colLabel "text-align: right; padding-left: 1em; padding-right: 1em; ">
  <!ENTITY cols '<col index="0" cellStyle="&colLabel;" /><col index="2" cellStyle="&colLabel;" />'>
  <!ENTITY cells "vertical-align: top; padding-bottom: 3px;">
  <!ENTITY separator "<hr/>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="CargoRequest" viewName="CargoRequests" caption="=trRequest"
  >
  <FlowPanel>
    <br/>

    <Table style="&table;" cellStyle="&cells;">
      &cols;
     
      <row>
        <Label text="=trRequestDate" class="bee-required" />
        <InputDateTime source="Date" />
        <Label text="=trRequestCustomer" class="bee-required" />
        <DataSelector source="User" editSource="CustomerCompany" newRowEnabled="false"
          style="width: 300px;">
          <renderToken source="CustomerCompanyName" suffix=", " />
          <renderToken source="CustomerFirstName" />
          <renderToken source="CustomerLastName" />
        </DataSelector>
      </row>

      <row>
        <Label text="=trRequestStatus" class="bee-required" />
        <ListBox source="Status" />
      </row>
    </Table>
    &separator;

    <xi:include href="widgets/RequestInfo.widget.xml" />

    <TabbedPages style="height: 200px;">
      <page>
        <text>=trRequestFiles</text>
        <ChildGrid name="CargoRequestFiles" relColumn="CargoRequest" />
      </page>
      <page>
        <text>=documents</text>
        <ChildGrid name="RelatedDocuments" relColumn="CargoRequest" />
      </page>
    </TabbedPages>

  </FlowPanel>
</f:Form>
