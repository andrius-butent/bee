<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY row "display: -webkit-flex; -webkit-align-items: flex-start;">
  <!ENTITY separator "<br/>">
  <!ENTITY lbl "width: 120px; margin-right: 1em; text-align: right;">
  <!ENTITY w2 "width: 160px;">
  <!ENTITY inpdt "width: 7em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Driver" viewName="Drivers" caption="Vairuotojas"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel style="margin-top: 1ex;">
      <FlowPanel style="&row;">
        <Label html="Vardas, pavardė:" class="bee-required" style="&lbl;" />
        <DataSelector source="CompanyPerson" style="&w2;" renderColumns="FirstName LastName"
          choiceColumns="FirstName LastName CompanyName" editEnabled="true" editSource="Person" />

        <Label html="Grupės:" class="bee-required" style="&lbl;" />
        <ChildSelector viewName="TransportGroups" childTable="DriverGroups" required="true"
          label="Grupės" />
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Įmonė:" style="&lbl;" />
        <TextLabel source="CompanyName" />
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Pareigos:" style="&lbl;" />
        <TextLabel source="Position" style="&w2;" />

        <Label html="Stažas nuo:" style="&lbl;" />
        <InputDate source="Experience" style="&inpdt;" minValue="1960" />
      </FlowPanel>
      &separator;
        
      <FlowPanel style="&row;">
        <Label html="Telefonai:" style="&lbl;" />
        <TextLabel source="Phone" style="&w2;" />

        <Label html="El.paštas:" style="&lbl;" />
        <TextLabel>
          <renderToken source="Label" suffix=" " />
          <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
        </TextLabel>
      </FlowPanel>
      &separator;

      <FlowPanel style="&row;">
        <Label html="Dirba nuo:" style="&lbl;" />
        <SimplePanel style="&w2;">
          <InputDate source="StartDate" style="&inpdt;" />
        </SimplePanel>

        <Label html="Atleistas:" style="&lbl;" />
        <InputDate source="EndDate" style="&inpdt; color: red;" />
      </FlowPanel>
      &separator;
    </FlowPanel>

    <TabbedPages class="flexible">
      <page>
        <text>Dokumentai</text>
        <xi:include href="../../Crm/forms/widgets/DocumentSelector.widget.xml" />
      </page>
      <page>
        <text>Reisai</text>
        <ChildGrid name="DriverTrips" relColumn="Driver" />
      </page>
      <page>
        <text>Nebuvimas darbe</text>
        <ChildGrid name="DriverAbsence" relColumn="Driver" />
      </page>
      <page>
        <text>Pastabos</text>
        <InputArea source="Notes" />
      </page>  
    </TabbedPages>
  </FlowPanel>
</f:Form>  
