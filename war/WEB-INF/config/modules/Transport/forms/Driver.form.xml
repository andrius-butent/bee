<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY LABEL_STYLE "margin-right: 1em; margin-left: 1em;">
  <!ENTITY LEFT_LABEL_STYLE "margin-right: 1em; display: inline-block; width: 9em; text-align: right">
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="Driver" viewName="Drivers" caption="Vairuotojas"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical flexible">
        <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
          <InlineLabel html="Vardas, pavardė" class="bee-required" style="font-weight: bold; &LEFT_LABEL_STYLE;" />
          <SimplePanel class="flexible" style="position: relative; height: 23px;">
            <DataSelector source="CompanyPerson" renderColumns="FirstName LastName"
              choiceColumns="FirstName LastName CompanyName" class="occupy" />
          </SimplePanel>
        </FlowPanel>

        <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
          <FlowPanel>
            <InlineLabel  html="Įmonė" style="&LEFT_LABEL_STYLE;" />
            <TextLabel source="CompanyName" class="bee-display" style="display: inline-block" />
          </FlowPanel>
          <FlowPanel>
            <InlineLabel html="Pareigos" style="&LABEL_STYLE;" />
            <TextLabel source="Position" class="bee-display" style="display: inline-block" />
          </FlowPanel>
        </FlowPanel>
        
        <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
          <FlowPanel>
            <InlineLabel html="Telefonai" style="&LEFT_LABEL_STYLE;" />
            <TextLabel source="Phone" class="bee-display" style="display: inline-block" />
          </FlowPanel>
          <FlowPanel>
            <InlineLabel html="El.paštas" style="&LABEL_STYLE;" />
            <TextLabel class="bee-display" style="display: inline-block">
              <renderToken source="Label" suffix=" " />
              <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
            </TextLabel>
          </FlowPanel>
          <InlineLabel html="Stažas nuo" style="&LABEL_STYLE;" />
          <InputDate source="Experience" style="width: 7em"  minValue="1960" />
        </FlowPanel>
      </FlowPanel>
      
      <FlowPanel class="flexBox-vertical flexible" style="&ROW_STYLE; margin-left: 1em;">
        <Label html="Pastabos" />
        <SimplePanel style="position: relative; min-width: 5em;" class="flexible">
          <InputArea source="Notes" class="occupy" />
        </SimplePanel>
      </FlowPanel>
    </FlowPanel>

    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>Dokumentai</text>
        <ChildGrid name="DriverDocuments" relColumn="Driver" />
      </page>
      <page>
        <text>Reisai</text>
        <ChildGrid name="DriverTrips" relColumn="Driver" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>  
