<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY separator "<br/>">
  <!ENTITY lbl "width: 120px; margin-right: 1em; text-align: right;">
  <!ENTITY w2 "width: 160px;">
  <!ENTITY inpdt "width: 7em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Driver" viewName="Drivers" caption="=vehicleDriver"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel style="margin-top: 1ex;">
      <FlowPanel class="flexBox-horizontal">
        <Label text="=trDriverName" class="bee-required" style="&lbl;" />
        <DataSelector source="CompanyPerson" style="&w2;" 
          renderColumns="FirstName LastName" choiceColumns="FirstName LastName CompanyName" />

        <Label text="=driverGroupsShort" class="bee-required" style="&lbl;" />
        <ChildSelector viewName="TransportGroups" childTable="DriverGroups"
          targetRelColumn="Driver" sourceRelColumn="Group"
          required="true" label="=driverGroupsShort" />
      </FlowPanel>
      &separator;

      <FlowPanel class="flexBox-horizontal">
        <Label text="=company" class="bee-co-companyInfo-label" style="&lbl;" />
        <TextLabel source="CompanyName" />
      </FlowPanel>
      &separator;

      <FlowPanel class="flexBox-horizontal">
        <Label text="=driverPosition" class="bee-co-companyInfo-label" style="&lbl;" />
        <TextLabel source="PositionName" style="&w2;" />

        <Label text="=trDriverExperience" style="&lbl;" />
        <SimplePanel style="&w2;">
          <InputDate source="Experience" style="&inpdt;" minValue="1960" />
        </SimplePanel>
      </FlowPanel>
      &separator;
        
      <FlowPanel class="flexBox-horizontal">
        <Label text="=phones" class="bee-co-companyInfo-label" style="&lbl;" />
        <TextLabel source="Phone" style="&w2;" />


        <Label text="=trDriverStartingDate" style="&lbl;" />
        <SimplePanel style="&w2;">
          <InputDate source="StartDate" style="&inpdt;" />
        </SimplePanel>
      </FlowPanel>
      &separator;

      <FlowPanel class="flexBox-horizontal">
        <Label text="=email" class="bee-co-companyInfo-label" style="&lbl;" />
        <TextLabel style="&w2;" textOnly="true" renderColumns="Label Email">
          <renderer type="mail" />
        </TextLabel>

        <Label text="=trDriverEndingDate" style="&lbl;" />
        <SimplePanel style="&w2;">
           <InputDate source="EndDate" style="&inpdt; color: red;" />
          </SimplePanel>
      </FlowPanel>
      &separator;
    </FlowPanel>

    <TabbedPages class="flexible">
      <page>
        <text>=documents</text>
        <ChildGrid name="RelatedDocuments" relColumn="Driver" />
      </page>
      <page>
        <text>=trips</text>
        <ChildGrid name="DriverTrips" relColumn="Driver" />
      </page>
      <page>
        <text>=driverAbsence</text>
        <ChildGrid name="DriverAbsence" relColumn="Driver" />
      </page>
      <page>
        <text>=notes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" />
        </SimplePanel>
      </page>  
    </TabbedPages>
  </FlowPanel>
</f:Form>  
