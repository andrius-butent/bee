<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelLeft "&inline; width:90px; padding-top:1px;">
  <!ENTITY labelRight "&labelLeft; text-align:right; margin-right:10px;">
  <!ENTITY input "&inline; width:110px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="AssessmentForwarder" viewName="AssessmentForwarders" caption="Vežėjas"
  >
  <FlowPanel style="padding: 10px 2px 2px 10px;">
    <FlowPanel style="&section;">
      <Label html="Vežėjas" class="bee-required" style="&labelLeft; width:140px;" />
      <DataSelector source="Forwarder" required="true" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Ekspedijavimo rūšis" class="bee-required" style="&labelLeft; width:140px;" />
      <DataSelector source="Expedition" required="true" style="&input; width:150px;"  />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Data" class="bee-required" style="&labelLeft;" />
      <InputDate source="Date" required="true" style="&input;" />
      <Label html="Paslauga" class="bee-required" style="&labelRight;" />
      <DataSelector source="Service" style="&input; width:190px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label html="Numeris" style="&labelLeft;" />
      <InputText source="Number" style="&input;" />
      <Label html="Suma" class="bee-required" style="&labelRight;" />
      <InputCurrency source="Amount" style="&input; width:70px;" />
      <DataSelector source="Currency" style="&inline; width:40px; margin-left:5px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label html="Tiekėjas" style="&labelLeft;" />
      <DataSelector source="Company" style="&input; width:200px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label html="Sąlygos" style="&labelLeft;" />
      <InputText source="Note" style="&input; width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Pakrovimas" style="&labelLeft; font-weight:bold; width:190px; text-align:center;" />
      <Label html="Data" style="&labelRight;" />
      <InputDate source="LoadingDate" style="&input;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Vieta" style="&labelLeft;" />
      <InputText source="LoadingPlace" style="&input; width:310px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Kontaktas" style="&labelLeft;" />
      <InputText source="LoadingTerminal" style="&input; width:310px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Iškrovimas" style="&labelLeft; font-weight:bold; width:190px; text-align:center;" />
      <Label html="Data" style="&labelRight;" />
      <InputDate source="UnloadingDate" style="&input;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Vieta" style="&labelLeft;" />
      <InputText source="UnloadingPlace" style="&input; width:310px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Kontaktas" style="&labelLeft;" />
      <InputText source="UnloadingTerminal" style="&input; width:310px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Transporto Nr." style="&labelLeft;" />
      <InputText source="ForwarderVehicle" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label html="Kiti duomenys" style="&labelLeft; vertical-align:top;" />
      <InputArea source="Notes" style="width:400px;" />
    </FlowPanel>
  </FlowPanel>
</f:Form>
