<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelLeft "&inline; width:90px; padding-top:1px;">
  <!ENTITY labelRight "&labelLeft; text-align:right; margin-right:10px;">
  <!ENTITY input "&inline; width:110px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="AssessmentForwarder" viewName="AssessmentForwarders" caption="=carrier"
  >
  <FlowPanel style="padding: 10px 2px 2px 10px;">
    <FlowPanel style="&section;">
      <Label text="=carrier" class="bee-required" style="&labelLeft; width:140px;" />
      <DataSelector source="Forwarder" required="true" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label text="=trExpeditionType" class="bee-required" style="&labelLeft; width:140px;" />
      <DataSelector source="Expedition" required="true" style="&input; width:150px;"  />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=date" class="bee-required" style="&labelLeft;" />
      <InputDate source="Date" required="true" style="&input;" />
      <Label text="=trServiceName" class="bee-required" style="&labelRight;" />
      <DataSelector source="Service" style="&input; width:190px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label text="=number" style="&labelLeft;" />
      <InputText source="Number" style="&input;" />
      <Label text="=amount" class="bee-required" style="&labelRight;" />
      <InputCurrency source="Amount" style="&input; width:70px;" />
      <DataSelector source="Currency" style="&inline; width:40px; margin-left:5px;" 
        editEnabled="false" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label text="=transportSupplier" style="&labelLeft;" />
      <DataSelector source="Supplier" style="&input; width:200px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label text="=transportConditions" style="&labelLeft;" />
      <InputText source="Note" style="&input; width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=loading" style="&labelLeft; font-weight:bold; width:190px; text-align:center;" />
      <Label text="=date" style="&labelRight;" />
      <InputDateTime source="LoadingDate" style="&input;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label text="=address" style="&labelLeft;" />
      <InputText source="LoadingAddress" style="&input; width:310px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label text="=contact" style="&labelLeft;" />
      <InputText source="LoadingContact" style="&input; width:310px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=unloading" style="&labelLeft; font-weight:bold; width:190px; text-align:center;" />
      <Label text="=date" style="&labelRight;" />
      <InputDateTime source="UnloadingDate" style="&input;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label text="=address" style="&labelLeft;" />
      <InputText source="UnloadingAddress" style="&input; width:310px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label text="=contact" style="&labelLeft;" />
      <InputText source="UnloadingContact" style="&input; width:310px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=transportationNumber1" style="&labelLeft;" />
      <InputText source="ForwarderVehicle" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label text="=transportOtherDetails" style="&labelLeft; vertical-align:top;" />
      <InputArea source="Notes" style="width:400px;" />
    </FlowPanel>
  </FlowPanel>
</f:Form>
