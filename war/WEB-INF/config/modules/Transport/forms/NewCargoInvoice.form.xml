<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "text-align: right;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  
  name="NewCargoInvoice" viewName="Sales" caption="Nauja sąskaita"
  width="600" height="400"
  >
  <FlowPanel class="flexBox-vertical">
    <Table>
      <row>
        <Label html="Data" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="width:110px;" />

        <Label html="Numeris" style="&lbl;" />
        <InputText source="Number" />
      </row>
      <row>
        <Label html="Valiuta" class="bee-required" style="&lbl;" />
        <HorizontalPanel>
          <DataSelector source="CurrencyName" style="width:40px; margin-right:5px;" editEnabled="false" />
          <CheckBox source="VatIncluded" html="PVM tame sk." />
        </HorizontalPanel>

        <Label html="Sąskaita" style="&lbl;" />
        <FlowPanel>
          <InputText source="InvoicePrefix" upperCase="true" required="true" style="width:50px;"
          caption="Ser." d:style="width:30px; text-align:right;" />
          <InputText source="InvoiceNo" caption="Nr." d:style="width:30px; text-align:right;" />
        </FlowPanel>
      </row>
      <row>
        <Label html="Klientas" class="bee-required" style="&lbl;" />
        <DataSelector source="Customer" required="true" />
        <Label html="Terminas" style="&lbl;" />
        <InputDate source="Term" style="width:70px;" />
      </row>
      <row>
        <Label html="Tiekėjas" style="&lbl;" />
        <DataSelector source="Supplier" />
        <Label html="Vadybininkas" style="&lbl;" />
        <DataSelector source="Manager" editSource="ManagerPerson" />
      </row>
      <row>
        <cell colSpan="3">
          <Label name="MainItemCaption" html="Suminė apskaitos prekė" style="&lbl;" />
        </cell>
        <UnboundSelector name="MainItem" viewName="Items" renderColumns="Name" 
          label="Suminė apskaitos prekė" />
      </row>
    </Table>

    <TabbedPages class="flexible">
      <page>
        <text>Pastabos</text>
        <InputArea source="Notes" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
