<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "text-align: right;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="NewCargoInvoice" viewName="CargoInvoices" caption="=trNewCargoInvoice"
  width="700" height="250"
  >
  <FlowPanel>
    <Table>
      <row>
        <cell colSpan="4">
          <CheckBox source="Proforma" text="=trdProformaInvoice" style="float:right;" />
        </cell>
      </row>
      <row>
        <Label text="=trdDate" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="width:110px;" />

        <Label text="=orderNumber" style="&lbl;" />
        <InputText source="Number" />
      </row>
      <row>
        <Label text="=currency" class="bee-required" style="&lbl;" />
        <HorizontalPanel>
          <DataSelector source="CurrencyName" style="width:40px; margin-right:5px;" editEnabled="false" />
          <CheckBox source="VatIncluded" text="=trdVatIncluded" />
        </HorizontalPanel>

        <Label text="=trdInvoicePrefix" style="&lbl;" />
        <FlowPanel>
          <InputText source="InvoicePrefix" upperCase="true" style="width:50px;" />
          <InlineLabel text="=trdInvoiceNo" style="margin-left:5px;" />
          <InputText source="InvoiceNo" />
        </FlowPanel>
      </row>
      <row>
        <Label text="=trdSupplier" style="&lbl;" />
        <DataSelector source="Supplier" />
        <Label text="=trdCustomer" class="bee-required" style="&lbl;" />
        <DataSelector source="Customer" required="true" />
      </row>
      <row>
        <Label text="=trdManager" style="&lbl;" />
        <DataSelector source="Manager" editEnabled="false" />
        <Label text="=trdPayer" style="&lbl;" />
        <DataSelector source="Payer" />
      </row>
      <row>
        <cell colSpan="3">
          <Label text="=trdTerm" style="&lbl; text-align:right;" />
        </cell>
        <InputDate source="Term" style="width:70px;" />
      </row>
      <row>
        <Label text="=trdVehicle" style="&lbl;" />
        <InputText source="Vehicle" />
        <Label text="=trdDriver" style="&lbl;" />
        <InputText source="Driver" />
      </row>
      <row>
        <cell colSpan="3">
          <Label name="MainItemCaption" text="=transportMainItemCaption" style="&lbl;" />
        </cell>
        <UnboundSelector name="MainItem" viewName="Items" renderColumns="Name" />
      </row>
    </Table>
  </FlowPanel>
</f:Form>
