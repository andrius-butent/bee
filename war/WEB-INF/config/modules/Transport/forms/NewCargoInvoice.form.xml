<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "text-align: right;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  
  name="NewCargoInvoice" viewName="Sales" caption="=transportNewCargoInvoice"
  width="600" height="400"
  >
  <FlowPanel class="flexBox-vertical">
    <Table>
      <row>
        <Label text="=date" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="width:110px;" />

        <Label text="=number" style="&lbl;" />
        <InputText source="Number" />
      </row>
      <row>
        <Label text="=currency" class="bee-required" style="&lbl;" />
        <HorizontalPanel>
          <DataSelector source="CurrencyName" style="width:40px; margin-right:5px;" editEnabled="false" />
          <CheckBox source="VatIncluded" text="=transportVATIncluded" />
        </HorizontalPanel>

        <Label text="=transportSalesInvoiceSerialNo" class="bee-required" style="&lbl;" />
        <FlowPanel>
          <InputText source="InvoicePrefix" upperCase="true" required="true" style="width:50px;" />
          <InputText source="InvoiceNo" caption="=numeroSign" d:style="width:30px; text-align:right;"
            d:rootStyle="display:inline-block;" />
        </FlowPanel>
      </row>
      <row>
        <Label text="=transportSupplier" style="&lbl;" />
        <DataSelector source="Supplier" />
        <Label text="=trCustomer" class="bee-required" style="&lbl;" />
        <DataSelector source="Customer" required="true" />
      </row>
      <row>
        <Label text="=manager" style="&lbl;" />
        <DataSelector source="Manager" editSource="ManagerPerson" />
        <Label text="=payer" style="&lbl;" />
        <DataSelector source="Payer" />
      </row>
      <row>
        <cell colSpan="3">
          <Label text="=transportSalesTerm" style="&lbl; text-align:right;" />
        </cell>
        <InputDate source="Term" style="width:70px;" />
      </row>
      <row>
        <Label text="=trTruck" style="&lbl;" />
        <InputText source="Vehicle" />
        <Label text="=vehicleDriver" style="&lbl;" />
        <InputText source="Driver" />
      </row>
      <row>
        <cell colSpan="3">
          <Label name="MainItemCaption" text="=transportMainItemCaption" style="&lbl;" />
        </cell>
        <UnboundSelector name="MainItem" viewName="Items" renderColumns="Name" 
          label="=transportMainItemCaption" />
      </row>
    </Table>

    <TabbedPages class="flexible">
      <page>
        <text>=notes</text>
        <InputArea source="Notes" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
