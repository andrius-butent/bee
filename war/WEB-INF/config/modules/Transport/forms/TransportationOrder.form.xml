<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="TransportationOrder" viewName="TransportationOrders" caption="Pervežimo užsakymas"
  >
  <FlowPanel class="flexBox-vertical">
    <FlexTable cellSpacing="10">
      <row>
        <cell><Label html="Data" horizontalAlignment="right" class="bee-required" /></cell>
        <cell><InputDateTime source="Date" /></cell>
          <cell>
            <Label html="Būsena" horizontalAlignment="right" />
          </cell>
          <cell>
            <TextLabel source="Status" itemKey="OrderStatus" class="bee-display" />
          </cell>
      </row>
      <row>
        <cell><Label html="Užsakymo Nr." horizontalAlignment="right" class="bee-required" /></cell>
        <cell colSpan="3"><InputText source="OrderNo" /></cell>
      </row>
      <row>
        <cell><Label html="Užsakovas" horizontalAlignment="right" class="bee-required" /></cell>
        <cell>
          <DataSelector source="CustomerName" relSource="Customer" relView="Companies"
                        relColumn="Name" />
        </cell>
        <cell><Label html="Mokėtojas" horizontalAlignment="right" /></cell>
        <cell colSpan="3">
          <DataSelector source="PayerName" relSource="Payer" relView="Companies"
                        relColumn="Name" />
        </cell>
      </row>
      <row>
        <cell>
          <Label html="Kontaktas:" horizontalAlignment="right" />
        </cell>
        <cell>
          <DataSelector source="PersonFirstName" relSource="CustomerPerson" relView="CompanyPersons"
            relColumn="FirstName" />
        </cell>
        <cell>
          <Label html="Vadybininkas:" horizontalAlignment="right" />
        </cell>
        <cell>
          <DataSelector source="ManagerFirstName" relSource="Manager" relView="Users"
            relColumn="FirstName" />
        </cell>
      </row>
    </FlexTable>

    <ChildGrid class="flexible" name="OrderCargo" relColumn="Order" />
  </FlowPanel>
</f:Form>
