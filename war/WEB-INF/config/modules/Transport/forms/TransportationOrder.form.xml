<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="TransportationOrder" viewName="TransportationOrders" caption="=trOrder"
  width="900" height="900"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <Table style="border-spacing: 5px;">
        <row>
          <Label text="=date" horizontalAlignment="right" class="bee-required bee-hasDefaults" />
          <InputDateTime source="Date" />
		  <Label text="=orderNumber" horizontalAlignment="right" class="bee-required bee-hasDefaults" />
          <InputText source="OrderNo" />
          <Label text="=status" horizontalAlignment="right" class="bee-required bee-hasDefaults" style="" />
          <ListBox source="Status" style="height: 29px; width: 152px;"/>
        </row>
        <row>
          <Label text="=customer" horizontalAlignment="right" class="bee-required" />
          <DataSelector name="Customer" source="Customer" choiceColumns="Name TypeName" renderColumns="CustomerName TypeName" />
          <Label text="=payer" horizontalAlignment="right" />
          <DataSelector source="Payer" choiceColumns="Name TypeName" renderColumns="PayerName PayerTypeName"/>
          <Label text="=notes" horizontalAlignment="right" />
           <cell rowSpan="2">
             <InputArea source="Notes" visibleLines="3"/>
           </cell>
        </row>
        <row>
          <Label text="=personContact" horizontalAlignment="right" />
          <DataSelector source="CustomerPerson" renderColumns="PersonFirstName PersonLastName"
            choiceColumns="FirstName LastName CompanyName" options="Customer" />
          <Label text="=manager" horizontalAlignment="right" class="bee-required bee-hasDefaults" />
          <DataSelector source="Manager" editSource="ManagerPerson" newRowEnabled="false" />
        </row>
      </Table>
    </FlowPanel>

    <TabbedPages class="flexible" style="margin-top: 1ex;" >
      <page>
        <text>=cargos</text>
        <ChildGrid name="OrderCargo" relColumn="Order" />
      </page>
      <page>
        <text>=documents</text>
        <ChildGrid name="RelatedDocuments" relColumn="TransportationOrder" />
      </page>
    </TabbedPages>

  </FlowPanel>
</f:Form>
