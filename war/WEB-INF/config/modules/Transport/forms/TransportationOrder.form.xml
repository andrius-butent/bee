<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="TransportationOrder" viewName="TransportationOrders" caption="Pervežimo užsakymas"
  width="900" height="600"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <Table style="border-spacing: 10px;">
        <row>
          <Label html="Data:" horizontalAlignment="right" class="bee-hasDefaults" />
          <InputDateTime source="Date" />
          <Label html="Būsena:" horizontalAlignment="right" />
          <ListBox source="Status" itemKey="OrderStatus" />
          <Label html="Pastabos" />
        </row>
        <row>
          <Label html="Užsakymo Nr.:" horizontalAlignment="right" class="bee-hasDefaults" />
          <InputText source="OrderNo" />
          <cell colSpan="2">
            <Button name="profit" html="Pelnas" />
          </cell>
          <cell rowSpan="3">
            <InputArea source="Notes" visibleLines="5" style="width:150px;" />
          </cell>
        </row>
        <row>
          <Label html="Užsakovas:" horizontalAlignment="right" class="bee-required" />
          <DataSelector source="Customer" />
          <Label html="Mokėtojas:" horizontalAlignment="right" />
          <DataSelector source="Payer" />
        </row>
        <row>
          <Label html="Kontaktas:" horizontalAlignment="right" />
          <DataSelector source="CustomerPerson" renderColumns="PersonFirstName PersonLastName"
            choiceColumns="FirstName LastName CompanyName" options="Customer" />
          <Label html="Vadybininkas:" horizontalAlignment="right" />
          <DataSelector source="Manager" editSource="ManagerPerson" newRowEnabled="false" />
        </row>
      </Table>
    </FlowPanel>

    <TabbedPages class="flexible" style="margin-top: 1ex;" >
      <page>
        <text>=cargos</text>
        <ChildGrid name="OrderCargo" relColumn="Order" caption="-" />
      </page>
      <page>
        <text>=documents</text>
        <ChildGrid name="RelatedDocuments" relColumn="TransportationOrder" />
      </page>
    </TabbedPages>

  </FlowPanel>
</f:Form>
