<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelWidth "100px;">
  <!ENTITY labelLeft "&inline; width:&labelWidth; padding-top:1px;">
  <!ENTITY labelRight "&labelLeft; text-align:right; margin-right:10px;">
  <!ENTITY input "&inline; width:100px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:d="http://www.butent.com/decorator"
  
  name="OrderRequest" viewName="CargoList" caption="Užklausimas"
  height="75" heightUnit="%" width="80" widthUnit="%"
  >
  <FlowPanel style="margin: 10px 2px 2px 10px;">
    <FlowPanel style="&section;">
      <Label html="Užsakymo data" class="bee-required" style="&labelLeft;" />
      <InputDateTime source="OrderDate" style="&input;" />
      <Label html="Užsakovas" class="bee-required" style="&labelRight; width:120px;" />
      <DataSelector source="Customer" style="&input; width:200px;" />
    </FlowPanel>
    
    <FlowPanel style="&section;">
      <Label html="Ref numeris" style="&labelLeft;" />
      <InputText source="Number" style="&input;" />
      <Label html="Kontaktinis asmuo" style="&labelRight; width:120px;" />
      <DataSelector source="CustomerPerson" style="&input; width:200px;" />
    </FlowPanel>
    
    <FlowPanel style="&section;">
      <Label html="Maršrutas" class="bee-required" style="&labelLeft; vertical-align:top;" />
      <InputArea source="OrderNotes" visibleLines="8" style="width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <SimplePanel style="padding-left:&labelWidth;">
        <xi:include href="widgets/CargoPlaces.widget.xml" />
      </SimplePanel>
    </FlowPanel>
    
    <FlowPanel style="&section;">
      <Label html="Pastabos" style="&labelLeft; vertical-align:top;" />
      <InputArea source="OrderNotes" style="width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label html="Krovinys" style="&labelLeft; vertical-align:top;" />
      <InputArea source="Description" visibleLines="5" style="width:200px;" />
      <VerticalPanel style="&inline;">
        <CheckBox source="Partial" html="Dalinis" />
        <CheckBox source="Outsized" html="Negabaritinis" />
        <CheckBox source="Dangerous" html="Pavojingas" />
      </VerticalPanel>
    </FlowPanel>
    
    <FlowPanel style="&section;">
      <Label html="Kiekis" style="&labelLeft;" />
      <InputInteger source="Quantity" style="&input;" />
      <Label html="Svoris" style="&labelRight;" />
      <InputDecimal source="Weight" format="#.000" style="&input;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label html="Tūris" style="&labelLeft;" />
      <InputDecimal source="Volume" format="#.000" style="&input;" />
      <Label html="Vertė" style="&labelRight;" />
      <InputCurrency source="Value" style="&input;" />
      <DataSelector source="ValueCurrency" style="&inline; width:40px; margin-left:5px;" />
    </FlowPanel>
  </FlowPanel>
</f:Form>
