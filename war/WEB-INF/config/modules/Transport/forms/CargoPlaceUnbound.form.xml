<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:ui="http://www.butent.com/ui"

        name="CargoPlaceUnbound" width="450" height="560"
>
  <Table kind="controls">
    <col index="0" kind="label" />

    <row>
      <Label for="Date" class="bee-required" />
      <InputDateTime source="Date" required="true" title="=trRequestDateTitle" minValue="d" />
    </row>
    <row>
      <Label for="Company" class="bee-required" />
      <FlowPanel>
        <DataSelector name="CompanyLoading" source="Company" viewName="DistinctCargoPlaceUnboundCompanyLoading"
                      valueSource="Company" strict="false" caching="local"
                      style="width:300px;" required="true"/>
        <DataSelector name="CompanyUnloading" source="Company" viewName="DistinctCargoPlaceUnboundCompanyUnloading"
                      valueSource="Company" strict="false" caching="local"
                      style="width:300px;" required="true"/>
      </FlowPanel>
    </row>
    <row>
      <Label for="Address" class="bee-required" />
      <FlowPanel>
        <DataSelector name="AddressLoading" source="Address" viewName="DistinctCargoPlaceUnboundAddressLoading"
                      valueSource="Address" strict="false" caching="local"
                      style="width:300px;" required="true"/>
        <DataSelector name="AddressUnloading" source="Address" viewName="DistinctCargoPlaceUnboundAddressUnloading"
                      valueSource="Address" strict="false" caching="local"
                      style="width:300px;" required="true"/>
      </FlowPanel>
    </row>
    <row>
      <Label for="CityUnbound" class="bee-required" />
      <DataSelector source="CityUnbound" viewName="Cities" valueSource="Name"
                    choiceColumns="Name NameEn NameRu CountryName" required="true" options="CountryUnbound" >
        <ui:rowRenderer type="join" separator="/" />
      </DataSelector>
    </row>
    <row>
      <Label for="PostIndex" class="bee-required" />
      <FlowPanel>
        <DataSelector name="PostIndexLoading" source="PostIndex" viewName="DistinctCargoPlaceUnboundPostIndexLoading"
                      valueSource="PostIndex" strict="false" caching="local"
                      style="width:300px;" required="true"/>
        <DataSelector name="PostIndexUnloading" source="PostIndex" viewName="DistinctCargoPlaceUnboundPostIndexUnloading"
                      valueSource="PostIndex" strict="false" caching="local"
                      style="width:300px;" required="true"/>
      </FlowPanel>
    </row>
    <row>
      <Label for="CountryUnbound" class="bee-required" />
      <DataSelector source="CountryUnbound" viewName="Countries" valueSource="Name"
                    required="true" choiceColumns="Name NameEn NameRu">
        <ui:rowRenderer type="join" separator="/" />
      </DataSelector>
    </row>
    <row>
      <Label for="Contact" class="bee-required" />
      <FlowPanel>
        <DataSelector name="ContactLoading" source="Contact" viewName="DistinctCargoPlaceUnboundContactLoading"
                      valueSource="Contact" strict="false" caching="local"
                      style="width:300px;" required="true"/>
        <DataSelector name="ContactUnloading" source="Contact" viewName="DistinctCargoPlaceUnboundContactUnloading"
                      valueSource="Contact" strict="false" caching="local"
                      style="width:300px;" required="true"/>
      </FlowPanel>
    </row>
    <row>
      <Label for="Number" />
      <InputText source="Number" />
    </row>
    <row>
      <Label for="Note" style="vertical-align:top;" />
      <InputArea source="Note" visibleLines="4" style="width:300px;" />
    </row>
  </Table>
</f:Form>