<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Vehicle" viewName="Vehicles" caption="Transporto priemonė"
  >
  <FlowPanel class="flexBox-vertical">
    <xi:include href="widgets/VehicleDescription.widget.xml" />

    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>Papildoma informacija</text>
        <FlowPanel class="flexBox-horizontal">
          <FlowPanel class="flexBox-vertical" style="-webkit-box-align: end; margin-right: 1em;">
            <DataSelector source="Fuel" caption="Kuro rūšis" style="&ROW_STYLE;" />
            <InputInteger source="TankCapacity" caption="Kuro bako talpa l" style="width: 2em; &ROW_STYLE;" />
            <InputInteger source="Speedometer" caption="Spidometro skalė" style="width: 5em; &ROW_STYLE;" />
          </FlowPanel>
          
          <FlowPanel class="flexBox-vertical flexible">
             <ChildGrid name="FuelConsumptions" relColumn="Vehicle" style="height: 150px" />
             <ChildGrid name="FuelTemperatures" parent="FuelConsumptions" relColumn="Consumption" 
                class="flexible" style="margin-left: 20%" />
          </FlowPanel>
        </FlowPanel>
      </page>
      <page>
        <text>Remontai</text>
        <ChildGrid name="Repairs" relColumn="Vehicle" />
      </page>
      <page>
        <text>Servisas</text>
        <ChildGrid name="VehicleServices" relColumn="Vehicle" />
      </page>
      <page>
        <text>Reisai</text>
        <ChildGrid name="Trips" relColumn="Vehicle" />
      </page>
      <page>
        <text>Dokumentai</text>
        <ChildGrid name="VehicleDocuments" relColumn="Vehicle" />
      </page>
      <page>
        <text>Keičiamos dalys</text>
        <ChildGrid name="VehiclePartUsage" relColumn="Vehicle" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>