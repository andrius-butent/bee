<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY separator "<br/>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Vehicle" viewName="Vehicles" caption="Transporto priemonė"
  >
  <FlowPanel class="flexBox-vertical">
    <xi:include href="widgets/VehicleDescription.widget.xml" />

    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>Papildoma informacija</text>
        <AbsolutePanel>
          <layer top="1" topUnit="ex" width="240">
            <FlowPanel class="flexBox-vertical" style="-webkit-align-items: flex-end;">
              <DataSelector source="Fuel" caption="Kuro rūšis" />
              &separator;
            
              <InputInteger source="TankCapacity" caption="Kuro bako talpa l" style="width: 2em;" />
              &separator;
              <InputInteger source="Speedometer" caption="Spidometro skalė" style="width: 5em;" />
              &separator;

              <InputDate source="StartDate" caption="Eksploatacijos pradžia" style="width: 7em;" />
              &separator;
              <InputDate source="EndDate" caption="Eksploatacijos pabaiga" style="width: 7em;" />
            </FlowPanel>
          </layer>
          
          <layer left="260" right="0" top="0" height="50" heightUnit="%">
             <ChildGrid name="FuelConsumptions" relColumn="Vehicle" />
          </layer>
          <layer left="300" right="0" top="51" topUnit="%" bottom="0">
             <ChildGrid name="FuelTemperatures" parent="FuelConsumptions" relColumn="Consumption" />
          </layer>
        </AbsolutePanel>
      </page>
      <page>
        <text>Remontai</text>
        <ChildGrid name="Repairs" relColumn="Vehicle" />
      </page>
      <page>
        <text>Servisas</text>
        <ChildGrid name="VehicleServices" relColumn="Vehicle" />
      </page>
      <page>
        <text>Reisai</text>
        <ChildGrid name="Trips" relColumn="Vehicle" />
      </page>
      <page>
        <text>Dokumentai</text>
        <xi:include href="../../Crm/forms/widgets/DocumentSelector.widget.xml" />
      </page>
      <page>
        <text>Keičiamos dalys</text>
        <ChildGrid name="VehiclePartUsage" relColumn="Vehicle" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>