<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">

  <!ENTITY separator "<br/>">

  <!ENTITY row "margin-bottom: 3px;">

  <!ENTITY lbl "&inline; width: 240px; padding: 2px 1em 0 1em; text-align: right;">
  <!ENTITY spin "&inline; width: 50px;">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form"
 
  name="TrFxSettings" viewName="TransportSettings" caption="Nustatymai"
  width="400" height="400"
  >

  <FlowPanel style="background-color: WhiteSmoke;">
    <FlowPanel style="&row; margin-top: 2ex;">
      <Label html="Kliento stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="FxPixelsPerCustomer" minValue="5" maxValue="300" step="5" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Užsakymo stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="FxPixelsPerOrder" minValue="5" maxValue="300" step="5" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Dienos stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="FxPixelsPerDay" minValue="3" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Dienos stulpelio aukštis px:" style="&lbl;" />
      <InputSpinner source="FxPixelsPerRow" minValue="3" maxValue="100" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Kalendoriaus srities aukštis px:" style="&lbl;" />
      <InputSpinner source="FxHeaderHeight" minValue="3" maxValue="50" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Laikotarpio pasirinkimo srities aukštis px:" style="&lbl;" />
      <InputSpinner source="FxFooterHeight" minValue="10" maxValue="1000" step="10" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Range selector slider width px:" style="&lbl;" />
      <InputSpinner source="FxSliderWidth" minValue="1" maxValue="20" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Range selector bar height px:" style="&lbl;" />
      <InputSpinner source="FxBarHeight" minValue="1" maxValue="20" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Spalvų tema:" style="&lbl;" />
      <DataSelector source="FxTheme" style="&inline; width: 100px;" />
    </FlowPanel>
  </FlowPanel>

</f:Form>
