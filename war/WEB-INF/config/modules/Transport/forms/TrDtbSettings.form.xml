<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">

  <!ENTITY separator "<br/>">

  <!ENTITY row "margin-bottom: 3px;">
  <!ENTITY slider_row "position: relative; height: 25px;">

  <!ENTITY lbl "&inline; width: 260px; padding: 2px 10px 0 10px; text-align: right;">
  <!ENTITY spin "&inline; width: 50px;">
  <!ENTITY slider_inp "position: absolute; left: 280px; top: 0; width: 100px;">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form"
 
  name="TrDtbSettings" viewName="TransportSettings" caption="Nustatymai"
  width="440" height="360"
  >

  <FlowPanel style="background-color: WhiteSmoke;">

    <FlowPanel style="&row; margin-top: 2ex;">
      <Label html="Vairuotojo stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="DtbPixelsPerDriver" minValue="4" maxValue="300" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Dienos stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="DtbPixelsPerDay" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Dienos stulpelio aukštis px:" style="&lbl;" />
      <InputSpinner source="DtbPixelsPerRow" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Kalendoriaus srities aukštis px:" style="&lbl;" />
      <InputSpinner source="DtbHeaderHeight" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Laikotarpio pasirinkimo srities aukštis px:" style="&lbl;" />
      <InputSpinner source="DtbFooterHeight" minValue="3" maxValue="1000" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Range selector slider width px:" style="&lbl;" />
      <InputSpinner source="DtbSliderWidth" minValue="1" maxValue="20" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Range selector bar height px:" style="&lbl;" />
      <InputSpinner source="DtbBarHeight" minValue="1" maxValue="20" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&slider_row;">
      <Label html="Item opacity:" style="&lbl;" />
      <InputSlider source="DtbItemOpacity" minValue="0" maxValue="100" step="5" style="&slider_inp;" />
    </FlowPanel>
    <FlowPanel style="&slider_row;">
      <Label html="Strip opacity:" style="&lbl;" />
      <InputSlider source="DtbStripOpacity" minValue="0" maxValue="100" step="5" style="&slider_inp;" />
    </FlowPanel>

  </FlowPanel>
</f:Form>
