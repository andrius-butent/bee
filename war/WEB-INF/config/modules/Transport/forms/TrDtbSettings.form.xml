<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">

  <!ENTITY separator "<br/>">

  <!ENTITY row "margin-bottom: 3px;">
  <!ENTITY slider_row "position: relative; height: 25px;">
  <!ENTITY cb_row "position: relative; height: 20px;">

  <!ENTITY lbl "&inline; width: 260px; padding: 2px 10px 0 10px; text-align: right;">
  <!ENTITY spin "&inline; width: 50px;">
  <!ENTITY slider_inp "position: absolute; left: 280px; top: 0; width: 100px;">
  <!ENTITY cb_inp "position: absolute; left: 280px; top: 3px; margin: 0;">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form"
 
  name="TrDtbSettings" viewName="TransportSettings" caption="=settings"
  width="440" height="380"
  >

  <FlowPanel style="background-color: WhiteSmoke;">

    <FlowPanel style="&row; margin-top: 2ex;">
      <Label text="=trTbSettingsPixelsPerDriver" style="&lbl;" />
      <InputSpinner source="DtbPixelsPerDriver" minValue="4" maxValue="300" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&cb_row;">
      <Label text="=trTbSettingsCountryFlags" style="&lbl;" />
      <CheckBox source="DtbCountryFlags" style="&cb_inp;"/>
    </FlowPanel>
    <FlowPanel style="&cb_row;">
      <Label text="=trTbSettingsPlaceInfo" style="&lbl;" />
      <CheckBox source="DtbPlaceInfo" style="&cb_inp;"/>
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label text="=trTbSettingsPixelsPerDay" style="&lbl;" />
      <InputSpinner source="DtbPixelsPerDay" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label text="=trTbSettingsPixelsPerRow" style="&lbl;" />
      <InputSpinner source="DtbPixelsPerRow" minValue="2" maxValue="1000" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label text="=trTbSettingsHeaderHeight" style="&lbl;" />
      <InputSpinner source="DtbHeaderHeight" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label text="=trTbSettingsFooterHeight" style="&lbl;" />
      <InputSpinner source="DtbFooterHeight" minValue="3" maxValue="1000" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label text="=transportTripColor" style="&lbl;" />
      <DataSelector source="DtbColor" renderColumns="DtbColorName" style="&inline; width: 100px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&slider_row;">
      <Label text="=transportItemOpacity" style="&lbl;" />
      <InputSlider source="DtbItemOpacity" minValue="0" maxValue="100" step="5" style="&slider_inp;" />
    </FlowPanel>
    <FlowPanel style="&slider_row;">
      <Label text="=transportStripOpacity" style="&lbl;" />
      <InputSlider source="DtbStripOpacity" minValue="0" maxValue="100" step="5" style="&slider_inp;" />
    </FlowPanel>

  </FlowPanel>
</f:Form>
