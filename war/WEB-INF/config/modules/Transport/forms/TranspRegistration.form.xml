<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inp "width: 160px;">
  <!ENTITY area "width: 160px; height: 80px;">
  <!ENTITY colLabel "text-align: right; padding-left: 1em; padding-right: 0.5em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="TranspRegistration" viewName="TranspRegistrations" caption="=trRegistration"
  >
  <FlowPanel>

    <Table kind="controls" style="border-collapse: collapse; margin-top: 2ex; margin-left: 1em;"
        cellStyle="vertical-align: top; padding-bottom: 4px;">
      <col index="0" cellStyle="&colLabel;" />
      <col index="2" cellStyle="&colLabel;" />

      <row>
        <Label text="=trRegistrationDate" class="bee-required bee-hasDefaults" />
        <InputDateTime source="Date" style="&inp;" />
        <Label text="=trRegistrationStatus" class="bee-required bee-hasDefaults" />
        <ListBox source="Status" />
      </row>

      <row>
        <Label text="=trRegistrationCompanyName" class="bee-required" />
        <InputText source="CompanyName" style="&inp;" />
        <Label text="=trRegistrationCompanyCode" class="bee-required" />
        <InputText source="CompanyCode" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationAddress" class="bee-required" />
        <InputText source="Address" style="&inp;" />
        <Label text="=trRegistrationVatCode" />
        <InputText source="VATCode" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationCity" class="bee-required" />
        <InputText source="City" style="&inp;" />
        <Label text="=trRegistrationCountry" class="bee-required" />
        <InputText source="Country" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationContact" class="bee-required" />
        <InputText source="Contact" style="&inp;" />
        <Label text="=trRegistrationBank" />
        <InputText source="Bank" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationContactPosition" class="bee-required" />
        <InputText source="ContactPosition" style="&inp;" />
        <Label text="=trRegistrationBankAddress" />
        <InputText source="BankAddress" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationPhone" class="bee-required" />
        <InputText source="Phone" style="&inp;" />
        <Label text="=trRegistrationBankAccount" />
        <InputText source="BankAccount" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationEmail" class="bee-required" />
        <InputText source="Email" style="&inp;" />
        <Label text="=trRegistrationMobile" />
        <InputText source="Mobile" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationExchangeCode" />
        <InputText source="ExchangeCode" style="&inp;" />
        <Label text="=trRegistrationFax" />
        <InputText source="Fax" style="&inp;" />
      </row>

      <row>
        <Label text="=trRegistrationSwift" />
        <InputText source="Swift" style="&inp;" />
        <Label text="=trRegistrationNotes" />
        <InputArea source="Notes" style="&area;" />
      </row>

      <row>
        <Label text="=remoteHost" />
        <InputArea source="Host" style="width: 160px; height: 40px;" />
        <Label text="=userAgent" />
        <InputArea source="Agent" style="&area;" />
      </row>
    </Table>
  </FlowPanel>
</f:Form>
