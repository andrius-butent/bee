<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inline "display: inline-block;">

  <!ENTITY separator "<br/>">

  <!ENTITY row "margin-bottom: 3px;">
  <!ENTITY slider_row "position: relative; height: 25px;">
  <!ENTITY cb_row "position: relative; height: 20px;">

  <!ENTITY lbl "&inline; width: 260px; padding: 2px 10px 0 10px; text-align: right;">
  <!ENTITY spin "&inline; width: 50px;">
  <!ENTITY slider_inp "position: absolute; left: 280px; top: 0; width: 100px;">
  <!ENTITY cb_inp "position: absolute; left: 280px; top: 3px; margin: 0;">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form"
 
  name="TrSsSettings" viewName="TransportSettings" caption="Nustatymai"
  width="440" height="360"
  >

  <FlowPanel style="background-color: WhiteSmoke;">

    <FlowPanel style="&row; margin-top: 2ex;">
      <Label html="Vilkiko stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="SsPixelsPerTruck" minValue="4" maxValue="300" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Reiso stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="SsPixelsPerTrip" minValue="4" maxValue="300" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&cb_row;">
      <Label html="Reisus rodyti atskirai:" style="&lbl;" />
      <CheckBox source="SsSeparateTrips" style="&cb_inp;"/>
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Dienos stulpelio plotis px:" style="&lbl;" />
      <InputSpinner source="SsPixelsPerDay" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Dienos stulpelio aukštis px:" style="&lbl;" />
      <InputSpinner source="SsPixelsPerRow" minValue="2" maxValue="1000" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Kalendoriaus srities aukštis px:" style="&lbl;" />
      <InputSpinner source="SsHeaderHeight" minValue="1" maxValue="100" style="&spin;" />
    </FlowPanel>
    <FlowPanel style="&row;">
      <Label html="Laikotarpio pasirinkimo srities aukštis px:" style="&lbl;" />
      <InputSpinner source="SsFooterHeight" minValue="3" maxValue="1000" style="&spin;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&row;">
      <Label html="Spalvų tema:" style="&lbl;" />
      <DataSelector source="SsTheme" style="&inline; width: 100px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&slider_row;">
      <Label html="Item opacity:" style="&lbl;" />
      <InputSlider source="SsItemOpacity" minValue="0" maxValue="100" step="5" style="&slider_inp;" />
    </FlowPanel>
    <FlowPanel style="&slider_row;">
      <Label html="Strip opacity:" style="&lbl;" />
      <InputSlider source="SsStripOpacity" minValue="0" maxValue="100" step="5" style="&slider_inp;" />
    </FlowPanel>

  </FlowPanel>
</f:Form>
