<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:xi="http://www.w3.org/2001/XInclude"

        name="CargoInvoice" caption="=trdInvoice" showRowId="true"
        width="800" height="600"
    >
  <f:properties jasperReports="CargoInvoice_en:=trdInvoice+ +LT/EN,
      CargoInvoice_ru:=trdInvoice+ +LT/RU, CargoInvoiceShort_en:=trBriefInvoice+ +LT/EN,
      CargoInvoiceShort_ru:=trBriefInvoice+ +LT/RU" />

  <FlowPanel class="flexBox-vertical">
    <br />
    <!-- HOPTRANSA { -->
    <HorizontalPanel>
      <Label for="SentDate" />
      <DateLabel source="SentDate" style="font-weight:bold;" />
      <Label for="OtherDate" />
      <DateTimeLabel source="OtherDate" style="font-weight:bold;" />
      <Label for="Attribute" />
      <TextLabel source="Attribute" style="font-weight:bold;" />
    </HorizontalPanel>
    <!--}-->
    <br />
    <xi:include href="widgets/SaleInvoice.widget.xml" />
    <br />

    <TabbedPages class="flexible">
      <page>
        <text>=productsServices</text>
        <ChildGrid name="SaleItems" relColumn="Sale" />
      </page>
      <page>
        <text>=trdNotes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>
      <page>
        <text>=files</text>
        <ChildGrid name="SaleFiles" relColumn="Sale" />
      </page>
      <page module="Transport">
        <text>=transportIncomes</text>
        <ChildGrid name="CargoSales" relColumn="Sale" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
