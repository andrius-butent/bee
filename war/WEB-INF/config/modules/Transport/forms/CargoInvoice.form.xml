<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "text-align: right;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  
  name="CargoInvoice" viewName="CargoInvoices"
  width="800" height="600"
  >
  <FlowPanel class="flexBox-vertical">
    <Table>
      <row>
        <Label text="=date" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="width:110px;" />

        <Label text="=orderNumber" style="&lbl;" />
        <InputText source="Number" />
      </row>
      <row>
        <Label text="=amount" style="&lbl;" />
        <HorizontalPanel>
          <DecimalLabel source="Amount" format="#.00" style="font-weight:bold; margin-right:5px;" />
          <DataSelector source="CurrencyName" placeholder="=currencyShort"
            style="width:40px; margin-right:5px;" editEnabled="false" />
          <CheckBox source="VatIncluded" text="=transportVATIncluded" />
        </HorizontalPanel>

        <Label text="=transportSalesInvoiceSerialNo" style="&lbl;" />
        <FlowPanel>
          <InputText source="InvoicePrefix" upperCase="true" style="width:50px;" />
          <InputText source="InvoiceNo" caption="Nr." d:style="width:30px; text-align:right;"
            d:rootStyle="display:inline-block;" />
        </FlowPanel>
      </row>
      <row>
        <Label text="=trSupplier" style="&lbl;" />
        <DataSelector source="Supplier" />
        <Label text="=trCustomer" style="&lbl;" />
        <DataSelector source="Customer" />
      </row>
      <row>
        <Label text="=manager" style="&lbl;" />
        <DataSelector source="Manager" editSource="ManagerPerson" />
        <Label text="=payer" style="&lbl;" />
        <DataSelector source="Payer" />
      </row>
      <row>
        <cell colSpan="3">
          <Label text="=transportSalesTerm" style="&lbl; text-align:right;" />
        </cell>
        <InputDate source="Term" style="width:70px;" />
      </row>
      <row>
        <Label text="=trTruck" style="&lbl;" />
        <InputText source="Vehicle" />
        <Label text="=vehicleDriver" style="&lbl;" />
        <InputText source="Driver" />
      </row>
    </Table>

    <TabbedPages class="flexible">
      <page>
        <text>=trProductsServices</text>
        <ChildGrid name="SaleItems" relColumn="Sale" />
      </page>
      <page>
        <text>=notes</text>
        <InputArea source="Notes" />
      </page>
      <page>
        <text>=transportIncomes</text>
        <ChildGrid name="CargoInvoiceIncomes" relColumn="Sale" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
