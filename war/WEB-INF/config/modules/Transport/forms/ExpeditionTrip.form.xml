<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form" 
  xmlns:d="http://www.butent.com/decorator" 
  
  name="ExpeditionTrip" viewName="ExpeditionTrips" caption="Ekspedijavimo reisas"
  width="900" widthUnit="px" height="600" heightUnit="px"
  >
  <FlowPanel class="flexBox-vertical">
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexBox-vertical flexible" style="margin-left: 1em">
        <FlowPanel class="flexBox-horizontal-center" style="&ROW_STYLE;">
          <InputDateTime source="Date" style="width: 10em;" caption="Data" />
          <ListBox source="Status" itemKey="TripStatus" caption="Būsena" />
          <InputText source="TripNo" caption="Reiso.Nr." />
          <Button name="profit" html="Pelnas" />
        </FlowPanel>
        <FlowPanel class="flexBox-horizontal">
          <FlowPanel  class="flexBox-vertical flexible" style="margin-bottom: 1ex">
            <DataSelector source="Forwarder" caption="Vežėjas" style="width: 120px"
                decorator="flex-left" d:unit="px" d:align="left" required="true" d:size="75"/>
            <FlowPanel style="margin-top: 10px"> 
              <InputText source="ForwarderDriver" caption="Vairuotojas" style="width: 120px" 
                 decorator="flex-left" d:unit="px" d:align="left" d:size="75" />
            </FlowPanel>     
            <SimplePanel style="margin-top: 10px"> 
              <InputText source="ForwarderVehicle" caption="Transportas" style="width: 120px"
                decorator="flex-left" d:unit="px" d:align="left" d:size="75"/>
            </SimplePanel>    
          </FlowPanel>
        <FlowPanel class="flexBox-vertical" style="&ROW_STYLE; margin-left: 1em">
          <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;  margin-left: 4em">
             <Label html="Išvykimas" style="font-weight: bold; margin-left: 20px" />
             <Label html="Sugrįžimas" style="font-weight: bold; margin-left: 50px" />
          </FlowPanel>
          <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE; margin-left: 4em">
            <SimplePanel>
              <InputDate source="DateFrom" style="width: 7em;" />
            </SimplePanel>
             <Label html="Data"  style="margin: 0 5px 0 5px"/>
            <SimplePanel>
              <InputDate source="DateTo" style="width: 7em;" />
            </SimplePanel>
          </FlowPanel>
        </FlowPanel> 
      </FlowPanel>
      <DataSelector source="Expedition" caption="Ekspedicijos rūšis" required="true"
        decorator="flex-left" d:size="115" />
     </FlowPanel>
    
     <FlowPanel class="flexBox-vertical flexible" style="&ROW_STYLE; margin-left: 1em;">
       <Label html="Pastabos" />
       <SimplePanel  style="position: relative; min-width: 5em;" class="flexible">
         <Table>
           <row>
             <InputArea source="Notes" class="occupy" />
           </row>
         </Table> 
       </SimplePanel>
     </FlowPanel>
    </FlowPanel>
    
    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>Kroviniai</text>
        <ChildGrid name="TripCargo" relColumn="Trip" />
      </page>
      <page>
        <text>Išlaidos</text>
        <ChildGrid name="TripCosts" relColumn="Trip" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
