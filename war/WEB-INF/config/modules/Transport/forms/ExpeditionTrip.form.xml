<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form" 
  xmlns:d="http://www.butent.com/decorator" 
  
  name="ExpeditionTrip" viewName="ExpeditionTrips" caption="Ekspedijavimo reisas"
  width="900" height="600"
  >
  <FlowPanel class="flexBox-vertical">

    <FlowPanel class="flexBox-horizontal">
      <Table>
        <row>
          <FlowPanel  class="flexBox-vertical" style="margin-bottom: 1ex">
            <SimplePanel style="margin-top: 10px"> 
              <InputDateTime source="Date" caption="Data" style="width: 120px;" 
                  decorator="flex-left" d:unit="px" d:align="left" d:size="75" />
            </SimplePanel>      
            <SimplePanel style="margin-top: 10px"> 
              <DataSelector source="Forwarder" caption="Vežėjas" style="width: 120px"
                  decorator="flex-left" d:unit="px" d:align="left" required="true" d:size="75"/>
            </SimplePanel>      
            <SimplePanel style="margin-top: 10px"> 
              <InputText source="ForwarderDriver" caption="Vairuotojas" style="width: 120px" 
                  decorator="flex-left" d:unit="px" d:align="left" d:size="75"/>
            </SimplePanel>     
            <SimplePanel style="margin-top: 10px"> 
              <InputText source="ForwarderVehicle" caption="Transportas" style="width: 120px"
                  decorator="flex-left" d:unit="px" d:align="left" d:size="75"/>
            </SimplePanel>    
          </FlowPanel>
        </row>  
      </Table>   
         
      <Table>
        <row>   
          <FlowPanel class="flexBox-vertical"  style="margin-left: 11em;">
            <SimplePanel style="margin-top: 10px; margin-bottom: 10px;"> 
              <InputText source="TripNo" style="width: 10em;" caption="Reiso.Nr." />
            </SimplePanel>  
            <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
              <Label html="Išvykimas" style="font-weight: bold; margin-left: 20px" />
              <Label html="Sugrįžimas" style="font-weight: bold; margin-left: 50px" />
            </FlowPanel>
            <FlowPanel class="flexBox-horizontal" style="&ROW_STYLE;">
              <SimplePanel>
                <InputDate source="DateFrom" style="width: 7em;" />
              </SimplePanel>
                <Label html="Data" style="margin: 0 5px 0 5px"/>
              <SimplePanel>
                <InputDate source="DateTo" style="width: 7em;" />
              </SimplePanel>
            </FlowPanel>
          </FlowPanel> 
        </row>
      </Table>  
      
      <Table>
        <row>
          <FlowPanel class="flexBox-vertical"  style="margin-top: 10px; margin-left: 1em;"> 
            <SimplePanel style="margin-bottom: 10px;"> 
              <DataSelector source="Expedition" caption="Ekspedicijos rūšis" required="true"
                  style="width: 120px"  d:unit="px" d:align="left" d:size="125" />
            </SimplePanel>  
            <Label html="Pastabos" />
            <SimplePanel  style="position: relative; min-width: 5em;" class="flexible"> 
              <InputArea source="Notes" style="height: 80px; width:250px;"/>
            </SimplePanel>
          </FlowPanel>
        </row>
      </Table>   
      
      <Table>
        <row>    
          <FlowPanel class="flexBox-vertical"  style="margin-top: 10px; margin-left: 1em;">
            <ListBox source="Status" itemKey="TripStatus" caption="Būsena" style="margin-bottom: 20px"/>
            <Button name="profit"  html="Pelnas" style="width: 80px" />
          </FlowPanel>  
        </row>
      </Table>
   
    </FlowPanel>
    
    <TabbedPages class="flexible" style="margin-top: 1ex;">
      <page>
        <text>=cargos</text>
        <ChildGrid name="TripCargo" relColumn="Trip" />
      </page>
      <page>
        <text>Išlaidos</text>
        <ChildGrid name="TripCosts" relColumn="Trip" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
