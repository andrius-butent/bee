<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoList" viewName="CargoList" caption="Kroviniai" disabledActions="add"
  editPopup="true"
  flexGrow="1" flexShrink="1" minColumnWidth="60"
  >
  <body height="68" />

  <columns>
    <RelColumn name="OrderNo" caption="Užsakymo Nr." minWidth="100" editEnabled="true" />
    <DataColumn name="Status" caption="Būsena" itemKey="OrderStatus" />    
    <DataColumn name="CustomerName" caption="Užsakovas" flexGrow="1" />

    <DataColumn name="Description" caption="Krovinys" minWidth="100" />

    <CalcColumn name="Loading" type="string" cellType="html" caption="Pakrovimas"
      minWidth="80" flexBasis="120" />
    <CalcColumn name="Unloading" type="string" cellType="html" caption="Iškrovimas"
      minWidth="80" flexBasis="120" />

    <DataColumn name="Partial" caption="Dalinis" />
    <CalcColumn name="Expedition" type="boolean" caption="Ekspedicija">
      <render><ui:expression>row.Expedition ? true : false</ui:expression></render>
    </CalcColumn>

    <DataColumn name="Number" caption="Numeris" />
    <DataColumn name="Cmr" caption="CMR" />
    <DataColumn name="Notes" caption="Pastabos">
      <style>
        <bodyStyle>
          <ui:inline>white-space: pre-wrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>
  </columns>
</Grid>
