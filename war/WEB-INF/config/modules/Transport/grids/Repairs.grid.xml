<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Repairs" viewName="Repairs" caption="Remontų istorija"
  >
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <DataColumn name="Date" caption="Data" />
    <RelColumn name="Item" caption="Prekė/paslauga" />
    <RelColumn name="Unit" caption="Mato v." />
    <DataColumn name="Quantity" caption="Kiekis" />
    <DataColumn name="Price" caption="Kaina" format="#.00" />
    <RelColumn name="Currency" caption="Val." />
    <CalcColumn type="decimal" name="Total" caption="Suma" format="#.00">
      <render><ui:expression>row.Quantity * row.Price</ui:expression></render>
    </CalcColumn>
    <DataColumn name="Note" caption="Pastaba" />
    <DataColumn name="Run" caption="Rida" />
    <DataColumn name="DocumentNo" caption="Dok.Nr." />
    <RelColumn name="Supplier" caption="Tiekėjas" />
    <RelColumn name="Country" caption="Šalis" />
  </columns>
</Grid>
