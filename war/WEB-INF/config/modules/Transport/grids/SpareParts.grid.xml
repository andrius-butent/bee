<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="SpareParts" viewName="SpareParts" parent="SparePartTypes"
  caption="Keičiamos dalys" newRowCaption="Nauja dalis"
  >
  <west size="150" splitterSize="2">
    <w:DataTree name="SparePartTypes" caption="Tipai" source="SparePartTypes" parentColumn="Parent">
      <w:calc>
        <ui:expression>row.Name</ui:expression>
      </w:calc>
      <w:form name="Tipo koregavimas">
        <w:FlowPanel>
          <w:Label html="Tipas" class="bee-required" />
          <w:InputText source="Name" style="width: 20em" />
        </w:FlowPanel>
      </w:form>
    </w:DataTree>
  </west>
  
  <south size="200" splitterSize="2">
    <w:ChildGrid name="SparePartUsage" relColumn="Part" />
  </south>
  
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12 px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <RelColumn name="Type" searchableColumns="ParentName Name" caption="Tipas" />
    <DataColumn name="Number" caption="Numeris" />
    <DataColumn name="Description" caption="Aprašymas" />
    <DataColumn name="Run" caption="Pradinė rida" />
    <DataColumn name="Obtained" caption="Gauta" />
    <DataColumn name="WrittenOff" caption="Nurašyta" />
    <DataColumn name="Notes" caption="Pastabos" />
  </columns>
</Grid>
