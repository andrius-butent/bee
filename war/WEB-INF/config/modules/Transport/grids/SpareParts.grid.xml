<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/grid.xsd"
  
  name="SpareParts" viewName="SpareParts" parent="SparePartTypes"
  caption="Keičiamos dalys" newRowCaption="Nauja dalis"
  >
  <west size="150" splitterSize="2">
    <DataTree name="SparePartTypes" caption="Tipai" source="SparePartTypes" parentColumn="Parent">
      <calc>
        <expression>row.Name</expression>
      </calc>
      <form name="Tipo koregavimas">
        <FlowPanel>
          <Label html="Tipas" class="bee-required" />
          <InputText source="Name" style="width: 20em" />
        </FlowPanel>
      </form>
    </DataTree>
  </west>
  
  <south size="200" splitterSize="2">
    <ChildGrid name="SparePartUsage" relColumn="Part" />
  </south>
  
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <font>Verdana 12 px</font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <DataColumn name="Type" source="TypeName" caption="Tipas" />
    <DataColumn name="Number" source="Number" caption="Numeris" />
    <DataColumn name="Description" source="Description" caption="Aprašymas" />
    <DataColumn name="Run" source="Run" caption="Pradinė rida" />
    <DataColumn name="Obtained" source="Obtained" caption="Gauta" />
    <DataColumn name="WrittenOff" source="WrittenOff" caption="Nurašyta" />
    <DataColumn name="Notes" source="Notes" caption="Pastabos" />
  </columns>
</Grid>
