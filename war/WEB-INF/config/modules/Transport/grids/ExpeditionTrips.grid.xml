<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="ExpeditionTrips" viewName="ExpeditionTrips" caption="=trExpeditionTrips"
  newRowPopup="true" order="TripID desc"
  >

  <g:columns>
    <DataColumn name="Date" caption="=date" />
    <DataColumn name="ExpeditionType" caption="=trExpeditionType" />
    <DataColumn name="TripNo" caption="=trTripNo" />
    <DataColumn name="Status" caption="=status" itemKey="TripStatus" />
    <DataColumn name="ForwarderName" caption="=carrier" flexGrow="1" flexShrink="1" />
    <DataColumn name="ForwarderVehicle" caption="=transport" flexGrow="1" flexShrink="1" />
    <DataColumn name="ForwarderDriver" caption="=vehicleDriver" flexGrow="1" flexShrink="1" />
    <DataColumn name="DateFrom" source="DateFrom" caption="=trDeparted" width="80" />
    <DataColumn name="DateTo" source="DateTo" caption="=trReturned" width="80" />
    <DataColumn name="Notes" caption="=notes">
      <style>
        <bodyStyle>
          <ui:inline>white-space: pre-wrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>
  </g:columns>
</g:Grid>
