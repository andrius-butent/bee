<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="DriverTrips" viewName="DriverTrips" readOnly="true"
  >
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <DataColumn name="Date" source="Date" caption="Data" />
    <DataColumn name="TripNo" source="TripNo" caption="Reiso Nr." />
    <DataColumn name="ForwarderName" source="ForwarderName" caption="Vežėjas" />
    <CalcColumn name="Vehicle" type="string" caption="Transportas">
      <render>
        <ui:function>
          var vehicle = row.ForwarderVehicle;
          
          if (!vehicle) {
            if (row.VehicleNumber) {
              vehicle = row.VehicleNumber;
            }
            if (row.TrailerNumber) {
              vehicle = (vehicle ? vehicle + ' / ' : '')  + row.TrailerNumber;
            }
          }          
          return vehicle;
        </ui:function>
      </render>
    </CalcColumn>
    <DataColumn name="DateFrom" source="DateFrom" caption="Nuo" />
    <DataColumn name="DateTo" source="DateTo" caption="Iki" />
  </columns>
</Grid>
