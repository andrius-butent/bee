<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Drivers" viewName="Drivers" caption="Vairuotojai"
  newRowForm="Driver" editForm="Driver"
  flexGrow="1" flexShrink="1"
  >
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <RelColumn name="CompanyPerson" renderColumns="FirstName LastName" caption="Vardas, pavardė" />
    <DataColumn name="CompanyName" caption="Įmonė" />
    <DataColumn name="Position" />
    <DataColumn name="Phone" />

    <RelColumn name="Email" caption="El.paštas">
      <renderToken source="Label" suffix=" " />
      <renderToken source="Email" prefix="&lt;" suffix="&gt;" />
    </RelColumn>

    <DataColumn name="Experience" caption="Stažas nuo" width="88" />
    <DataColumn name="Notes" caption="Pastabos" />
  </columns>
</Grid>
