<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoServices" viewName="CargoServices"
  newRowColumns="Expedition, ItemName, UnitName, Quantity, Price, CurrencyName"
  >
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12 px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <DataColumn name="Expedition" source="Expedition" caption="Eksp." />
    <DataColumn name="ItemName" source="ItemName" caption="Paslauga" />
    <DataColumn name="UnitName" source="UnitName" caption="Mato v." />
    <DataColumn name="Quantity" source="Quantity" caption="Kiekis" />
    <DataColumn name="Price" source="Price" caption="Kaina" format="#.00" />
    <DataColumn name="CurrencyName" source="CurrencyName" caption="Val." />
    <CalcColumn type="decimal" name="Total" caption="Suma" format="#.00">
      <calc><ui:expression>row.Quantity * row.Price</ui:expression></calc>
    </CalcColumn>
  </columns>
</Grid>
