<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
        xmlns:ui="http://www.butent.com/ui"

        name="TripRoutes" viewName="TripRoutes" caption="=trTripRoutes"
    >
  <g:columns>
    <RelColumn name="TripCargo" viewName="TripCargo" choiceColumns="Cargo Description LoadingDate LoadingCityName LoadingCountryName UnloadingDate UnloadingCityName UnloadingCountryName"
               renderColumns="Cargo" editSource="Cargo" required="true"
               newRowEnabled="false" editEnabled="true" editPopup="false" >
      <selectorColumn source="LoadingDate" >
        <ui:render>
          <ui:function>
            if (row.LoadingDate) {
              var date = new Date(Number(row.LoadingDate));
              return date.toLocaleDateString();
            } else {
              return "";
            }
          </ui:function>
        </ui:render>
      </selectorColumn>
      <selectorColumn source="UnloadingDate" >
        <ui:render>
          <ui:function>
            if (row.LoadingDate) {
              var date = new Date(Number(row.UnloadingDate));
              return date.toLocaleDateString();
            } else {
              return "";
            }
          </ui:function>
        </ui:render>
      </selectorColumn>
    </RelColumn>

    <DataColumn name="DepartureDate" caption="=trDepartureDate" updateMode="row">
      <carry>
        <ui:expression>row.ArrivalDate ? row.ArrivalDate : row.DepartureDate</ui:expression>
      </carry>
    </DataColumn>
    <RelColumn name="DepartureCountry" caption="=trDepartureCountry">
      <carry>
        <ui:expression>row.ArrivalCountry ? row.ArrivalCountry : row.DepartureCountry
        </ui:expression>
      </carry>
    </RelColumn>
    <RelColumn name="DepartureCity" caption="=trDepartureCity">
      <carry>
        <ui:expression>row.ArrivalCity ? row.ArrivalCity : row.DepartureCity</ui:expression>
      </carry>
    </RelColumn>

    <DataColumn name="ArrivalDate" caption="=trArrivalDate" />
    <RelColumn name="ArrivalCountry" caption="=trArrivalCountry" />
    <RelColumn name="ArrivalCity" caption="=trArrivalCity" />

    <DataColumn name="SpeedometerFrom" caption="=trSpeedometerFromShort" format="#.0" minValue="0"
                updateMode="row" visible="false">
      <carry>
        <ui:expression>row.SpeedometerTo</ui:expression>
      </carry>
    </DataColumn>
    <DataColumn name="SpeedometerTo" caption="=trSpeedometerToShort" format="#.0" minValue="0"
                updateMode="row" visible="false" />
    <DataColumn name="Kilometers" caption="=kilometersShort" format="#.0" minValue="0"
                updateMode="row">
      <style>
        <headerStyle>
          <ui:font>bold</ui:font>
        </headerStyle>
        <bodyStyle>
          <ui:font>bold</ui:font>
        </bodyStyle>
      </style>
      <footer aggregate="sum" />
    </DataColumn>

    <DataColumn name="MotoHours" caption="=trMotoHourShort" format="#.00" minValue="0"
                updateMode="row" visible="false">
      <style>
        <headerStyle>
          <ui:font>bold</ui:font>
        </headerStyle>
        <bodyStyle>
          <ui:font>bold</ui:font>
        </bodyStyle>
      </style>
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="CargoWeight" format="#.000" updateMode="row" />
    <DataColumn name="EmptyKilometers" minValue="0" visible="false">
      <footer aggregate="sum" />
    </DataColumn>

    <DataColumn name="Season" caption="=trSeason" updateMode="row">
      <carry>
        <ui:expression>row.Season</ui:expression>
      </carry>
    </DataColumn>
    <DataColumn name="Temperature" caption="=trTemperatureShort" updateMode="row" visible="false" />
    <DataColumn name="Consumption" caption="=liters" updateMode="row">
      <style>
        <headerStyle>
          <ui:font>bold</ui:font>
        </headerStyle>
        <bodyStyle>
          <ui:font>bold</ui:font>
        </bodyStyle>
      </style>
      <footer aggregate="sum" />
    </DataColumn>
    <RelColumn name="Item" caption="=trAccountingItem" visible="false">
      <carry>
        <ui:expression>row.Item</ui:expression>
      </carry>
    </RelColumn>

    <DataColumn name="GasStation" caption="=trGasStation" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="VehicleService" caption="=vehicleService" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="Parking" caption="=trParking" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="CmrDelivery" caption="=trCmrDelivery" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="Hotel" caption="=trHotel" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="RoadMaintenance" caption="=trRoadMaintenance" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="CarCrash" caption="=trCarCrash" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="RoadSigns" caption="=trRoadSigns" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="TrailerOverhanging" caption="=trTrailerOverhanging" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="HelpAnotherDriver" caption="=trHelpAnotherDriver" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="Other" caption="=trOther" format="#.0" minValue="0"
                updateMode="row">
      <footer aggregate="sum" />
    </DataColumn>
  </g:columns>
</g:Grid>
