<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="TransportationOrders" viewName="TransportationOrders" caption="Pervežimo užsakymai"
  newRowForm="TransportationOrder" editForm="TransportationOrder" editShowId="true"
  newRowCaption="Naujas užsakymas"
  >

  <columns>
    <DataColumn name="Date" caption="Data" />
    <DataColumn name="OrderNo" caption="Užsakymo Nr." />
    <DataColumn name="Status" caption="Būsena" itemKey="OrderStatus" />
    <DataColumn name="Partial" caption="Dalinis" />
    <CalcColumn name="Expedition" type="boolean" caption="Ekspedicija">
      <render><ui:expression>row.Expedition ? true : false</ui:expression></render>
    </CalcColumn>
    
    <RelColumn name="Customer" caption="Užsakovas" flexGrow="1" />
    <RelColumn name="Payer" caption="Mokėtojas" flexGrow="1" flexShrink="1" />
    <RelColumn name="Manager" caption="Vadybininkas" flexGrow="1" flexShrink="1" />
    <CalcColumn name="Cargo" type="string" caption="Kroviniai" searchBy="Cargo"
      flexGrow="2" flexShrink="3" flexBasis="200">
      <render>
        <ui:function>
          if (!row.MinCargo) {
            return row.MaxCargo;
          
          } else if(!row.MaxCargo || row.MinCargo == row.MaxCargo) {
            return row.MinCargo;
          
          } else {
            return row.MinCargo + ", " + row.MaxCargo + (row.CntCargo > 2 ? ", ...": "");
          }
        </ui:function>
      </render>
    </CalcColumn>
  </columns>
</Grid>
