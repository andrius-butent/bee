<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="TripCosts" viewName="TripCosts" caption="=trTripCosts"
  >

  <g:columns>
    <DataColumn name="Date" caption="=date">
      <carry><ui:expression>row.Date</ui:expression></carry>
    </DataColumn>
    <RelColumn name="Item" renderColumns="ItemName" />
    <DataColumn name="UnitName" />
    <DataColumn name="Quantity" caption="=quantity" />
    <DataColumn name="Price" caption="=price" format="#.00" />
    <RelColumn name="Currency" caption="=currencyShort" />
    <DataColumn name="Vat" />
    <DataColumn name="VatPercent" width="20" sortable="false" horizontalAlignment="center">
      <render><ui:expression>row.VatPercent ? '%' : ''</ui:expression></render>
    </DataColumn>
    <CalcColumn name="Total" type="decimal" caption="=total" format="#.00">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
      <render><ui:expression>row.Quantity * row.Price</ui:expression></render>
    </CalcColumn>
    <DataColumn name="Number" caption="=number" />
    <RelColumn name="Supplier" caption="=trSupplier" />
    <RelColumn name="Country" caption="=country">
      <carry><ui:expression>row.Country</ui:expression></carry>
    </RelColumn>
    <DataColumn name="Note" caption="=note" />
  </g:columns>
</g:Grid>
