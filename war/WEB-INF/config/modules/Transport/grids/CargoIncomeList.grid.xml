<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoIncomeList" viewName="CargoIncomeList"
  flexGrow="1" flexShrink="1"
  readOnly="true" caption="Transporto užsakymų pajamos"
  filter="!(Sale)"
  >
  <columns>
    <SelectionColumn name="Select" caption="-" width="20" />
    <DataColumn name="OrderDate" caption="Užsakymo data" />
    <RelColumn name="OrderNo" minWidth="100" editEnabled="true" editSource="Order" />
    <DataColumn name="Status" itemKey="OrderStatus" />    
    <DataColumn name="CustomerName" caption="Užsakovas" />
    <DataColumn name="Payer" caption="Mokėtojas">
      <render>
        <ui:expression>row.Company ? row.CompanyName : row.PayerName</ui:expression>
      </render>
    </DataColumn>

    <CalcColumn type="string" name="From" source="LoadingCountryCode" cellType="html" width="20"
      caption="Iš" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>
    <CalcColumn type="string" name="To" source="UnloadingCountryCode" cellType="html" width="20"
      caption="Į" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <DataColumn name="Date" />
    <RelColumn name="Service" />
    <DataColumn name="Amount" format="#.00">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <RelColumn name="Currency" flexGrow="0" />
    <DataColumn name="Vat" />
    <DataColumn name="VatPercent" width="20" sortable="false" />

    <DataColumn name="Number" />
    <DataColumn name="Note" />

    <DataColumn name="Vehicle" caption="Vilkikas" />
    <DataColumn name="Trailer" caption="Puspriekabė" />
    <DataColumn name="Driver" caption="Vairuotojas" searchBy="FirstName LastName" />
  </columns>
</Grid>
