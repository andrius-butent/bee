<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="OrderCargo" viewName="OrderCargo" caption="Kroviniai"
  newRowForm="NewOrderCargo" newRowCaption="Naujas krovinys" newRowPopup="true"
  editForm="OrderCargo" editPopup="true"
  flexGrow="1" flexShrink="1" minColumnWidth="60"
  >

  <body height="68" />

  <columns>
    <DataColumn name="Description" caption="Krovinys" />
    <CalcColumn name="Loading" type="string" cellType="html" caption="Pakrovimas"
      minWidth="80" flexBasis="120" />
    <CalcColumn name="Unloading" type="string" cellType="html" caption="IÅ¡krovimas"
      minWidth="80" flexBasis="120" />

    <DataColumn name="Partial" caption="Dalinis" />
    <CalcColumn name="Expedition" type="boolean" caption="Ekspedicija">
      <render><ui:expression>row.Expedition ? true : false</ui:expression></render>
    </CalcColumn>

    <DataColumn name="Number" caption="Numeris" />
    <DataColumn name="Cmr" caption="CMR" />
    <DataColumn name="Notes" caption="Pastabos">
      <style>
        <bodyStyle>
          <ui:inline>white-space: pre-wrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>
    <DataColumn name="Income" caption="Pajamos" format="#.00">
      <style>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
  </columns>
</Grid>
