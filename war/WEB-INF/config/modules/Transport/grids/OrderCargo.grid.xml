<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="OrderCargo" viewName="OrderCargo" caption="=cargos"
  newRowForm="OrderCargo" newRowCaption="=newCargo" newRowPopup="true"
  editForm="OrderCargo" editPopup="true"
  flexGrow="1"
  >
  <body height="50" />

  <columns>
    <DataColumn name="Description" maxWidth="300" caption="=cargo" />
    <CalcColumn name="Loading" type="string" cellType="html" caption="=loading" />
    <CalcColumn name="Unloading" type="string" cellType="html" caption="=unloading" />

    <DataColumn name="Partial" caption="D" width="15" sortable="false" />
    <DataColumn name="Outsized" caption="N" width="15" sortable="false" />
    <DataColumn name="Dangerous" caption="P" width="15" sortable="false" />
    <CalcColumn name="Expedition" type="boolean" caption="E" width="15" sortable="false">
      <render><ui:expression>row.Expedition ? true : false</ui:expression></render>
    </CalcColumn>

    <DataColumn name="Number" caption="=cargoNumber" />
    <DataColumn name="Cmr" caption="CMR" />
    <DataColumn name="Notes" caption="=notes">
      <style>
        <bodyStyle>
          <ui:inline>white-space: pre-wrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>
    <PropColumn name="Income" type="decimal" caption="=income" format="#.00">
      <style>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </PropColumn>
  </columns>
</Grid>
