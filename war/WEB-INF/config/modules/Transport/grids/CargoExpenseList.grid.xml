<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoExpenseList" viewName="CargoExpenses"
  flexGrow="1"
  disabledActions="add delete"
  editInPlace="Number" order="OrderDate desc"
  >
  <g:columns>
    <DataColumn name="OrderDate" caption="=orderDate" />
    <RelColumn name="OrderNo" editEnabled="true" editSource="Order" />
    <DataColumn name="Status" />    

    <DataColumn name="Date" />
    <RelColumn name="Service" />
    <DataColumn name="Amount" format="#.00">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <RelColumn name="Currency" flexGrow="0" />
    <DataColumn name="Vat" />
    <DataColumn name="VatPercent" width="20" sortable="false" horizontalAlignment="center">
      <render><ui:expression>row.VatPercent ? '%' : ''</ui:expression></render>
    </DataColumn>

    <RelColumn name="Supplier" />
    <DataColumn name="Number" />
    <DataColumn name="Note" />
  </g:columns>
</g:Grid>
