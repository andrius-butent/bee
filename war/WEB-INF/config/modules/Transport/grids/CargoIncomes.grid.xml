<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoIncomes" viewName="CargoIncomes"
  flexGrow="1"
  newRowCaption="=trNewService"
  >
  <g:columns>
    <DataColumn name="Date" caption="=date" />

    <RelColumn name="Service" caption="=trServiceName" />
    <DataColumn name="Amount" caption="=amount" format="0.00">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <RelColumn name="Currency" caption="=currencyShort" flexGrow="0" />
    <DataColumn name="Vat" />
    <DataColumn name="VatPercent" width="20" sortable="false" horizontalAlignment="center">
      <render><ui:expression>row.VatPercent ? '%' : ''</ui:expression></render>
    </DataColumn>

    <RelColumn name="Customer" caption="=payer" />
    <DataColumn name="Number" caption="=number" />
    <DataColumn name="Note" caption="=note" />

    <RelColumn name="Sale" caption="=trInvoiceIdShort" readOnly="true" renderColumns="Sale"
      editEnabled="true" editForm="CargoInvoice" editViewName="CargoInvoices" />
    <RelColumn name="Purchase" caption="=trCreditIdShort" readOnly="true" renderColumns="Purchase"
      editEnabled="true" editForm="CargoCreditInvoice" editViewName="CargoCreditInvoices" />
  </g:columns>
</g:Grid>
