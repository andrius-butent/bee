<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoIncomes" viewName="CargoIncomes"
  flexGrow="1" flexShrink="1"
  newRowCaption="Nauja paslauga"
  >
  <columns>
    <DataColumn name="Date" caption="Data" />

    <RelColumn name="Service" caption="Paslauga" />
    <DataColumn name="Amount" caption="Suma" format="#.00">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <RelColumn name="Currency" caption="Val." flexGrow="0" />
    <DataColumn name="Vat" />
    <DataColumn name="VatPercent" width="20" sortable="false" />

    <RelColumn name="Customer" caption="Mokėtojas" />
    <DataColumn name="Number" caption="Numeris" />
    <DataColumn name="Note" caption="Pastaba" />
    <RelColumn name="Sale" caption="Sąsk.ID" readOnly="true" editEnabled="true" editForm="CargoInvoice" />
  </columns>
</Grid>
