<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"

  name="AssessmentOrders" viewName="Assessments" caption="=assessmentOrders"
  flexGrow="1" flexShrink="1" disabledActions="add" order="AssessorID desc"
  >
  <north size="40">
    <w:HorizontalPanel>
      <w:CheckBox name="Active" text="=trOrderStatusActive" checked="true" />
      <w:CheckBox name="Completed" text="=trOrderStatusCompleted" />
      <w:CheckBox name="Canceled" text="=trOrderStatusCanceled" checked="true" />
    </w:HorizontalPanel>
  </north>
  <columns>
    <IdColumn name="ID" width="40" />
    <DataColumn name="Assessor" caption="PID" width="40" />
    <DataColumn name="Status" itemKey="AssessmentStatus" width="70" />
    <DataColumn name="OrderNo" caption="=orderNumber" width="70" />
    <DataColumn name="LoadingDate" caption="=trCargoLoadingDateShort" width="70" format="DATE_SHORT" />
    
    <DataColumn name="CustomerName" caption="=customer" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <CalcColumn type="string" name="From" source="LoadingCountryCode" cellType="html" width="20"
      caption="=from" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <CalcColumn type="string" name="To" source="UnloadingCountryCode" cellType="html" width="20"
      caption="=to" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <DataColumn name="Route" caption="=route" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <DataColumn name="Description" caption="=cargo" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <DataColumn name="Partial" caption="D" width="15" sortable="false" />
    <DataColumn name="Outsized" caption="N" width="15" sortable="false" />
    <DataColumn name="Dangerous" caption="P" width="15" sortable="false" />

    <DataColumn name="Number" caption="=refNumber" width="70" />
    <DataColumn name="Cmr" caption="CMR" width="70" />
  </columns>
</Grid>
