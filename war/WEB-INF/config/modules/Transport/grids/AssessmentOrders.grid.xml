<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"

  name="AssessmentOrders" viewName="Assessments" caption="Vertinimo užsakymai"
  flexGrow="1" flexShrink="1" disabledActions="add"
  >
  <north size="40">
    <w:HorizontalPanel>
      <w:CheckBox name="Active" html="Vykdomi" checked="true" />
      <w:CheckBox name="Completed" html="Įvykdyti" />
      <w:CheckBox name="Canceled" html="Atšaukti" checked="true" />
    </w:HorizontalPanel>
  </north>
  <columns>
    <IdColumn name="ID" width="40" />
    <DataColumn name="Assessor" caption="PID" width="40" />
    <DataColumn name="Status" itemKey="AssessmentStatus" width="70" />
    <DataColumn name="OrderNo" caption="Užsakymo Nr." width="70" />
    <DataColumn name="LoadingDate" caption="Krov.data" width="70" format="DATE_SHORT" />
    
    <DataColumn name="CustomerName" caption="Užsakovas" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <CalcColumn type="string" name="From" source="LoadingCountryCode" cellType="html" width="20"
      caption="Iš" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <CalcColumn type="string" name="To" source="UnloadingCountryCode" cellType="html" width="20"
      caption="Į" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <DataColumn name="Route" caption="Maršrutas" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <DataColumn name="Description" caption="Krovinys" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <DataColumn name="Partial" caption="D" width="15" sortable="false" />
    <DataColumn name="Outsized" caption="N" width="15" sortable="false" />
    <DataColumn name="Dangerous" caption="P" width="15" sortable="false" />

    <DataColumn name="Number" caption="Ref numeris" width="70" />
    <DataColumn name="Cmr" caption="CMR" width="70" />
  </columns>
</Grid>
