<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:w="http://www.butent.com/widget"

  name="AssessmentRequests" viewName="Assessments" caption="=trAssessmentRequests"
  flexGrow="1" order="AssessorID desc"
  >
  <g:north size="40">
    <w:HorizontalPanel>
      <w:CheckBox name="New" text="=filterNew" checked="true" />
      <w:CheckBox name="Answered" text="=filterAnswered" checked="true" />
      <w:CheckBox name="Lost" text="=filterLost" />
    </w:HorizontalPanel>
  </g:north>
  <g:columns>
    <IdColumn name="ID" width="40" />
    <DataColumn name="Assessor" caption="PID" width="40" />
    <DataColumn name="Date" caption="=creationDate" width="110" />
    <DataColumn name="Status" width="70" />
    <DataColumn name="OrderNo" caption="=orderNumber" width="70" />
    <DataColumn name="LoadingDate" caption="=trCargoLoadingDateShort" width="70" format="DATE_SHORT" />
    
    <DataColumn name="CustomerName" caption="=customer" minWidth="100" whiteSpace="nowrap" />

    <CalcColumn type="string" name="From" source="LoadingCountryCode" cellType="html" width="20"
      caption="=from" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <CalcColumn type="string" name="To" source="UnloadingCountryCode" cellType="html" width="20"
      caption="=to" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <DataColumn name="Route" caption="=route" minWidth="100" whiteSpace="nowrap" />
    <DataColumn name="Description" caption="=cargo" minWidth="100" whiteSpace="nowrap" />

    <DataColumn name="Partial" caption="D" width="15" sortable="false" />
    <DataColumn name="Outsized" caption="N" width="15" sortable="false" />
    <DataColumn name="Dangerous" caption="P" width="15" sortable="false" />

    <DataColumn name="Number" caption="=refNumber" width="70" />
    <DataColumn name="Cmr" caption="CMR" width="70" />
  </g:columns>
</g:Grid>
