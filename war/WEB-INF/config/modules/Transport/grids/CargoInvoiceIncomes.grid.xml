<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoInvoiceIncomes" viewName="CargoInvoiceIncomes"
  flexGrow="1"
  readOnly="true" caption="=trOrderCargoIncomes"
  >
  <g:columns>
    <SelectionColumn name="Select" width="20" />
    <RelColumn name="Assessor" editEnabled="true" editViewName="Assessments" />
    <DataColumn name="OrderDate" caption="=orderDate" />
    <RelColumn name="OrderNo" editEnabled="true" editSource="Order" />
    <DataColumn name="Status" />    
    <DataColumn name="CustomerName" caption="=customer" />
    <DataColumn name="Payer" caption="=payer">
      <render>
        <ui:expression>row.Company ? row.CompanyName : row.PayerName</ui:expression>
      </render>
    </DataColumn>

    <CalcColumn type="string" name="From" source="LoadingCountryCode" cellType="html" width="20"
      caption="=from" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>
    <CalcColumn type="string" name="To" source="UnloadingCountryCode" cellType="html" width="20"
      caption="=to" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>
    <DataColumn name="UnloadingDate" caption="=unloading" />
    <DataColumn name="Cmr" />

    <DataColumn name="ServiceName" />
    <DataColumn name="Amount" format="0.00" />
    <DataColumn name="CurrencyName" flexGrow="0" />
    <DataColumn name="Vat" horizontalAlignment="right">
      <render>
        <ui:expression>row.Vat ? ((row.VatPlus ? '+' : '') + row.Vat + (row.VatPercent ? '%' : '')) : ''</ui:expression>
      </render>
    </DataColumn>
    <CalcColumn name="Total" type="decimal" caption="=total" format="0.00">
      <style>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </CalcColumn>

    <DataColumn name="Note" />

    <DataColumn name="Vehicle" caption="=trTruck" />
    <DataColumn name="Trailer" caption="=trailer" />
    <DataColumn name="Driver" caption="=vehicleDriver" searchBy="FirstName LastName" />
  </g:columns>
</g:Grid>
