<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="DriverAdvances" viewName="DriverAdvances" caption="Avansai"
  >
  <header borderWidth="1 0" />
  <body height="20" borderWidth="0">
    <style>
      <ui:font>Verdana 12px</ui:font>
    </style>
  </body>
  <footer borderWidth="0" />

  <columns>
    <DataColumn name="Date" caption="Data" minWidth="80">
      <carry><ui:expression>row.Date</ui:expression></carry>
    </DataColumn>
    <DataColumn name="Number" caption="Dok.Nr." flexGrow="1" flexShrink="1" />
    <DataColumn name="Amount" caption="Suma" format="#.00" flexGrow="1" flexShrink="1">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <RelColumn name="Currency" caption="Val." minWidth="50">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
      <carry><ui:expression>row.Currency</ui:expression></carry>
    </RelColumn>
  </columns>
</Grid>
