<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="Trips" viewName="Trips" caption="=trips"
  newRowPopup="true"
  >

  <columns>
    <DataColumn name="Date" caption="Data" />
    <DataColumn name="TripNo" caption="Reiso Nr." flexGrow="1" flexShrink="1" />
    <DataColumn name="Status" caption="Būsena" itemKey="TripStatus" />
    <CalcColumn name="Vehicle" type="string" caption="Transportas" flexGrow="1" flexShrink="1"
      searchBy="VehicleNumber">
      <render>
        <ui:function>
          var vehicle = row.VehicleNumber;

          if (row.TrailerNumber) {
            vehicle = vehicle + ' / ' + row.TrailerNumber;
          }
          return vehicle;
        </ui:function>
      </render>
    </CalcColumn>
    <DataColumn name="Driver" caption="Vairuotojas" flexGrow="1" flexShrink="1" />
    <DataColumn name="DateFrom" caption="Išvyko" />
    <DataColumn name="DateTo" caption="Sugrįžo" />
    <DataColumn name="PlannedEndDate" caption="Planuojama pabaiga" />
  </columns>
</Grid>
