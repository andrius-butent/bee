<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"

  name="CargoRequests" viewName="CargoRequests" caption="=trRequests"
  flexGrow="1" flexShrink="1" order="Date desc"
  >
  <north size="40">
    <w:HorizontalPanel>
      <w:CheckBox name="Owned" text="=trOwned" checked="true" />
      <w:CheckBox name="Finished" text="=trShowFinished" />
    </w:HorizontalPanel>
  </north>
  <columns>
    <DataColumn name="Date" caption="=date" width="100" />
    <DataColumn name="Finished" caption="=trRequestFinished" width="100" format="DATE_TIME_SHORT" />
    
    <RelColumn name="Customer" caption="=customer" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </RelColumn>

    <DataColumn name="LoadingDate" caption="=trCargoLoadingDateShort" width="70" format="DATE_SHORT" />

    <CalcColumn type="string" name="From" source="LoadingCountryCode" cellType="html" width="20"
      caption="Iš" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <CalcColumn type="string" name="To" source="UnloadingCountryCode" cellType="html" width="20"
      caption="Į" horizontalAlignment="center">
      <renderer type="flag" />
    </CalcColumn>

    <DataColumn name="Route" caption="=route" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <DataColumn name="Description" caption="=cargo" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </DataColumn>

    <DataColumn name="Partial" caption="D" width="15" sortable="false" />
    <DataColumn name="Outsized" caption="N" width="15" sortable="false" />
    <DataColumn name="Dangerous" caption="P" width="15" sortable="false" />

    <RelColumn name="Manager" caption="=manager" minWidth="100">
      <style>
        <bodyStyle>
          <ui:inline>white-space: nowrap;</ui:inline>
        </bodyStyle>
      </style>
    </RelColumn>
  </columns>
</Grid>
