<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
      xmlns:x="http://www.butent.com/expression"
      xmlns:xi="http://www.w3.org/2001/XInclude"

      name="Assessments" source="Assessments" module="Transport.Logistics"
      caption="=assessments"
      newRowForm="Assessment"
      editForm="Assessment"
    >
  <Relation renderColumns="ID Date CustomerName" />
  <Columns>
    <IdColumn name="ID" />
    <SimpleColumn name="Assessment" label="=captionPid" />
    <SimpleColumn name="Status" />
    <SimpleColumn name="Notes" />
    <SimpleColumn name="Log" />
    <SimpleColumn name="LogCount" />
    <SimpleColumn name="Finished" />
    <SimpleColumn name="FinishedCount" />
    <SimpleColumn name="ShowAdditionalRoute" />
    <SimpleColumn name="ExpensesRegistered" />
    <SimpleColumn name="Documents" />

    <SimpleColumn name="Department" />
    <SimpleJoin joinType="LEFT" name="Department">
      <SimpleColumn name="DepartmentName" />
    </SimpleJoin>

    <SimpleColumn name="Cargo" />
    <SimpleJoin name="Cargo" joinType="INNER">
      <SimpleColumn name="Order" />
      <SimpleJoin name="Order" joinType="INNER">
        <SimpleColumn name="Date" editable="true" />
        <SimpleColumn name="Status" alias="OrderStatus" editable="true" />
        <SimpleColumn name="Notes" alias="OrderNotes" label="=route" editable="true" />

        <SimpleColumn name="Customer" editable="true" />
        <SimpleJoin joinType="LEFT" name="Customer">
          <SimpleColumn name="Name" alias="CustomerName" label="=customer" />
          <SimpleJoin joinType="LEFT" name="CompanyType">
            <SimpleColumn name="Name" alias="CustomerTypeName" />
          </SimpleJoin>

          <SimpleJoin name="Contact" joinType="LEFT">
            <SimpleJoin name="Email" joinType="LEFT">
              <SimpleColumn name="Email" alias="CustomerEmail" />
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>

        <SimpleColumn name="CustomerPerson" editable="true" />
        <SimpleJoin name="CustomerPerson" joinType="LEFT">
          <SimpleJoin name="Person" joinType="LEFT">
            <SimpleColumn alias="PersonFirstName" name="FirstName" />
            <SimpleColumn alias="PersonLastName" name="LastName" />
          </SimpleJoin>
          <SimpleJoin name="Contact" joinType="LEFT">
            <SimpleJoin name="Email" joinType="LEFT">
              <SimpleColumn name="Email" alias="PersonEmail" />
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>

        <SimpleColumn name="Manager" editable="true" />
        <SimpleJoin name="Manager" joinType="INNER">
          <SimpleColumn name="CompanyPerson" />
          <SimpleJoin name="CompanyPerson" joinType="LEFT">
            <SimpleJoin name="Person" joinType="LEFT">
              <SimpleColumn name="FirstName" />
              <SimpleColumn name="LastName" />
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>

      <SimpleColumn name="Number" label="=refNumber" />
      <SimpleColumn name="Directions" alias="Shipper" label="=shipper" />
      <SimpleColumn name="Description" />
      <SimpleColumn name="Notes" alias="CargoNotes" label="=additionalInfo" />

      <SimpleJoin name="CargoHandling" joinType="LEFT">
        <SimpleColumn name="LoadedKilometers" label="=trAssessmentPlannedKm" />

        <xi:include href="viewcolumns/Handling.viewcolumns.xml" />
      </SimpleJoin>

      <SimpleColumn name="Weight" />
      <SimpleColumn name="WeightUnit" />
      <SimpleJoin joinType="LEFT" name="WeightUnit">
        <SimpleColumn name="Name" alias="WeightUnitName" />
      </SimpleJoin>

      <SimpleColumn name="Volume" />
      <SimpleColumn name="VolumeUnit" />
      <SimpleJoin joinType="LEFT" name="VolumeUnit">
        <SimpleColumn name="Name" alias="VolumeUnitName" />
      </SimpleJoin>

      <SimpleColumn name="Quantity" />
      <SimpleColumn name="QuantityUnit" />
      <SimpleJoin joinType="LEFT" name="QuantityUnit">
        <SimpleColumn name="Name" alias="QuantityUnitName" />
      </SimpleJoin>

      <SimpleColumn name="Value" />
      <SimpleColumn name="ValueCurrency" />
      <SimpleJoin joinType="LEFT" name="ValueCurrency">
        <SimpleColumn name="Name" alias="ValueCurrencyName" />
      </SimpleJoin>

      <SimpleColumn name="Partial" />
      <SimpleColumn name="Outsized" />
      <SimpleColumn name="Dangerous" />

      <SimpleColumn name="Currency" />
      <SimpleJoin joinType="LEFT" name="Currency">
        <SimpleColumn name="Name" alias="CurrencyName" />
      </SimpleJoin>

      <ExternalJoin name="Cargo" source="CargoIncomes" joinType="LEFT">
        <HiddenColumn name="Sale" alias="Incomes" />
        <AggregateColumn name="Sale" alias="IncomesCommited" aggregate="MIN">
          <x:nvl type="LONG">
            <x:number>"Incomes"</x:number>
            <x:number>0</x:number>
          </x:nvl>
        </AggregateColumn>
      </ExternalJoin>
      <ExternalJoin name="Cargo" source="CargoExpenses" joinType="LEFT">
        <HiddenColumn name="Purchase" alias="Expenses" />
        <AggregateColumn name="Purchase" alias="ExpensesCommited" aggregate="MIN">
          <x:nvl type="LONG">
            <x:number>"Expenses"</x:number>
            <x:number>0</x:number>
          </x:nvl>
        </AggregateColumn>
        <AggregateColumn name="Cargo" alias="ExpensesCount" aggregate="COUNT_DISTINCT" />
      </ExternalJoin>
    </SimpleJoin>

    <SimpleColumn name="Author" />
    <SimpleJoin name="Author" joinType="LEFT">
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn name="FirstName" alias="AuthorFirstName" />
          <SimpleColumn name="LastName" alias="AuthorLastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <ExternalJoin name="Assessment" source="AssessmentObservers" joinType="LEFT">
      <HiddenColumn name="User" />
    </ExternalJoin>

    <ExternalJoin name="Assessment" source="AssessmentOGroups" joinType="LEFT">
      <SimpleJoin name="Group" joinType="LEFT">
        <ExternalJoin name="Group" source="UserGroups" joinType="LEFT">
          <HiddenColumn name="User" alias="Group" />
        </ExternalJoin>
      </SimpleJoin>
    </ExternalJoin>

    <ExternalJoin name="Assessment" source="AssessmentForwarders" joinType="LEFT">
      <SimpleJoin name="Trip" joinType="LEFT">
        <HiddenColumn name="ForwarderVehicle" />
        <AggregateColumn name="ForwarderVehicle" alias="MinVehicle" aggregate="MIN" />
        <AggregateColumn name="ForwarderVehicle" alias="MaxVehicle" aggregate="MAX" />
        <AggregateColumn name="ForwarderVehicle" alias="CntVehicle" aggregate="COUNT_DISTINCT" />
      </SimpleJoin>
    </ExternalJoin>
  </Columns>
  <Order>
    <OrderBy column="LoadingDate" />
  </Order>
</View>
