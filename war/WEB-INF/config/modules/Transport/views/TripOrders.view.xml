<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="TripOrders"
  source="TripOrders"
  >
  <Columns>
    <SimpleColumn name="Status" />
    <SimpleColumn name="Date" />
    <SimpleColumn name="OrderNo" />
    <SimpleColumn name="Customer" />
    <SimpleJoin joinType="LEFT" name="Customer">
      <SimpleColumn name="Name" alias="CustomerName" />
    </SimpleJoin>
    <SimpleColumn name="CustomerPerson" />
    <SimpleJoin name="CustomerPerson" joinType="LEFT">
      <SimpleJoin name="Person" joinType="LEFT">
        <SimpleColumn alias="PersonFirstName" name="FirstName" />
        <SimpleColumn alias="PersonLastName" name="LastName" />
      </SimpleJoin>
    </SimpleJoin>
    <SimpleColumn name="Payer" />
    <SimpleJoin joinType="LEFT" name="Payer">
      <SimpleColumn name="Name" alias="PayerName" />
    </SimpleJoin>
    <SimpleColumn name="Manager" />
    <SimpleJoin name="Manager" joinType="LEFT">
      <SimpleJoin name="Person" joinType="LEFT">
        <SimpleColumn alias="ManagerFirstName" name="FirstName" />
        <SimpleColumn alias="ManagerLastName" name="LastName" />
      </SimpleJoin>
    </SimpleJoin>
    <ExternalJoin source="OrderCargo" name="Order" joinType="LEFT">
      <HiddenColumn name="Cargo" />
      <AggregateColumn aggregate="MIN" name="Cargo" alias="MinCargo" />
      <AggregateColumn aggregate="MAX" name="Cargo" alias="MaxCargo" />
      <AggregateColumn aggregate="COUNT_DISTINCT" name="Cargo" alias="CntCargo" />
      <AggregateColumn aggregate="SUM" name="Weight" />
      <AggregateColumn aggregate="SUM" name="Volume" />
      <AggregateColumn aggregate="SUM" name="Quantity" />
    </ExternalJoin>
  </Columns>
  <Order>
    <OrderBy column="Date" />
  </Order>
</View>