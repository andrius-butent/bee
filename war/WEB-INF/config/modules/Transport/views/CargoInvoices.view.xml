<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
      xmlns:x="http://www.butent.com/expression"

  name="CargoInvoices" source="Sales"
  editForm="CargoInvoice"
  >
  <Columns>
    <SimpleColumn name="Date" />
    <SimpleColumn name="Number" />
    <SimpleColumn name="InvoicePrefix" />
    <SimpleColumn name="InvoiceNo" />
    <SimpleColumn name="Term" />

    <SimpleColumn name="Vehicle" />
    <SimpleColumn name="Driver" />
    <SimpleColumn name="Notes" />
    <SimpleColumn name="Exported" />
    <SimpleColumn name="Proforma" />

    <SimpleColumn name="Amount" />
    <SimpleColumn name="Currency" />
    <SimpleJoin joinType="LEFT" name="Currency">
      <SimpleColumn name="Name" alias="CurrencyName" />
      <SimpleColumn name="MinorName" />
    </SimpleJoin>
    
    <SimpleColumn name="PaymentTime" />
    <SimpleColumn name="Paid" />
    
    <SimpleColumn name="Debt">
      <x:minus>
        <x:number>"Amount"</x:number>
        <x:nvl type="DECIMAL">
          <x:number>"Paid"</x:number>
          <x:number>0</x:number>
        </x:nvl>
      </x:minus>
    </SimpleColumn>

    <SimpleColumn name="Supplier" />
    <SimpleJoin joinType="LEFT" name="Supplier">
      <SimpleColumn name="Name" alias="SupplierName" label="=trdSupplier" />
    </SimpleJoin>
    
    <SimpleColumn name="Customer" />
    <SimpleJoin joinType="LEFT" name="Customer">
      <SimpleColumn name="Name" alias="CustomerName" label="=trdCustomer" />
    </SimpleJoin>
    
    <SimpleColumn name="Payer" />
    <SimpleJoin joinType="LEFT" name="Payer">
      <SimpleColumn name="Name" alias="PayerName" label="=trdPayer" />
    </SimpleJoin>
    
    <SimpleColumn name="Manager" />
    <SimpleJoin name="Manager" joinType="LEFT">
      <SimpleColumn name="CompanyPerson" alias="ManagerPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn name="FirstName" alias="ManagerFirstName" />
          <SimpleColumn name="LastName" alias="ManagerLastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
    
    <ExternalJoin name="Sale" source="CargoIncomes" joinType="LEFT">
      <AggregateColumn name="Sale" aggregate="MAX" />
      
      <SimpleJoin name="Cargo" joinType="LEFT">
        <AggregateColumn name="Number" aggregate="MIN" alias="MinRef" />
        <AggregateColumn name="Number" aggregate="MAX" alias="MaxRef" />
        <AggregateColumn name="Number" aggregate="COUNT" alias="CntRef" />

        <SimpleJoin name="LoadingPlace" joinType="LEFT">
          <AggregateColumn name="Date" aggregate="MIN" alias="MinLoadingDate" />
          <AggregateColumn name="Date" aggregate="MAX" alias="MaxLoadingDate" />
          <AggregateColumn name="Date" aggregate="COUNT" alias="CntLoadingDate" />
          
          <SimpleJoin joinType="LEFT" name="Country">
            <AggregateColumn name="Name" aggregate="MIN" alias="MinLoadingCountry" />
            <AggregateColumn name="Name" aggregate="MAX" alias="MaxLoadingCountry" />
            <AggregateColumn name="Name" aggregate="COUNT" alias="CntLoadingCountry" />
          </SimpleJoin>
        </SimpleJoin>

        <SimpleJoin name="UnloadingPlace" joinType="LEFT">
          <AggregateColumn name="Date" aggregate="MIN" alias="MinUnloadingDate" />
          <AggregateColumn name="Date" aggregate="MAX" alias="MaxUnloadingDate" />
          <AggregateColumn name="Date" aggregate="COUNT" alias="CntUnloadingDate" />
          
          <SimpleJoin joinType="LEFT" name="Country">
            <AggregateColumn name="Name" aggregate="MIN" alias="MinUnloadingCountry" />
            <AggregateColumn name="Name" aggregate="MAX" alias="MaxUnloadingCountry" />
            <AggregateColumn name="Name" aggregate="COUNT" alias="CntUnloadingCountry" />
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>
    </ExternalJoin>
  </Columns>
  <Order>
    <OrderBy column="Date" descending="true" />
  </Order>
</View>