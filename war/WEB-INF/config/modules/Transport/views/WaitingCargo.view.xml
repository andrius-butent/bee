<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view" xmlns:xi="http://www.w3.org/2001/XInclude"
      name="WaitingCargo"
      source="OrderCargo"
      readOnly="true"
      filter="!(Cargo) OR MultipleSegments"
    >
  <Columns>
    <SimpleJoin name="Order" joinType="INNER">
      <SimpleColumn name="Status" />
      <SimpleColumn name="OrderNo" />

      <SimpleJoin joinType="LEFT" name="Customer">
        <SimpleColumn name="Name" alias="CustomerName" />
      </SimpleJoin>
    </SimpleJoin>

    <SimpleJoin name="CargoHandling" joinType="LEFT">
      <xi:include href="viewcolumns/Handling.viewcolumns.xml" />
    </SimpleJoin>

    <SimpleColumn name="Description" />
    <SimpleColumn name="MultipleSegments" />

    <ExternalJoin source="CargoTrips" name="Cargo" joinType="LEFT">
      <AggregateColumn name="Cargo" aggregate="MIN"/>
    </ExternalJoin>
  </Columns>
  <Order>
    <OrderBy column="LoadingDate" />
  </Order>
</View>
