<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:x="http://www.butent.com/expression"

  name="PrintOrder"
  source="CargoAssessors"
  >
  <Columns>
    <SimpleColumn name="Cargo" />
    <SimpleColumn name="Notes" />

    <SimpleJoin name="Manager" joinType="INNER">
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleColumn name="Position" />

        <SimpleJoin joinType="LEFT" name="Company">
          <SimpleColumn name="Name" alias="CompanyName" />
          <SimpleColumn name="Code" alias="CompanyCode" />
          <SimpleColumn name="VATCode" alias="CompanyVATCode" />

          <SimpleJoin name="Contact" joinType="LEFT">
            <SimpleColumn name="Address" alias="CompanyAddress" />
            <SimpleColumn name="PostIndex" alias="CompanyPostIndex" />
            <SimpleJoin name="City" joinType="LEFT">
              <SimpleColumn name="Name" alias="CompanyCity" />
            </SimpleJoin>
            <SimpleJoin name="Country" joinType="LEFT">
              <SimpleColumn name="Name" alias="CompanyCountry" />
            </SimpleJoin>
            <SimpleColumn name="Phone" alias="CompanyPhone" />
            <SimpleColumn name="Mobile" alias="CompanyMobile" />
            <SimpleColumn name="Fax" alias="CompanyFax" />
            <SimpleJoin name="Email" joinType="LEFT">
              <SimpleColumn name="Email" alias="CompanyEmail" />
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>

        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn name="FirstName" />
          <SimpleColumn name="LastName" />
        </SimpleJoin>

        <SimpleJoin name="Contact" joinType="LEFT">
          <SimpleColumn name="Phone" />
          <SimpleColumn name="Mobile" />
          <SimpleJoin name="Email" joinType="LEFT">
            <SimpleColumn name="Email" />
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleJoin name="Cargo" joinType="INNER">
      <SimpleJoin name="Order" joinType="INNER">
        <SimpleColumn name="Date" alias="OrderDate" />
        <SimpleColumn name="OrderNo" />
        <SimpleColumn name="Shipper" />
        <SimpleColumn name="Notes" alias="OrderNotes" />
      
        <SimpleJoin joinType="LEFT" name="Customer">
          <SimpleColumn name="Name" alias="CustomerName" />
          <SimpleColumn name="Code" alias="CustomerCode" />
          <SimpleColumn name="VATCode" alias="CustomerVATCode" />

          <SimpleJoin name="Contact" joinType="LEFT">
            <SimpleColumn name="Address" alias="CustomerAddress" />
            <SimpleColumn name="PostIndex" alias="CustomerPostIndex" />
            <SimpleJoin name="City" joinType="LEFT">
              <SimpleColumn name="Name" alias="CustomerCity" />
            </SimpleJoin>
            <SimpleJoin name="Country" joinType="LEFT">
              <SimpleColumn name="Name" alias="CustomerCountry" />
            </SimpleJoin>
            <SimpleColumn name="Phone" alias="CustomerPhone" />
            <SimpleColumn name="Mobile" alias="CustomerMobile" />
            <SimpleColumn name="Fax" alias="CustomerFax" />
            <SimpleJoin name="Email" joinType="LEFT">
              <SimpleColumn name="Email" alias="CustomerEmail" />
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>

      <SimpleColumn name="Notes" alias="CargoNotes" />

      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" />
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="LoadingCountryName" />
          <SimpleColumn name="Code" alias="LoadingCountryCode" />
        </SimpleJoin>
        <SimpleColumn name="Terminal" alias="LoadingTerminal" />
      </SimpleJoin>
      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" />
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="UnloadingCountryName" />
          <SimpleColumn name="Code" alias="UnloadingCountryCode" />
        </SimpleJoin>
        <SimpleColumn name="Terminal" alias="UnloadingTerminal" />
      </SimpleJoin>

      <SimpleColumn name="Description" />

      <SimpleColumn name="Weight" />
      <SimpleColumn name="Volume" />
      <SimpleColumn name="Quantity" />
      <SimpleColumn name="Value" />
      <SimpleJoin joinType="LEFT" name="ValueCurrency">
        <SimpleColumn name="Name" alias="ValueCurrencyName" />
      </SimpleJoin>

      <SimpleColumn name="Number" />
      <SimpleColumn name="Cmr" />

      <SimpleColumn name="Currency" />
      <SimpleJoin joinType="LEFT" name="Currency">
        <SimpleColumn name="Name" alias="CurrencyName" />
      </SimpleJoin>
    </SimpleJoin>
  </Columns>
</View>
