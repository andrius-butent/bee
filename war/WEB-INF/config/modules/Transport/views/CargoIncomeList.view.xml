<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
      xmlns:x="http://www.butent.com/expression"

  name="CargoIncomeList" source="CargoIncomes"
  >
  <Columns>
    <SimpleColumn name="Cargo" />
    <SimpleJoin name="Cargo" joinType="INNER">
      <SimpleColumn name="Cmr" />
      <SimpleColumn name="Order" />
      <SimpleJoin name="Order" joinType="INNER">
        <SimpleColumn name="Status" />
        <SimpleColumn name="Date" alias="OrderDate" />
        <SimpleColumn name="OrderNo" />
        
        <SimpleColumn name="Customer" />
        <SimpleJoin joinType="LEFT" name="Customer">
          <SimpleColumn name="Name" alias="CustomerName" />
          <SimpleColumn name="CreditDays" alias="CustomerCreditDays" />
        </SimpleJoin>

        <SimpleColumn name="Payer" />
        <SimpleJoin joinType="LEFT" name="Payer">
          <SimpleColumn name="Name" alias="PayerName" />
          <SimpleColumn name="CreditDays" alias="PayerCreditDays" />
        </SimpleJoin>
      </SimpleJoin>
      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Code" alias="LoadingCountryCode" />
        </SimpleJoin>
      </SimpleJoin>
      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Code" alias="UnloadingCountryCode" />
        </SimpleJoin>
        <SimpleColumn name="Date" alias="UnloadingDate" />
      </SimpleJoin>
      
      <SimpleJoin source="CargoTrips" name="Cargo" joinType="LEFT">
        <SimpleJoin name="Trip" joinType="LEFT">
          <SimpleJoin name="Vehicle" joinType="LEFT">
            <SimpleColumn name="Number" alias="Vehicle" />
          </SimpleJoin>
          <SimpleJoin name="Trailer" joinType="LEFT">
            <SimpleColumn name="Number" alias="Trailer" />
          </SimpleJoin>
        
          <SimpleJoin source="TripDrivers" name="Trip" joinType="LEFT">
            <SimpleJoin name="Driver" joinType="LEFT">
              <SimpleJoin name="CompanyPerson" joinType="LEFT">
                <SimpleJoin name="Person" joinType="LEFT">
                  <HiddenColumn name="FirstName" />
                  <HiddenColumn name="LastName" />
                  <SimpleColumn name="Driver">
                    <x:concat>
                      <x:string>"FirstName"</x:string>
                      <x:string>' '</x:string>
                      <x:nvl type="STRING">
                        <x:string>"LastName"</x:string>
                        <x:string>''</x:string>
                      </x:nvl>
                    </x:concat>
                  </SimpleColumn>
                </SimpleJoin>
              </SimpleJoin>
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>
        
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="Service" />
    <SimpleJoin joinType="LEFT" name="Service">
      <SimpleColumn name="Item" />
      <SimpleColumn name="Name" alias="ServiceName" />
    </SimpleJoin>
    <SimpleColumn name="Amount" />
    <SimpleColumn name="Currency" />
    <SimpleJoin joinType="LEFT" name="Currency">
      <SimpleColumn name="Name" alias="CurrencyName" />
    </SimpleJoin>
    <SimpleColumn name="Vat" />
    <SimpleColumn name="VatPercent" />
    
    <SimpleColumn name="Customer" alias="Company" />
    <SimpleJoin joinType="LEFT" name="Customer">
      <SimpleColumn name="Name" alias="CompanyName" />
      <SimpleColumn name="CreditDays" alias="CompanyCreditDays" />
    </SimpleJoin>

    <SimpleColumn name="Note" />

    <SimpleColumn name="Sale" />
    <SimpleJoin name="Sale" joinType="LEFT">
      <SimpleColumn name="Proforma" />
    </SimpleJoin>
    <SimpleColumn name="Purchase" />
  </Columns>
  <Order>
    <OrderBy column="OrderDate" />
    <OrderBy column="OrderNo" />
  </Order>
</View>
