<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="VehicleModels"
  source="VehicleModels"
  >
  <Columns>
    <SimpleColumn name="Name" />
    <SimpleColumn name="Parent" />
    <SimpleJoin joinType="LEFT" name="Parent">
      <SimpleColumn name="Name" alias="ParentName" />
    </SimpleJoin>
    <SimpleColumn name="ModelName">
      <concat>
        <nvl type="STRING"><string>"ParentName"</string><string>''</string></nvl>
        <string>' '</string>
        <string>"Name"</string>
      </concat>
    </SimpleColumn>
  </Columns>
  <Order>
    <OrderBy column="ParentName" />
    <OrderBy column="Name" />
  </Order>
</View>
 