<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/view.xsd"

  name="OrderCargo"
  source="OrderCargo"
  >
  <Columns>
    <SimpleColumn name="Order" />
    <SimpleColumn name="LoadingDate" />
    <SimpleColumn name="LoadingCountry" />
    <SimpleJoin joinType="LEFT" name="LoadingCountry">
      <SimpleColumn name="Name" alias="LoadingCountryName" />
    </SimpleJoin>
    <SimpleColumn name="LoadingPlace" />
    <SimpleColumn name="LoadingTerminal" />
    <SimpleColumn name="UnloadingDate" />
    <SimpleColumn name="UnloadingCountry" />
    <SimpleJoin joinType="LEFT" name="UnloadingCountry">
      <SimpleColumn name="Name" alias="UnloadingCountryName" />
    </SimpleJoin>
    <SimpleColumn name="UnloadingPlace" />
    <SimpleColumn name="UnloadingTerminal" />
    <SimpleColumn name="Cargo" />
    <SimpleColumn name="Weight" />
    <SimpleColumn name="Volume" />
    <SimpleColumn name="Quantity" />
    <SimpleColumn name="Number" />
    <SimpleColumn name="Cmr" />
    <SimpleColumn name="Notes" />
    <ExternalJoin source="CargoServices" joinType="LEFT" name="Cargo">
      <HiddenColumn name="Quantity" alias="Qty" />
      <HiddenColumn name="Price" />
      <AggregateColumn name="Total" aggregate="SUM">
        <cast type="DECIMAL" precision="12" scale="2">
          <number>"Qty" * "Price"</number>
        </cast>
      </AggregateColumn>
      <AggregateJoin joinType="LEFT" name="Currency">
        <AggregateColumn name="Name" aggregate="MIN" alias="MinCurr" />
        <AggregateColumn name="Name" aggregate="MAX" alias="MaxCurr" />
      </AggregateJoin>
    </ExternalJoin>
  </Columns>
  <Order>
    <OrderBy column="LoadingDate" />
  </Order>
</View>
