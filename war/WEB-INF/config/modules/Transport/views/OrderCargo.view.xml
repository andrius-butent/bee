<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:xpr="http://www.butent.com/expression"

  name="OrderCargo"
  source="OrderCargo"
  editForm="OrderCargo"
  >
  <Columns>
    <SimpleColumn name="Order" />
    
    <SimpleJoin name="LoadingPlace" joinType="LEFT">
      <SimpleColumn name="Date" alias="LoadingDate" />
      <SimpleColumn name="Country" alias="LoadingCountry" />
      <SimpleJoin joinType="LEFT" name="Country">
        <SimpleColumn name="Name" alias="LoadingCountryName" />
        <SimpleColumn name="Code" alias="LoadingCountryCode" />
      </SimpleJoin>
      <SimpleColumn name="Place" alias="LoadingPlace" />
      <SimpleColumn name="Terminal" alias="LoadingTerminal" />
    </SimpleJoin>
    <SimpleJoin name="UnloadingPlace" joinType="LEFT">
      <SimpleColumn name="Date" alias="UnloadingDate" />
      <SimpleColumn name="Country" alias="UnloadingCountry" />
      <SimpleJoin joinType="LEFT" name="Country">
        <SimpleColumn name="Name" alias="UnloadingCountryName" />
        <SimpleColumn name="Code" alias="UnloadingCountryCode" />
      </SimpleJoin>
      <SimpleColumn name="Place" alias="UnloadingPlace" />
      <SimpleColumn name="Terminal" alias="UnloadingTerminal" />
    </SimpleJoin>
    
    <SimpleColumn name="Description" />

    <SimpleColumn name="Weight" />
    <SimpleColumn name="Volume" />
    <SimpleColumn name="LDM" />
    <SimpleColumn name="Length" />
    <SimpleColumn name="Width" />
    <SimpleColumn name="Height" />
    <SimpleColumn name="Quantity" />
    <SimpleColumn name="Palettes" />
    <SimpleColumn name="Value" />
    <SimpleColumn name="ValueCurrency" />
    <SimpleJoin joinType="LEFT" name="ValueCurrency">
      <SimpleColumn name="Name" alias="ValueCurrencyName" />
    </SimpleJoin>

    <SimpleColumn name="Number" />
    <SimpleColumn name="Cmr" />
    <SimpleColumn name="LoadedKilometers" />
    <SimpleColumn name="EmptyKilometers" />
    <SimpleColumn name="ShippingTerms" />
    <SimpleJoin joinType="LEFT" name="ShippingTerms">
      <SimpleColumn name="Name" alias="ShippingTermName" />
    </SimpleJoin>
    <SimpleColumn name="Partial" />
    <SimpleColumn name="ExchangeOfPalettes" />

    <ExternalJoin source="CargoTrips" name="Cargo" joinType="LEFT">
      <AggregateJoin name="Trip" joinType="LEFT">
        <AggregateColumn name="Expedition" aggregate="MAX" />
      </AggregateJoin>
    </ExternalJoin>
    
    <SimpleColumn name="Notes" />
    <SimpleColumn name="Price" />
    <SimpleColumn name="Currency" />
    <SimpleJoin joinType="LEFT" name="Currency">
      <SimpleColumn name="Name" alias="CurrencyName" />
    </SimpleJoin>
    <SimpleColumn name="Income">
      <xpr:number>0</xpr:number>
    </SimpleColumn>
  </Columns>
  <Order>
    <OrderBy column="LoadingDate" />
  </Order>
</View>
