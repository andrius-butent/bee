<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="AssessmentForwarders" source="AssessmentForwarders" caption="=carriers"
  >
  <Columns>
    <SimpleColumn name="Assessment" />

    <SimpleJoin name="CargoTrip" joinType="INNER">
      <SimpleColumn name="Cargo" />
  
      <SimpleJoin joinType="LEFT" name="Trip">
        <SimpleColumn name="Expedition" editable="true" />
        <SimpleJoin joinType="LEFT" name="Expedition">
          <SimpleColumn name="Name" alias="ExpeditionType" label="=trExpeditionType" />
        </SimpleJoin>
  
        <SimpleColumn name="Forwarder" editable="true" />
        <SimpleJoin joinType="LEFT" name="Forwarder">
          <SimpleColumn name="Name" alias="ForwarderName" label="=carrier" />
        </SimpleJoin>
  
        <SimpleColumn name="ForwarderVehicle" editable="true" />
        <SimpleColumn name="Notes" label="=transportOtherDetails" editable="true" />
      </SimpleJoin>
  
      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" editable="true" label="=trLoadingDate" />
        <SimpleColumn name="Contact" alias="LoadingContact" editable="true" label="=trLoadingContact" />
        <SimpleColumn name="Address" alias="LoadingAddress" editable="true" label="=trLoadingAddress" />
      </SimpleJoin>
  
      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" editable="true" label="=trUnloadingDate" />
        <SimpleColumn name="Contact" alias="UnloadingContact" editable="true" label="=trUnloadingContact" />
        <SimpleColumn name="Address" alias="UnloadingAddress" editable="true" label="=trUnloadingAddress" />
      </SimpleJoin>
    </SimpleJoin>

    <SimpleJoin joinType="INNER" name="CargoExpense">
      <SimpleColumn name="Cargo" alias="ServiceCargo" />

      <SimpleColumn name="Service" editable="true" />
      <SimpleJoin joinType="LEFT" name="Service">
        <SimpleColumn name="Name" alias="ServiceName" />
      </SimpleJoin>
      <SimpleColumn name="Amount" editable="true" />
      <SimpleColumn name="Currency" editable="true" />
      <SimpleJoin joinType="LEFT" name="Currency">
        <SimpleColumn name="Name" alias="CurrencyName" />
      </SimpleJoin>
      <SimpleColumn name="Supplier" editable="true" />
      <SimpleJoin name="Supplier" joinType="LEFT">
        <SimpleColumn name="Name" alias="SupplierName" />
      </SimpleJoin>
      <SimpleColumn name="Date" editable="true" />
      <SimpleColumn name="Number" editable="true" />
      <SimpleColumn name="Note" label="=transportConditions" editable="true" />
    </SimpleJoin>
  </Columns>
</View>
