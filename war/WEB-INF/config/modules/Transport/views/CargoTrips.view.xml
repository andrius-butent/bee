<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
      xmlns:xpr="http://www.butent.com/expression"

      name="CargoTrips" source="CargoTrips" caption="=cargos"
    >
  <Columns>
    <SimpleColumn name="Cargo" />
    <SimpleJoin name="Cargo" joinType="LEFT">
      <HiddenColumn name="CargoHandling" alias="DefaultHandling" />
    </SimpleJoin>
    <SimpleColumn name="CargoPercent" />
    <SimpleColumn name="TripPercent" />

    <SimpleColumn name="Trip" />
    <SimpleJoin joinType="LEFT" name="Trip">
      <SimpleColumn name="TripNo" />
      <SimpleColumn name="DateFrom" />
      <SimpleColumn name="DateTo" />
      <SimpleColumn name="ForwarderVehicle" />
      <SimpleColumn name="ForwarderDriver" />

      <SimpleJoin joinType="LEFT" name="Expedition">
        <SimpleColumn name="Name" alias="ExpeditionType" />
      </SimpleJoin>

      <SimpleJoin joinType="LEFT" name="Forwarder">
        <SimpleColumn name="Name" alias="ForwarderName" />
      </SimpleJoin>

      <SimpleJoin name="Vehicle" joinType="LEFT">
        <SimpleColumn name="Number" alias="VehicleNumber" />
      </SimpleJoin>

      <SimpleJoin name="Trailer" joinType="LEFT">
        <SimpleColumn name="Number" alias="TrailerNumber" />
      </SimpleJoin>

      <SimpleJoin name="MainDriver" joinType="LEFT">
        <SimpleJoin name="Driver" joinType="LEFT">
          <SimpleJoin name="CompanyPerson" joinType="LEFT">
            <SimpleJoin name="Person" joinType="LEFT">
              <HiddenColumn name="FirstName" />
              <HiddenColumn name="LastName" />

              <SimpleColumn name="Driver" label="=vehicleDriver">
                <xpr:concat>
                  <xpr:string>"FirstName"</xpr:string>
                  <xpr:string>' '</xpr:string>
                  <xpr:string>"LastName"</xpr:string>
                </xpr:concat>
              </SimpleColumn>
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="CargoHandling" />
    <SimpleJoin name="CargoHandling" joinType="LEFT"
                filter="OR !(CargoHandling) AND Handling=DefaultHandling">
      <IdColumn name="Handling" hidden="true" />
      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" label="=trLoadingDate" />
        <SimpleColumn name="Note" alias="LoadingNote" label="=trLoadingNote" />
        <SimpleColumn name="Number" alias="LoadingNumber" label="=trLoadingNumber" />
        <SimpleColumn name="Contact" alias="LoadingContact" label="=trLoadingContact" />
        <SimpleColumn name="Company" alias="LoadingCompany" label="=trLoadingCompany" />
        <SimpleColumn name="Address" alias="LoadingAddress" label="=trLoadingAddress" />
        <SimpleColumn name="PostIndex" alias="LoadingPostIndex" label="=trLoadingPostIndex" />

        <SimpleJoin joinType="LEFT" name="City">
          <SimpleColumn name="Name" alias="LoadingCityName" />
        </SimpleJoin>
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="LoadingCountryName" />
          <SimpleColumn name="Code" alias="LoadingCountryCode" />
        </SimpleJoin>
      </SimpleJoin>

      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" label="=trUnloadingDate" />
        <SimpleColumn name="Note" alias="UnloadingNote" label="=trUnloadingNote" />
        <SimpleColumn name="Number" alias="UnloadingNumber" label="=trUnloadingNumber" />
        <SimpleColumn name="Contact" alias="UnloadingContact" label="=trUnloadingContact" />
        <SimpleColumn name="Company" alias="UnloadingCompany" label="=trUnloadingCompany" />
        <SimpleColumn name="Address" alias="UnloadingAddress" label="=trUnloadingAddress" />
        <SimpleColumn name="PostIndex" alias="UnloadingPostIndex" label="=trUnloadingPostIndex" />

        <SimpleJoin joinType="LEFT" name="City">
          <SimpleColumn name="Name" alias="UnloadingCityName" />
        </SimpleJoin>
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="UnloadingCountryName" />
          <SimpleColumn name="Code" alias="UnloadingCountryCode" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleJoin name="Trailer" joinType="LEFT">
      <SimpleColumn name="Number" alias="LocalTrailer" />
    </SimpleJoin>
  </Columns>
</View>
