<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
      xmlns:x="http://www.butent.com/expression"

  name="PrintLogisticsInvoice" source="Sales"
  >
  <Columns>
    <SimpleColumn name="Date" />
    <SimpleColumn name="Number" />
    <SimpleColumn name="InvoicePrefix" />
    <SimpleColumn name="InvoiceNo" />
    <SimpleColumn name="Term" />

    <SimpleColumn name="Vehicle" />
    <SimpleColumn name="Driver" />
    <SimpleColumn name="Notes" />
    <SimpleColumn name="Exported" />
    <SimpleColumn name="Proforma" />

    <SimpleColumn name="Amount" />
    <SimpleColumn name="Currency" />
    <SimpleJoin joinType="LEFT" name="Currency">
      <SimpleColumn name="Name" alias="CurrencyName" />
      <SimpleColumn name="MinorName" />
    </SimpleJoin>
    
    <SimpleColumn name="PaymentTime" />
    <SimpleColumn name="Paid" />
    
    <SimpleColumn name="Debt">
      <x:minus>
        <x:number>"Amount"</x:number>
        <x:nvl type="DECIMAL">
          <x:number>"Paid"</x:number>
          <x:number>0</x:number>
        </x:nvl>
      </x:minus>
    </SimpleColumn>

    <SimpleColumn name="Supplier" />
    <SimpleJoin joinType="LEFT" name="Supplier">
      <SimpleColumn name="Name" alias="SupplierName" />
      <SimpleColumn name="Code" alias="SupplierCode" />
      <SimpleColumn name="VatCode" alias="SupplierVatCode" />
      <SimpleJoin name="Contact" joinType="LEFT">
        <SimpleColumn name="Address" alias="SupplierAddress" />
        <SimpleJoin name="City" joinType="LEFT">
          <SimpleColumn name="Name" alias="SupplierCityName" />
        </SimpleJoin>
        <SimpleJoin name="Country" joinType="LEFT">
          <SimpleColumn name="Name" alias="SupplierCountryName" />
        </SimpleJoin>
        <SimpleColumn name="PostIndex" alias="SupplierPostIndex" />
        <SimpleColumn name="Phone" alias="SupplierPhone" />
        <SimpleColumn name="Fax" alias="SupplierFax" />
      </SimpleJoin>
      <SimpleJoin name="DefaultBankAccount" joinType="LEFT">
        <SimpleColumn name="BankAccount" alias="SupplierBankAccount" />
        <SimpleJoin name="Bank" joinType="LEFT">
          <SimpleColumn name="Name" alias="SupplierBankName" />
          <SimpleColumn name="BankCode" alias="SupplierBankCode" />
          <SimpleColumn name="SWIFTCode" alias="SupplierBankSWIFTCode" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
    
    <SimpleColumn name="Customer" />
    <SimpleJoin joinType="LEFT" name="Customer">
      <SimpleColumn name="Name" alias="CustomerName" />
      <SimpleColumn name="Name2" alias="CustomerName2" />
      <SimpleColumn name="Code" alias="CustomerCode" />
      <SimpleColumn name="VatCode" alias="CustomerVatCode" />
      <SimpleJoin name="Contact" joinType="LEFT">
        <SimpleColumn name="Address" alias="CustomerAddress" />
        <SimpleColumn name="Address2" alias="CustomerAddress2" />
        <SimpleJoin name="City" joinType="LEFT">
          <SimpleColumn name="Name" alias="CustomerCityName" />
        </SimpleJoin>
        <SimpleJoin name="Country" joinType="LEFT">
          <SimpleColumn name="Name" alias="CustomerCountryName" />
        </SimpleJoin>
        <SimpleColumn name="PostIndex" alias="CustomerPostIndex" />
        <SimpleColumn name="Phone" alias="CustomerPhone" />
        <SimpleColumn name="Fax" alias="CustomerFax" />
      </SimpleJoin>
    </SimpleJoin>
    
    <SimpleColumn name="Payer" />
    <SimpleJoin joinType="LEFT" name="Payer">
      <SimpleColumn name="Name" alias="PayerName" />
    </SimpleJoin>
    
    <SimpleColumn name="Manager" />
    <SimpleJoin name="Manager" joinType="LEFT">
      <SimpleColumn name="CompanyPerson" alias="ManagerPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn name="FirstName" alias="ManagerFirstName" />
          <SimpleColumn name="LastName" alias="ManagerLastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
    
    <ExternalJoin name="Sale" source="CargoIncomes" joinType="LEFT">
      <AggregateColumn name="Sale" aggregate="MAX" />
    </ExternalJoin>
  </Columns>
  <Order>
    <OrderBy column="Date" descending="true" />
  </Order>
</View>