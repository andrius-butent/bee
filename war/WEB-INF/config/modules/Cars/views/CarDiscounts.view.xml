<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view" xmlns:xi="http://www.w3.org/2001/XInclude"

      name="CarDiscounts" source="CarDiscounts"
      caption="=discounts" newRowCaption="=discountNew"
>
  <Columns>
    <SimpleJoin name="Discount" joinType="LEFT">
      <xi:include href="../../Classifiers/views/viewcolumns/Discounts.viewcolumns.xml" />
    </SimpleJoin>

    <SimpleColumn name="Model" />
    <SimpleJoin name="Model" joinType="LEFT">
      <SimpleJoin name="Parent" joinType="LEFT">
        <SimpleColumn name="Name" alias="ParentModelName" />
      </SimpleJoin>
      <SimpleColumn name="Name" alias="ModelName" />
    </SimpleJoin>

    <SimpleColumn name="Job" />
    <SimpleJoin joinType="LEFT" name="Job">
      <SimpleColumn name="JobName" />
      <SimpleColumn name="Code" />
    </SimpleJoin>
  </Columns>
</View>
