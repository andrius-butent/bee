<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"

        name="StageEditor" width="800" height="600" disabledActions="save print"
>
  <FlowPanel class="flexBox-horizontal">
    <GridPanel name="Stages" style="width:30%;" />
    <FlowPanel class="flexBox-vertical flexible">
      <ChildGrid name="StageConditions" relColumn="Stage" parent="Stages" class="flexible" />
      <ChildGrid name="StageActions" relColumn="Stage" parent="Stages" class="flexible" />
      <ChildGrid name="StageTriggers" relColumn="Stage" parent="Stages" class="flexible" />
    </FlowPanel>
  </FlowPanel>
</f:Form>