<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"

  name="ObjectEarnings" viewName="ObjectEarnings"
  editForm="ObjectEarnings" editPopup="true" disabledActions="add delete"
  >

  <g:columns>
    <DataColumn name="LocationName" visible="true" flexGrow="1" />
    <DataColumn name="Address" visible="false" flexGrow="1" />

    <DataColumn name="CompanyName" label="=company" flexGrow="1" />
    <RelColumn name="CompanyPerson" renderColumns="ContactFirstName ContactLastName"
      choiceColumns="FirstName LastName CompanyName" flexGrow="1" visible="false" />

    <RelColumn name="Manager" renderColumns="ManagerFirstName ManagerLastName" flexGrow="1"
      visible="false" />

    <DataColumn name="Status" />
    <DataColumn name="Notes" visible="false" flexGrow="1" />

    <DataColumn name="Year" visible="false" />
    <DataColumn name="Month" visible="false" />
    
    <PropColumn name="Salary_fund" type="decimal" label="=objectSalaryFund" scale="2" />
    <PropColumn name="Earnings_duration" type="string" label="=duration" />
    <PropColumn name="Earnings_amount" type="decimal" label="=remuneration" scale="2" />

    <DataColumn name="Approved" />
    <RelColumn name="ApprovedBy" renderColumns="ApprovedByFirstName ApprovedByLastName"
      visible="false" />
    <DataColumn name="ApprovedAmount" visible="false" />
    <RelColumn name="ApprovedCurrency" visible="false" />

    <DataColumn name="Exported" />
    <RelColumn name="ExportedBy" renderColumns="ExportedByFirstName ExportedByLastName"
      visible="false" />
    <DataColumn name="ExportedAmount" visible="false" />
    <RelColumn name="ExportedCurrency" visible="false" />

    <DataColumn name="Note" visible="false" flexGrow="1" />
  </g:columns>
</g:Grid>
