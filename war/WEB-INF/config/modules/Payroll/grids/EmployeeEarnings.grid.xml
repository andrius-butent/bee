<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"

  name="EmployeeEarnings" viewName="EmployeeEarnings"
  disabledActions="add delete"
  >

  <g:columns>
    <RelColumn name="Employee" renderColumns="FirstName LastName" editPopup="true"
      readOnly="true" visible="true" flexGrow="1">
      <footer text="=totalOf" horizontalAlignment="right" />
    </RelColumn>

    <DataColumn name="EmployeeCompanyName" label="=company" flexGrow="1" />
    <DataColumn name="TabNumber" />

    <DataColumn name="Year" visible="false" />
    <DataColumn name="Month" visible="false" />
    
    <PropColumn name="Earnings_day_count" type="integer" label="=days" />
    <PropColumn name="Earnings_duration" type="string" horizontalAlignment="right"
      label="=duration" />
    <PropColumn name="Earnings_hourly_wage" type="decimal" label="=wage" scale="5" />
    <PropColumn name="Earnings_amount" type="decimal" label="=remuneration" scale="2">
      <footer aggregate="sum" />
    </PropColumn>

    <DataColumn name="BonusPercent">
      <footer expression="row.BonusPercent ? (row.Earnings_amount * row.BonusPercent / 100).toFixed(2) : 0"
        scale="2" />
    </DataColumn>
    <DataColumn name="Bonus1">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="Bonus2">
      <footer aggregate="sum" />
    </DataColumn>
    
    <CalcColumn name="Total" type="decimal" scale="2" label="=total">
      <footer aggregate="sum" />
    </CalcColumn>
    
    <DataColumn name="ApprovedAmount">
      <footer aggregate="sum" />
    </DataColumn>
    <DataColumn name="ExportedAmount" visible="false">
      <footer aggregate="sum" />
    </DataColumn>

    <DataColumn name="Note" visible="false" flexGrow="1" />
  </g:columns>
</g:Grid>
