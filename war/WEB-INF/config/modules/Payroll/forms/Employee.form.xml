<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY w1 "width: 240px;">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form" 

  name="Employee" viewName="Employees" caption="=employee">
  <FlowPanel class="flexBox-vertical">
    <Table>
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label text="=personFullName" class="bee-required" />
        <DataSelector source="CompanyPerson" style="&w1;" renderColumns="FirstName LastName"
          choiceColumns="FirstName LastName CompanyName" />

        <Label for="TabNumber" />
        <InputInteger source="TabNumber" />
      </row>

      <row>
        <Label text="=company" />
        <TextLabel source="CompanyName" style="&w1;" />

        <Label for="Salary" />
        <InputDecimal source="Salary" currencySource="Currency" />
        <cell style="padding-left: 6px;">
          <DataSelector source="Currency" for="Salary" newRowEnabled="false" editEnabled="false"
            style="width: 4em;" />
        </cell>
      </row>

      <row>
        <Label text="=department" />
        <TextLabel source="DepartmentName" style="&w1;" />

        <Label for="PartTime" />
        <InputDecimal source="PartTime" />
      </row>

      <row>
        <Label text="=personPosition" />
        <TextLabel source="PositionName" style="&w1;" />

        <Label for="DateOfEmployment" />
        <DateLabel source="DateOfEmployment" />
      </row>

      <row>
        <Label text="=phones" />
        <TextLabel source="Phone" style="&w1;" />

        <Label for="DateOfDismissal" />
        <DateLabel source="DateOfDismissal" style="color: red;" />
      </row>

      <row>
        <Label text="=email" />
        <TextLabel source="Email" style="&w1;" textOnly="true" />
      </row>
    </Table>

    <TabbedPages class="flexible">
      <page>
        <text>=notes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
