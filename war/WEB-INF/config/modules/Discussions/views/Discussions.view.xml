<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view" xmlns:x="http://www.butent.com/expression"
  name="Discussions" source="Discussions"
  caption="=discussions" rowCaption="Subject" newRowForm="NewDiscussion"
  editForm="Discussion"
  >
  <Relation renderColumns="Subject" />
  <Columns>
    <SimpleColumn name="Subject" />
    <SimpleColumn name="Description" />
    <SimpleColumn name="Summary" />


    <SimpleColumn name="Created" />
    <SimpleColumn name="Status" />

    <SimpleColumn name="Owner" />
    <SimpleJoin name="Owner" joinType="LEFT">
      <SimpleColumn name="CompanyPerson" alias="OwnerPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="OwnerFirstName" name="FirstName" />
          <SimpleColumn alias="OwnerLastName" name="LastName" />
          <SimpleColumn alias="OwnerPhoto" name="PhotoFile" /> 
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="Accessibility" />

    <SimpleColumn name="Topic" />
    <SimpleJoin name="Topic" joinType="LEFT">
      <SimpleColumn alias="TopicName" name="Name" />
    </SimpleJoin>

    <SimpleColumn name="VisibleFrom" />
    <SimpleColumn name="VisibleTo" />
    <SimpleColumn name="Important" />
    <SimpleColumn name="PermitComment" />

    <ExternalJoin source="DiscussionsFiles" joinType="LEFT"
      name="Discussion" filter="!(FileComment)">
      <HiddenColumn name="Comment" alias="FileComment"></HiddenColumn>
      <AggregateColumn alias="DiscussionsFilesCount" aggregate="COUNT_DISTINCT"
        name="File" />
    </ExternalJoin>

    <ExternalJoin source="DiscussionsComments" joinType="LEFT"
        name="Discussion" filter="!(CommentDeleted)">
      <HiddenColumn name="Deleted" alias="CommentDeleted"></HiddenColumn>
      <ExternalJoin source="DiscussionsFiles" joinType="LEFT" name="Comment" >
        <AggregateColumn alias="CommentsFilesCount" aggregate="COUNT_DISTINCT"
          name="File" />
      </ExternalJoin>
    </ExternalJoin>

    <SimpleColumn name="FilesCount" >
      <x:plus>
        <x:number>"DiscussionsFilesCount"</x:number>
        <x:number>"CommentsFilesCount"</x:number>
      </x:plus>
    </SimpleColumn>

    <ExternalJoin source="Relations" joinType="LEFT"
      name="Discussion">
      <AggregateColumn alias="RelCount" aggregate="COUNT_DISTINCT"
        name="Discussion" />
    </ExternalJoin> 

    <ExternalJoin source="DiscussionsComments" joinType="LEFT"
      name="Discussion">
      <AggregateColumn alias="LastCommentPublishTime" aggregate="MAX"
        name="PublishTime" />    
      <AggregateColumn alias="CommentCount" aggregate="COUNT_DISTINCT"
        name="PublishTime" />
    </ExternalJoin>
    
    <ExternalJoin name="Discussion" source="DiscussionsUsers" joinType="LEFT" filter="DiscussionUser = {u}">
      <HiddenColumn name="User" alias="DiscussionUser"></HiddenColumn>
      <SimpleColumn name="Star"/>
      <SimpleColumn name="LastAccess"/>
    </ExternalJoin>
  </Columns>

  <Order>
    <OrderBy column="Status" />
    <OrderBy column="Created" descending="true" />
  </Order>
</View>
 