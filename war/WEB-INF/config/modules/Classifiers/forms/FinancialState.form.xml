<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl1 "width: 145px; text-align: right; padding-right: 9px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="FinancialState" viewName="FinancialStates" caption="=financialStateName"
  height="150" width="400">

  <FlowPanel style="padding: 15px 1em;">
    <Table style="border-spacing: 5px;" kind="controls">
      <row for="Name">
        <Label text="=name" class="bee-required" horizontalAlignment="right"
          style="&lbl1;" />
        <InputText source="Name" />
      </row>
      <row for="Color">
        <Label text="=color" horizontalAlignment="right" style="&lbl1;" />
        <DataSelector source="Color" renderColumns="ColorName"/>
      </row>
    </Table>
  </FlowPanel>
</f:Form>