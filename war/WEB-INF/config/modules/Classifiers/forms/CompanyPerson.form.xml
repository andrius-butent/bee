<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "margin-left: 1em; margin-right: 1em; text-align: right">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
    
  name="CompanyPerson" viewName="CompanyPersons" caption="=companyPerson"
  height="350" width="800"
  >
  <FlowPanel>
    <Table style="margin-top: 1ex;">
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label name="CompanyLabel" for="Company" />
        <DataSelector name="Company" source="Company" style="width: 200px" />
        <Label name="PersonLabel" for="Person" />
        <DataSelector name="Person" source="Person" style="width: 200px" />
      </row>
      <row>
        <Label for="Department" />
        <DataSelector source="Department" style="width: 200px" />
        <Label for="Position" />
        <DataSelector source="Position" style="width: 200px" />
      </row>
      <row>
        <Label for="DateOfEmployment" />
        <InputDate source="DateOfEmployment" style="width: 200px" />
        <Label for="DateOfDismissal" />
        <InputDate source="DateOfDismissal" style="width: 200px" />
      </row>
    </Table>
    <Disclosure open="true">
      <Label text="=contactInfo" style="text-transform: uppercase; " />

      <Table>
        <row>
          <Label text="=phones" style="&lbl;" for="Phone" />
          <InputText source="Phone" />
          <Label text="=mobile" style="&lbl;" for="Mobile" class="bee-required" />
          <InputText source="Mobile" required="true" />
          <Label text="=fax" style="&lbl;" for="Fax" />
          <InputText source="Fax" />
        </row>
      
        <row>
          <Label for="EmailId" style="&lbl;" class="bee-required" />
          <cell colSpan="2" for="EmailId" >
            <DataSelector source="EmailId" style="width: 100%;" maxLength="50" required="true" />
          </cell>
      
          <Label text="=website" style="&lbl;" for="Website" />
          <cell colSpan="2" for="Website" >
            <InputText source="Website" style="width: 100%" />
          </cell>
        </row>
        
        <row for="Address">
          <Label text="=address" style="&lbl;" />
          <cell colSpan="5">
            <InputText source="Address" style="width: 100%;" />
          </cell>
        </row>
        
        <row>
          <Label text="=city" style="&lbl;" for="City" />
          <DataSelector source="City">
            <selectorColumn source="Name" />
            <selectorColumn source="CountryName" />
            <selectorColumn source="CountryCode">
              <ui:renderer type="flag" />
            </selectorColumn>
          </DataSelector>
      
          <Label text="=country" style="&lbl;" for="Country" />
          <Table for="Country">
            <row>
              <DataSelector source="Country" style="width: 120px;">
                <renderToken source="CountryName" />
                <renderToken source="CountryCode" prefix=" (" suffix=")" />
                <selectorColumn source="Name" />
                <selectorColumn source="Code">
                  <ui:renderer type="flag" />
                </selectorColumn>
              </DataSelector>
              <Flag source="CountryCode" style="width: 22px;" />
            </row>
          </Table>
      
          <Label text="=postIndex" style="&lbl;" for="PostIndex" />
          <InputText source="PostIndex" />
        </row>
        
        <row for="SocialContacts">
          <Label text="=socialContacts" style="&lbl;" />
          <cell colSpan="5">
            <InputText source="SocialContacts" style="width: 100%;" />
          </cell>
        </row>
      </Table>
    </Disclosure>
  </FlowPanel>
</f:Form>  
