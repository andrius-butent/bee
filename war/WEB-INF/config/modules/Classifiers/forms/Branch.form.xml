<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "width: 140px; margin-right: 10px; text-align: right;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Branch" viewName="Branches" caption="=branch"
  height="300" width="800"
  >
  <FlowPanel>
    <FlowPanel class="flexBox-horizontal" style="margin-top: 2ex;">
      <Label text="=name" class="bee-required" style="&lbl;" />
      <InputText source="Name" style="width: 200px;" />
      <Label text="=code" style="&lbl;" />
      <InputText source="Code" style="width: 100px;" />
    </FlowPanel>

    <FlowPanel class="flexBox-horizontal-top" style="margin: 2ex 0;">
      <Label text="=primaryWarehouse" style="&lbl;" />
      <DataSelector source="PrimaryWarehouse" style="width: 200px;" />
      <Label text="=description" style="&lbl;" />
      <InputArea source="Description" visibleLines="4" style="width: 200px;" />
    </FlowPanel>

    <xi:include href="widgets/ContactInfoOpen.widget.xml" />
  </FlowPanel>
</f:Form>  
