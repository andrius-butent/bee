<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Table [
  <!ENTITY lbl "margin-left: 1em; margin-right: 1em; text-align: right">
]>
<Table xmlns="http://www.butent.com/widget" xmlns:ui="http://www.butent.com/ui" kind="controls">
  <row>
    <Label text="=phones" style="&lbl;" for="Phone" />
    <InputText source="Phone" summarize="true" />
    <Label text="=mobile" style="&lbl;" for="Mobile" />
    <InputText source="Mobile" summarize="true" />
    <Label text="=fax" style="&lbl;" for="Fax" />
    <InputText source="Fax" summarize="true" />
  </row>

  <row>
    <Label for="EmailId" style="&lbl;" />
    <cell colSpan="2" for="EmailId" >
      <Table kind="controls">
        <row>
          <DataSelector name="EmailId" source="EmailId" style="width: 100%;" maxLength="50" editEnabled="true" />
          <CheckBox html="-" name="RemindEmail" source="RemindEmail" title="=sendReminder" />
          <CheckBox html="-" name="EmailInvoices" source="EmailInvoices" title="=trdInvoiceShort" />
        </row>
      </Table>
    </cell>

    <Label text="=website" style="&lbl;" for="Website" />
    <cell colSpan="2" for="Website" >
      <InputText source="Website" style="width: 100%" summarize="true" />
    </cell>
  </row>

  <row>
    <Label text="=mailRecipientsGroups" style="&lbl;" />
    <cell colSpan="5">
      <ChildSelector viewName="RecipientsGroups" childTable="RcpsGroupsContacts"
        targetRelColumn="CompanyPerson" sourceRelColumn="RecipientsGroup" renderColumns="GroupName"
        choiceColumns="GroupName" label="=mailRecipientsGroups" style="width: 100%;" summarize="true" 
        filter="Creator {u} or Visibility = 0" />
    </cell>
  </row>
  <row for="Address">
    <Label text="=address" style="&lbl;" />
    <cell colSpan="5">
      <InputText source="Address" style="width: 100%;" summarize="true" />
    </cell>
  </row>

  <row>
    <Label text="=city" style="&lbl;" for="City" />
    <DataSelector source="City" summarize="true">
      <selectorColumn source="Name" />
      <selectorColumn source="CountryName" />
      <selectorColumn source="CountryCode">
        <ui:renderer type="flag" />
      </selectorColumn>
    </DataSelector>

    <Label text="=country" style="&lbl;" for="Country" />
    <HorizontalPanel for="Country">
      <DataSelector source="Country" style="width: 120px;" summarize="true">
        <renderToken source="CountryName" />
        <renderToken source="CountryCode" prefix=" (" suffix=")" />
        <selectorColumn source="Name" />
        <selectorColumn source="Code">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
      <Flag source="CountryCode" style="width: 22px;" />
    </HorizontalPanel>

    <Label text="=postIndex" style="&lbl;" for="PostIndex" />
    <InputText source="PostIndex" summarize="true" />
  </row>

  <row for="SocialContacts">
    <Label text="=socialContacts" style="&lbl;" />
    <cell colSpan="5">
      <InputText source="SocialContacts" style="width: 100%;" summarize="true" />
    </cell>
  </row>
</Table>
