<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inp1 "width: 200px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"

  name="CompanyAction" viewName="Appointments" caption="=calAction" showRowId="true" width="660" height="250">

  <FlowPanel class="flexBox-vertical">
    <Table style="border-collapse: collapse; margin-top: 1ex; margin-bottom: 2ex;"
       cellStyle="padding: 4px 10px;">
        
      <col index="0" cellStyle="text-align: right;" />
      <col index="2" cellStyle="text-align: right;" />

      <row>
        <Label for="Summary" class="bee-required" visible="true" />
        <InputText source="Summary" visible="true" style="&inp1;"/>
        <Label text="=type" for="Type" visible="true" class="bee-required"/>
        <DataSelector name="AppointmentType" source="AppointmentType" renderColumns="TypeName" 
          visible="true" style="&inp1;"/>
      </row>

      <row>
        <Label for="Company" />
        <DataSelector name="Company" source="Company" renderColumns="CompanyName" style="&inp1;"/>
        <Label for="CompanyPerson" />
        <DataSelector name="CompanyPerson" source="CompanyPerson" renderColumns="PersonFirstName PersonLastName PersonCompanyName"  style="&inp1;"
              choiceColumns="FirstName LastName CompanyNames"
              searchableColumns="FirstName LastName" options="Company" />
        
      </row>
 
      <row>
        <Label for="StartDateTime" visible="true" />
        <InputDateTime name="StartDateTime" source="StartDateTime" visible="true"  style="&inp1;" />
        <Label for="EndDateTime" visible="true" />
        <InputDateTime name="EndDateTime" source="EndDateTime" visible="true"  style="&inp1;"/>
      </row>

      <row>
        <Label for="Created" />
        <InputDateTime source="Created"  style="&inp1;"/>
        <Label for="Status" visible="true" />
        <ListBox source="Status" visible="true"  style="&inp1;"/>
      </row>

      <row>       
        <Label for="Creator" />
        <DataSelector source="Creator" editSource="CreatorCompanyPerson"
          renderColumns="CreatorFirstName CreatorLastName" style="&inp1;" />
      </row>

    </Table> 
  </FlowPanel>
</f:Form>  
