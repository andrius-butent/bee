<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Items"
  idName="ItemID"
  >
  <Fields>
    <String name="Name" precision="100" notNull="true" label="=itemName" />
    <Relation name="Unit" notNull="true" relation="Units" label="=unitName" />
    <String name="Article" precision="30" unique="true" label="=article" />
    <String name="Barcode" precision="30" unique="true" label="=itemBarcode" />
    <Numeric name="Price" precision="15" scale="5" label="=sellingPrice" />
    <Relation name="Currency" relation="Currencies" label="=currency" />
    <Boolean name="Vat" label="=vat" />
    <Numeric name="VatPercent" precision="3" label="=vatPercent" />
    <Boolean name="IsService" label="=service" />
    <String name="ExternalCode" precision="10" label="ERPCode" />
    <String name="ExternalCustomerCode" precision="10" label="ERPCustomerCode" />
  </Fields>

  <Indexes>
    <Index fields="IsService" />
  </Indexes>
</Table>
