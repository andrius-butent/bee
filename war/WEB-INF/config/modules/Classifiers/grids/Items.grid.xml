<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="Items" viewName="Items"
  newRowForm="Item" editForm="Item" editShowId="true" editInPlace="ExternalCode"
  newRowPopup="true" editPopup="true"
  >
  <g:west size="200" splitterSize="2">
    <w:DataTree name="Categories" caption="=categories" viewName="CategoryTree"
      parentColumn="Parent" hideActions="true">
      <w:calc>
        <ui:expression>row.Name</ui:expression>
      </w:calc>
    </w:DataTree>
  </g:west>
  
  <g:columns>
    <DataColumn name="Name" visible="true" />
    <RelColumn name="Unit" />
    <DataColumn name="Article" flexGrow="1" />
    <DataColumn name="Barcode" flexGrow="1" />
    <DataColumn name="Price" />
    <RelColumn name="Currency" />
    <DataColumn name="Vat" width="40">
      <carry><ui:expression>row.Vat</ui:expression></carry>
    </DataColumn>
    <DataColumn name="VatPercent" />

    <DataColumn name="ExternalCode" />
  </g:columns>
</g:Grid>
