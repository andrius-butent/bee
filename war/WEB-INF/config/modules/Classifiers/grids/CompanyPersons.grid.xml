<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  
  name="CompanyPersons" viewName="CompaniesAndPersons"
  newRowForm="CompanyPerson" newRowCaption="=newCompanyPerson"
  editForm="CompanyPerson"
  flexGrow="1"
  >
  <g:columns>
    <RelColumn name="Person" editEnabled="true" visible="true" />
    <RelColumn name="Department" />    
    <RelColumn name="Position" />
    <DataColumn name="Phone" />
    <DataColumn name="Mobile" />
    <DataColumn name="Fax" />
    <RelColumn name="EmailId" editEnabled="true" />
    <CalcColumn name="Unenployment" type="boolean"
      width="50" maxWidth="50" autoFit="true" searchBy="DateOfDismissal" filterOptions="empty"
      caption="=personUnemployment">
        <render>
          <ui:function>
            var Unenployment = row.DateOfDismissal;
            if (Unenployment != null) {
              return true;
            }     
            return false;
          </ui:function>
        </render>
    </CalcColumn>
  </g:columns>
</g:Grid>
