<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
	xmlns:ui="http://www.butent.com/ui" name="CompanyContacts" viewName="CompanyContacts"
	caption="=additionalContacts" flexGrow="1" flexShrink="1" editInPlace="RemindEmail">

	<g:columns>
		<DataColumn name="Notes" minWidth="250" visible="true" />
		<DataColumn name="Address" minWidth="200" maxWidth="300"
			visible="true" />
		<DataColumn name="PostIndex" minWidth="50" maxWidth="200" />
		<RelColumn name="City" minWidth="50" maxWidth="200"
			renderColumns="CityName" visible="true" />
		<RelColumn name="Country" minWidth="50" maxWidth="200"
			renderColumns="CountryName" visible="true" />
		<CalcColumn type="string" name="Flag" source="CountryCode"
			cellType="html" width="30" caption="-" label="=countryFlag" sortable="false"
			horizontalAlignment="center" filterOptions="-" visible="false">
			<renderer type="flag" />
		</CalcColumn>
		<DataColumn name="Phone" minWidth="100" maxWidth="200" />
		<DataColumn name="Fax" minWidth="50" maxWidth="200"
			visible="false" />
		<RelColumn name="EmailId" />
		<DataColumn name="RemindEmail" maxWidth="30">
      <validation>
        <ui:function>
            var emailId = row.EmailId;
            
            if (cell.oldValue != null &#38;&#38; cell.newValue == null) {
              return null;
            }
            
            if (emailId == null  &#38;&#38; cell.newValue != null) {
              return $wnd.Bee_maybeTranslate("=email") + ". " + $wnd.Bee_maybeTranslate("=valueRequired");
            } else {
              return null;
            }
          </ui:function>
      </validation>
    </DataColumn>
		<DataColumn name="Website" minWidth="100" maxWidth="200"
			visible="false" />
		<DataColumn name="SocialContacts" minWidth="100" maxWidth="200"
			visible="false" />
	</g:columns>
</g:Grid>
