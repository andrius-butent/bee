<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
        xmlns:ui="http://www.butent.com/ui"

        name="Journals" viewName="Journals" caption="=journals"
>
  <g:columns>
    <DataColumn name="JournalCode" minWidth="80" visible="true" />
    <DataColumn name="JournalName" flexGrow="1" visible="true" />

    <DataColumn name="Background" updateMode="row" minWidth="100">
      <editor type="color" />
    </DataColumn>
    <DataColumn name="Foreground" updateMode="row" minWidth="100">
      <editor type="color" />
    </DataColumn>
  </g:columns>

  <g:rowMessage>
    <ui:expression>row.JournalCode</ui:expression>
  </g:rowMessage>
</g:Grid>
