<?xml version="1.0" encoding="UTF-8"?>
<BeeView xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/view.xsd"

  name="Tasks"
  source="Tasks"
  >
  <BeeColumns>
    <BeeSimpleColumn expression="Priority" />
    <BeeSimpleColumn expression="Task" />
    <BeeSimpleColumn expression="StartTime" />
    <BeeSimpleColumn expression="FinishTime" />
    <BeeSimpleColumn expression="Event" />
    <BeeJoinColumn name="Owner" expression="Owner" joinType="LEFT">
      <BeeJoinColumn expression="Person" joinType="LEFT">
        <BeeSimpleColumn name="OwnerFirstName" expression="FirstName" />
        <BeeSimpleColumn name="OwnerLastName" expression="LastName" />
      </BeeJoinColumn>
    </BeeJoinColumn>
    <BeeJoinColumn name="Executor" expression="Executor" joinType="LEFT">
      <BeeJoinColumn expression="Person" joinType="LEFT">
        <BeeSimpleColumn name="ExecutorFirstName" expression="FirstName" />
        <BeeSimpleColumn name="ExecutorLastName" expression="LastName" />
      </BeeJoinColumn>
    </BeeJoinColumn>
    <BeeJoinColumn name="Company" expression="Company" joinType="LEFT">
      <BeeSimpleColumn name="CompanyName" expression="Name" />
    </BeeJoinColumn>
    <BeeJoinColumn name="CompanyPerson" expression="CompanyPerson" joinType="LEFT">
      <BeeJoinColumn expression="Person" joinType="LEFT">
        <BeeSimpleColumn name="PersonFirstName" expression="FirstName" />
        <BeeSimpleColumn name="PersonLastName" expression="LastName" />
      </BeeJoinColumn>
    </BeeJoinColumn>
  </BeeColumns>
</BeeView>
 