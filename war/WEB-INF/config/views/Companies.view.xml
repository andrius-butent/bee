<?xml version="1.0" encoding="UTF-8"?>
<BeeView xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/view.xsd"

  name="Companies"
  source="Companies"
  >
  <BeeColumns>
    <BeeSimpleColumn expression="Name" />
    <BeeSimpleColumn expression="Code" />
    <BeeSimpleColumn expression="VATCode" />
    <BeeSimpleJoin expression="Contact" joinType="LEFT">
      <BeeSimpleColumn expression="Phone" />
      <BeeSimpleColumn expression="Email" />
      <BeeSimpleColumn expression="Address" />
      <BeeSimpleColumn expression="PostIndex" />
      <BeeSimpleColumn expression="Website" />
      <BeeSimpleColumn expression="City" />
      <BeeSimpleJoin expression="City" joinType="LEFT">
        <BeeSimpleColumn name="CityName" expression="Name" />
        <BeeSimpleJoin expression="Country" joinType="LEFT">
          <BeeSimpleColumn name="CountryName" expression="Name" />
        </BeeSimpleJoin>
      </BeeSimpleJoin>
    </BeeSimpleJoin>
  </BeeColumns>
  <BeeOrder>
    <OrderBy column="Name" />
  </BeeOrder>
</BeeView>
 