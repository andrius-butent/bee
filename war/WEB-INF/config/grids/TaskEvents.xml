<?xml version="1.0" encoding="UTF-8"?>
<BeeGrids xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/grid.xsd">

  <BeeGrid name="TaskEvents" viewName="TaskEvents" caption="Įvykių istorija" readOnly="true">
    <columns>
      <BeeCalcColumn name="Publisher" type="string" caption="Paskelbta">
        <calc>
          <function>return (row.PublisherFirstName || "") + " " + (row.PublisherLastName || "")</function>
        </calc>
      </BeeCalcColumn>
      <BeeDataColumn name="PublishTime" source="PublishTime" caption="Laikas" />
      <BeeCalcColumn name="Event" type="string" caption="Įvykis">
        <calc>
          <function>
            switch(row.Event) {
              case 1:
                return "SUSPENDED";
              case 2:
                return "COMPLETED";
              case 3:
                return "APPROVED";
              case 4:
                return "CANCELED";
              default:
                return "ACTIVATED";
            }
          </function>
        </calc>
      </BeeCalcColumn>
      <BeeDataColumn name="EventNote" source="EventNote" caption="Pastaba" />
      <BeeDataColumn name="EventDuration" source="EventDuration" caption="Trukmė" />
      <BeeDataColumn name="DurationType" source="DurationType" caption="Tipas" />
    </columns>
  </BeeGrid>
</BeeGrids>
