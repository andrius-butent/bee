<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<BeeGrids xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/grid.xsd">

  <BeeGrid name="Cities" viewName="Cities" caption="Miestai" maxColumnWidth="300"
    showColumnWidths="false">
    <columns>
      <BeeIdColumn name="Id" caption="ID" />

      <BeeDataColumn name="city" source="Name" caption="Miestas">
        <style>
          <bodyStyle>
            <inline>white-space: pre-wrap;</inline>
          </bodyStyle>
        </style>
      </BeeDataColumn>

      <BeeDataColumn name="population" source="Population" caption="Gyventojai" />

      <BeeRelColumn name="country" source="CountryName" relSource="Country" relColumn="Name"
        caption="Šalis">
        <editor type="selector" width="200" visibleLines="12"
          options="{&quot;showLimit&quot;: true, &quot;columns&quot;: [&quot;area&quot;], &quot;searchType&quot;: &quot;s&quot;}" />
      </BeeRelColumn>

      <BeeDataColumn name="countryId" source="Country" caption="Šalies ID" readOnly="true" />

      <BeeVerColumn name="version" caption="Versija" />
    </columns>
  </BeeGrid>
</BeeGrids>
