<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>architect</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Unprotected</web-resource-name>
      <url-pattern>/css/*</url-pattern>
      <url-pattern>/js/*</url-pattern>
      <url-pattern>/images/*</url-pattern>
      <url-pattern>/ec/register</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <security-role>
    <role-name>architect</role-name>
  </security-role>

  <servlet>
    <servlet-name>BeeServlet</servlet-name>
    <servlet-class>com.butent.bee.server.BeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>com.butent.bee.server.FileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadServlet</servlet-name>
    <servlet-class>com.butent.bee.server.UploadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RootServlet</servlet-name>
    <servlet-class>com.butent.bee.server.RootServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>TransportSelfService</servlet-name>
    <servlet-class>com.butent.bee.server.modules.transport.TransportSelfService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EcServlet</servlet-name>
    <servlet-class>com.butent.bee.server.modules.ec.EcServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BeeServlet</servlet-name>
    <url-pattern>/bee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/file</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RootServlet</servlet-name>
    <url-pattern>/index.html</url-pattern>
    <url-pattern>/index.htm</url-pattern>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>TransportSelfService</servlet-name>
    <url-pattern>/tr/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EcServlet</servlet-name>
    <url-pattern>/ec/*</url-pattern>
  </servlet-mapping>
</web-app>