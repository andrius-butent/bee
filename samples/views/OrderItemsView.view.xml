<?xml version="1.0" encoding="UTF-8"?>
<BeeView xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../schemas/view.xsd"

  name="OrderItemsView"
  source="OrderItems"
  >
  <BeeColumns>
    <BeeSimpleColumn expression="ItemID" />
    <BeeSimpleJoin expression="ItemID" joinType="LEFT">
      <BeeSimpleColumn name="ItemIDName" expression="Name" />
      <BeeSimpleColumn name="ItemIDArticle" expression="Article" />
    </BeeSimpleJoin>
    <BeeSimpleColumn expression="Amount" />
    <BeeSimpleColumn expression="UnitOfMsr" />
    <BeeSimpleColumn expression="Price" />
    <BeeSimpleColumn expression="OrderID" />
  </BeeColumns>
  <BeeOrder>
    <OrderBy column="ItemIDName" />
  </BeeOrder>
</BeeView>
 