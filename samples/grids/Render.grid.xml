<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Grid xmlns="http://www.butent.com/bee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.butent.com/bee ../../../../schemas/grid.xsd"
  name="Render" viewName="DataTypes" caption="Rendering">

  <columns>
    <DataColumn name="Bbb" source="Boolean" />

    <DataColumn name="Bmap" source="Boolean">
      <renderer type="map"><item>t = yeah</item><item>f = noes</item></renderer>
    </DataColumn>    

    <DataColumn name="Iii" source="Integer" />

    <DataColumn name="Nlist" source="Integer">
      <renderer type="list" />
      <editor type="list" valueStartIndex="-2">
        <item>aaa</item>
        <item>bbb</item>
        <item>ccc</item>
        <item>ddd</item>
        <item>eee</item>
        <item>fff</item>
        <item>ggg</item>
        <item>hhh</item>
        <item>iii</item>
        <item>jjj</item>
      </editor>
    </DataColumn>

    <DataColumn name="Lll" source="Long" />

    <DataColumn name="Reval" source="Long" horizontalAlignment="right">
      <render><expression>row.Long / 2</expression></render>
    </DataColumn>

    <DataColumn name="Nnn" source="Numeric" cell="html" width="100" >
      <render>
        <function>
          if (row.Numeric &gt; 0 &amp;&amp; row.Numeric &lt; 100) {
            return '&lt;meter min=0 max=100 value=' + row.Numeric + ' style="width: 5em;"&gt;&lt;/meter&gt;'
             + '&lt;span style="padding-left: 1em;"&gt;' + Math.round(row.Numeric) + '&lt;/span&gt;';
          } else {
            return row.Numeric;
          } 
        </function>
      </render>
    </DataColumn>

    <DataColumn name="Dec" source="Currency" />

    <DataColumn name="Money" source="Currency">
      <renderer type="range">
        <item>, 0, debit</item>
        <item>0, 1000, cash</item>
        <item>1e3, 1e6, moola</item>
        <item>1e6, , problems</item>
      </renderer>
    </DataColumn>    

    <DataColumn name="Sss" source="String" />

    <DataColumn name="Map" source="String" cell="html">
      <renderer type="map" separator=";" />
      <editor type="picker" height="116">
        <item>123 www ; 123</item>
        <item>Bitinas ; &lt;img src="test.png"&gt;</item>
        <item>ccc ddd ; cd</item>
        <item>beehive ; &lt;a href="http://www.butent.com"&gt;BÅ«tent&lt;/a&gt;</item>
      </editor>
    </DataColumn>

    <DataColumn name="Ddd" source="Date" />

    <DataColumn name="Drange" source="Date" horizontalAlignment="center">
      <renderer type="range">
        <item>, 10 1 1, long ago</item>
        <item>12, 13, this year</item>
        <item>13, , never</item>
      </renderer>
    </DataColumn>

  </columns>

</Grid>
